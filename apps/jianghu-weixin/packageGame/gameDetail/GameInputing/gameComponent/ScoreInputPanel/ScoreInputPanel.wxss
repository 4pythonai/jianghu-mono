/* components/ScoreInputPanel/ScoreInputPanel.wxss */
@import "/styles/modal.wxss";

.panel-container {
	width: 100%;
	box-sizing: border-box;
	padding-top: 8rpx;
}

.hole-info-bar {
	display: flex;
	flex-direction: column;
	align-items: center;
	gap: 18rpx;
	padding: 8rpx 0 24rpx;
	color: var(--text-primary);
}

.hole-name-container {
	width: 96rpx;
	height: 96rpx;
	border-radius: 50%;
	background: var(--primary-green-dark);
	display: flex;
	align-items: center;
	justify-content: center;
	box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.12);
}

.hole-name-main {
	color: var(--text-on-primary);
	font-size: 40rpx;
	font-weight: 700;
	letter-spacing: 2rpx;
}

.hole-details-wrapper {
	display: flex;
	align-items: center;
	justify-content: center;
	gap: 18rpx;
}

.hole-detail {
	display: flex;
	flex-direction: column;
	align-items: center;
	min-width: 120rpx;
	gap: 6rpx;
}

.hole-detail-label {
	font-size: 20rpx;
	letter-spacing: 2rpx;
	color: #9aa3ad;
}

.hole-detail-value {
	font-size: 30rpx;
	font-weight: 600;
	color: var(--text-primary);
}

.hole-detail-divider {
	width: 2rpx;
	height: 44rpx;
	background: #e4e8ec;
}

.hole-tee-detail {
	display: flex;
	align-items: center;
	gap: 8rpx;
}

.tee-text {
	text-transform: uppercase;
}

.tee-indicator {
	width: 12rpx;
	height: 12rpx;
	border-radius: 50%;
}

/* 发球台颜色样式 */
.tee-black {
	background-color: #000;
}

.tee-blue {
	background-color: #0066cc;
}

.tee-white {
	background-color: #f0f0f0;
	border: 2rpx solid #ccc;
}

.tee-gold {
	background-color: #ffd700;
}

.tee-red {
	background-color: #cc0000;
}

.tee-default {
	background-color: #999;
}

.main-content {
	display: flex;
	align-items: stretch;
	gap: 16rpx;
	min-height: 640rpx;
}

.player-list-container {
	width: 140rpx;
	display: flex;
}

.player-list-container.oneball {
	width: 180rpx;
}

.player-list-scroll {
	width: 100%;
	height: 100%;
	padding-top: 12rpx;
}

.oneball-group-list {
	width: 100%;
	display: flex;
	flex-direction: column;
	gap: 20rpx;
	padding-top: 6rpx;
}

.group-card {
	background: #f2f4f7;
	border-radius: 22rpx;
	padding: 16rpx 12rpx 28rpx;
	display: flex;
	flex-direction: column;
	gap: 12rpx;
	position: relative;
	min-height: 240rpx;
}

.group-card.active {
	background: var(--primary-green-darker);
	box-shadow: 0 8rpx 12rpx rgba(0, 0, 0, 0.1);
}

.group-card-title {
	font-size: 22rpx;
	letter-spacing: 2rpx;
	color: #6b7785;
	font-weight: 600;
	align-self: flex-start;
}

.group-card.active .group-card-title {
	color: #fff;
}

.group-card-score-large {
	position: absolute;
	left: 50%;
	top: 50%;
	transform: translate(-50%, -50%);
	font-size: 40rpx;
	font-weight: 700;
	color: #4a5560;
}

.group-card.active .group-card-score-large {
	color: #fff;
}

.group-card-avatars {
	display: flex;
	flex-direction: column;
	gap: 10rpx;
	margin-top: auto;
}

.group-card-avatar {
	width: 56rpx;
	height: 56rpx;
	border-radius: 14rpx;
	background: #e9edf0;
}

.player-item {
	display: flex;
	align-items: center;
	gap: 12rpx;
	padding: 8rpx 6rpx;
	margin-bottom: 16rpx;
	border-radius: 18rpx;
	background: #f2f4f7;
}

.player-item.active {
	background: var(--primary-green-darker);
	box-shadow: 0 8rpx 12rpx rgba(0, 0, 0, 0.08);
}

.player-avatar {
	width: 72rpx;
	height: 72rpx;
	border-radius: 16rpx;
	background: #e9edf0;
}

/* 非当前登录用户头像灰度处理 */
.player-item:not(.is-current-user) .player-avatar {
	filter: grayscale(70%);
	opacity: 0.7;
}

/* 当前登录用户头像边框 */
.player-item.is-current-user .player-avatar {
	border: 4rpx solid var(--primary-green-dark);
	box-sizing: border-box;
}

.player-score-badge {
	min-width: 32rpx;
	height: 32rpx;
	border-radius: 50%;
	background: #d7dde2;
	color: #6b7785;
	font-size: 28rpx;
	font-weight: 600;
	display: flex;
	align-items: center;
	justify-content: center;
	padding: 0 6rpx;
}

.player-item.active .player-score-badge {
	background: rgba(255, 255, 255, 0.25);
	color: #fff;
}

.scoring-area-container {
	flex: 1;
	display: flex;
}

.scoring-area {
	flex: 1;
	background: var(--primary-green-darker);
	border-radius: 40rpx;
	padding: 30rpx 28rpx;
	box-sizing: border-box;
	display: flex;
	flex-direction: column;
	gap: 18rpx;
	color: #fff;
	box-shadow: inset 0 0 0 2rpx rgba(255, 255, 255, 0.08);
}

.score-row {
	display: flex;
	align-items: center;
	justify-content: space-between;
	gap: 16rpx;
}

.score-label {
	display: flex;
	align-items: baseline;
	gap: 10rpx;
}

.score-label-cn {
	font-size: 30rpx;
	font-weight: 600;
}

.score-label-en {
	font-size: 22rpx;
	opacity: 0.6;
}

.score-control {
	display: flex;
	align-items: center;
	gap: 12rpx;
	background: rgba(255, 255, 255, 0.16);
	border-radius: 40rpx;
	padding: 6rpx 12rpx;
}

.control-btn {
	width: 52rpx;
	height: 52rpx;
	line-height: 52rpx;
	text-align: center;
	border-radius: 50%;
	background: rgba(255, 255, 255, 0.25);
	color: #fff;
	font-size: 34rpx;
	font-weight: 600;
}

.score-value {
	min-width: 40rpx;
	text-align: center;
	font-size: 32rpx;
	font-weight: 700;
}

.tee-shot-options {
	display: flex;
	justify-content: space-between;
	margin-top: auto;
	padding-top: 8rpx;
}

.shot-option {
	flex: 1;
	display: flex;
	flex-direction: column;
	align-items: center;
	gap: 6rpx;
	color: rgba(255, 255, 255, 0.6);
}

.shot-icon-wrapper {
	width: 64rpx;
	height: 64rpx;
	border-radius: 50%;
	background: rgba(255, 255, 255, 0.16);
	display: flex;
	align-items: center;
	justify-content: center;
	position: relative;
}

.shot-option.active {
	color: #fff;
}

.shot-option.active .shot-icon-wrapper {
	background: rgba(255, 255, 255, 0.32);
}

.target-ring {
	width: 28rpx;
	height: 28rpx;
	border-radius: 50%;
	border: 3rpx solid rgba(255, 255, 255, 0.9);
	position: absolute;
}

.target-dot {
	width: 10rpx;
	height: 10rpx;
	border-radius: 50%;
	background-color: rgba(255, 255, 255, 0.9);
	position: absolute;
}

.arrow-icon {
	width: 28rpx;
	height: 28rpx;
	opacity: 0.75;
}

.shot-option.active .arrow-icon {
	filter: brightness(0) invert(1);
	opacity: 1;
}

.shot-label {
	font-size: 22rpx;
	opacity: 0.7;
}

.shot-option.active .shot-label {
	opacity: 1;
}

.modal-actions {
	padding-top: 24rpx;
	gap: 20rpx;
}

.modal-actions .modal-btn {
	height: 80rpx;
	border-radius: 24rpx;
	padding: 0;
	display: flex;
	align-items: center;
	justify-content: center;
}

.modal-actions .modal-btn.cancel {
	flex: 0.85;
}

.modal-actions .modal-btn.confirm {
	flex: 1.15;
}

.btn-text {
	display: flex;
	align-items: center;
	gap: 8rpx;
	line-height: 1;
}

.btn-main {
	font-size: 30rpx;
	font-weight: 600;
}

.btn-sub {
	font-size: 22rpx;
	opacity: 0.7;
}

.btn-saving {
	font-size: 30rpx;
	font-weight: 600;
}
