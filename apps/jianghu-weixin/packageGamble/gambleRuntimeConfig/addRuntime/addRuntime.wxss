/* 新增配置页面样式 */
.runtime-config-container {
	padding: 20rpx;
	padding-top: 200rpx; /* 预留导航栏空间 */
	background-color: #f5f5f5;
	min-height: 100vh;
}

/* 调试信息 */
.debug-info {
	background-color: #fff3cd;
	border: 1px solid #ffeaa7;
	border-radius: 8rpx;
	padding: 16rpx;
	margin-bottom: 20rpx;
	font-size: 24rpx;
	color: #856404;
}

.debug-info text {
	display: block;
	margin-bottom: 8rpx;
}

/* 错误状态 */
.error-container {
	background-color: #f8d7da;
	border: 1px solid #f5c6cb;
	border-radius: 8rpx;
	padding: 16rpx;
	margin-bottom: 20rpx;
}

.error-text {
	color: #721c24;
	font-size: 28rpx;
}

/* 主要内容 */
.main-content {
	background-color: #fff;
	border-radius: 12rpx;
	padding: 20rpx;
	margin-bottom: 20rpx;
}

/* 区块样式 */
.section {
	margin-bottom: 32rpx;
	padding-bottom: 24rpx;
	border-bottom: 1px solid #eee;
}

.section:last-child {
	border-bottom: none;
	margin-bottom: 0;
}

.section-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
	margin-bottom: 16rpx;
}

.section-label {
	font-size: 28rpx;
	color: #666;
	margin-bottom: 16rpx;
}

