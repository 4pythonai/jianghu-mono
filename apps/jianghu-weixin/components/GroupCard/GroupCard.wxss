/* 分组卡片 */
.group-card {
    position: relative;
    display: flex;
    align-items: stretch;
    background: #fff;
    border-radius: 16rpx;
    padding: 40rpx 16rpx 24rpx 16rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

/* 分组标识 - absolute 定位在左上角 */
.group-badge {
    position: absolute;
    top: 0;
    left: 0;
    background: var(--primary-green-dark);
    color: #fff;
    padding: 8rpx 16rpx;
    border-radius: 16rpx 0 16rpx 0;
    font-size: 24rpx;
    font-weight: 500;
    z-index: 10;
}

/* 主内容区：flex: 1 填充剩余空间 */
.group-content {
    flex: 1;
    min-width: 0;
}

/* 球员滚动区域 - flex: 1 自动填充剩余空间 */
.players-scroll {
    flex: 1;
    min-width: 0;
    white-space: nowrap;
}

.players-list {
    display: inline-flex;
    gap: 20rpx;
    padding: 16rpx 0;
}

/* 球员项 */
.player-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8rpx;
    width: 110rpx;
    flex-shrink: 0;
}

.player-avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 16rpx;
    background: #f5f5f5;
}

.player-name {
    font-size: 24rpx;
    color: var(--text-primary);
    max-width: 110rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: center;
}

.player-team {
    font-size: 20rpx;
    color: var(--text-tertiary);
    max-width: 110rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: center;
}

/* 添加球员按钮 */
.add-player-btn {
    width: 100rpx;
    height: 100rpx;
    border: 2rpx dashed #ccc;
    border-radius: 16rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.add-icon {
    font-size: 48rpx;
    color: #ccc;
    line-height: 1;
}

/* 右侧按钮组 - 紧贴球员滚动区，高度与滚动区一致 */
.action-buttons {
    flex-shrink: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    margin-left: 16rpx;
}

/* 删除按钮 */
.delete-btn {
    width: 40rpx;
    height: 40rpx;
    background: #e74c3c;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.delete-icon {
    color: #fff;
    font-size: 24rpx;
    font-weight: bold;
    line-height: 1;
}

/* 右侧箭头 - 在删除按钮下方固定 30rpx */
.arrow-btn {
    width: 40rpx;
    height: 40rpx;
    background: var(--primary-green);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 20rpx;
}

.arrow-icon {
    font-size: 28rpx;
    color: #fff;
    font-weight: bold;
    line-height: 1;
}
