.team-selector {
    display: flex;
    flex-direction: column;
    flex: 1;
    min-height: 0;
}

/* ==================== cross_teams ==================== */
.team-selector--cross .search-section {
    padding: 20rpx 30rpx;
    background-color: #fff;
}

.team-selector--cross .search-bar {
    display: flex;
    align-items: center;
    background-color: #f5f5f5;
    border-radius: 40rpx;
    padding: 16rpx 24rpx;
}

.team-selector--cross .search-icon {
    width: 36rpx;
    height: 36rpx;
    margin-right: 16rpx;
    opacity: 0.5;
}

.team-selector--cross .search-input {
    flex: 1;
    font-size: 28rpx;
    color: #333;
}

.team-selector--cross .search-btn {
    font-size: 28rpx;
    color: #07c160;
    padding-left: 16rpx;
}

.team-selector--cross .selected-section {
    padding: 20rpx 30rpx;
    background-color: #fff;
    margin-top: 20rpx;
}

.team-selector--cross .section-title {
    font-size: 28rpx;
    color: #666;
    margin-bottom: 16rpx;
}

.team-selector--cross .selected-list {
    display: flex;
    flex-direction: column;
    gap: 16rpx;
}

.team-selector--cross .selected-item {
    display: flex;
    align-items: center;
    background-color: #f0f9f4;
    border: 2rpx solid #07c160;
    border-radius: 16rpx;
    padding: 16rpx 20rpx;
}

.team-selector--cross .selected-avatar {
    width: 64rpx;
    height: 64rpx;
    border-radius: 8rpx;
    margin-right: 16rpx;
}

.team-selector--cross .selected-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    min-width: 0;
}

.team-selector--cross .selected-alias {
    font-size: 28rpx;
    color: #333;
    font-weight: 500;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.team-selector--cross .selected-name {
    font-size: 22rpx;
    color: #999;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-top: 4rpx;
}

.team-selector--cross .selected-actions {
    display: flex;
    align-items: center;
    gap: 12rpx;
    margin-left: 16rpx;
}

.team-selector--cross .action-icon {
    width: 36rpx;
    height: 36rpx;
    padding: 8rpx;
}

.team-selector--cross .action-icon.edit {
    opacity: 0.6;
}

.team-selector--cross .action-icon.remove {
    opacity: 0.4;
}

.team-selector--cross .team-list-section {
    flex: 1;
    display: flex;
    flex-direction: column;
    padding: 20rpx 30rpx;
    background-color: #fff;
    margin-top: 20rpx;
}

.team-selector--cross .loading-container,
.team-selector--cross .empty-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 80rpx 0;
}

.team-selector--cross .loading-spinner {
    width: 60rpx;
    height: 60rpx;
    border: 4rpx solid #f0f0f0;
    border-top-color: #07c160;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
}

.team-selector--cross .loading-text,
.team-selector--cross .empty-text {
    font-size: 28rpx;
    color: #999;
    margin-top: 20rpx;
}

.team-selector--cross .empty-icon {
    width: 160rpx;
    height: 160rpx;
    opacity: 0.5;
}

.team-selector--cross .team-scroll {
    flex: 1;
    max-height: calc(100vh - 500rpx);
}

.team-selector--cross .team-list {
    display: flex;
    flex-direction: column;
}

.team-selector--cross .team-item {
    display: flex;
    align-items: center;
    padding: 24rpx 0;
    border-bottom: 1rpx solid #f0f0f0;
}

.team-selector--cross .team-item:last-child {
    border-bottom: none;
}

.team-selector--cross .team-item.selected {
    background-color: #f0f9f4;
    margin: 0 -30rpx;
    padding: 24rpx 30rpx;
    border-radius: 12rpx;
}

.team-selector--cross .team-avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 12rpx;
    margin-right: 20rpx;
}

.team-selector--cross .team-info {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.team-selector--cross .team-name {
    font-size: 30rpx;
    color: #333;
    font-weight: 500;
}

.team-selector--cross .team-tag {
    display: inline-block;
    font-size: 22rpx;
    color: #07c160;
    background-color: #e8f8ef;
    padding: 4rpx 12rpx;
    border-radius: 6rpx;
    margin-top: 8rpx;
    align-self: flex-start;
}

.team-selector--cross .team-check {
    width: 48rpx;
    height: 48rpx;
}

.team-selector--cross .check-icon {
    width: 48rpx;
    height: 48rpx;
}

.team-selector--cross .bottom-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #fff;
    padding: 20rpx 30rpx;
    padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
    box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
    z-index: 100;
}

.team-selector--cross .tip-text {
    font-size: 24rpx;
    color: #999;
    text-align: center;
    margin-bottom: 16rpx;
}

.team-selector--cross .modal-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
}

.team-selector--cross .modal-content {
    width: 600rpx;
    background-color: #fff;
    border-radius: 24rpx;
    overflow: hidden;
}

.team-selector--cross .modal-header {
    padding: 32rpx;
    text-align: center;
    border-bottom: 1rpx solid #f0f0f0;
}

.team-selector--cross .modal-title {
    font-size: 34rpx;
    color: #333;
    font-weight: 500;
}

.team-selector--cross .modal-body {
    padding: 32rpx;
}

.team-selector--cross .team-preview {
    display: flex;
    align-items: center;
    margin-bottom: 32rpx;
}

.team-selector--cross .preview-avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 12rpx;
    margin-right: 20rpx;
}

.team-selector--cross .preview-name {
    font-size: 30rpx;
    color: #333;
    font-weight: 500;
}

.team-selector--cross .alias-input-wrapper {
    margin-bottom: 16rpx;
}

.team-selector--cross .alias-label {
    font-size: 26rpx;
    color: #666;
    margin-bottom: 12rpx;
    display: block;
}

.team-selector--cross .alias-input {
    width: 100%;
    height: 88rpx;
    border: 2rpx solid #e0e0e0;
    border-radius: 12rpx;
    padding: 0 24rpx;
    font-size: 30rpx;
    color: #333;
    box-sizing: border-box;
}

.team-selector--cross .alias-input:focus {
    border-color: #07c160;
}

.team-selector--cross .alias-tip {
    font-size: 24rpx;
    color: #999;
}

.team-selector--cross .modal-footer {
    display: flex;
    border-top: 1rpx solid #f0f0f0;
}

.team-selector--cross .modal-btn {
    flex: 1;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 32rpx;
    border: none;
    border-radius: 0;
    background-color: #fff;
}

.team-selector--cross .modal-btn.cancel {
    color: #666;
    border-right: 1rpx solid #f0f0f0;
}

.team-selector--cross .modal-btn.confirm {
    color: #07c160;
    font-weight: 500;
}

.team-selector--cross .modal-btn::after {
    border: none;
}

/* ==================== single_team ==================== */
.team-selector--single .main-card {
    width: 100%;
    background: #fff;
    border-radius: 20rpx;
    position: relative;
    overflow: hidden;
    box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.06);
    margin-top: 20rpx;
}

.team-selector--single .search-section {
    padding: 20rpx 30rpx 0;
}

.team-selector--single .search-bar {
    display: flex;
    align-items: center;
    background-color: #fff;
    border-radius: 40rpx;
    padding: 16rpx 24rpx;
    box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.06);
}

.team-selector--single .search-icon {
    width: 36rpx;
    height: 36rpx;
    margin-right: 16rpx;
    opacity: 0.5;
}

.team-selector--single .search-input {
    flex: 1;
    font-size: 28rpx;
    color: #333;
}

.team-selector--single .search-btn {
    font-size: 28rpx;
    color: #07c160;
    padding-left: 16rpx;
}

.team-selector--single .card-content {
    padding: 40rpx 32rpx 48rpx;
    position: relative;
    z-index: 2;
}

.team-selector--single .loading-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 120rpx 0;
}

.team-selector--single .loading-spinner {
    width: 60rpx;
    height: 60rpx;
    border: 4rpx solid #e9ecef;
    border-top-color: var(--primary-green-dark);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
}

.team-selector--single .loading-text {
    margin-top: 24rpx;
    font-size: 28rpx;
    color: #999;
}

.team-selector--single .empty-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 120rpx 0;
}

.team-selector--single .empty-icon {
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 32rpx;
}

.team-selector--single .empty-title {
    font-size: 32rpx;
    color: #333;
    font-weight: 500;
    margin-bottom: 16rpx;
}

.team-selector--single .empty-desc {
    font-size: 26rpx;
    color: #999;
}

.team-selector--single .section-title {
    font-size: 28rpx;
    color: #666;
    margin-bottom: 24rpx;
}

.team-selector--single .team-list {
    padding: 0;
}

.team-selector--single .team-item {
    display: flex;
    align-items: center;
    padding: 28rpx 24rpx;
    background: #f8f9fa;
    border-radius: 16rpx;
    margin-bottom: 20rpx;
    transition: all 0.2s ease;
}

.team-selector--single .team-item:last-child {
    margin-bottom: 0;
}

.team-selector--single .team-item:active {
    background: #f0f0f0;
    transform: scale(0.98);
}

.team-selector--single .team-avatar {
    width: 96rpx;
    height: 96rpx;
    border-radius: 16rpx;
    background: #e9ecef;
}

.team-selector--single .team-info {
    flex: 1;
    margin-left: 24rpx;
}

.team-selector--single .team-name {
    font-size: 32rpx;
    color: #333;
    font-weight: 500;
    margin-bottom: 8rpx;
}

.team-selector--single .team-role {
    display: flex;
    align-items: center;
}

.team-selector--single .role-tag {
    font-size: 22rpx;
    padding: 4rpx 12rpx;
    border-radius: 6rpx;
}

.team-selector--single .role-tag.team-superadmin {
    background: #fff3e0;
    color: #e65100;
}

.team-selector--single .role-tag.admin {
    background: #e3f2fd;
    color: #1565c0;
}

.team-selector--single .role-tag.member {
    background: #f5f5f5;
    color: #666;
}

.team-selector--single .arrow-icon {
    width: 40rpx;
    height: 40rpx;
    margin-left: 6rpx;
}

.team-selector--single .arrow-icon image {
    width: 100%;
    height: 100%;
}

@keyframes spin {
    to {
        transform: rotate(360deg);
    }
}
