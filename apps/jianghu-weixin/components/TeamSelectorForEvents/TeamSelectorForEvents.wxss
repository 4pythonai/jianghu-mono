@import "/styles/buttons.wxss";

.team-selector {
    display: flex;
    flex-direction: column;
    flex: 1;
    min-height: 0;
}

.search-section {
    padding: 20rpx 30rpx;
    background-color: #fff;
}

.search-bar {
    display: flex;
    align-items: center;
    background-color: #f5f5f5;
    border-radius: 40rpx;
    padding: 16rpx 24rpx;
}

.search-icon {
    width: 36rpx;
    height: 36rpx;
    margin-right: 16rpx;
    opacity: 0.5;
}

.search-input {
    flex: 1;
    font-size: 28rpx;
    color: #333;
}

.search-btn {
    font-size: 28rpx;
    color: #07c160;
    padding-left: 16rpx;
}

.selected-section {
    padding: 20rpx 30rpx;
    background-color: #fff;
    margin-top: 20rpx;
}

.section-title {
    font-size: 28rpx;
    color: #666;
    margin-bottom: 16rpx;
}

.selected-list {
    display: flex;
    flex-direction: column;
    gap: 16rpx;
}

.selected-item {
    display: flex;
    align-items: center;
    background-color: #f0f9f4;
    border: 2rpx solid #07c160;
    border-radius: 16rpx;
    padding: 16rpx 20rpx;
}

.selected-avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin-right: 16rpx;
}

.selected-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    min-width: 0;
}

.selected-alias {
    font-size: 28rpx;
    color: #333;
    font-weight: 500;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.selected-name {
    font-size: 22rpx;
    color: #999;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-top: 4rpx;
}

.selected-actions {
    display: flex;
    align-items: center;
    gap: 12rpx;
    margin-left: 16rpx;
}

.action-icon {
    width: 36rpx;
    height: 36rpx;
    padding: 8rpx;
}

.action-icon.edit {
    opacity: 0.6;
}

.action-icon.remove {
    opacity: 0.4;
}

.team-list-section {
    flex: 1;
    display: flex;
    flex-direction: column;
    padding: 20rpx 30rpx;
    background-color: #fff;
    margin-top: 20rpx;
}

.loading-container,
.empty-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 80rpx 0;
}

.loading-spinner {
    width: 60rpx;
    height: 60rpx;
    border: 4rpx solid #f0f0f0;
    border-top-color: #07c160;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
}

.loading-text,
.empty-text {
    font-size: 28rpx;
    color: #999;
    margin-top: 20rpx;
}

.empty-create {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12rpx;
}

.empty-subtext {
    font-size: 26rpx;
    color: #999;
}

.empty-icon {
    width: 160rpx;
    height: 160rpx;
    opacity: 0.5;
}

.team-scroll {
    flex: 1;
    max-height: calc(100vh - 500rpx);
}

.team-list {
    display: flex;
    flex-direction: column;
}

.team-item {
    display: flex;
    align-items: center;
    padding: 24rpx 0;
    border-bottom: 1rpx solid #f0f0f0;
}

.team-item:last-child {
    border-bottom: none;
}

.team-item.selected {
    background-color: #f0f9f4;
    margin: 0 -30rpx;
    padding: 24rpx 30rpx;
    border-radius: 12rpx;
}

.team-avatar {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.team-info {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.team-name {
    font-size: 30rpx;
    color: #333;
    font-weight: 500;
}

.team-tag {
    display: inline-block;
    font-size: 22rpx;
    color: #333;
    background-color: #e8f8ef;
    padding: 4rpx 12rpx;
    border-radius: 6rpx;
    margin-top: 8rpx;
    align-self: flex-start;
}

.team-check {
    width: 48rpx;
    height: 48rpx;
}

.check-icon {
    width: 48rpx;
    height: 48rpx;
}

.bottom-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #fff;
    padding: 20rpx 30rpx;
    padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
    box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
    z-index: 100;
}

.tip-text {
    font-size: 24rpx;
    color: #999;
    text-align: center;
    margin-bottom: 16rpx;
}

.modal-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
}

.modal-content {
    width: 600rpx;
    background-color: #fff;
    border-radius: 24rpx;
    overflow: hidden;
}

.modal-header {
    padding: 32rpx;
    text-align: center;
    border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
    font-size: 34rpx;
    color: #333;
    font-weight: 500;
}

.modal-body {
    padding: 32rpx;
}

.team-preview {
    display: flex;
    align-items: center;
    margin-bottom: 32rpx;
}

.preview-avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 12rpx;
    margin-right: 20rpx;
}

.preview-name {
    font-size: 30rpx;
    color: #333;
    font-weight: 500;
}

.alias-input-wrapper {
    margin-bottom: 16rpx;
}

.alias-label {
    font-size: 26rpx;
    color: #666;
    margin-bottom: 12rpx;
    display: block;
}

.alias-input {
    width: 100%;
    height: 88rpx;
    border: 2rpx solid #e0e0e0;
    border-radius: 12rpx;
    padding: 0 24rpx;
    font-size: 30rpx;
    color: #333;
    box-sizing: border-box;
}

.alias-input:focus {
    border-color: #07c160;
}

.alias-tip {
    font-size: 24rpx;
    color: #999;
}

.modal-footer {
    display: flex;
    border-top: 1rpx solid #f0f0f0;
}

.modal-btn {
    flex: 1;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 32rpx;
    border: none;
    border-radius: 0;
    background-color: #fff;
}

.modal-btn.cancel {
    color: #666;
    border-right: 1rpx solid #f0f0f0;
}

.modal-btn.confirm {
    color: #07c160;
    font-weight: 500;
}

.modal-btn::after {
    border: none;
}

@keyframes spin {
    to {
        transform: rotate(360deg);
    }
}
