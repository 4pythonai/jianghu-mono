.court-selector {
	width: 100%;
	height: 100%;
}

/* 选中球场信息卡片 */
.selected-course-info {
	margin-bottom: 30rpx;
}

.course-card {
	display: flex;
	align-items: center;
	background: #fff;
	border-radius: 16rpx;
	padding: 24rpx;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.course-image {
	width: 120rpx;
	height: 90rpx;
	border-radius: 12rpx;
	margin-right: 24rpx;
	background: #f5f5f5;
}

.course-details {
	flex: 1;
}

.course-name {
	font-size: 32rpx;
	color: #333;
	font-weight: 500;
	margin-bottom: 8rpx;
	line-height: 1.4;
}

.course-id {
	font-size: 26rpx;
	color: #666;
	line-height: 1.3;
}

/* 加载状态样式 */
.loading-state {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	padding: 100rpx 40rpx;
}

.loading-icon {
	width: 60rpx;
	height: 60rpx;
	border: 4rpx solid #f3f3f3;
	border-top: 4rpx solid #3498db;
	border-radius: 50%;
	animation: spin 1s linear infinite;
	margin-bottom: 20rpx;
}

.loading-text {
	font-size: 28rpx;
	color: #999;
}

@keyframes spin {
	0% {
		transform: rotate(0deg);
	}
	100% {
		transform: rotate(360deg);
	}
}

/* 标题样式 */
.section-title {
	font-size: 36rpx;
	color: #333;
	font-weight: 600;
	margin-bottom: 30rpx;
	padding-left: 8rpx;
}

/* 两列布局 */
.court-columns {
	display: flex;
	gap: 20rpx;
	margin-bottom: 40rpx;
}

.court-column {
	flex: 1;
}

.column-header {
	font-size: 28rpx;
	color: #333;
	font-weight: 500;
	text-align: center;
	padding: 16rpx;
	background: #f8f8f8;
	border-radius: 12rpx 12rpx 0 0;
	border-bottom: 2rpx solid #e0e0e0;
}

.court-list {
	background: #fff;
	border-radius: 0 0 12rpx 12rpx;
	overflow: hidden;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.court-item {
	padding: 24rpx 20rpx;
	border-bottom: 1rpx solid #f0f0f0;
	transition: all 0.3s ease;
	cursor: pointer;
}

.court-item:last-child {
	border-bottom: none;
}

.court-item:active {
	background: #f5f5f5;
}

.court-item.selected {
	background: #e8f5e8;
	border-left: 4rpx solid #1aad19;
}

.court-name {
	font-size: 28rpx;
	color: #333;
	font-weight: 500;
	margin-bottom: 4rpx;
}

.court-holes-count {
	font-size: 24rpx;
	color: #1aad19;
	font-weight: 500;
}

/* 洞信息显示 */
.holes-info {
	margin-bottom: 40rpx;
}

.holes-section {
	margin-bottom: 30rpx;
	background: #fff;
	border-radius: 16rpx;
	padding: 24rpx;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.holes-title {
	font-size: 30rpx;
	color: #333;
	font-weight: 600;
	margin-bottom: 20rpx;
	padding-bottom: 12rpx;
	border-bottom: 2rpx solid #f0f0f0;
}

.holes-list {
	display: flex;
	flex-wrap: wrap;
	gap: 12rpx;
}

.hole-item {
	display: flex;
	flex-direction: column;
	align-items: center;
	background: #f8f9fa;
	border-radius: 12rpx;
	padding: 16rpx 12rpx;
	min-width: 80rpx;
	border: 2rpx solid #e9ecef;
}

.hole-name {
	font-size: 24rpx;
	color: #333;
	font-weight: 500;
	margin-bottom: 4rpx;
}

.hole-par {
	font-size: 30rpx;
	color: #1aad19;
	font-weight: 600;
}

/* 空状态样式 */
.empty-state {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	padding: 100rpx 40rpx;
	text-align: center;
}

.empty-text {
	font-size: 32rpx;
	color: #666;
	margin-bottom: 16rpx;
}

.empty-desc {
	font-size: 26rpx;
	color: #999;
	line-height: 1.4;
}

/* 确认按钮区域 */
.confirm-section {
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	background: #fff;
	padding: 20rpx;
	box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.confirm-btn {
	width: 100%;
	height: 88rpx;
	border-radius: 16rpx;
	font-size: 32rpx;
	font-weight: 500;
	border: none;
	transition: all 0.3s ease;
	display: flex;
	align-items: center;
	justify-content: center;
}

.confirm-btn.active {
	background: linear-gradient(135deg, #1aad19 0%, #16a085 100%);
	color: #fff;
	box-shadow: 0 4rpx 12rpx rgba(26, 173, 25, 0.3);
}

.confirm-btn.active:active {
	transform: scale(0.98);
	box-shadow: 0 2rpx 8rpx rgba(26, 173, 25, 0.2);
}

.confirm-btn.disabled {
	background: #f5f5f5;
	color: #ccc;
	cursor: not-allowed;
}
