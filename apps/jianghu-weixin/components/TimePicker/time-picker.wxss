/* 时间选择器组件样式 */
.time-picker-wrapper {
	width: 100%;
}

.time-picker {
	width: 100%;
	height: 88rpx;
	background: #f8f9fa;
	border: 2rpx solid #e9ecef;
	border-radius: 16rpx;
	box-sizing: border-box;
}

.picker-display {
	width: 100%;
	height: 88rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 0 16rpx;
	box-sizing: border-box;
	line-height: 88rpx; /* 明确设置行高 */
}

.selected-time {
	font-size: 28rpx;
	color: #333333;
	flex: 1;
}

.placeholder-text {
	font-size: 28rpx;
	color: #999999;
	flex: 1;
}

.picker-arrow {
	width: 40rpx;
	height: 40rpx;
	margin-left: 6rpx;
	transition: transform 0.2s ease;
}

/* 选择器激活状态 */
.time-picker:active {
	background: #fff;
	border-color: #4caf50;
}

.time-picker:active .picker-arrow {
	transform: rotate(90deg);
}

/* 禁用状态样式 */
.time-picker.disabled {
	background: #f5f5f5;
	border-color: #e0e0e0;
}

.time-picker.disabled .picker-display {
	opacity: 0.6;
}

.time-picker.disabled .selected-time,
.time-picker.disabled .placeholder-text {
	color: #cccccc;
}
