@import "/styles/modal.wxss";

/* 当弹窗显示时，隐藏底层的input元素 */
.modal-mask ~ .rule-section {
  opacity: 0;
  pointer-events: none;
  transform: translateZ(-1px);
  position: relative;
  z-index: -1;
}

/* 确保弹窗显示时input元素完全不可见 */
.modal-mask ~ .rule-section .form-input-simulator {
  opacity: 0;
  visibility: hidden;
  caret-color: transparent;
  background: transparent;
  border-color: transparent;
  position: absolute;
  left: -9999px;
  top: -9999px;
  width: 1px;
  height: 1px;
  overflow: hidden;
}

/* 弹窗显示时，确保遮罩层完全覆盖 */
.modal-mask {
  z-index: 99999;
  /* 真机上的额外保障 */
  -webkit-transform: translateZ(0);
  transform: translateZ(0);
}

/* 弹窗内容层级更高 */
.modal-content {
  z-index: 100000;
  /* 真机上的额外保障 */
  -webkit-transform: translateZ(0);
  transform: translateZ(0);
}

.modal-list {
	width: 100%;
	border-radius: 24rpx;
	padding: 32rpx 24rpx;
	margin-bottom: 32rpx;
}
.modal-item {
	display: flex;
	align-items: center;
	font-size: 30rpx;
	color: #222;
	margin-bottom: 24rpx;
}
.modal-item:last-child {
	margin-bottom: 0;
}
.radio-outer {
	width: 32rpx;
	height: 32rpx;
	border-radius: 50%;
	border: 4rpx solid #bdbdbd;
	margin-right: 18rpx;
	background: #fff;
	display: flex;
	align-items: center;
	justify-content: center;
}
.radio-outer.checked {
	border-color: var(--primary-green-dark);
}
.radio-inner {
	width: 18rpx;
	height: 18rpx;
	border-radius: 50%;
	background: var(--primary-green-dark);
}

 
/* 新增样式 */
.option-content {
	display: flex;
	align-items: center;
	flex-wrap: wrap;
	gap: 8rpx;
}

.score-picker {
	display: inline-block;
	margin: 0 8rpx;
}

.picker-value {
	display: inline-block;
	min-width: 48rpx;
	height: 48rpx;
	line-height: 48rpx;
	text-align: center;
	background: #4caf7a;
	color: #fff;
	border-radius: 24rpx;
	font-size: 28rpx;
	font-weight: 600;
	padding: 0 12rpx;
	box-shadow: 0 4rpx 8rpx rgba(76, 175, 122, 0.3);
	border: 2rpx solid #4caf7a;
}

.picker-value:active {
	background: #45a072;
	transform: scale(0.95);
}

/* 显示部分样式 */
.rule-section {
	display: flex;
	flex-direction: column;
	gap: 8rpx;
}

.form-label {
	font-size: 28rpx;
	color: #222;
	font-weight: 500;
	margin-bottom: 8rpx;
}

.form-input {
	width: 100%;
	height: 64rpx;
	background: #f8f8f8;
	border: 2rpx solid #4caf7a;
	border-radius: 16rpx;
	font-size: 28rpx;
	color: #888;
	padding: 0 24rpx;
	margin-bottom: 0;
	box-sizing: border-box;
}

.form-input.conditionally-disabled {
	color: #bbb;
	background: #f0f0f0;
	border-color: #e0e0e0;
}

.form-input.conditionally-disabled::after {
	content: "已禁用";
	position: absolute;
	right: 80rpx;
	color: #999;
	font-size: 24rpx;
}

/* 模拟input的样式，避免真机上的光标问题 */
.form-input-simulator {
	width: 100%;
	height: 64rpx;
	background: #f8f8f8;
	border: 2rpx solid #4caf7a;
	border-radius: 16rpx;
	font-size: 28rpx;
	color: #888;
	padding: 0 24rpx;
	margin-bottom: 0;
	box-sizing: border-box;
	display: flex;
	align-items: center;
	line-height: 64rpx;
	/* 确保不会有任何光标或焦点效果 */
	-webkit-tap-highlight-color: transparent;
	-webkit-touch-callout: none;
	-webkit-user-select: none;
	user-select: none;
	pointer-events: none;
}

.form-input-simulator.conditionally-disabled {
	color: #bbb;
	background: #f0f0f0;
	border-color: #e0e0e0;
}

.form-select {
	position: relative;
	margin-bottom: 0;
}

.select-arrow {
	position: absolute;
	right: 24rpx;
	top: 50%;
	transform: translateY(-50%);
	color: var(--primary-green-dark);
	font-size: 36rpx;
	pointer-events: none;
}

.arrow-circle {
	display: inline-flex;
	align-items: center;
	justify-content: center;
	width: 40rpx;
	height: 40rpx;
	border-radius: 50%;
	border: 2rpx solid #4caf7a;
	color: #4caf7a;
	font-size: 28rpx;
	background: #fff;
	box-sizing: border-box;
	font-weight: bold;
}
