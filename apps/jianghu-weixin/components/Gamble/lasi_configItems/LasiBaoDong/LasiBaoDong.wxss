@import "/styles/modal.wxss";

/* 当弹窗显示时，隐藏底层的input元素 */
.modal-mask ~ .rule-section {
	opacity: 0;
	pointer-events: none;
	transform: translateZ(-1px);
	position: relative;
	z-index: -1;
}

/* 确保弹窗显示时input元素完全不可见 */
.modal-mask ~ .rule-section .form-input-simulator {
	opacity: 0;
	visibility: hidden;
	caret-color: transparent;
	background: transparent;
	border-color: transparent;
	position: absolute;
	left: -9999px;
	top: -9999px;
	width: 1px;
	height: 1px;
	overflow: hidden;
}

/* 弹窗显示时，确保遮罩层完全覆盖 */
.modal-mask {
	z-index: 99999;
	/* 真机上的额外保障 */
	-webkit-transform: translateZ(0);
	transform: translateZ(0);
}

/* 弹窗内容层级更高 */
.modal-content {
	z-index: 100000;
	/* 真机上的额外保障 */
	-webkit-transform: translateZ(0);
	transform: translateZ(0);
}

.rule-section {
	display: flex;
	flex-direction: column;
	gap: 8rpx;
	margin-bottom: 24rpx;
}

.rule-section:last-child {
	margin-bottom: 0;
}

.form-label {
	font-size: 28rpx;
	color: #222;
	font-weight: 500;
	margin-bottom: 8rpx;
}

.form-select {
	position: relative;
	margin-bottom: 0;
}

.form-input {
	width: 100%;
	height: 64rpx;
	background: #f8f8f8;
	border: 2rpx solid #4caf7a;
	border-radius: 16rpx;
	font-size: 28rpx;
	color: #888;
	padding: 0 24rpx;
	margin-bottom: 0;
	box-sizing: border-box;
}

.form-input:disabled {
	color: #bbb;
	background: #f0f0f0;
	border-color: #e0e0e0;
}

/* 模拟input的样式，避免真机上的光标问题 */
.form-input-simulator {
	width: 100%;
	height: 64rpx;
	background: #f8f8f8;
	border: 2rpx solid #4caf7a;
	border-radius: 16rpx;
	font-size: 28rpx;
	color: #888;
	padding: 0 24rpx;
	margin-bottom: 0;
	box-sizing: border-box;
	display: flex;
	align-items: center;
	line-height: 64rpx;
	/* 确保不会有任何光标或焦点效果 */
	-webkit-tap-highlight-color: transparent;
	-webkit-touch-callout: none;
	-webkit-user-select: none;
	user-select: none;
	pointer-events: none;
}

.select-arrow {
	position: absolute;
	right: 24rpx;
	top: 50%;
	transform: translateY(-50%);
	color: var(--primary-green-dark);
	font-size: 36rpx;
	pointer-events: none;
}

.arrow-circle {
	display: inline-flex;
	align-items: center;
	justify-content: center;
	width: 40rpx;
	height: 40rpx;
	border-radius: 50%;
	border: 2rpx solid #4caf7a;
	color: #4caf7a;
	font-size: 28rpx;
	background: #fff;
	box-sizing: border-box;
	font-weight: bold;
}

/* 弹窗列表 */
.modal-list {
	width: 100%;
	border-radius: 24rpx;
	padding: 32rpx 24rpx;
	margin-bottom: 32rpx;
}

/* 规则选项列表 */
.rule-options {
	display: flex;
	flex-direction: column;
	gap: 16rpx;
}

/* 规则选项 */
.rule-option {
	display: flex;
	align-items: center;
	font-size: 30rpx;
	color: #222;
	padding: 12rpx 16rpx;
	cursor: pointer;
	transition: all 0.2s ease;
}

.rule-option:active {
	transform: scale(0.98);
}

/* 单选圆点 */
.radio-dot {
	width: 32rpx;
	height: 32rpx;
	border-radius: 50%;
	border: 4rpx solid #bdbdbd;
	margin-right: 18rpx;
	background: #fff;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-shrink: 0;
}

.radio-dot.selected {
	border-color: #4caf7a;
	background: #4caf7a;
}

.radio-dot.selected::after {
	content: "";
	width: 18rpx;
	height: 18rpx;
	background: #fff;
	border-radius: 50%;
}

/* 规则文本 */
.rule-text {
	font-size: 28rpx;
	color: #222;
}

/* 数字选择器样式 */
.number-picker {
	display: inline-flex;
	align-items: center;
	justify-content: center;
	min-width: 60rpx;
	height: 48rpx;
	background: #fff;
	border: 2rpx solid #4caf7a;
	border-radius: 12rpx;
	margin: 0 8rpx;
	padding: 0 12rpx;
	box-sizing: border-box;
}

.number-picker.disabled {
	border-color: #ccc;
	background: #f5f5f5;
	opacity: 0.6;
}

.picker-value {
	font-size: 28rpx;
	color: #4caf7a;
	font-weight: 500;
	text-align: center;
}

.number-picker.disabled .picker-value {
	color: #999;
}

/* 条件区域 */
.condition-section {
	margin-top: 24rpx;
}

.condition-section.disabled {
	opacity: 0.5;
	pointer-events: none;
}

/* 条件标题 */
.condition-title {
	font-size: 28rpx;
	color: #2c3e50;
	margin-bottom: 16rpx;
}

/* 条件选项列表 */
.condition-options {
	display: flex;
	flex-direction: column;
	gap: 12rpx;
}

/* 条件选项 */
.condition-option {
	display: flex;
	align-items: center;
	font-size: 28rpx;
	color: #222;
	padding: 10rpx 14rpx;
	cursor: pointer;
	transition: all 0.2s ease;
}

.condition-option:active {
	transform: scale(0.98);
}

/* 条件文本 */
.condition-text {
	font-size: 28rpx;
	color: #222;
}
