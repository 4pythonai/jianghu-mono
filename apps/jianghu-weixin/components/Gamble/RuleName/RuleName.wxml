<!-- 规则名称组件 -->
<view class="rule-name-container">
  <view class="form-section">
    <view class="form-label">规则名称</view>

    <!-- 输入框 -->
    <input
      class="form-input"
      value="{{inputValue}}"
      bindinput="onInput"
      placeholder="请输入规则名称."
      maxlength="50"
      disabled="{{pageMode === 'view'}}"
    />

    <!-- 生成提示 -->
    <view
      class="generate-hint"
      wx:if="{{showGenerateHint && pageMode === 'create' && !isManualEdit}}"
    >
      <text class="hint-icon">💡</text>
      <text class="hint-text">规则名称将根据配置自动生成</text>
    </view>
  </view>
</view>
