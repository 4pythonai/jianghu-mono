/* 规则名称组件样式 */
.rule-name-container {
  margin-bottom: 32rpx;
}

.form-section {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #f8f8f8;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #007aff;
  background-color: #fff;
}

.form-input[disabled] {
  color: #999;
  background-color: #f5f5f5;
}

/* 生成提示 */
.generate-hint {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
  padding: 16rpx;
  background-color: rgba(0, 122, 255, 0.05);
  border-radius: 8rpx;
  border-left: 4rpx solid #007aff;
}

.hint-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.hint-text {
  font-size: 24rpx;
  color: #666;
}