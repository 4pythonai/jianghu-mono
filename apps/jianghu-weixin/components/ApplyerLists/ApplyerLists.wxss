/* 列表项容器 */
.player-list-item {
    display: flex;
    align-items: center;
    padding: 20rpx 24rpx;
    background: #fff;
    border-bottom: 1rpx solid #f0f0f0;
}

.player-list-item:active {
    background: #f9f9f9;
}

/* 序号 */
.item-index {
    width: 60rpx;
    flex-shrink: 0;
}

.item-index .index-text {
    font-size: 28rpx;
    color: var(--text-primary);
    font-weight: 500;
}

/* 头像区域 */
.avatar-section {
    position: relative;
    width: 80rpx;
    margin-left: 62rpx;
    margin-right: 20rpx;
    flex-shrink: 0;
}

.player-avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 12rpx;
    background: #f5f5f5;
}

/* 付费标记 */
.paid-badge {
    position: absolute;
    top: -8rpx;
    right: -8rpx;
    width: 32rpx;
    height: 32rpx;
    background: var(--primary-green);
    border-radius: 6rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
}

.paid-badge .badge-text {
    font-size: 18rpx;
    color: #fff;
    font-weight: 500;
}

/* 球员信息 */
.player-info {
    flex: 1;
    display: flex;
    align-items: center;
    min-width: 0;
}

.player-name {
    font-size: 30rpx;
    color: var(--text-primary);
    flex: 1;
    min-width: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.player-edit-button {
    margin-left: 16rpx;
    padding: 6rpx 16rpx;
    border: 1rpx solid var(--primary-green);
    border-radius: 999rpx;
    font-size: 22rpx;
    color: var(--primary-green);
    flex-shrink: 0;
}

/* 差点区域 */
.handicap-section {
    width: 140rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.handicap-value {
    font-size: 28rpx;
    color: var(--text-primary);
    font-weight: 500;
}

.fee-info {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4rpx;
}

.fee-amount {
    font-size: 28rpx;
    color: var(--text-primary);
    font-weight: 500;
}

.fee-status {
    font-size: 22rpx;
    color: var(--text-secondary);
}

.fee-status.paid {
    color: var(--primary-green);
}
