<view class="match-container {{private === 'y' ? 'private-match' : ''}}" bindtap="onMatchItemTap">
  <!-- 左上角三角形标识 (仅隐私比赛显示) -->
  <view wx:if="{{private === 'y'}}" class="privacy-badge">
    <text class="privacy-text">密</text>
  </view>

  <!-- 左侧头像组 (保留占位) -->
  <view class="avatar-column">
    <!-- 团队赛显示团队头像 -->
    <view wx:if="{{game_type !== 'common' && fullTeamAvatarUrl}}" class="team-avatar-wrapper">
      <image
        class="team-avatar"
        src="{{fullTeamAvatarUrl}}"
        mode="aspectFill"
        bindload="onTeamAvatarLoad"
        binderror="onTeamAvatarError"
      ></image>
    </view>
    <!-- 普通比赛显示玩家头像组 -->
    <view wx:elif="{{private !== 'y' && game_type === 'common'}}">
      <AvatarGroup players="{{players}}" maxShow="4" showMode="group" />
    </view>
  </view>

  <!-- 右侧内容区 -->
  <view class="content-column">
    <!-- 第1行:比赛名称 + 星标 (隐私比赛不显示,但保留占位) -->
    <view class="row name-row">
      <!-- 团队赛显示团队标题 -->
      <text
        class="game-name"
        wx:if="{{game_type !== 'common' && extra_team_game_info}}"
      >{{extra_team_game_info.team_game_title}}</text>
      <!-- 普通比赛显示普通标题 -->
      <text class="game-name" wx:elif="{{private !== 'y'}}">{{gameName}}</text>
      <view class="star-icon" wx:if="{{if_star_game === 'y'}}">
        <image class="icon-img" src="/assets/icons/icons8-star-48.png" mode="aspectFit" />
      </view>
    </view>
    <!-- 第2行:进度条 (隐私比赛和团队赛不显示,但保留占位) -->
    <view class="row progress-row">
      <view wx:if="{{private !== 'y' && game_type === 'common'}}">
        <ProgressBar completedHoles="{{completedHoles}}" holes="{{holes}}" />
      </view>
    </view>
    <!-- 地点和时间区域 + 骰子图标 -->
    <view class="location-time-wrapper">
      <view class="location-time-content">
        <!-- 第3行:地点 -->
        <view class="row course-row">
          <view
            class="iconfont icon-location"
            style="color: {{private === 'y' ? '#ffffff' : 'var(--theme-color)'}};"
          ></view>
          <text class="course {{private === 'y' ? 'private-text-light' : ''}}">{{course}}</text>
        </view>
        <!-- 第4行:时间人数 -->
        <view class="row meta-row">
          <view class="time-watchers">
            <view
              class="iconfont icon-clock"
              style="color: {{private === 'y' ? '#ffffff' : 'var(--theme-color)'}};"
            ></view>
            <text
              class="start-time {{private === 'y' ? 'private-text-light' : ''}}"
              style="margin-right: 20rpx;"
            >{{gameStart}}</text>
            <view
              class="iconfont icon-location"
              style="color: {{private === 'y' ? '#ffffff' : 'var(--theme-color)'}};"
            ></view>
            <text
              class="watchers {{private === 'y' ? 'private-text-light' : ''}}"
            >{{watchersNumber}}</text>
          </view>
        </view>
      </view>
      <!-- 骰子图标,垂直居中于地点和时间之间 -->
      <view class="game-icon-wrapper" wx:if="{{has_gamble === 'y' && private !== 'y'}}">
        <view class="game-icon">
          <image class="icon-img" src="/assets/icons/icons8-chip-48.png" mode="aspectFit" />
        </view>
      </view>
    </view>
  </view>
</view>
