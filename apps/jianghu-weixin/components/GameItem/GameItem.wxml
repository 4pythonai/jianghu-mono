<view
  class="match-container {{private === 'y' ? 'private-match' : ''}}"
  hover-class="hover-class"
  hover-stay-time="100"
  bindtap="onMatchItemTap"
>
  <!-- 左上角三角形标识 (仅隐私比赛显示) -->
  <view wx:if="{{private === 'y'}}" class="privacy-badge">
    <text class="privacy-text">密</text>
  </view>

  <!-- 左侧头像组 (保留占位) -->
  <view class="avatar-column">
    <view wx:if="{{private !== 'y'}}">
      <AvatarGroup players="{{players}}" maxShow="4" showMode="group" />
    </view>
  </view>

  <!-- 右侧内容区 -->
  <view class="content-column">
    <!-- 第1行:比赛名称 + 星标 (隐私比赛不显示,但保留占位) -->
    <view class="row name-row">
      <text class="game-name" wx:if="{{private !== 'y'}}">{{gameName}}</text>
      <view class="star-icon" wx:if="{{private !== 'y'}}">
        <view class="iconfont icon-score2" />
      </view>
    </view>
    <!-- 第2行:进度条 (隐私比赛不显示,但保留占位) -->
    <view class="row progress-row">
      <view wx:if="{{private !== 'y'}}">
        <ProgressBar completedHoles="{{completedHoles}}" holes="{{holes}}" />
      </view>
    </view>
    <!-- 地点和时间区域 + 骰子图标 -->
    <view class="location-time-wrapper">
      <view class="location-time-content">
        <!-- 第3行:地点 -->
        <view class="row course-row">
          <view
            class="iconfont icon-location"
            style="color: {{private === 'y' ? '#ffffff' : 'var(--theme-color)'}};"
          ></view>
          <text class="course {{private === 'y' ? 'private-text-light' : ''}}">{{course}}</text>
        </view>
        <!-- 第4行:时间人数 -->
        <view class="row meta-row">
          <view class="time-watchers">
            <view
              class="iconfont icon-clock"
              style="color: {{private === 'y' ? '#ffffff' : 'var(--theme-color)'}};"
            ></view>
            <text
              class="start-time {{private === 'y' ? 'private-text-light' : ''}}"
              style="margin-right: 20rpx;"
            >{{gameStart}}</text>
            <view
              class="iconfont icon-location"
              style="color: {{private === 'y' ? '#ffffff' : 'var(--theme-color)'}};"
            ></view>
            <text
              class="watchers {{private === 'y' ? 'private-text-light' : ''}}"
            >{{watchersNumber}}</text>
          </view>
        </view>
      </view>
      <!-- 骰子图标,垂直居中于地点和时间之间 -->
      <view class="game-icon-wrapper" wx:if="{{has_gamble === 'y' && private !== 'y'}}">
        <view class="game-icon">
          <view class="iconfont icon-youxishaizi" />
        </view>
      </view>
    </view>
  </view>
</view>
