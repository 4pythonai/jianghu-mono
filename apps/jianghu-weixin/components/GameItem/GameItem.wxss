@import "/styles/iconfont.wxss";

.match-container {
	padding: 15rpx 16rpx;
	margin: 15rpx 0 40rpx 0;
	background: var(--card-bg);
	border-radius: 6rpx;
	border: 0.5rpx solid var(--card-border);
	box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.12);
	display: flex;
	min-height: 170rpx;
	width: 100%;
	position: relative;
	z-index: 1;
	transition: all 0.3s ease;
	box-sizing: border-box;
}

.avatar-column {
	width: 100rpx;
	margin-right: 40rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
}

.team-avatar-wrapper {
	width: 100%;
	height: 100rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}

.team-avatar {
	width: 100rpx;
	height: 100rpx;
	border-radius: 12rpx;
}

.content-column {
	flex: 1;
	display: flex;
	flex-direction: column;
}

.row {
	display: flex;
	align-items: center;
	margin-bottom: 12rpx;
}

.name-row {
	justify-content: space-between;
	min-height: 40rpx;
}

.game-name {
	font-size: 32rpx;
	flex: 1;
	min-width: 0;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	color: var(--tilte-h1);
}

.star-icon {
	display: flex;
	align-items: center;
	justify-content: center;
	margin-left: 20rpx;
}

.star-icon .icon-img {
	width: 32rpx;
	height: 32rpx;
	filter: invert(47%) sepia(77%) saturate(429%) hue-rotate(101deg) brightness(97%) contrast(88%);
}

.game-icon .icon-img {
	width: 32rpx;
	height: 32rpx;
	filter: invert(47%) sepia(77%) saturate(429%) hue-rotate(101deg) brightness(97%) contrast(88%);
}

.location-time-wrapper {
	display: flex;
	align-items: center;
}

.location-time-content {
	flex: 1;
}

.game-icon-wrapper {
	display: flex;
	align-items: center;
	margin-left: 20rpx;
}

.game-icon {
	display: flex;
	align-items: center;
	justify-content: center;
}

.progress-row {
	margin-bottom: 16rpx;
	min-height: 24rpx;
	display: block;
	width: 100%;
}

.course-row {
	align-items: center;
}

.course-row .iconfont {
	font-size: 28rpx;
	color: #07c160;
	margin-right: 8rpx;
}

.course {
	color: #666;
	font-size: 24rpx;
}

.meta-row {
	justify-content: flex-start;
	align-items: center;
}

.meta-row .iconfont {
	font-size: 28rpx;
	color: #07c160;
	margin-right: 8rpx;
}

.time-watchers {
	display: flex;
	align-items: center;
}

.start-time,
.watchers {
	font-size: 22rpx;
	color: var(--title-h2);
}

/* ========== 隐私比赛样式 ========== */
.private-match {
	background: linear-gradient(135deg, #34a853 0%, #27873f 100%);
	position: relative;
	overflow: hidden;
	padding: 20rpx 24rpx;
}

.privacy-badge {
	position: absolute;
	top: 0;
	left: 0;
	width: 0;
	height: 0;
	border-left: 80rpx solid #FFD700;
	border-bottom: 80rpx solid transparent;
	z-index: 2;
}

.privacy-text {
	position: absolute;
	top: 16rpx;
	left: -62rpx;
	color: #000000;
	font-size: 22rpx;
	font-weight: bold;
	transform: rotate(-45deg);
	transform-origin: center center;
	z-index: 3;
	display: block;
	line-height: 1;
}

.private-match .game-name {
	color: #ffffff;
	font-weight: bold;
}

.private-text-light {
	color: #ffffff !important;
	opacity: 0.95;
}

.private-match .course-row .iconfont,
.private-match .meta-row .iconfont {
	color: #ffffff !important;
}
