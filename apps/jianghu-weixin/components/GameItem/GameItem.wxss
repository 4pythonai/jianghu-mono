@import "/styles/iconfont.wxss";

.match-container {
	padding: 15rpx 16rpx;
	margin: 15rpx 0 40rpx 0; /* 调整左右margin为0 */
	background: var(--card-bg);
	border-radius: 6rpx;
	border: 0.5rpx solid var(--card-border); /* 更醒目的绿色边框 */
	box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.12);
	display: flex;
	min-height: 170rpx;
	width: 100%; /* 改为100%宽度 */
	position: relative;
	z-index: 1;
	transition: all 0.3s ease;
	box-sizing: border-box; /* 确保边框包含在宽度内 */
}

/* hover效果 */
.hover-class {
	transform: translateY(-8rpx) scale(1.02);
	box-shadow: 0 12rpx 24rpx rgba(0, 0, 0, 0.2);
	transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
	z-index: 10;
}

/* active点击效果 */
.hover-class:active {
	transform: translateY(-4rpx) scale(1.01);
	box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.2);
	background-color: #f8f8f8;
	transition: all 0.15s ease-out;
}

.avatar-column {
	width: 100rpx; /* 固定头像列宽度 */
	margin-right: 40rpx; /* 增加间距 */
	display: flex;
	flex-direction: column;
	justify-content: center; /* 垂直居中 */
}

/* 团队头像容器 */
.team-avatar-wrapper {
	width: 100%;
	height: 100rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}

.team-avatar {
	width: 100rpx;
	height: 100rpx;
	border-radius: 12rpx;
}

.content-column {
	flex: 1;
	display: flex;
	flex-direction: column;
}

/* 行样式 */
.row {
	display: flex;
	align-items: center;
	margin-bottom: 12rpx;
}

/* 第1行:比赛名称 + star */
.name-row {
	justify-content: space-between;
	min-height: 40rpx;
}

.game-name {
	font-size: 32rpx;
	flex: 1;
	min-width: 0;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	color: var(--tilte-h1);
}

/* 星标图标 */
.star-icon {
	width: 36rpx;
	height: 36rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	color: var(--theme-color);
	margin-left: 20rpx;
}

/* 地点和时间区域包装器 */
.location-time-wrapper {
	display: flex;
	align-items: center;
}

.location-time-content {
	flex: 1;
}

/* 骰子图标包装器 */
.game-icon-wrapper {
	display: flex;
	align-items: center;
	margin-left: 20rpx;
}

.game-icon {
	width: 36rpx;
	height: 36rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	color: var(--theme-color);
	font-size: 32rpx;
}

/* 进度条容器 */
.progress-row {
	margin-bottom: 16rpx;
	min-height: 24rpx;
	display: block;
	width: 100%;
}

/* 第3行:地点 */
.course-row {
	align-items: center;
}

.course-row .iconfont {
	font-size: 28rpx;
	color: #07c160;
	margin-right: 8rpx;
}

.course {
	color: #666;
	font-size: 24rpx;
}

/* 第4行:时间人数 */
.meta-row {
	justify-content: flex-start;
	align-items: center; /* 确保垂直居中 */
}

.meta-row .iconfont {
	font-size: 28rpx;
	color: #07c160;
	margin-right: 8rpx;
}

.time-watchers {
	display: flex;
	align-items: center;
}

.start-time,
.watchers {
	font-size: 22rpx;
	color: var(--title-h2);
}

/* ========== 隐私比赛样式 ========== */
.private-match {
	background: linear-gradient(135deg, #34a853 0%, #27873f 100%);
	position: relative;
	overflow: hidden;
	padding: 20rpx 24rpx;
}

.privacy-badge {
	position: absolute;
	top: 0;
	left: 0;
	width: 0;
	height: 0;
	border-left: 80rpx solid #FFD700;
	border-bottom: 80rpx solid transparent;
	z-index: 2;
}

.privacy-text {
	position: absolute;
	top: 16rpx;
	left: -62rpx;
	color: #000000;
	font-size: 22rpx;
	font-weight: bold;
	transform: rotate(-45deg);
	transform-origin: center center;
	z-index: 3;
	display: block;
	line-height: 1;
}

.private-content {
	width: 100%;
	display: flex;
	flex-direction: column;
}

.private-match .game-name {
	color: #ffffff;
	font-weight: bold;
}

.private-match .star-icon {
	color: #ffffff;
}

.private-text-light {
	color: #ffffff !important;
	opacity: 0.95;
}

.private-match .course-row .iconfont,
.private-match .meta-row .iconfont {
	color: #ffffff !important;
}
