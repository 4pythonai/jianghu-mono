<view class="spectator-bar">
    <view class="spectator-main">
        <!-- 标题 -->
        <text class="spectator-title">围观人数（{{count}}）</text>

        <!-- 头像列表 -->
        <scroll-view class="avatar-scroll" scroll-x enhanced show-scrollbar="{{false}}">
            <view class="avatar-list">
                <view
                    wx:for="{{avatars}}"
                    wx:key="index"
                    wx:if="{{index < maxShow}}"
                    class="spectator-avatar"
                >
                    <image
                        wx:if="{{item}}"
                        class="avatar-img"
                        src="{{item}}"
                        mode="aspectFill"
                    />
                </view>
            </view>
        </scroll-view>
    </view>

    <!-- 点击更多 -->
    <view class="more-btn" bindtap="onMoreTap">
        <text>点击更多</text>
    </view>
</view>
