/* 围观条 */
.spectator-bar {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    padding: 16rpx 20rpx;
    background: #fff;
}

.spectator-main {
    flex: 1;
    min-width: 0;
}

.spectator-title {
    font-size: 26rpx;
    color: var(--text-secondary);
    display: block;
    margin-bottom: 12rpx;
}

/* 头像滚动区域 */
.avatar-scroll {
    width: 100%;
    white-space: nowrap;
}

.avatar-list {
    display: inline-flex;
    gap: 8rpx;
}

.spectator-avatar {
    width: 70rpx;
    height: 70rpx;
    border-radius: 8rpx;
    background: #f5f5f5;
    flex-shrink: 0;
    overflow: hidden;
}

/* 更多按钮 */
.more-btn {
    flex-shrink: 0;
    padding-left: 16rpx;
    padding-top: 40rpx;
}

.more-btn .more-text {
    font-size: 24rpx;
    color: var(--text-tertiary);
}
