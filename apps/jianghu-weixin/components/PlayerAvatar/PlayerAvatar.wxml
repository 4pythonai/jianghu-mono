<view class="player-avatar size-{{size}} {{selectable ? 'selectable' : ''}} {{selected ? 'selected' : ''}}" bindtap="onTap">
    <!-- 选择框（可选模式） -->
    <view wx:if="{{selectable}}" class="checkbox {{selected ? 'checked' : ''}}">
        <view wx:if="{{selected}}" class="check-icon">✓</view>
    </view>

    <!-- 头像 -->
    <view class="avatar-wrapper">
        <image
            class="avatar-img"
            src="{{avatar || defaultAvatar}}"
            mode="aspectFill"
        />
    </view>

    <!-- 名字 + 性别 -->
    <view wx:if="{{showName}}" class="name-row">
        <text class="player-name">{{name || '未知'}}</text>
        <text class="gender-icon {{gender}}">{{gender === 'male' ? '♂' : '♀'}}</text>
    </view>

    <!-- 球队名称 -->
    <text wx:if="{{showTeam && teamName}}" class="team-name">{{teamName}}</text>
</view>
