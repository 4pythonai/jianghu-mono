/* 球员头像容器 */
.player-avatar {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    gap: 4rpx;
    position: relative;
}

/* 纯头像模式：紧凑布局 */
.player-avatar.avatar-only {
    gap: 0;
}

/* xs 尺寸：更紧凑的名字样式 */
.size-xs .player-name {
    font-size: 20rpx;
    max-width: 64rpx;
}

.player-avatar.selectable,
.player-avatar.clickable {
    cursor: pointer;
}

.player-avatar.selectable:active,
.player-avatar.clickable:active {
    opacity: 0.8;
}

/* 选择框 */
.checkbox {
    position: absolute;
    top: 0;
    left: 0;
    width: 32rpx;
    height: 32rpx;
    border: 2rpx solid #ccc;
    border-radius: 4rpx;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
}

.checkbox.checked {
    background: var(--primary-green);
    border-color: var(--primary-green);
}

.check-icon {
    color: #fff;
    font-size: 20rpx;
    font-weight: bold;
}

/* 头像包装器 */
.avatar-wrapper {
    border-radius: 16rpx;
    overflow: hidden;
    background: #f5f5f5;
}

/* 头像尺寸 */
.size-mini .avatar-wrapper {
    width: 56rpx;
    height: 56rpx;
}

.size-xs .avatar-wrapper {
    width: 64rpx;
    height: 64rpx;
}

.size-small .avatar-wrapper {
    width: 80rpx;
    height: 80rpx;
}

.size-medium .avatar-wrapper {
    width: 100rpx;
    height: 100rpx;
}

.size-large .avatar-wrapper {
    width: 120rpx;
    height: 120rpx;
}

/* 圆形头像（优先级高于尺寸） */
.shape-round .avatar-wrapper {
    border-radius: 50%;
}

.avatar-img {
    width: 100%;
    height: 100%;
}

/* 名字行 */
.name-row {
    display: flex;
    align-items: center;
    gap: 4rpx;
}

.player-name {
    font-size: 24rpx;
    color: var(--text-primary);
    max-width: 100rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

/* 性别图标 */
.gender-icon {
    font-size: 22rpx;
}

.gender-icon.male {
    color: #2196f3;
}

.gender-icon.female {
    color: #e91e63;
}

/* 球队名称 */
.team-name {
    font-size: 20rpx;
    color: var(--text-tertiary);
    max-width: 100rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

/* 选中状态边框 */
.player-avatar.selected .avatar-wrapper {
    box-shadow: 0 0 0 4rpx var(--primary-green);
}
