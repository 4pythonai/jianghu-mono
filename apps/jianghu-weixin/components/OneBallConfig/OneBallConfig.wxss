.oneball-config {
	display: flex;
	flex-direction: column;
	gap: 24rpx;
}

.group-card {
	background: #fff;
	border-radius: 16rpx;
	padding: 24rpx;
	box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.group-header {
	display: flex;
	align-items: center;
	justify-content: space-between;
	margin-bottom: 16rpx;
}

.group-title {
	font-size: 30rpx;
	font-weight: 600;
	color: #333;
}

.group-count {
	font-size: 24rpx;
	color: #666;
	background: #f5f5f5;
	padding: 6rpx 16rpx;
	border-radius: 999rpx;
}

.players-list {
	display: flex;
	flex-direction: column;
}

.player-row {
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 16rpx 0;
	border-top: 1rpx solid #f0f0f0;
}

.player-row:first-child {
	border-top: none;
}

.player-info {
	display: flex;
	align-items: center;
	gap: 16rpx;
	min-width: 0;
}

.player-avatar {
	width: 64rpx;
	height: 64rpx;
	border-radius: 50%;
	background: #f0f0f0;
	flex-shrink: 0;
}

.player-name {
	font-size: 28rpx;
	color: #333;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.side-actions {
	display: flex;
	gap: 12rpx;
	flex-shrink: 0;
}

.side-btn {
	padding: 8rpx 18rpx;
	border-radius: 999rpx;
	font-size: 24rpx;
	border: 2rpx solid #d0d0d0;
	color: #666;
}

.side-a {
	border-color: #2d8cf0;
	color: #2d8cf0;
}

.side-b {
	border-color: #f56c6c;
	color: #f56c6c;
}

.side-btn.selected {
	color: #fff;
	border-color: transparent;
}

.side-a.selected {
	background: #2d8cf0;
}

.side-b.selected {
	background: #f56c6c;
}
