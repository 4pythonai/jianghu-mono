.avatar-group-container {
	width: 120rpx;
	display: flex;
	flex-wrap: wrap;
	gap: 4rpx;
	align-items: center;
	justify-content: center;
}

.line {
	width: auto;
	flex-wrap: nowrap;
	justify-content: flex-start;
}

.avatar-wrapper {
	position: relative;
}

/* 覆盖 PlayerAvatar 组件的样式使其更紧凑 */
.avatar-wrapper .player-avatar {
	gap: 0;
}

.more-tip {
	background-color: #07c160;
	color: #fff;
	font-size: 20rpx;
	padding: 4rpx 8rpx;
	border-radius: 20rpx;
	margin-left: auto;
}
