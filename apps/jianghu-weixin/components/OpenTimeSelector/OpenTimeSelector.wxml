<!-- 时间选择器组件：5个独立的输入框 -->
<view class="time-selector-wrapper">
  <!-- 5个输入框 -->
  <view class="input-row">
    <!-- 年份输入框 -->
    <view class="input-group">
      <view class="input-label">年</view>
      <view
        class="input-box {{selectedYear ? 'has-value' : ''}}"
        bindtap="onInputTap"
        data-type="year"
      >
        <text class="input-value">{{selectedYear || '请选择'}}</text>
      </view>
    </view>

    <!-- 月份输入框 -->
    <view class="input-group">
      <view class="input-label">月</view>
      <view
        class="input-box {{selectedMonth ? 'has-value' : ''}}"
        bindtap="onInputTap"
        data-type="month"
      >
        <text class="input-value">{{selectedMonth || '请选择'}}</text>
      </view>
    </view>

    <!-- 日期输入框 -->
    <view class="input-group">
      <view class="input-label">日</view>
      <view
        class="input-box {{selectedDay ? 'has-value' : ''}}"
        bindtap="onInputTap"
        data-type="day"
      >
        <text class="input-value">{{selectedDay || '请选择'}}</text>
      </view>
    </view>

    <!-- 小时输入框 -->
    <view class="input-group">
      <view class="input-label">时</view>
      <view
        class="input-box {{selectedHour ? 'has-value' : ''}}"
        bindtap="onInputTap"
        data-type="hour"
      >
        <text class="input-value">{{selectedHour || '请选择'}}</text>
      </view>
    </view>

    <!-- 分钟输入框 -->
    <view class="input-group">
      <view class="input-label">分</view>
      <view
        class="input-box {{selectedMinute ? 'has-value' : ''}}"
        bindtap="onInputTap"
        data-type="minute"
      >
        <text class="input-value">{{selectedMinute || '请选择'}}</text>
      </view>
    </view>
  </view>

  <!-- 滚轮选择器弹窗 -->
  <view class="picker-mask" wx:if="{{pickerVisible}}" bindtap="onMaskTap">
    <view class="picker-content" catchtap="noop">
      <!-- 标题栏 -->
      <view class="picker-header">
        <text class="picker-title">{{pickerTitle}}</text>
        <view class="picker-close" bindtap="onPickerCancel">
          <text class="close-icon">×</text>
        </view>
      </view>

      <!-- 滚轮选择器 -->
      <scroll-view
        class="picker-scroll"
        scroll-y
        scroll-top="{{pickerScrollTop}}"
        scroll-into-view="{{scrollIntoView}}"
        scroll-with-animation="{{scrollWithAnimation}}"
        enable-flex
        bindscroll="onPickerScroll"
        bindscrollend="onPickerScrollEnd"
        id="picker-scroll-{{pickerType}}"
      >
        <view
          class="picker-item {{item.value === pickerSelectedValue ? 'active' : ''}}"
          wx:for="{{pickerRange}}"
          wx:key="value"
          id="picker-item-{{pickerType}}-{{index}}"
          data-value="{{item.value}}"
          data-index="{{index}}"
          bindtap="onPickerItemTap"
        >
          <text class="picker-item-text">{{item.label}}</text>
        </view>
      </scroll-view>

      <!-- 底部按钮 -->
      <view class="picker-footer">
        <button class="picker-btn-cancel" bindtap="onPickerCancel">取消</button>
        <button class="picker-btn-confirm" bindtap="onPickerConfirm">确定</button>
      </view>
    </view>
  </view>
</view>
