@import "/styles/modal.wxss";

/* 组件容器 */
.time-selector-wrapper {
  width: 100%;
}

/* 输入框行 */
.input-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
  padding: 16rpx;
}

/* 输入框组 */
.input-group {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

/* 输入框标签 */
.input-label {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

/* 输入框 */
.input-box {
  width: 100%;
  height: 72rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
  box-sizing: border-box;
}

.input-box.has-value {
  background: #fff;
  border-color: var(--primary-green-dark, #4caf50);
}

.input-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.input-box:not(.has-value) .input-value {
  color: #999;
}

/* 滚轮选择器遮罩 */
.picker-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 10000;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

/* 滚轮选择器内容 */
.picker-content {
  width: 100%;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 60vh;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s;
}

/* 滚轮选择器标题栏 */
.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid #e9ecef;
}

.picker-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.picker-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-icon {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

/* 滚轮选择器 */
.picker-scroll {
  flex: 1;
  height: 320rpx;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  -webkit-overflow-scrolling: touch;
}

.picker-item {
  height: 80rpx;
  min-height: 80rpx;
  max-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 24rpx;
  transition: all 0.2s;
  flex-shrink: 0;
  box-sizing: border-box;
}

.picker-item-text {
  font-size: 28rpx;
  color: #666;
  transition: all 0.2s;
}

.picker-item.active .picker-item-text {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--primary-green-dark, #4caf50);
}

/* 滚轮选择器底部按钮 */
.picker-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx;
  border-top: 1rpx solid #e9ecef;
}

.picker-btn-cancel,
.picker-btn-confirm {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.picker-btn-cancel {
  background: #f5f5f5;
  color: #666;
}

.picker-btn-confirm {
  background: var(--primary-green-dark, #4caf50);
  color: #fff;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}
