@import "/styles/modal.wxss";

.time-selector-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 10000;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.time-selector-content {
  width: 100%;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s;
}

.time-selector-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid #e9ecef;
}

.time-selector-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.time-selector-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-icon {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

/* 日期选择区域 */
.date-section {
  padding: 24rpx;
  border-bottom: 1rpx solid #e9ecef;
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.date-column {
  height: 300rpx;
  overflow-y: auto;
}

/* 时间选择区域 */
.time-section {
  padding: 24rpx;
}

.time-selector-row {
  display: flex;
  align-items: flex-start;
  justify-content: center;
  gap: 16rpx;
}

.hour-column,
.minute-column {
  flex: 1;
  height: 300rpx;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  padding: 0;
  margin: 0;
}

.time-separator {
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
  padding: 0 8rpx;
  align-self: center;
  line-height: 300rpx;
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.selector-column {
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  padding: 0;
  margin: 0;
}

.selector-item {
  height: 80rpx;
  min-height: 80rpx;
  max-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 24rpx;
  transition: all 0.2s;
  flex-shrink: 0;
  box-sizing: border-box;
}

.item-text {
  font-size: 28rpx;
  color: #666;
  transition: all 0.2s;
}

.selector-item.active .item-text {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--primary-green-dark, #4caf50);
}

.time-selector-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx;
  border-top: 1rpx solid #e9ecef;
}

.time-btn-cancel,
.time-btn-confirm {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.time-btn-cancel {
  background: #f5f5f5;
  color: #666;
}

.time-btn-confirm {
  background: var(--primary-green-dark, #4caf50);
  color: #fff;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

