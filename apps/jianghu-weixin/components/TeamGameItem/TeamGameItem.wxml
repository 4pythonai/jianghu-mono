<view class="event-card" bindtap="onItemTap">
  <!-- 封面区域 -->
  <view class="event-cover-wrapper">
    <!-- 单个封面 -->
    <view wx:if="{{coverType === 'single'}}" class="avatar-cover">
      <jh-avatar-group
        avatars="{{[singleCover]}}"
        maxShow="4"
        showMode="group"
        clickable="{{false}}"
      />
    </view>
    <!-- 多个封面（队际赛多队头像拼接） -->
    <view wx:elif="{{coverType === 'multiple'}}" class="avatar-cover">
      <jh-avatar-group
        avatars="{{teamAvatars}}"
        maxShow="4"
        showMode="group"
        clickable="{{false}}"
      />
    </view>
    <!-- 默认封面 -->
    <view wx:else class="event-cover-default">
      <text class="default-text">暂无封面</text>
    </view>
  </view>
  <view class="event-info">
    <!-- 标题：队赛用 extra_team_game_info.team_game_title，普通用 game_name -->
    <view
      class="event-title"
    >{{event.extra_team_game_info.team_game_title || event.game_name || '未命名赛事'}}</view>
    <view class="event-meta">
      <text class="event-date">{{event.game_start}}</text>
      <text class="event-location">{{event.course || '待定'}}</text>
    </view>
    <view class="event-status {{event.registration_status}}">{{event.registration_status_text}}</view>
  </view>
</view>
