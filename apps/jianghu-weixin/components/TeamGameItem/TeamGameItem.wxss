/* TeamGameItem 组件样式 */
.event-card {
    display: flex;
    background: #fff;
    border-radius: 16rpx;
    overflow: hidden;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
    transition: all 0.2s ease;
}

.event-card:active {
    transform: scale(0.98);
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

/* 封面区域 */
.event-cover-wrapper {
    width: 180rpx;
    height: 180rpx;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #fff;
    padding: 20rpx;
    box-sizing: border-box;
}

.event-cover {
    width: 100%;
    height: 100%;
    border-radius: 8rpx;
}

/* 多个封面组合（队际赛） */
.event-cover-group {
    width: 140rpx;
    height: 140rpx;
    position: relative;
    display: flex;
    flex-wrap: wrap;
    gap: 4rpx;
    align-items: center;
    justify-content: center;
}

.cover-item {
    width: 64rpx;
    height: 64rpx;
    border-radius: 8rpx;
    border: 2rpx solid #fff;
    background-color: #f5f5f5;
    box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

/* 2个logo时的布局 */
.event-cover-group .cover-item-0 {
    position: absolute;
    top: 20rpx;
    left: 16rpx;
}

.event-cover-group .cover-item-1 {
    position: absolute;
    bottom: 20rpx;
    right: 16rpx;
}

/* 3个及以上logo时恢复流式布局 */
.event-cover-group .cover-item-2,
.event-cover-group .cover-item-3 {
    position: relative;
    top: auto;
    left: auto;
    bottom: auto;
    right: auto;
}

.event-info {
    flex: 1;
    padding: 20rpx 24rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.event-title {
    font-size: 32rpx;
    font-weight: 600;
    color: #333;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.event-meta {
    display: flex;
    flex-direction: column;
    gap: 8rpx;
    margin-top: 12rpx;
}

.event-date,
.event-location {
    font-size: 24rpx;
    color: #999;
}

.event-status {
    display: inline-block;
    padding: 6rpx 16rpx;
    border-radius: 6rpx;
    font-size: 22rpx;
    font-weight: 500;
    align-self: flex-start;
    margin-top: 12rpx;
}

/* 状态样式 - registration_status */
.event-status.open {
    background: #e8f5e9;
    color: #2e7d32;
}

.event-status.registered {
    background: #e3f2fd;
    color: #1976d2;
}

.event-status.playing {
    background: #fff8e1;
    color: #f57c00;
}

.event-status.finished {
    background: #f5f5f5;
    color: #757575;
}

