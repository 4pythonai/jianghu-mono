/* 列表项容器 */
.player-list-item {
    display: flex;
    align-items: center;
    padding: 20rpx 24rpx;
    background: #fff;
    border-bottom: 1rpx solid #f0f0f0;
}

.player-list-item:active {
    background: #f9f9f9;
}

/* 序号 */
.item-index {
    width: 60rpx;
    flex-shrink: 0;
}

.item-index text {
    font-size: 28rpx;
    color: var(--text-primary);
    font-weight: 500;
}

/* 头像区域 */
.avatar-section {
    position: relative;
    margin-right: 20rpx;
    flex-shrink: 0;
}

.player-avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 12rpx;
    background: #f5f5f5;
}

/* 付费标记 */
.paid-badge {
    position: absolute;
    top: -8rpx;
    right: -8rpx;
    width: 32rpx;
    height: 32rpx;
    background: var(--primary-green);
    border-radius: 6rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
}

.paid-badge text {
    font-size: 18rpx;
    color: #fff;
    font-weight: 500;
}

/* 球员信息 */
.player-info {
    flex: 1;
    display: flex;
    align-items: center;
    gap: 8rpx;
    min-width: 0;
}

.player-name {
    font-size: 30rpx;
    color: var(--text-primary);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

/* 性别图标 */
.gender-icon {
    font-size: 26rpx;
    flex-shrink: 0;
}

.gender-icon.male {
    color: #2196f3;
}

.gender-icon.female {
    color: #e91e63;
}

/* 差点区域 */
.handicap-section {
    width: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.handicap-icon {
    width: 48rpx;
    height: 48rpx;
}
