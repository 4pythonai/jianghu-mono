<view class="progress-container">
  <!-- 进度条轨道 -->
  <view class="progress-track">
    <view class="progress-completed" style="width: {{(completedHoles/holes)*100}}%"></view>
    <view class="progress-remaining" style="width: {{(1 - completedHoles/holes)*100}}%"></view>
  </view>

  <!-- 进度球 -->
  <view
    class="progress-ball"
    style="left: calc({{(completedHoles/holes)*100}}% - {{(completedHoles/holes)*32}}rpx)"
  >
    <text class="ball-text">{{completedHoles}}</text>
  </view>
</view>
