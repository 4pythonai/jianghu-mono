/* 进度条容器 - 使用flexbox居中 */
.progress-container {
	width: 100%;
	height: 32rpx; /* 足够容纳小球 */
	display: flex;
	align-items: center; /* 垂直居中 */
	position: relative;
	flex-shrink: 0;
}

/* 进度轨道 - 严格居中 */
.progress-track {
	width: 100%;
	height: 4rpx;
	display: flex;
	position: relative;
	border-radius: 2rpx;
	overflow: hidden;
	background-color: #e8e8e8;
}

/* 已完成部分 */
.progress-completed {
	height: 100%;
	background-color: #1a5c2e;
	transition: width 0.3s ease;
}

/* 未完成部分 */
.progress-remaining {
	height: 100%;
	background-color: #e8e8e8;
}

/* 进度球 - 绝对定位，严格居中在线条上 */
.progress-ball {
	position: absolute;
	top: 50%; /* 容器的垂直中心 */
	left: 0; /* 通过 style 动态设置 */
	transform: translate(-50%, -50%); /* 水平和垂直都居中 */
	width: 32rpx;
	height: 32rpx;
	border-radius: 50%;
	background-color: #1a5c2e;
	display: flex;
	align-items: center;
	justify-content: center;
	z-index: 10;
	box-shadow: 0 0 0 1rpx rgba(0, 0, 0, 0.1), 0 2rpx 4rpx rgba(0, 0, 0, 0.2);

	/* 高尔夫球纹理效果 */
	background-image:
		repeating-conic-gradient(
			from 0deg,
			transparent 0deg,
			transparent 60deg,
			rgba(0, 0, 0, 0.03) 60deg,
			rgba(0, 0, 0, 0.03) 120deg
		),
		repeating-radial-gradient(
			circle at 50% 50%,
			transparent 0,
			transparent 1rpx,
			rgba(0, 0, 0, 0.05) 1rpx,
			rgba(0, 0, 0, 0.05) 2rpx,
			transparent 2rpx
		),
		repeating-radial-gradient(
			circle at 50% 50%,
			transparent 0,
			transparent 1.5rpx,
			rgba(0, 0, 0, 0.03) 1.5rpx,
			rgba(0, 0, 0, 0.03) 2.5rpx,
			transparent 2.5rpx
		);

	transition: left 0.3s ease;
}

/* 球上的文字 */
.ball-text {
	color: #ffffff;
	font-size: 20rpx;
	font-weight: bold;
	text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
	line-height: 1;
}
