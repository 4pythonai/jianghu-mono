.team-as-tag-editor {
    width: 100%;
}

.gameTags-list {
    margin-bottom: 16rpx;
}

.team-as-tag-item {
    display: flex;
    align-items: center;
    background: #fff;
    border-radius: 12rpx;
    padding: 20rpx;
    margin-bottom: 16rpx;
    border-left: 8rpx solid #1976D2;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.team-as-tag-item:last-child {
    margin-bottom: 0;
}

.color-btn {
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
    margin-right: 20rpx;
    flex-shrink: 0;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.tag-name-input {
    flex: 1;
    font-size: 30rpx;
    color: #333;
    background: transparent;
}

.delete-btn {
    width: 48rpx;
    height: 48rpx;
    background: #ff4757;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 16rpx;
    flex-shrink: 0;
}

.delete-btn image {
    width: 24rpx;
    height: 24rpx;
    filter: brightness(0) invert(1);
}

.add-btn {
    height: 88rpx;
    background: var(--primary-green-dark);
    border-radius: 12rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    color: #fff;
    font-weight: 500;
    margin-top: 16rpx;
}

.add-btn:active {
    opacity: 0.8;
}

.add-icon {
    width: 32rpx;
    height: 32rpx;
    margin-right: 12rpx;
    filter: brightness(0) invert(1);
}

/* 颜色选择器弹窗 */
.color-picker-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: flex-end;
    justify-content: center;
    z-index: 1000;
}

.color-picker {
    width: 100%;
    background: #fff;
    border-radius: 24rpx 24rpx 0 0;
    padding: 32rpx;
    padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}

.picker-title {
    font-size: 32rpx;
    color: #333;
    font-weight: 600;
    text-align: center;
    margin-bottom: 32rpx;
}

.color-options {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 32rpx;
    margin-bottom: 32rpx;
}

.color-option {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
    transition: transform 0.2s ease;
}

.color-option:active {
    transform: scale(0.9);
}

.color-option.active {
    border: 4rpx solid #fff;
    box-shadow: 0 0 0 4rpx rgba(0, 0, 0, 0.2), 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.check-icon {
    width: 40rpx;
    height: 40rpx;
    filter: brightness(0) invert(1);
}

.picker-cancel {
    height: 88rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    color: #666;
    background: #f5f5f5;
    border-radius: 12rpx;
}

.picker-cancel:active {
    background: #e0e0e0;
}

