.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
  padding-top: 180rpx; /* 为固定导航栏预留空间 */
}

/* 搜索区域 */
.search-section {
  padding: 20rpx 30rpx;
  background: #fff;
}

.search-box {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  gap: 16rpx;
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.5;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.search-placeholder {
  color: #999;
}

.clear-btn {
  padding: 8rpx 16rpx;
  background: #e0e0e0;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #666;
}

/* 功能入口区 */
.category-section {
  background: #fff;
  margin-top: 20rpx;
}

.category-item {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.category-item:last-child {
  border-bottom: none;
}

.category-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.category-icon image {
  width: 40rpx;
  height: 40rpx;
}

.category-icon.teams {
  background: #1aad19;
}

.category-icon.followings {
  background: #10aeff;
}

.category-icon.followers {
  background: #ff6b00;
}

.category-icon.ghosts {
  background: #999;
}

.category-info {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.category-name {
  font-size: 30rpx;
  color: #333;
}

.category-hint {
  font-size: 24rpx;
  color: #999;
}

.category-arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.4;
}

.category-arrow image {
  width: 100%;
  height: 100%;
}

/* 好友列表区域 */
.friends-section {
  background: #fff;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  margin-right: 60rpx; /* 为字母索引留出空间 */
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #025028;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 字母分组 */
.letter-group {
  margin-bottom: 10rpx;
}

.letter-header {
  background: #f0f0f0;
  padding: 12rpx 30rpx;
  position: sticky;
  top: 0;
  z-index: 10;
}

.letter-text {
  font-size: 26rpx;
  font-weight: 600;
  color: #025028;
}

/* 好友项 */
.friend-item {
  background: #fff;
  transition: background 0.2s ease;
}

.friend-item:active {
  background: #f5f5f5;
}

.friend-content {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  gap: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.friend-avatar-wrap {
  flex-shrink: 0;
}

.friend-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  overflow: hidden;
}

.friend-name-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.friend-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.gender-icon {
  font-size: 26rpx;
}

.gender-icon.male {
  color: #10aeff;
}

.gender-icon.female {
  color: #ff6b9d;
}

.friend-handicap {
  font-size: 24rpx;
  color: #666;
}

.friend-signature {
  font-size: 24rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
}

/* 字母索引栏 */
.index-bar {
  position: fixed;
  right: 10rpx;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 6rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.index-item {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #666;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.index-item.active {
  background: #025028;
  color: #fff;
  transform: scale(1.2);
}

.index-item:active {
  background: #e8f5e9;
}

/* 字母提示气泡 */
.letter-toast {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 140rpx;
  height: 140rpx;
  background: rgba(2, 80, 40, 0.85);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 200;
}

.letter-toast text {
  font-size: 70rpx;
  font-weight: bold;
  color: #fff;
}
