.community-container {
  min-height: 100vh;
  background: #f7f8fa;
  padding-bottom: 40rpx;
}

/* 页面头部 */
.page-header {
  background: linear-gradient(135deg, #025028 0%, #038048 100%);
  padding: 60rpx 30rpx 40rpx;
  color: #ffffff;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.page-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 内容区域 */
.content-section {
  padding: 40rpx 30rpx;
}

.section-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
  text-align: center;
}

.section-desc {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.8;
  margin-bottom: 40rpx;
  text-align: center;
}

/* 礼仪列表 */
.etiquette-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.etiquette-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.item-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.item-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #025028;
  margin-right: 15rpx;
  min-width: 60rpx;
}

.item-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.item-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.item-content text {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

/* 底部提示 */
.footer-tip {
  margin-top: 50rpx;
  padding: 30rpx;
  background: #f0f7f4;
  border-radius: 12rpx;
  border-left: 4rpx solid #025028;
}

.tip-text {
  font-size: 26rpx;
  color: #025028;
  line-height: 1.6;
}
