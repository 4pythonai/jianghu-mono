<!-- 赌球结果页面 -->
<view class="gamble-result-container">
  <!-- 页面标题 -->
  <view class="page-header">
    <view class="header-title">
      <text class="title-text">单游戏结果</text>
    </view>

    <!-- 二维码图片 -->
    <view class="qrcode-container" wx:if="{{qrcode_url}}">
      <image class="qrcode-image" src="{{qrcode_url}}" mode="aspectFit"></image>
    </view>
  </view>

  <!-- 加载状态 -->
  <view class="loading-container" wx:if="{{loading}}">
    <view class="loading-spinner"></view>
    <text class="loading-text">正在加载结果...</text>
  </view>

  <!-- 错误状态 -->
  <view class="error-container" wx:elif="{{error}}">
    <text class="error-text">{{error}}</text>
    <button class="retry-btn" bindtap="fetchGambleResult" data-gambleid="{{gambleid}}">重试</button>
  </view>

  <!-- 结果展示 -->
  <view class="result-container" wx:elif="{{groupInfo && usefulHoles}}">
    <GambleResultTable
      groupInfo="{{groupInfo}}"
      usefulHoles="{{usefulHoles}}"
      qrcode_url="{{qrcode_url}}"
      showQr="{{false}}"
    ></GambleResultTable>
  </view>

  <!-- 无数据状态 -->
  <view class="no-data-container" wx:else>
    <text class="no-data-text">暂无结果数据</text>
  </view>

  <!-- 返回按钮 -->
  <view class="bottom-actions">
    <button class="back-btn" bindtap="onBackToGame">返回游戏</button>
  </view>
</view>
