.gamble-result-container {
	padding: 20rpx;
	background-color: #f5f5f5;
	min-height: 100vh;
}

/* 页面标题 */
.page-header {
	background: white;
	border-radius: 16rpx;
	padding: 30rpx;
	margin-bottom: 20rpx;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.header-title {
	margin-bottom: 20rpx;
}

.title-text {
	display: block;
	font-size: 36rpx;
	font-weight: bold;
	color: #333;
	margin-bottom: 10rpx;
}

/* 加载状态 */
.loading-container {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	padding: 100rpx 0;
	background: white;
	border-radius: 16rpx;
}

.loading-spinner {
	width: 60rpx;
	height: 60rpx;
	border: 4rpx solid #f3f3f3;
	border-top: 4rpx solid #007aff;
	border-radius: 50%;
	animation: spin 1s linear infinite;
	margin-bottom: 20rpx;
}

@keyframes spin {
	0% {
		transform: rotate(0deg);
	}
	100% {
		transform: rotate(360deg);
	}
}

.loading-text {
	font-size: 28rpx;
	color: #666;
}

/* 错误状态 */
.error-container {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	padding: 100rpx 0;
	background: white;
	border-radius: 16rpx;
}

.error-text {
	font-size: 28rpx;
	color: #ff3b30;
	margin-bottom: 30rpx;
	text-align: center;
}

.retry-btn {
	background: #007aff;
	color: white;
	border: none;
	border-radius: 8rpx;
	padding: 20rpx 40rpx;
	font-size: 28rpx;
}

/* 结果容器 */
.result-container {
	background: white;
	border-radius: 16rpx;
	overflow: hidden;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 无数据状态 */
.no-data-container {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	padding: 100rpx 0;
	background: white;
	border-radius: 16rpx;
}

.no-data-text {
	font-size: 28rpx;
	color: #999;
}

/* 底部操作 */
.bottom-actions {
	margin-top: 40rpx;
	padding: 0 20rpx;
}

.back-btn {
	background: var(--gradient-primary);
	color: #fff;
	box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
	height: 80rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	border-radius: 16rpx;
}

/* 二维码容器 */
.qrcode-container {
	display: flex;
	justify-content: center;
	align-items: center;
	margin-top: 20rpx;
	padding: 20rpx;
}

.qrcode-image {
	width: 200rpx;
	height: 200rpx;
	border-radius: 16rpx;
	box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
	background-color: white;
	padding: 16rpx;
}
