.page-container {
    min-height: 100vh;
    background: var(--bg-secondary);
}

/* 加载状态 */
.loading-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding-top: 100rpx;
}

.loading-spinner {
    width: 60rpx;
    height: 60rpx;
    border: 4rpx solid var(--border-light);
    border-top-color: var(--primary-green);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
}

@keyframes spin {
    to { transform: rotate(360deg); }
}

.loading-text {
    margin-top: 20rpx;
    font-size: 28rpx;
    color: var(--text-tertiary);
}

/* 错误状态 */
.error-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding-top: 100rpx;
}

.error-icon {
    font-size: 80rpx;
    margin-bottom: 20rpx;
}

.error-text {
    font-size: 28rpx;
    color: var(--text-secondary);
    margin-bottom: 40rpx;
}

.retry-btn {
    background: var(--primary-green);
    color: #fff;
    border-radius: 40rpx;
    padding: 16rpx 60rpx;
    font-size: 28rpx;
    border: none;
}

/* 主内容区 */
.profile-content {
    padding: 24rpx;
}

/* 用户头部卡片 */
.user-header-card {
    background: var(--bg-card);
    border-radius: 24rpx;
    padding: 40rpx 32rpx;
    margin-bottom: 24rpx;
    position: relative;
    overflow: hidden;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.header-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 160rpx;
    background: var(--gradient-primary);
    border-radius: 24rpx 24rpx 0 0;
}

.avatar-section {
    position: relative;
    z-index: 2;
    display: flex;
    justify-content: center;
    margin-bottom: 20rpx;
}

.user-avatar {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    border: 6rpx solid #fff;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
    background: #f5f5f5;
}

.name-section {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12rpx;
    margin-bottom: 24rpx;
}

.user-nickname {
    font-size: 40rpx;
    font-weight: 600;
    color: var(--text-primary);
}

.gender-badge {
    font-size: 32rpx;
    padding: 4rpx 12rpx;
    border-radius: 20rpx;
}

.gender-badge.male {
    color: #2196f3;
    background: rgba(33, 150, 243, 0.1);
}

.gender-badge.female {
    color: #e91e63;
    background: rgba(233, 30, 99, 0.1);
}

/* 差点区域 */
.handicap-section {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 40rpx;
    padding: 24rpx 0;
    border-top: 1rpx solid var(--border-light);
}

.handicap-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8rpx;
}

.handicap-label {
    font-size: 24rpx;
    color: var(--text-tertiary);
}

.handicap-value {
    font-size: 36rpx;
    font-weight: 600;
    color: var(--primary-green-dark);
}

.handicap-divider {
    width: 1rpx;
    height: 60rpx;
    background: var(--border-light);
}

/* 统计卡片 */
.stats-card {
    display: flex;
    background: var(--bg-card);
    border-radius: 20rpx;
    padding: 32rpx 0;
    margin-bottom: 24rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.stat-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8rpx;
    border-right: 1rpx solid var(--border-light);
}

.stat-item:last-child {
    border-right: none;
}

.stat-value {
    font-size: 40rpx;
    font-weight: 600;
    color: var(--text-primary);
}

.stat-label {
    font-size: 24rpx;
    color: var(--text-tertiary);
}

/* 操作按钮区域 */
.action-section {
    display: flex;
    gap: 20rpx;
    margin-bottom: 24rpx;
}

.action-btn {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8rpx;
    height: 88rpx;
    border-radius: 16rpx;
    font-size: 30rpx;
    font-weight: 500;
    border: none;
}

.action-btn.primary {
    background: var(--gradient-primary);
    color: #fff;
}

.action-btn.secondary {
    background: var(--bg-card);
    color: var(--text-primary);
    border: 2rpx solid var(--border-light);
}

.btn-icon {
    font-size: 36rpx;
    font-weight: 300;
}

/* 通用区块卡片 */
.section-card {
    background: var(--bg-card);
    border-radius: 20rpx;
    padding: 24rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.section-title {
    font-size: 30rpx;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 20rpx;
    padding-left: 8rpx;
    border-left: 6rpx solid var(--primary-green);
}

/* 球队列表 */
.teams-list {
    display: flex;
    flex-wrap: wrap;
    gap: 20rpx;
}

.team-item {
    display: flex;
    align-items: center;
    gap: 16rpx;
    padding: 16rpx 24rpx;
    background: var(--bg-light);
    border-radius: 12rpx;
}

.team-logo {
    width: 56rpx;
    height: 56rpx;
    border-radius: 8rpx;
}

.team-name {
    font-size: 28rpx;
    color: var(--text-primary);
}
