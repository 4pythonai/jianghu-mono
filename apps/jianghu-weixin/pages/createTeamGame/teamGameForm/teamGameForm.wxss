/* 引入公共样式 */
@import '/styles/createGame.wxss';

/* ==================== 队内赛特有样式 ==================== */

/* 球队选择卡片 */
.selected-team {
    display: flex;
    align-items: center;
    background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
    border-radius: 16rpx;
    padding: 24rpx 16rpx;
    min-height: 88rpx;
    box-sizing: border-box;
    transition: all 0.2s ease;
}

.selected-team:active {
    background: linear-gradient(135deg, #c8e6c9 0%, #a5d6a7 100%);
    transform: scale(0.98);
}

.team-avatar {
    width: 96rpx;
    height: 96rpx;
    border-radius: 16rpx;
    background: #e9ecef;
    border: 2rpx solid rgba(255, 255, 255, 0.8);
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.team-details {
    flex: 1;
    margin-left: 20rpx;
}

.team-name {
    font-size: 32rpx;
    color: #333;
    font-weight: 600;
    margin-bottom: 8rpx;
}

.team-role {
    display: flex;
    align-items: center;
}

.role-tag {
    font-size: 22rpx;
    padding: 4rpx 12rpx;
    border-radius: 6rpx;
}

.role-tag.owner {
    background: #fff3e0;
    color: #e65100;
}

.role-tag.admin {
    background: #e3f2fd;
    color: #1565c0;
}

.role-tag.member {
    background: rgba(255, 255, 255, 0.8);
    color: #666;
}

.reselect-hint {
    margin-right: 8rpx;
}

.reselect-hint text {
    font-size: 24rpx;
    color: var(--primary-green-dark);
}

/* 分队设置 */
.subteams-container {
    background: #f8f9fa;
    border-radius: 16rpx;
    padding: 20rpx;
}

.subteam-item {
    display: flex;
    align-items: center;
    background: #fff;
    border-radius: 12rpx;
    padding: 16rpx 20rpx;
    margin-bottom: 16rpx;
    border-left: 6rpx solid #1976D2;
}

.subteam-item:last-of-type {
    margin-bottom: 16rpx;
}

.subteam-input {
    flex: 1;
    font-size: 28rpx;
    color: #333;
    background: transparent;
}

.delete-subteam-btn {
    width: 40rpx;
    height: 40rpx;
    background: #ff4757;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 16rpx;
}

.delete-subteam-btn image {
    width: 20rpx;
    height: 20rpx;
    filter: brightness(0) invert(1);
}

.add-subteam-btn {
    height: 80rpx;
    background: var(--primary-green-dark);
    border-radius: 12rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    color: #fff;
    font-weight: 500;
}

.add-subteam-btn:active {
    opacity: 0.8;
}
