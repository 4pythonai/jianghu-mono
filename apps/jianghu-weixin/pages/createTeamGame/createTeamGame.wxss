.page-container {
    min-height: 100vh;
    background-color: var(--common-bg);
    padding: 32rpx 30rpx 48rpx;
    padding-top: 200rpx;
}

.main-card {
    width: 100%;
    background: #fff;
    border-radius: 20rpx;
    position: relative;
    overflow: hidden;
    box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.06);
}

.card-content {
    padding: 40rpx 32rpx 48rpx;
    position: relative;
    z-index: 2;
}

/* 加载状态 */
.loading-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 120rpx 0;
}

.loading-spinner {
    width: 60rpx;
    height: 60rpx;
    border: 4rpx solid #e9ecef;
    border-top-color: var(--primary-green-dark);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
}

@keyframes spin {
    to { transform: rotate(360deg); }
}

.loading-text {
    margin-top: 24rpx;
    font-size: 28rpx;
    color: #999;
}

/* 空状态 */
.empty-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 120rpx 0;
}

.empty-icon {
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 32rpx;
}

.empty-title {
    font-size: 32rpx;
    color: #333;
    font-weight: 500;
    margin-bottom: 16rpx;
}

.empty-desc {
    font-size: 26rpx;
    color: #999;
}

/* 球队列表 */
.section-title {
    font-size: 28rpx;
    color: #666;
    margin-bottom: 24rpx;
}

.team-list {
    padding: 0;
}

.team-item {
    display: flex;
    align-items: center;
    padding: 28rpx 24rpx;
    background: #f8f9fa;
    border-radius: 16rpx;
    margin-bottom: 20rpx;
    transition: all 0.2s ease;
}

.team-item:last-child {
    margin-bottom: 0;
}

.team-item:active {
    background: #f0f0f0;
    transform: scale(0.98);
}

.team-avatar {
    width: 96rpx;
    height: 96rpx;
    border-radius: 16rpx;
    background: #e9ecef;
}

.team-info {
    flex: 1;
    margin-left: 24rpx;
}

.team-name {
    font-size: 32rpx;
    color: #333;
    font-weight: 500;
    margin-bottom: 8rpx;
}

.team-role {
    display: flex;
    align-items: center;
}

.role-tag {
    font-size: 22rpx;
    padding: 4rpx 12rpx;
    border-radius: 6rpx;
}

.role-tag.team-superadmin {
    background: #fff3e0;
    color: #e65100;
}

.role-tag.admin {
    background: #e3f2fd;
    color: #1565c0;
}

.role-tag.member {
    background: #f5f5f5;
    color: #666;
}

.arrow-icon {
    width: 40rpx;
    height: 40rpx;
    margin-left: 6rpx;
}

.arrow-icon image {
    width: 100%;
    height: 100%;
}

