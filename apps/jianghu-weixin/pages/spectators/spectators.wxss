/* 围观者列表页样式 */
.container {
    min-height: 100vh;
    background-color: #f5f5f5;
    padding: 20rpx;
}

/* 标题区域 */
.header {
    text-align: center;
    margin-bottom: 30rpx;
    padding: 20rpx 0;
}

.title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 10rpx;
}

.subtitle {
    font-size: 26rpx;
    color: #666;
}

/* 加载状态 */
.loading-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 400rpx;
}

.loading-spinner {
    width: 60rpx;
    height: 60rpx;
    border: 4rpx solid #e5e5e5;
    border-top-color: var(--primary-green-dark, #2e7d32);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
}

.loading-spinner.small {
    width: 36rpx;
    height: 36rpx;
    border-width: 3rpx;
}

@keyframes spin {
    to {
        transform: rotate(360deg);
    }
}

.loading-text {
    margin-top: 20rpx;
    font-size: 28rpx;
    color: #999;
}

/* 围观者列表 */
.spectators-list {
    display: flex;
    flex-direction: column;
    gap: 16rpx;
}

.spectator-item {
    display: flex;
    align-items: center;
    background-color: #fff;
    border-radius: 16rpx;
    padding: 24rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.06);
    transition: all 0.2s ease;
}

.spectator-item:active {
    transform: scale(0.98);
    background-color: #f8f8f8;
}

.spectator-index {
    width: 48rpx;
    font-size: 28rpx;
    color: #999;
    text-align: center;
    flex-shrink: 0;
}

.spectator-avatar {
    width: 88rpx;
    height: 88rpx;
    border-radius: 50%;
    flex-shrink: 0;
    background-color: #f0f0f0;
}

.spectator-info {
    flex: 1;
    margin-left: 24rpx;
    display: flex;
    flex-direction: column;
    gap: 8rpx;
}

.spectator-name {
    font-size: 30rpx;
    font-weight: 500;
    color: #333;
}

.spectator-time {
    font-size: 24rpx;
    color: #999;
}

/* 加载更多 */
.load-more {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 30rpx 0;
    gap: 16rpx;
}

.load-more-text {
    font-size: 26rpx;
    color: #999;
}

.no-more {
    text-align: center;
    padding: 30rpx 0;
    font-size: 26rpx;
    color: #ccc;
}

/* 空状态 */
.empty-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 400rpx;
}

.empty-icon {
    width: 160rpx;
    height: 160rpx;
    opacity: 0.5;
}

.empty-text {
    margin-top: 24rpx;
    font-size: 28rpx;
    color: #999;
}

