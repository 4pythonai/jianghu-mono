<view class="container">
  <!-- 导航栏容器（带背景图，高度为屏幕1/4） -->
  <view class="navbar-wrapper" style="height: {{navbarWrapperHeight}}px;">
    <!-- 背景图片 -->
    <image src="/images/traning.png" mode="aspectFill" class="navbar-bg-image"></image>
    <!-- 导航栏 -->
    <navBar
      extClass="navbar-transparent navbar-compact-search"
      background="transparent"
      backgroundColorTop="transparent"
      back="{{false}}"
      home="{{false}}"
      searchBar="{{true}}"
      searchText="搜索"
      bindsearch="handleSearch"
    >
      <!-- 左侧 logo 插槽 -->
      <view slot="left" class="navbar-logo-wrapper">
        <image src="/assets/logos/logo1.png" mode="aspectFit" class="navbar-logo"></image>
      </view>
    </navBar>
  </view>
  <!-- Tab切换区域 -->
  <view class="tab-container">
    <view class="tab-header">
      <view
        class="tab-item {{currentTab === 0 ? 'active' : ''}}"
        bindtap="switchTab"
        data-index="0"
      >我的比赛</view>
      <view
        class="tab-item {{currentTab === 1 ? 'active' : ''}}"
        bindtap="switchTab"
        data-index="1"
      >广场</view>
    </view>
    <!-- Tab内容区域 -->
    <view class="tab-content">
      <view class="tab-pane" hidden="{{currentTab !== 0}}">
        <block wx:for="{{games}}" wx:key="gameid">
          <GameItem
            gameName="{{item.game_name}}"
            course="{{item.course}}"
            players="{{item.players}}"
            watchersNumber="{{item.watchers_number}}"
            gameStart="{{item.game_start}}"
            completedHoles="{{item.completed_holes}}"
            holes="{{item.holes ? item.holes : 18}}"
            holeList="{{item.holeList}}"
            starType="yellow"
            gameid="{{item.gameid}}"
            groups="{{item.groups}}"
            groupid="{{item.groupid || ''}}"
            group_name="{{item.group_name || ''}}"
            is_team_game="{{item.is_team_game}}"
            private="{{item.private}}"
            privacy_password="{{item.privacy_password||''}}"
            has_gamble="{{item.has_gamble}}"
            extra_team_game_info="{{item.extra_team_game_info}}"
          />
        </block>
      </view>
      <view class="tab-pane" hidden="{{currentTab !== 1}}">
        <!-- 广场内容 -->
        您还没有参加任何比球队
      </view>
    </view>
  </view>
</view>
