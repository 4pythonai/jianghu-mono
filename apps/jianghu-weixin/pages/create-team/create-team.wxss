/* 创建球队页面样式 */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 140rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 300rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e5e5e5;
  border-top-color: #1a5c3a;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

.form-container {
  padding: 20rpx;
  padding-top: 200rpx;
}

/* 表单分区 */
.form-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.section-title.required::before {
  content: '*';
  color: #ff4d4f;
  margin-right: 8rpx;
}

/* Logo 上传 */
.logo-upload {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 auto 20rpx;
  background-color: #f8f8f8;
  border: 2rpx dashed #ddd;
}

.logo-preview {
  width: 100%;
  height: 100%;
}

.logo-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-icon {
  width: 60rpx;
  height: 60rpx;
  opacity: 0.4;
  margin-bottom: 16rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

.logo-hint {
  text-align: center;
  font-size: 24rpx;
  color: #999;
}

/* 输入框 */
.input-wrapper {
  position: relative;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 100rpx 0 24rpx;
  font-size: 30rpx;
  color: #333;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  box-sizing: border-box;
}

.char-count {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #ccc;
}

/* 文本域 */
.textarea-wrapper {
  position: relative;
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  padding-bottom: 50rpx;
  font-size: 30rpx;
  color: #333;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  box-sizing: border-box;
}

.textarea-wrapper .char-count {
  position: absolute;
  right: 24rpx;
  bottom: 16rpx;
  top: auto;
  transform: none;
}

/* 提交按钮 */
.submit-btn-wrapper {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.submit-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 96rpx;
  background-color: #1a5c3a;
  color: #fff;
  font-size: 34rpx;
  font-weight: bold;
  border-radius: 48rpx;
  box-shadow: 0 8rpx 20rpx rgba(26, 92, 58, 0.3);
}

.submit-btn::after {
  border: none;
}

.submit-btn.disabled {
  background-color: #ccc;
  box-shadow: none;
}

