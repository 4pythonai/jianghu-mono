/* 球场选择区域样式 */

.search-input {
	display: flex;
	align-items: center;
	height: 88rpx;
	background: #f5f5f5;
	border-radius: 16rpx;
	padding-left: 20rpx;
	padding-right: 16rpx;
}

.search-input input {
	flex: 1;
	font-size: 28rpx;
	color: #333;
	background: transparent;
}

.input-placeholder {
	color: #999;
}

.arrow-icon {
	width: 40rpx;
	height: 40rpx;
	margin-left: 6rpx;
}

.arrow-icon image {
	width: 100%;
	height: 100%;
}

/* 选中球场样式 */
.selected-course {
	display: flex;
	align-items: center;
	background: #f5f5f5;
	border-radius: 16rpx;
	padding: 24rpx 16rpx;
	min-height: 88rpx;
	box-sizing: border-box;
}

.course-info {
	display: flex;
	align-items: center;
	flex: 1;
}

.course-details {
	flex: 1;
	margin-left: 20rpx;
}

.course-name {
	font-size: 32rpx;
	color: #333;
	font-weight: 500;
	margin-bottom: 8rpx;
}

.course-address {
	font-size: 24rpx;
	color: #666;
}

/* 半场信息样式 */
.court-info {
	display: flex;
	align-items: center;
	justify-content: space-between;
	margin-top: 8rpx;
	padding: 8rpx 12rpx;
	background: #e8f5e8;
	border-radius: 8rpx;
}

.court-name {
	font-size: 24rpx;
	color: #1aad19;
	font-weight: 500;
}

/* 价格相关样式已移除 */

.clear-btn {
	width: 40rpx;
	height: 40rpx;
	background: #ff4757;
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	margin-left: 16rpx;
}

.clear-btn image {
	width: 20rpx;
	height: 20rpx;
	filter: brightness(0) invert(1);
}

/* 表单样式 */
.game-form {
	margin-bottom: 40rpx;
}

.form-item {
	margin-bottom: 32rpx;
}

.form-label {
	font-size: 30rpx;
	color: #333;
	font-weight: 500;
	margin-bottom: 16rpx;
	display: flex;
	align-items: baseline;
}

.form-sub-label {
	font-size: 24rpx;
	color: #999;
	font-weight: 400;
	margin-left: 8rpx;
}

.form-input-wrapper {
	position: relative;
}

.form-input {
	width: 100%;
	height: 88rpx;
	background: #f8f9fa;
	border: 2rpx solid #e9ecef;
	border-radius: 16rpx;
	padding: 0 24rpx;
	font-size: 28rpx;
	color: #333;
	box-sizing: border-box;
}

.form-input:focus {
	border-color: var(--primary-green-dark);
	background: #fff;
}

/* 单选按钮组样式 */
.radio-group {
	display: flex;
	align-items: center;
}

.radio-group radio-group {
	display: flex;
	flex-direction: row;
	align-items: center;
	gap: 32rpx;
	width: 100%;
}

.radio-item {
	display: flex;
	align-items: center;
	font-size: 28rpx;
	color: #333;
	margin-right: 32rpx;
}

.radio-item:last-child {
	margin-right: 0;
}

.radio-text {
	margin-left: 12rpx;
}

/* 参赛组别样式 */
.groups-container {
	background: #f8f9fa;
	border-radius: 16rpx;
	padding: 24rpx;
}

.group-item {
	position: relative;
	margin-bottom: 24rpx;
}

.group-item:last-child {
	margin-bottom: 0;
}

.delete-group-btn {
	position: absolute;
	top: 10rpx;
	right: 10rpx;
	width: 40rpx;
	height: 40rpx;
	background: #ff4757;
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	z-index: 10;
}

.delete-group-btn image {
	width: 20rpx;
	height: 20rpx;
	filter: brightness(0) invert(1);
}

.add-group-btn {
	height: 88rpx;
	background: var(--primary-green-dark);
	border-radius: 12rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	margin-top: 24rpx;
	font-size: 28rpx;
	color: #fff;
	font-weight: 500;
}

.add-group-btn:active {
	opacity: 0.8;
}

.add-icon {
	width: 32rpx;
	height: 32rpx;
	margin-right: 12rpx;
	filter: brightness(0) invert(1);
}

/* 隐私设置样式 */
.privacy-options {
	background: #f8f9fa;
	border-radius: 16rpx;
	padding: 24rpx;
}

.switch-item {
	display: flex;
	align-items: center;
	justify-content: space-between;
	margin-bottom: 20rpx;
}

.switch-text {
	font-size: 28rpx;
	color: #333;
}

.password-input {
	margin-top: 20rpx;
	animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
	from {
		opacity: 0;
		transform: translateY(-10rpx);
	}
	to {
		opacity: 1;
		transform: translateY(0);
	}
}

/* T台选择样式 */
.tee-selector-wrapper {
	background: #f8f9fa;
	border-radius: 16rpx;
	overflow: hidden;
}

.tee-selector-btn {
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 32rpx 16rpx;
	background: #fff;
	border: 2rpx solid #e9ecef;
	border-radius: 16rpx;
	transition: all 0.2s ease;
}

.tee-selector-btn:active {
	background: #f8f9fa;
	border-color: var(--primary-green-dark);
}

.selector-content {
	display: flex;
	align-items: center;
	flex: 1;
}

.selector-icon {
	font-size: 48rpx;
	margin-right: 24rpx;
}

.selector-text {
	display: flex;
	flex-direction: column;
}

.primary-text {
	font-size: 30rpx;
	color: #333;
	font-weight: 500;
	margin-bottom: 6rpx;
}

.sub-text {
	font-size: 24rpx;
	color: #999;
}

/* T台选择区域的箭头样式 */
.tee-selector-btn .arrow-icon {
	margin-left: 6rpx;
}

/* 创建按钮样式 */
.create-btn {
	width: 100%;
	height: 92rpx;
	border-radius: 12rpx;
	border: none;
	background-color: var(--primary-green-dark);
	color: #fff;
	font-size: 32rpx;
	font-weight: 500;
	display: flex;
	align-items: center;
	justify-content: center;
	box-shadow: 0 10rpx 20rpx rgba(56, 142, 60, 0.18);
	transition: all 0.3s ease;
}

.create-btn::after {
	border: none;
}

.create-btn:active {
	transform: translateY(2rpx);
	box-shadow: 0 6rpx 12rpx rgba(56, 142, 60, 0.24);
}

.create-btn[disabled] {
	opacity: 0.5;
	box-shadow: none;
}

.action-footer {
	display: flex;
	flex-direction: column;
	gap: 24rpx;
	margin-top: 32rpx;
}

.share-actions {
	display: flex;
	gap: 16rpx;
}

.share-btn {
	width: 100%;
	height: 92rpx;
	border-radius: 12rpx;
	border: 2rpx solid var(--primary-green-dark);
	background-color: #fff;
	color: var(--primary-green-dark);
	font-size: 30rpx;
	font-weight: 500;
	display: flex;
	align-items: center;
	justify-content: center;
	flex: 1;
	transition: all 0.2s ease;
}

.share-btn:active {
	background-color: rgba(56, 142, 60, 0.08);
}

.share-btn[disabled] {
	border-color: #dcdcdc;
	color: #aaaaaa;
	background-color: #f5f5f5;
}

.share-btn.secondary {
	border-color: var(--primary-green-dark);
	color: var(--primary-green-dark);
}

.share-btn.secondary:active {
	background-color: rgba(56, 142, 60, 0.08);
}
