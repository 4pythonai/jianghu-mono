.page-container {
	min-height: 100vh;
	background-color: var(--common-bg);
	padding: 32rpx 30rpx 48rpx;
}

.main-card {
	width: 100%;
	background: #fff;
	border-radius: 20rpx;
	position: relative;
	overflow: hidden;
	box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.06);
}

.top-circle {
	display: none;
}

.card-content {
	padding: 40rpx 32rpx 48rpx;
	position: relative;
	z-index: 2;
}

.search-box {
	margin-bottom: 40rpx;
}

