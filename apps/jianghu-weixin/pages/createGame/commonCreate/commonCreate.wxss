/* 引入公共样式 */
@import '/styles/createGame.wxss';

/* ==================== 普通创建特有样式 ==================== */

/* 搜索框区域 */
.search-box {
	margin-bottom: 40rpx;
}

.top-circle {
	display: none;
}

/* 半场信息样式（普通创建特有的样式） */
.court-info {
	display: flex;
	align-items: center;
	justify-content: space-between;
	margin-top: 8rpx;
	padding: 8rpx 12rpx;
	border-radius: 8rpx;
}

.court-name {
	font-size: 24rpx;
	color: black;
	font-weight: 500;
}

/* 参赛组别样式 */
.groups-container {
	background: #f8f9fa;
	border-radius: 16rpx;
	padding: 24rpx;
}

.group-item {
	position: relative;
	margin-bottom: 24rpx;
}

.group-item:last-child {
	margin-bottom: 0;
}

.delete-group-btn {
	position: absolute;
	top: 10rpx;
	right: 10rpx;
	width: 40rpx;
	height: 40rpx;
	background: #ff4757;
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	z-index: 10;
}

.delete-group-btn image {
	width: 20rpx;
	height: 20rpx;
	filter: brightness(0) invert(1);
}

.add-group-btn {
	height: 88rpx;
	background: var(--primary-green-dark);
	border-radius: 12rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	margin-top: 24rpx;
	font-size: 28rpx;
	color: #fff;
	font-weight: 500;
}

.add-group-btn:active {
	opacity: 0.8;
}

/* 隐私设置样式 */
.privacy-options {
	background: #f8f9fa;
	border-radius: 16rpx;
	padding: 24rpx;
}

.switch-item {
	display: flex;
	align-items: center;
	justify-content: space-between;
	margin-bottom: 20rpx;
}

.switch-text {
	font-size: 28rpx;
	color: #333;
}

.password-input {
	margin-top: 20rpx;
	animation: fadeIn 0.3s ease-in-out;
}

.password-input .form-input {
	background: #fff;
}

@keyframes fadeIn {
	from {
		opacity: 0;
		transform: translateY(-10rpx);
	}
	to {
		opacity: 1;
		transform: translateY(0);
	}
}

/* T台选择样式 */
.tee-selector-wrapper {
	background: #f8f9fa;
	border-radius: 16rpx;
	overflow: hidden;
}

.tee-selector-btn {
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 32rpx 16rpx;
	background: #fff;
	border: 2rpx solid #e9ecef;
	border-radius: 16rpx;
	transition: all 0.2s ease;
}

.tee-selector-btn:active {
	background: #f8f9fa;
	border-color: var(--primary-green-dark);
}

.selector-content {
	display: flex;
	align-items: center;
	flex: 1;
}

.selector-icon {
	font-size: 48rpx;
	margin-right: 24rpx;
}

.selector-text {
	display: flex;
	flex-direction: column;
}

.primary-text {
	font-size: 30rpx;
	color: #333;
	font-weight: 500;
	margin-bottom: 6rpx;
}

.sub-text {
	font-size: 24rpx;
	color: #999;
}

.tee-selector-btn .arrow-icon {
	margin-left: 6rpx;
}

/* 分享按钮样式 */
.share-actions {
	display: flex;
	gap: 16rpx;
}

.share-btn {
	width: 100%;
	height: 92rpx;
	border-radius: 12rpx;
	border: 2rpx solid var(--primary-green-dark);
	background-color: #fff;
	color: var(--primary-green-dark);
	font-size: 30rpx;
	font-weight: 500;
	display: flex;
	align-items: center;
	justify-content: center;
	flex: 1;
	transition: all 0.2s ease;
}

.share-btn:active {
	background-color: rgba(56, 142, 60, 0.08);
}

.share-btn[disabled] {
	border-color: #dcdcdc;
	color: #aaaaaa;
	background-color: #f5f5f5;
}

.share-btn.secondary {
	border-color: var(--primary-green-dark);
	color: var(--primary-green-dark);
}

.share-btn.secondary:active {
	background-color: rgba(56, 142, 60, 0.08);
}

/* 覆盖公共样式 - 普通创建特有的按钮和布局 */
.action-footer {
	display: flex;
	flex-direction: column;
	gap: 24rpx;
	margin-top: 32rpx;
}

.create-btn {
	height: 92rpx;
	border-radius: 12rpx;
	box-shadow: 0 10rpx 20rpx rgba(56, 142, 60, 0.18);
}
