<view class="container">
  <view class="menu-container">
    <view class="menu-items">
      <view class="marker-point point1" bindtap="handleMenuClick" data-type="quickCreate">
        <view class="menu-item">
          <image
            class="menu-icon"
            src="/assets/icons/icons8-quick-48.png"
            mode="aspectFit"
            binderror="onImageError"
            data-img="quick"
          ></image>
          <text>快速创建</text>
        </view>
      </view>
      <view class="marker-point point2" bindtap="handleMenuClick" data-type="commonCreate">
        <view class="menu-item">
          <image
            class="menu-icon"
            src="/assets/icons/icons8-common-48.png"
            mode="aspectFit"
            binderror="onImageError"
            data-img="common"
          ></image>
          <text>普通创建</text>
        </view>
      </view>
      <view class="marker-point point3" bindtap="handleMenuClick" data-type="teamCreate">
        <view class="menu-item">
          <image
            class="menu-icon"
            src="/assets/icons/icons8-single-team.png"
            mode="aspectFit"
            binderror="onImageError"
            data-img="team"
          ></image>
          <text>队内赛</text>
        </view>
      </view>
      <view class="marker-point point4" bindtap="handleMenuClick" data-type="crossTeamCreate">
        <view class="menu-item">
          <image
            class="menu-icon"
            src="/assets/icons/icons8-cross-teams-48.png"
            mode="aspectFit"
            binderror="onImageError"
            data-img="crossTeam"
          ></image>
          <text>队际赛</text>
        </view>
      </view>
    </view>
  </view>
</view>
