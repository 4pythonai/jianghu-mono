.container {
	min-height: 100vh;
	padding: 180rpx 24rpx 40rpx;
	background: #f6f7f9;
	box-sizing: border-box;
}

.page-header {
	margin-bottom: 24rpx;
}

.title {
	font-size: 32rpx;
	font-weight: 600;
	color: #333;
	margin-bottom: 8rpx;
}

.subtitle {
	font-size: 24rpx;
	color: #666;
}

.bottom-actions {
	display: flex;
	gap: 16rpx;
	margin-top: 32rpx;
}

.btn {
	flex: 1;
	height: 88rpx;
	line-height: 88rpx;
	border-radius: 12rpx;
	font-size: 28rpx;
}

.btn-cancel {
	background: #fff;
	color: #333;
	border: 2rpx solid #e0e0e0;
}

.btn-confirm {
	background: var(--primary-green-dark);
	color: #fff;
}
