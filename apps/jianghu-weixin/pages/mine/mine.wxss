/* 个人中心页面样式 */
.container {
	padding: 20rpx;
}

/* 用户信息区域 */
.user-info {
	display: flex;
	align-items: center;
	padding: 30rpx;
	background-color: #fff;
	border-radius: 12rpx;
	margin-bottom: 30rpx;
	box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.avatar-container {
	margin-right: 30rpx;
}

.avatar {
	width: 120rpx;
	height: 120rpx;
	border-radius: 50%;
	border: 2rpx solid #eee;
}

.user-details {
	flex: 1;
}

.nickname {
	font-size: 36rpx;
	font-weight: bold;
	margin-bottom: 10rpx;
	display: block;
}

.phone {
	font-size: 28rpx;
	color: #666;
	display: block;
}

/* 新的认证区域样式 */
.auth-section {
	background-color: #fff;
	border-radius: 12rpx;
	padding: 30rpx;
	margin-bottom: 30rpx;
	box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.auth-title {
	font-size: 36rpx;
	font-weight: bold;
	margin-bottom: 30rpx;
	text-align: center;
	color: #333;
}

.auth-form {
	display: flex;
	flex-direction: column;
	align-items: center;
}

/* 头像选择按钮 */
.avatar-btn {
	display: flex;
	flex-direction: column;
	align-items: center;
	background-color: #f8f8f8;
	border: 2rpx dashed #ccc;
	border-radius: 12rpx;
	padding: 30rpx;
	margin-bottom: 30rpx;
	width: 100%;
	box-sizing: border-box;
}

.avatar-btn::after {
	border: none;
}

.preview-avatar {
	width: 120rpx;
	height: 120rpx;
	border-radius: 50%;
	margin-bottom: 20rpx;
}

.avatar-text {
	font-size: 28rpx;
	color: #666;
}

/* 昵称输入区域 */
.nickname-input-wrapper {
	display: flex;
	align-items: center;
	width: 100%;
	margin-bottom: 30rpx;
	padding: 0 20rpx;
	box-sizing: border-box;
}

.input-label {
	font-size: 32rpx;
	color: #333;
	margin-right: 20rpx;
	min-width: 80rpx;
}

.nickname-input {
	flex: 1;
	height: 80rpx;
	line-height: 80rpx;
	border: 2rpx solid #eee;
	border-radius: 40rpx;
	padding: 0 30rpx;
	font-size: 30rpx;
	box-sizing: border-box;
}

.nickname-input:focus {
	border-color: #07c160;
}

/* 确认按钮 */
.confirm-btn {
	width: 100%;
	height: 80rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	background-color: #07c160;
	color: #fff;
	font-size: 32rpx;
	border-radius: 40rpx;
}

.confirm-btn::after {
	border: none;
}

/* 获取用户信息按钮(保留作为后备) */
.auth-btn {
	width: 90%;
	height: 80rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	background-color: #07c160;
	color: #fff;
	font-size: 32rpx;
	border-radius: 40rpx;
	margin: 30rpx auto;
}

/* 绑定手机号按钮 */
.phone-btn {
	width: 90%;
	height: 80rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	background-color: #07c160;
	color: #fff;
	font-size: 32rpx;
	border-radius: 40rpx;
	margin: 30rpx auto;
}

/* 功能列表 */
.function-list {
	background-color: #fff;
	border-radius: 12rpx;
	overflow: hidden;
	box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.function-item {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 30rpx;
	border-bottom: 1rpx solid #eee;
}

.function-item:last-child {
	border-bottom: none;
}

.arrow {
	color: #ccc;
	font-size: 32rpx;
}

/* 登录按钮 */
.login-btn {
	width: 60%;
	height: 80rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	background-color: #07c160;
	color: #fff;
	font-size: 32rpx;
	border-radius: 40rpx;
	margin: 30rpx auto;
}
