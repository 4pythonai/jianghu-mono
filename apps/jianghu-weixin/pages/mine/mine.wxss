/* 个人中心页面样式 */
page {
  margin: 0;
  padding: 0;
}

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  margin: 0;
  padding: 0;
}

/* 顶部用户信息区域 */
.user-header {
  position: relative;
  width: 100vw;
  margin-left: calc(-50vw + 50%);
  height: 400rpx;
  background: linear-gradient(180deg, #1a5c3a 0%, #2d7a4e 100%);
  background-image: url('https://qiaoyincapital.com/images/u2.png');
  background-size: cover;
  background-position: center;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

/* 通知图标 */
.notification-icon {
  position: absolute;
  top: 40rpx;
  left: 30rpx;
  width: 48rpx;
  height: 48rpx;
}

.notification-icon image {
  width: 100%;
  height: 100%;
  filter: brightness(0) invert(1);
}

.notification-dot {
  position: absolute;
  top: 0;
  right: 0;
  width: 16rpx;
  height: 16rpx;
  background-color: #ff4d4f;
  border-radius: 50%;
}

/* 用户卡片 */
.user-card {
  position: absolute;
  bottom: 40rpx;
  left: 30rpx;
  right: 30rpx;
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 16rpx;
}

.avatar-container {
  margin-right: 24rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
}

.user-details {
  flex: 1;
}

.nickname-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-right: 12rpx;
}

.gender-icon {
  font-size: 28rpx;
  color: #4fc3f7;
}

.gender-icon.female {
  color: #f48fb1;
}

.stats-row {
  display: flex;
  gap: 30rpx;
}

.stat-item {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.qrcode-container {
  width: 60rpx;
  height: 60rpx;
  margin-right: 16rpx;
}

.qrcode {
  width: 100%;
  height: 100%;
}

.arrow-icon {
  width: 40rpx;
  height: 40rpx;
}

.arrow-icon image {
  width: 100%;
  height: 100%;
  filter: brightness(0) invert(1);
}

/* 认证区域样式 */
.auth-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.auth-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
  color: #333;
}

.auth-form {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f8f8f8;
  border: 2rpx dashed #ccc;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.avatar-btn::after {
  border: none;
}

.preview-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.avatar-text {
  font-size: 28rpx;
  color: #666;
}

.nickname-input-wrapper {
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-bottom: 30rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.input-label {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.nickname-input-container {
  width: 100%;
}

.nickname-input {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border: 2rpx solid #eee;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}

.nickname-input:focus {
  border-color: #1a5c3a;
}

.confirm-btn {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #1a5c3a;
  color: #fff;
  font-size: 32rpx;
  border-radius: 16rpx;
}

.confirm-btn::after {
  border: none;
}

/* 绑定手机号按钮 */
.phone-btn {
  width: calc(100% - 40rpx);
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #1a5c3a;
  color: #fff;
  font-size: 32rpx;
  border-radius: 16rpx;
  margin: 20rpx;
}

.phone-btn::after {
  border: none;
}

/* 功能菜单组 */
.menu-group {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 菜单项 */
.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-left: 6rpx solid #1a5c3a;
  border-bottom: 1rpx solid #f0f0f0;
  background-color: #fff;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f9f9f9;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-icon image {
  width: 100%;
  height: 100%;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.menu-arrow {
  width: 32rpx;
  height: 32rpx;
}

.menu-arrow image {
  width: 100%;
  height: 100%;
  opacity: 0.6;
}
