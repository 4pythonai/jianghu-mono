/* 赛事页面样式 */
.container {
    min-height: 100vh;
    background-color: var(--common-bg, #f5f5f5);
}

/* ==================== 轮播Banner区域 ==================== */
.banner-section {
    position: relative;
    width: 100%;
    height: 360rpx;
}

.banner-swiper {
    width: 100%;
    height: 100%;
}

.banner-image {
    width: 100%;
    height: 100%;
}

/* 自定义轮播指示器 */
.banner-indicator {
    position: absolute;
    bottom: 20rpx;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 12rpx;
    z-index: 10;
}

.indicator-dot {
    width: 16rpx;
    height: 16rpx;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.5);
    transition: all 0.3s ease;
}

.indicator-dot.active {
    width: 32rpx;
    border-radius: 8rpx;
    background-color: #ffffff;
}

/* ==================== Tab切换区域 ==================== */
.tab-container {
    width: 100%;
}

.tab-header {
    display: flex;
    height: 88rpx;
    line-height: 88rpx;
    background: #fff;
    border-bottom: 1rpx solid #e5e5e5;
}

.tab-item {
    flex: 1;
    text-align: center;
    font-size: 30rpx;
    color: #666;
    position: relative;
    transition: all 0.3s ease;
}

.tab-item.active {
    color: var(--primary-green-dark, #2e7d32);
    font-weight: 600;
}

.tab-item.active::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 80rpx;
    height: 6rpx;
    background: var(--primary-green-dark, #2e7d32);
    border-radius: 3rpx;
}

/* ==================== Tab内容区域 ==================== */
.tab-content {
    min-height: calc(100vh - 360rpx - 88rpx);
    padding: 24rpx;
}

/* 加载状态 */
.loading-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 100rpx 0;
}

.loading-spinner {
    width: 60rpx;
    height: 60rpx;
    border: 4rpx solid #e5e5e5;
    border-top-color: var(--primary-green-dark, #2e7d32);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
}

@keyframes spin {
    to {
        transform: rotate(360deg);
    }
}

.loading-text {
    margin-top: 20rpx;
    font-size: 28rpx;
    color: #999;
}

/* 空状态 */
.empty-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 100rpx 0;
}

.empty-icon {
    width: 200rpx;
    height: 200rpx;
    opacity: 0.5;
}

.empty-text {
    margin-top: 24rpx;
    font-size: 28rpx;
    color: #999;
}

/* ==================== 赛事列表 ==================== */
.event-list {
    display: flex;
    flex-direction: column;
    gap: 24rpx;
}
