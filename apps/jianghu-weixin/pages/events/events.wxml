<view class="container">
  <!-- 轮播Banner区域 -->
  <view class="banner-section">
    <swiper
      class="banner-swiper"
      autoplay="{{true}}"
      interval="{{4000}}"
      duration="{{500}}"
      circular="{{true}}"
      bindchange="onBannerChange"
    >
      <swiper-item wx:for="{{banners}}" wx:key="id" bindtap="onBannerTap" data-banner="{{item}}">
        <image class="banner-image" src="{{item.image}}" mode="aspectFill" />
      </swiper-item>
    </swiper>
    <!-- 自定义轮播指示器 -->
    <view class="banner-indicator" wx:if="{{banners.length > 1}}">
      <view
        wx:for="{{banners}}"
        wx:key="id"
        class="indicator-dot {{currentBannerIndex === index ? 'active' : ''}}"
      />
    </view>
  </view>

  <!-- Tab切换区域 -->
  <view class="tab-container">
    <view class="tab-header">
      <view
        class="tab-item {{currentTab === 0 ? 'active' : ''}}"
        bindtap="switchTab"
        data-index="0"
      >可报名赛事</view>
      <view
        class="tab-item {{currentTab === 1 ? 'active' : ''}}"
        bindtap="switchTab"
        data-index="1"
      >已报名赛事</view>
    </view>

    <!-- Tab内容区域 -->
    <view class="tab-content">
      <!-- 加载中 -->
      <view class="loading-wrapper" wx:if="{{loading}}">
        <view class="loading-spinner"></view>
        <text class="loading-text">加载中...</text>
      </view>

      <!-- 空状态 -->
      <view class="empty-wrapper" wx:elif="{{isEmpty}}">
        <text class="empty-text">{{currentTab === 0 ? '暂无可报名赛事' : '您还没有报名任何赛事'}}</text>
      </view>

      <!-- 赛事列表 -->
      <view class="event-list" wx:else>
        <team-game-item
          wx:for="{{eventList}}"
          wx:key="gameid"
          event="{{item}}"
          bindtap="onEventTap"
          data-event="{{item}}"
        />
      </view>
    </view>
  </view>
</view>
