/* 计分组件样式 */

.score-table-margin{
	margin-top: 10rpx;
}


.score-container {
	display: flex;
	width: 100%;
	height: auto;
	max-height: 80vh; /* 限制最大高度，避免过高 */
	background-color: #f5f5f5;
	position: relative;
	overflow: hidden;
}

/* 固定列样式 */
.fixed-column {
	width: 80px;
	background-color: white;
	z-index: 20;
	display: flex;
	flex-direction: column;
	height: 100%;
}

.player-column {
	border-right: 1px solid #ddd;
}

/* 主滚动区域 */
.main-scroll {
	flex: 1;
	position: relative;
	z-index: 10;
	background-color: white;
	overflow-x: auto;
	height: 100%; /* 确保与固定列高度一致 */
}

/* 滚动内容区 */
.scroll-content {
	display: flex;
	flex-direction: column;
}

/* 表头基础样式 */
.tb-header {
	height: 80px;
	min-height: 80px; /* 确保最小高度 */
	background-color: var(--tb-header-bg);
	color: var(--tb-header-text);
	font-weight: bold;
	display: flex;
	position: sticky;
	left: 0;
	z-index: 15;
	flex-shrink: 0; /* 防止表头被压缩 */
}

/* 球洞表头 */
.tb-header-holes {
	width: 100%;
}

/* 球员表头 */
.tb-header-player {
	padding: 20px;
}

/* 球洞表头单元格 */
.tb-header-hole {
	width: 80px;
	min-width: 80px;
	height: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	padding: 8px 0;
	border-right: 1px solid #eee;
}

/* 球洞号 */
.hole-name {
	width: 26px;
	height: 26px;
	border-radius: 50%;
	background-color: white;
	color: #4caf50;
	display: flex;
	align-items: center;
	justify-content: center;
	font-weight: bold;
	font-size: 14px;
	margin-bottom: 4px;
	box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
}

/* 标准杆数 */
.hole-par {
	color: white;
	font-size: 16px;
}

/* 总分表头特殊样式 */
.tb-header-total {
	background-color: var(--primary-green-dark);
}

.tb-header-total .total-text {
	color: white;
	font-size: 16px;
	font-weight: bold;
	white-space: nowrap;
	display: flex;
	align-items: center;
	justify-content: center;
	height: 100%;
}

/* OUT汇总表头样式 */
.tb-header-out {
	background-color: #ff9800;
}

.tb-header-out .total-text {
	color: white;
	font-size: 16px;
	font-weight: bold;
	white-space: nowrap;
	display: flex;
	align-items: center;
	justify-content: center;
	height: 100%;
}

/* IN汇总表头样式 */
.tb-header-in {
	background-color: #2196f3;
}

.tb-header-in .total-text {
	color: white;
	font-size: 16px;
	font-weight: bold;
	white-space: nowrap;
	display: flex;
	align-items: center;
	justify-content: center;
	height: 100%;
}

/* 内容区域 */
.table-body {
	display: flex;
	flex-direction: column;
	flex: 1; /* 占据剩余空间 */
	min-height: 0; /* 允许flex子项缩小 */
}

/* 行样式 */
.table-row {
	height: 80px;
	border-bottom: 1px solid #eee;
	background-color: white;
	display: flex;
}

/* 计分单元格 */
.cell-score {
	width: 80px;
	min-width: 80px;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
	border-right: 1px solid #eee;
}

/* 球员单元格 */
.cell-player {
	width: 100%;
	height: 80px;
	min-height: 80px; /* 确保最小高度 */
	border: 1px solid #eee;
	flex-shrink: 0; /* 防止被压缩 */
}

/* OUT汇总单元格 */
.cell-out {
	background-color: #fff3e0; /* 浅橙色背景 */
	border: 1px solid #e5e5e5; /* 与HoleCell的边框样式完全一致 */
	position: relative; /* 为绝对定位的文本提供定位上下文 */
}

/* IN汇总单元格 */
.cell-in {
	background-color: #e3f2fd; /* 浅蓝色背景 */
	border: 1px solid #e5e5e5; /* 与HoleCell的边框样式完全一致 */
	position: relative; /* 为绝对定位的文本提供定位上下文 */
}

/* OUT和IN汇总列文本样式，与HoleCell的score-text对齐 */
.cell-out text,
.cell-in text {
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%); /* 完全居中，与HoleCell的transform保持一致 */
	font-size: 22px; /* 与HoleCell的score-text字体大小一致 */
	color: #333;
	font-weight: bold;
}

/* 总分单元格 */
.cell-total {
	width: 80px;
	min-width: 80px;
	height: 80px; /* 固定高度与HoleCell一致 */
	position: relative; /* 使用相对定位，与HoleCell一致 */
	font-weight: bold;
	border: 1px solid #e5e5e5; /* 与HoleCell的边框样式完全一致 */
	background-color: white;
}

/* TOTAL列文本样式，与HoleCell的score-text对齐 */
.cell-total text {
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%); /* 完全居中，与HoleCell的transform保持一致 */
	font-size: 22px; /* 与HoleCell的score-text字体大小一致 */
	color: #333;
	font-weight: bold;
}

/* 数据加载中的占位符样式 */
.loading-cell {
	background-color: #fafafa;
	opacity: 0.6;
}

