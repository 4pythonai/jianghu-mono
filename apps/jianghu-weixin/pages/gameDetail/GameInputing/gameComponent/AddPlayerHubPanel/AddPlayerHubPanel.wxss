/* 添加球员面板样式 */
.panel-mask {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background-color: rgba(0, 0, 0, 0.5);
	z-index: 10000;
	opacity: 0;
	visibility: hidden;
	transition: all 0.3s ease;
}

.panel-mask.show {
	opacity: 1;
	visibility: visible;
}

.panel-container {
	position: absolute;
	bottom: 0;
	left: 0;
	right: 0;
	background-color: #fff;
	border-radius: 20rpx 20rpx 0 0;
	height: 85vh; /* 使用85%的视口高度，减少面板高度 */
	transform: translateY(100%);
	transition: transform 0.3s ease;
	display: flex;
	flex-direction: column;
}

.panel-container.show {
	transform: translateY(0);
}

/* 面板头部 */
.panel-header {
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 32rpx 32rpx 0;
	border-bottom: 1rpx solid #f0f0f0;
	padding-bottom: 24rpx;
	margin-bottom: 32rpx;
}

.modal-title {
	font-size: 36rpx;
	font-weight: 600;
	color: #333;
}

.close-btn {
	width: 48rpx;
	height: 48rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	background-color: #f5f5f5;
	border-radius: 50%;
	transition: background-color 0.2s ease;
}

.close-btn:active {
	background-color: #e5e5e5;
}

.close-icon {
	width: 24rpx;
	height: 24rpx;
}

/* 面板内容 */
.panel-content {
	padding: 0 32rpx;
	flex: 1; /* 占用剩余所有空间 */
	overflow-y: auto;
	display: flex;
	flex-direction: column;
}

/* 二维码区域 */
.qrcode-section {
	flex: 1;
	display: flex;
	align-items: center;
	justify-content: center;
	padding: 20rpx 0;
}

/* 二维码状态 */
.qrcode-status {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	gap: 24rpx;
}

.status-text {
	font-size: 32rpx;
	color: #999;
}

.error-text {
	font-size: 32rpx;
	color: var(--error);
	text-align: center;
}

.retry-btn {
	padding: 16rpx 48rpx;
	background-color: var(--primary-green-dark);
	color: #fff;
	border-radius: 8rpx;
	transition: opacity 0.2s ease;
}

.retry-btn:active {
	opacity: 0.8;
}

.retry-text {
	font-size: 28rpx;
	color: #fff;
}

/* 二维码展示 */
.qrcode-display {
	display: flex;
	flex-direction: column;
	align-items: center;
	gap: 24rpx;
	width: 100%;
}

.qrcode-image {
	width: 500rpx;
	height: 500rpx;
	background-color: #fff;
	border-radius: 16rpx;
	box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.qrcode-hint {
	font-size: 32rpx;
	color: var(--text-primary);
	font-weight: 500;
	text-align: center;
}

.qrcode-tip {
	font-size: 24rpx;
	color: var(--text-tertiary);
	text-align: center;
}

/* 其他添加方式提示 */
.other-methods-hint {
	margin: 32rpx 0 24rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	gap: 16rpx;
}

.hint-text {
	font-size: 28rpx;
	color: var(--text-secondary);
}

.divider-line {
	width: 80rpx;
	height: 1rpx;
	background-color: var(--border-light);
}

/* 面板底部 */
.panel-footer {
	display: flex;
	gap: 24rpx;
	padding: 32rpx;
	border-top: 1rpx solid #f0f0f0;
	background-color: #fff;
	border-radius: 0 0 20rpx 20rpx;
}

.footer-btn {
	flex: 1;
	height: 100rpx;
	border-radius: 16rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	gap: 8rpx;
	background: var(--gradient-primary);
	transition: all 0.2s ease;
	box-shadow: 0 4rpx 12rpx var(--shadow-primary);
}

.footer-btn:active {
	transform: translateY(2rpx);
	box-shadow: 0 2rpx 8rpx var(--shadow-primary-hover);
}

.btn-icon {
	width: 48rpx;
	height: 48rpx;
}

.btn-text {
	font-size: 28rpx;
	font-weight: 500;
	color: #fff;
}
