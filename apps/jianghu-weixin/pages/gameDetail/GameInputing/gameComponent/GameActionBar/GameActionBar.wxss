/* 底部操作栏容器 */
.bottom-action-bar {
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 20rpx;
	margin-top: 80rpx;
	background-color: #045d26;
	border-top: 1rpx solid #e9ecef;
}

/* 游戏摘要样式 */
.game-abstract {
	flex: 1;
	padding-right: 20rpx;
}

.abstract-text {
	font-size: 28rpx;
	color: white;
	line-height: 1.5;
	text-align: left;
}

/* 按钮组容器 */
.button-group {
	display: flex;
	align-items: center;
	gap: 20rpx;
}

/* 操作按钮样式 */
.operationBtn {
	width: 80rpx;
	height: 80rpx;
	background-color: rgba(255, 255, 255, 0.2);
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
	flex-shrink: 0;
}

.operation-icon {
	font-size: 40rpx;
	color: white;
	font-weight: bold;
	line-height: 1;
}

/* 添加球员按钮样式 */
.addPlayerBtn {
	width: 80rpx;
	height: 80rpx;
	background-color: rgba(255, 255, 255, 0.2);
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
	flex-shrink: 0;
}

.add-icon {
	font-size: 40rpx;
	color: white;
	font-weight: bold;
	line-height: 1;
}
