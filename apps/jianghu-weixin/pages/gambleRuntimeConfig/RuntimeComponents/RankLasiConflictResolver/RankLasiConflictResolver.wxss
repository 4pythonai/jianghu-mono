/* RankingSelector组件样式 */
.ranking-selector {
	display: flex;
	flex-direction: column;
	gap: 20rpx;
}

/* 选项列表 */
.ranking-options {
	display: flex;
	flex-direction: column;
	gap: 15rpx;
}

.ranking-option {
	display: flex;
	align-items: center;
	padding: 20rpx;
	background-color: #f8f8f8;
	border: 2rpx solid #e0e0e0;
	border-radius: 15rpx;
	cursor: pointer;
	transition: all 0.3s;
	gap: 15rpx;
}

.ranking-option:active {
	transform: scale(0.98);
}

.ranking-option.selected {
	background-color: #e8f5e8;
	border-color: #4caf50;
}

/* 禁用状态 */
.ranking-option.disabled {
	opacity: 0.5;
	background-color: #f5f5f5;
	border-color: #e0e0e0;
	cursor: not-allowed;
}

.ranking-option.disabled .option-label {
	color: #999;
}

.ranking-option.disabled .radio-indicator {
	border-color: #ccc;
}

.disabled-hint {
	font-size: 22rpx;
	color: #ff9800;
	margin-left: 10rpx;
}

/* 选择指示器 */
.radio-indicator {
	width: 40rpx;
	height: 40rpx;
	border: 3rpx solid #e0e0e0;
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-shrink: 0;
	transition: all 0.3s;
}

.ranking-option.selected .radio-indicator {
	border-color: var(--primary-green-dark);
}

.radio-dot {
	width: 20rpx;
	height: 20rpx;
	background-color: var(--primary-green-dark);
	border-radius: 50%;
	animation: radioSelect 0.3s ease-in-out;
}

@keyframes radioSelect {
	from {
		transform: scale(0);
	}
	to {
		transform: scale(1);
	}
}

/* 选项内容 */
.option-content {
	display: flex;
	flex-direction: column;
	flex: 1;
}

.option-label {
	font-size: 26rpx;
	color: #333;
	line-height: 1.4;
}

/* 当前选择显示 */
.current-selection {
	display: flex;
	align-items: center;
	padding: 15rpx 20rpx;
	background-color: #f0f8f0;
	border-radius: 15rpx;
	border: 2rpx solid #4caf50;
	gap: 10rpx;
}

.selection-label {
	font-size: 28rpx;
	color: #666;
	font-weight: 500;
}

.selection-value {
	font-size: 30rpx;
	color: #4caf50;
	font-weight: bold;
}

/* 提示信息 */
.hint-text {
	text-align: center;
	padding: 10rpx;
	margin-top: 10rpx;
	font-size: 24rpx;
	color: #ff9800;
	line-height: 1.4;
}

/* 响应式设计 */
@media (max-width: 600rpx) {
	.ranking-option {
		padding: 15rpx;
		gap: 12rpx;
	}

	.radio-indicator {
		width: 35rpx;
		height: 35rpx;
	}

	.radio-dot {
		width: 18rpx;
		height: 18rpx;
	}

	.option-label {
		font-size: 28rpx;
	}

	.option-description {
		font-size: 24rpx;
	}

	.current-selection {
		padding: 12rpx 15rpx;
	}

	.selection-label {
		font-size: 26rpx;
	}

	.selection-value {
		font-size: 28rpx;
	}

	.hint-text {
		font-size: 22rpx;
	}
}
