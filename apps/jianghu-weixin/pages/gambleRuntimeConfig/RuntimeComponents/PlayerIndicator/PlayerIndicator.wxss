/* PlayerIndicator组件样式 */
.player-indicator-container {
	padding: 10rpx;
	background-color: #f8f9fa;
	border-radius: 16rpx;
}

/* 标题栏 */
.indicator-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 20rpx;
}

.header-title {
	font-size: 32rpx;
	font-weight: 600;
	color: #333;
}

.header-reset {
	font-size: 28rpx;
	color: #007aff;
	padding: 8rpx 16rpx;
	background-color: #fff;
	border-radius: 8rpx;
	border: 1rpx solid #007aff;
}

/* 球员网格 */
.players-grid {
	display: flex;
	flex-wrap: wrap;
	gap: 20rpx;
	justify-content: flex-start;
}

.player-item {
	display: flex;
	flex-direction: column;
	align-items: center;
	width: 140rpx;
	height: 200rpx;
	padding: 16rpx;
	background-color: #fff;
	border-radius: 12rpx;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
	transition: transform 0.2s ease;
	position: relative;
}

.player-item:active {
	transform: scale(0.95);
}

.player-avatar {
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	background-color: #e9ecef;
	margin-bottom: 8rpx;
	flex-shrink: 0;
}

.player-nickname {
	font-size: 24rpx;
	color: #333;
	margin-bottom: 20rpx;
	text-align: center;
	max-width: 100%;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	min-height: 32rpx;
}

.player-config {
	font-size: 28rpx;
	font-weight: 600;
	color: #007aff;
	background-color: #f0f8ff;
	padding: 4rpx 8rpx;
	border-radius: 6rpx;
	border: 1rpx solid #007aff;
}

/* 弹框遮罩 */
.modal-overlay {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background-color: rgba(0, 0, 0, 0.5);
	display: flex;
	align-items: center;
	justify-content: center;
	z-index: 1000;
}

.modal-container {
	width: 90%;
	max-width: 600rpx;
	background-color: #fff;
	border-radius: 16rpx;
	padding: 32rpx;
	box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
	animation: modalSlideIn 0.3s ease-out;
}

@keyframes modalSlideIn {
	from {
		transform: translateY(-50rpx);
		opacity: 0;
	}
	to {
		transform: translateY(0);
		opacity: 1;
	}
}

/* 弹框标题 */
.modal-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 24rpx;
	padding-bottom: 16rpx;
	border-bottom: 1rpx solid #e9ecef;
}

.modal-title {
	font-size: 32rpx;
	font-weight: 600;
	color: #333;
}

.modal-close {
	font-size: 40rpx;
	color: #999;
	padding: 8rpx;
	line-height: 1;
}

/* 预设选项区域 */
.preset-section {
	margin-bottom: 24rpx;
}

.section-title {
	font-size: 28rpx;
	font-weight: 600;
	color: #333;
	margin-bottom: 16rpx;
	display: block;
}

.preset-grid {
	display: flex;
	flex-wrap: wrap;
	gap: 12rpx;
}

.preset-item {
	padding: 12rpx 20rpx;
	background-color: #f8f9fa;
	border: 1rpx solid #e9ecef;
	border-radius: 8rpx;
	transition: all 0.2s ease;
}

.preset-item.selected {
	background-color: #007aff;
	border-color: #007aff;
}

.preset-label {
	font-size: 28rpx;
	color: #333;
	font-weight: 500;
}

.preset-item.selected .preset-label {
	color: #fff;
}

/* 自定义输入区域 */
.custom-section {
	margin-bottom: 32rpx;
}

.custom-input {
	width: 100%;
	padding: 16rpx;
	border: 1rpx solid #e9ecef;
	border-radius: 8rpx;
	font-size: 28rpx;
	background-color: #fff;
	margin-bottom: 12rpx;
}

.custom-input:focus {
	border-color: #007aff;
	outline: none;
}

.input-hint {
	font-size: 24rpx;
	color: #666;
	display: block;
	margin-bottom: 8rpx;
	line-height: 1.4;
}

/* 按钮区域样式 */
.modal-buttons {
	display: flex;
	gap: 20rpx;
	justify-content: space-between;
	margin-top: 32rpx;
}

.modal-buttons .btn {
	flex: 1;
	height: 80rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	border-radius: 8rpx;
	font-size: 28rpx;
	transition: all 0.2s ease;
}

.btn-cancel {
	background-color: #f8f9fa;
	color: #6c757d;
	border: 1px solid #dee2e6;
}

.btn-cancel:active {
	background-color: #e2e6ea;
}

.btn-confirm {
	background: var(--gradient-primary);
	color: #fff;
	border: none;
	box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
}

.btn-confirm:active {
	background: var(--gradient-primary-hover);
	transform: translateY(2rpx);
	box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.4);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
	.players-grid {
		justify-content: center;
	}

	.player-item {
		width: 120rpx;
		height: 220rpx;
	}

	.modal-container {
		width: 95%;
		padding: 24rpx;
	}
}
