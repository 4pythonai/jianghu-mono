/* RedBlueConfig组件样式 */
.red-blue-config {
	display: flex;
	flex-direction: column;
	gap: 25rpx;
}

/* 分组方式选择 */
.grouping-method {
	background-color: #f8f8f8;
	border-radius: 15rpx;
	padding: 20rpx;
}

.section-label {
	margin-bottom: 10rpx;
}

.radio-item {
	display: flex;
	align-items: center;
	justify-content: center;
	padding: 12rpx 20rpx;
	gap: 8rpx;
	flex: 1;
	background-color: #fff;
	border-radius: 12rpx;
	border: 2rpx solid #e0e0e0;
	transition: all 0.3s;
	min-height: 60rpx;
	box-sizing: border-box;
}

.radio-item:active {
	transform: scale(0.98);
}

.radio-label {
	font-size: 28rpx;
	color: #333;
	font-weight: 500;
	white-space: nowrap;
}

.departure-order {
	background-color: #f8f8f8;
	border-radius: 15rpx;
	padding: 20rpx;
}

.order-controls {
	display: flex;
	gap: 15rpx;
	margin-bottom: 20rpx;
}

.order-btn {
	flex: 1;
	height: 70rpx;
	background-color: #4caf50;
	color: #fff;
	border: none;
	border-radius: 12rpx;
	font-size: 28rpx;
	font-weight: bold;
	transition: all 0.3s;
}

.order-btn:active {
	transform: scale(0.98);
}

/* 自动抽签按钮激活状态 */
.order-btn.auto-active {
	background-color: #ff5722;
	animation: pulse 2s infinite;
}

@keyframes pulse {
	0% {
		box-shadow: 0 0 0 0 rgba(255, 87, 34, 0.7);
	}
	70% {
		box-shadow: 0 0 0 10rpx rgba(255, 87, 34, 0);
	}
	100% {
		box-shadow: 0 0 0 0 rgba(255, 87, 34, 0);
	}
}

/* 自动抽签状态提示 */
.auto-status {
	background-color: #fff3cd;
	border: 2rpx solid #ffeaa7;
	border-radius: 10rpx;
	padding: 15rpx;
	margin-bottom: 15rpx;
	text-align: center;
}

.auto-status-text {
	font-size: 26rpx;
	color: #856404;
	font-weight: 500;
}

/* 玩家列表 */
.players-order-list {
	border: 2rpx solid #e0e0e0;
	border-radius: 15rpx;
	overflow: hidden;
	height: 400rpx;
}

/* 响应式设计 */
@media (max-width: 600rpx) {
	.grouping-method,
	.departure-order {
		padding: 15rpx;
	}

	.radio-item {
		padding: 10rpx 15rpx;
		gap: 6rpx;
		min-height: 50rpx;
	}

	.radio-label {
		font-size: 24rpx;
	}

	.order-controls {
		flex-direction: column;
		gap: 10rpx;
	}

	.order-btn {
		height: 60rpx;
		font-size: 26rpx;
	}

	.auto-status {
		padding: 12rpx;
	}

	.auto-status-text {
		font-size: 24rpx;
	}
}

.my-radio-group {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	gap: 20rpx;
	width: 100%;
}

.my-radio {
	margin-right: 8rpx;
}
