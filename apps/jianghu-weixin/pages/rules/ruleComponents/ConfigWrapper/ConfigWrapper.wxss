/* 配置组件包装器样式 */
.config-wrapper {
  margin-bottom: 40rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 16rpx;
  overflow: hidden;
}

.component-title {
  background: #f8f9fa;
  padding: 24rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  border-bottom: 2rpx solid #f0f0f0;
}

.component-content {
  padding: 24rpx;
  background: white;
}

.default-config {
  text-align: center;
  padding: 60rpx 20rpx;
  color: #999;
  font-size: 28rpx;
} 