@import "../common.wxss";

page {
	background-color: var(--common-bg);
	min-height: 100%;
}

.container {
	padding: 40rpx 30rpx 60rpx;
	padding-top: 200rpx; /* 预留导航栏空间 */
	display: flex;
	flex-direction: column;
	gap: 32rpx;
}

.qrcode-card,
.info-card,
.tips-card {
	background-color: #ffffff;
	border-radius: 20rpx;
	padding: 36rpx 32rpx;
	box-shadow: 0 12rpx 28rpx rgba(0, 0, 0, 0.06);
}

.qrcode-card {
	display: flex;
	flex-direction: column;
	align-items: center;
	gap: 24rpx;
}

.status {
	width: 100%;
	min-height: 220rpx;
	border-radius: 16rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	text-align: center;
	padding: 24rpx;
	box-sizing: border-box;
}

.status.loading {
	background-color: #f4fbf6;
	color: var(--theme-color);
	font-size: 28rpx;
}

.status.error {
	background-color: #fff5f5;
	color: #c93d3d;
	flex-direction: column;
	gap: 16rpx;
}

.status.placeholder {
	background-color: #f6f7f8;
	color: #999999;
	font-size: 28rpx;
}

.error-text {
	font-size: 28rpx;
}

.qrcode-wrapper {
	width: 100%;
	display: flex;
	flex-direction: column;
	gap: 20rpx;
	align-items: center;
}

.qrcode-image {
	width: 360rpx;
	height: 360rpx;
	border-radius: 16rpx;
	background-color: #f6f7f8;
}

.hint {
	font-size: 26rpx;
	color: #666666;
	text-align: center;
}

.action-row {
	width: 100%;
	display: flex;
	gap: 16rpx;
}

.primary-btn,
.secondary-btn {
	flex: 1;
	height: 88rpx;
	border-radius: 12rpx;
	font-size: 30rpx;
	font-weight: 500;
	display: flex;
	align-items: center;
	justify-content: center;
}

.primary-btn {
	background-color: var(--theme-color);
	color: #ffffff;
	border: none;
	box-shadow: 0 10rpx 20rpx rgba(16, 157, 88, 0.18);
}

.primary-btn:active {
	transform: translateY(2rpx);
	box-shadow: 0 6rpx 12rpx rgba(16, 157, 88, 0.24);
}

.secondary-btn {
	background-color: #ffffff;
	color: var(--theme-color);
	border: 2rpx solid var(--theme-color);
}

.secondary-btn:active {
	background-color: rgba(16, 157, 88, 0.08);
}

.outline-btn {
	height: 64rpx;
	padding: 0 24rpx;
	border-radius: 12rpx;
	border: 2rpx solid var(--theme-color);
	background: none;
	color: var(--theme-color);
	font-size: 26rpx;
	line-height: 60rpx;
}

.outline-btn::after {
	border: none;
}

.info-card {
	display: flex;
	flex-direction: column;
	gap: 24rpx;
}

.info-item {
	display: flex;
	flex-direction: column;
	gap: 12rpx;
}

.info-label {
	font-size: 26rpx;
	color: #888888;
}

.info-value-row {
	display: flex;
	gap: 16rpx;
	align-items: center;
}

.info-value {
	font-size: 30rpx;
	color: #333333;
	word-break: break-all;
}

.socket-status {
	margin-top: 16rpx;
	display: flex;
	flex-direction: column;
	gap: 8rpx;
}

.info-hint {
	font-size: 24rpx;
	color: #888888;
}

.info-hint-break {
	word-break: break-all;
	white-space: normal;
}

.info-hint-error {
	color: #c93d3d;
}

.socket-log {
	margin-top: 12rpx;
	height: 280rpx;
	padding: 16rpx;
	border-radius: 12rpx;
	background: #f6f7f8;
	box-sizing: border-box;
}

.socket-log-item + .socket-log-item {
	margin-top: 12rpx;
}

.socket-log-meta {
	display: block;
	font-size: 22rpx;
	color: #666666;
}

.socket-log-detail {
	display: block;
	margin-top: 6rpx;
	font-size: 24rpx;
	color: #333333;
	word-break: break-all;
}

.share-path {
	flex: 1;
}

.ghost-btn {
	height: 48rpx;
	padding: 0 16rpx;
	background: none;
	border: none;
	color: var(--theme-color);
	font-size: 26rpx;
	line-height: 48rpx;
}

.ghost-btn::after {
	border: none;
}

.test-btn {
	display: inline-flex;
	align-items: center;
	justify-content: center;
	height: 76rpx;
	padding: 0 24rpx;
	border-radius: 12rpx;
	border: 2rpx dashed var(--theme-color);
	background: rgba(16, 157, 88, 0.06);
	color: var(--theme-color);
	font-size: 28rpx;
}

.test-btn-secondary {
	border-style: solid;
	background: #ffffff;
}

.notification-layer {
	position: fixed;
	top: 160rpx;
	right: 24rpx;
	display: flex;
	flex-direction: column;
	z-index: 999;
	pointer-events: none;
}

.notification-card {
	width: 320rpx;
	padding: 20rpx 24rpx;
	border-radius: 16rpx;
	background: rgba(0, 0, 0, 0.82);
	box-shadow: 0 16rpx 32rpx rgba(0, 0, 0, 0.18);
	display: flex;
	align-items: center;
	gap: 20rpx;
	color: #ffffff;
	margin-top: 16rpx;
	pointer-events: none;
}

.notification-card:first-child {
	margin-top: 0;
}

.notification-avatar {
	width: 72rpx;
	height: 72rpx;
	border-radius: 50%;
	object-fit: cover;
}

.notification-content {
	display: flex;
	flex-direction: column;
	gap: 8rpx;
}

.notification-title {
	font-size: 30rpx;
	font-weight: 600;
}

.notification-message {
	font-size: 26rpx;
	color: rgba(255, 255, 255, 0.86);
}

.notification-enter {
	animation: notification-slide-in 0.3s ease-out forwards;
}

.notification-leave {
	animation: notification-slide-out 0.25s ease-in forwards;
}

@keyframes notification-slide-in {
	from {
		transform: translateX(140rpx);
		opacity: 0;
	}
	to {
		transform: translateX(0);
		opacity: 1;
	}
}

@keyframes notification-slide-out {
	from {
		transform: translateX(0);
		opacity: 1;
	}
	to {
		transform: translateX(140rpx);
		opacity: 0;
	}
}

.test-btn::after {
	border: none;
}

.tips-card {
	display: flex;
	flex-direction: column;
	gap: 16rpx;
}

.tips-title {
	font-size: 28rpx;
	color: #333333;
	font-weight: 600;
}

.tips-item {
	font-size: 26rpx;
	color: #666666;
	line-height: 1.5;
}

.groups-card {
	background-color: #ffffff;
	border-radius: 20rpx;
	padding: 36rpx 32rpx;
	box-shadow: 0 12rpx 28rpx rgba(0, 0, 0, 0.06);
	display: flex;
	flex-direction: column;
	gap: 24rpx;
}

.groups-card-header {
	display: flex;
	align-items: center;
	justify-content: space-between;
}

.groups-title {
	font-size: 32rpx;
	color: #333333;
	font-weight: 600;
}

.groups-status {
	font-size: 24rpx;
	color: #888888;
}

.groups-feedback {
	background-color: #fff6f6;
	border-radius: 16rpx;
	padding: 24rpx;
	display: flex;
	flex-direction: column;
	gap: 16rpx;
}

.groups-error-text {
	font-size: 26rpx;
	color: #d64545;
}

.groups-retry-btn {
	align-self: flex-start;
	height: 64rpx;
	padding: 0 28rpx;
}

.groups-loading {
	background-color: #f4fbf6;
	border-radius: 16rpx;
	padding: 24rpx;
	font-size: 26rpx;
	color: var(--theme-color);
}

.group-list {
	display: flex;
	flex-direction: column;
	gap: 20rpx;
}

.group-item {
	background-color: #f8f9fa;
	border-radius: 16rpx;
	padding: 24rpx;
	border: 2rpx solid #e9ecef;
	display: flex;
	flex-direction: column;
	gap: 16rpx;
}

.group-header {
	display: flex;
	align-items: center;
	justify-content: space-between;
}

.group-name {
	font-size: 28rpx;
	color: #333333;
	font-weight: 600;
}

.group-count {
	font-size: 24rpx;
	color: #666666;
	background-color: #e9ecef;
	padding: 6rpx 14rpx;
	border-radius: 12rpx;
}

.user-list {
	display: flex;
	flex-direction: column;
	gap: 12rpx;
}

.user-item {
	display: flex;
	align-items: center;
	gap: 16rpx;
	padding: 12rpx;
	background-color: #ffffff;
	border-radius: 12rpx;
}

.user-avatar {
	width: 60rpx;
	height: 60rpx;
	border-radius: 50%;
	object-fit: cover;
	border: 2rpx solid #e9ecef;
}

.user-name {
	font-size: 26rpx;
	color: #333333;
	font-weight: 500;
	flex: 1;
}

.group-empty,
.groups-empty {
	background-color: #f6f7f8;
	border-radius: 16rpx;
	padding: 24rpx;
	text-align: center;
	color: #888888;
	font-size: 26rpx;
}

.group-empty-text {
	color: #888888;
	font-size: 26rpx;
}
