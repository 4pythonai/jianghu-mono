/* 页面容器 */
.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.page-content {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  min-height: calc(100vh - 88px);
}

/* 二维码区域 */
.qrcode-section {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 32rpx;
  padding: 48rpx;
}

/* 二维码状态 */
.qrcode-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
}

.status-text {
  font-size: 32rpx;
  color: #999;
}

.error-text {
  font-size: 32rpx;
  color: var(--error);
  text-align: center;
}

.retry-btn {
  padding: 16rpx 48rpx;
  background-color: var(--primary-green-dark);
  color: #fff;
  border-radius: 8rpx;
  transition: opacity 0.2s ease;
}

.retry-btn:active {
  opacity: 0.8;
}

.retry-text {
  font-size: 28rpx;
  color: #fff;
}

/* 二维码展示 */
.qrcode-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  width: 100%;
}

.qrcode-image {
  width: 500rpx;
  height: 500rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.qrcode-hint {
  font-size: 32rpx;
  color: var(--text-primary);
  font-weight: 500;
  text-align: center;
  margin-top: 16rpx;
}

.qrcode-tip {
  font-size: 24rpx;
  color: var(--text-tertiary);
  text-align: center;
}

/* 其他添加方式提示 */
.other-methods-hint {
  margin: 32rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.hint-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.divider-line {
  width: 80rpx;
  height: 1rpx;
  background-color: var(--border-light);
}

/* 底部操作按钮 */
.action-buttons {
  display: flex;
  gap: 24rpx;
  padding-bottom: env(safe-area-inset-bottom);
}

.action-btn {
  flex: 1;
  height: 100rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  background: var(--gradient-primary);
  transition: all 0.2s ease;
  box-shadow: 0 4rpx 12rpx var(--shadow-primary);
}

.action-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx var(--shadow-primary-hover);
}

/* 按钮图标样式 */
.btn-icon {
  width: 48rpx;
  height: 48rpx;
  filter: brightness(0) invert(1);
}

.btn-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #fff;
}
