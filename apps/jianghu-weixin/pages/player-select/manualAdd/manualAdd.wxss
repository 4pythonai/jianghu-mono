@import "../common.wxss";

/* 页面特有样式可以在这里添加 */

/* 页面特有样式 */
.content {
	margin-top: 120rpx;
	display: block !important;
	align-items: flex-start !important;
	justify-content: flex-start !important;
	position: relative;
	overflow: visible;
}

/* 顶部装饰圆形 - 只保留上半圆border */
.top-circle {
	width: 120rpx;
	height: 120rpx;
	background: #fff;
	border: none;
	border-radius: 50%;
	position: absolute;
	top: -60rpx;
	left: 50%;
	transform: translateX(-50%);
	display: flex;
	align-items: center;
	justify-content: center;
	overflow: hidden;
}

/* 用伪元素实现上半圆border */
.top-circle::before {
	content: '';
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	border-radius: 50%;
	border: 2rpx solid var(--border-primary);
	clip-path: inset(0 0 50% 0);
	pointer-events: none;
}

.top-circle-icon {
	width: 60rpx;
	height: 60rpx;
}

.form-container {
	width: 100%;
	padding-top: 80rpx;
}

.input-group {
	margin-bottom: 40rpx;
}

.input-label {
	display: block;
	font-size: 28rpx;
	color: #333;
	font-weight: 500;
	margin-bottom: 20rpx;
}

.input-field {
	width: 100%;
	height: 88rpx;
	padding: 0 24rpx;
	border: 2rpx solid #e5e5e5;
	border-radius: 12rpx;
	font-size: 28rpx;
	color: #333;
	background: #fff;
	box-sizing: border-box;
	transition: border-color 0.3s ease;
}

.input-field:focus {
	border-color: #007aff;
	outline: none;
}

.input-field.placeholder {
	color: #999;
}

.gender-options {
	display: flex;
	gap: 24rpx;
}

.gender-option {
	flex: 1;
	height: 88rpx;
	padding: 0 24rpx;
	border: 2rpx solid var(--border-light);
	border-radius: 12rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
	background: #f8f9fa;
	color: var(--text-primary);
	box-shadow: none;
	transition: all 0.2s ease;
}

.gender-option.active {
	border-color: var(--border-primary);
	background: #e8f5e8;
	box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.15);
}

.gender-text {
	font-size: 28rpx;
}

.gender-icon {
	width: 36rpx;
	height: 36rpx;
	border-radius: 50%;
	border: 2rpx solid #cfcfcf;
	background: #fff;
	box-sizing: border-box;
	position: relative;
}

.gender-icon.checked {
	border-color: var(--border-primary);
	background: var(--primary-green);
	box-shadow: 0 4rpx 10rpx var(--shadow-primary);
}

.gender-icon.checked::after {
	content: '';
	position: absolute;
	left: 10rpx;
	top: 6rpx;
	width: 8rpx;
	height: 16rpx;
	border: 3rpx solid #fff;
	border-top: 0;
	border-left: 0;
	transform: rotate(45deg);
}

.action-buttons {
	display: flex;
	gap: 24rpx;
	margin-top: 40rpx;
}

.action-btn {
	flex: 1;
	height: 100rpx;
	border-radius: 16rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	gap: 8rpx;
	font-size: 32rpx;
	font-weight: 600;
	border: none;
	box-shadow: 0 4rpx 12rpx var(--shadow-primary);
	background: var(--gradient-primary);
	color: #fff;
	transition: all 0.2s ease;
}

.action-btn:active {
	transform: translateY(2rpx);
	box-shadow: 0 2rpx 8rpx var(--shadow-primary-hover);
}

.action-btn[disabled] {
	opacity: 0.6;
	pointer-events: none;
}

.action-cancel {
	background: #f5f5f5;
	color: var(--text-secondary);
	border: 2rpx solid var(--border-light);
	box-shadow: none;
}

.action-cancel:active {
	transform: translateY(1rpx);
	box-shadow: none;
}

.action-confirm {
	flex: 2;
}

.submit-btn {
	width: 100%;
	height: 88rpx;
	border-radius: 16rpx;
	font-size: 32rpx;
	font-weight: 600;
	margin-top: 40rpx;
	border: none;
	display: flex;
	align-items: center;
	justify-content: center;
	transition: all 0.3s ease;
	background-color: #d9d9d9;
	color: #999;
}

.submit-btn.active {
	background: var(--gradient-primary);
	color: var(--text-on-primary);
	box-shadow: 0 4rpx 12rpx var(--shadow-primary);
}

.submit-btn.active:active {
	background: var(--gradient-primary-hover);
	transform: translateY(2rpx);
	box-shadow: 0 2rpx 8rpx var(--shadow-primary-hover);
}

.submit-btn.disabled {
	background-color: #f5f5f5;
	color: #ccc;
	cursor: not-allowed;
}

.submit-btn::after {
	border: none;
}
