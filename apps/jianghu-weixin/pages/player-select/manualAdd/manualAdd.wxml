<view class="page-container">
  <view class="content">
    <!-- 顶部装饰圆形 -->
    <view class="top-circle">
      <image class="top-circle-icon" src="/assets/icons/icons8-hand-with-pen-48.png" mode="aspectFit"></image>
    </view>
    <!-- 已添加球员列表 -->
    <attened-players />
    <view class="form-container">
      <view class="input-group">
        <text class="input-label">选手姓名</text>
        <input
          class="input-field"
          placeholder="请输入选手姓名"
          value="{{ remarkName }}"
          bindinput="onNicknameInput"
          maxlength="20"
        />
      </view>
      <view class="input-group">
        <text class="input-label">手机号</text>
        <input
          class="input-field"
          placeholder="请输入手机号"
          value="{{ mobile }}"
          bindinput="onMobileInput"
          type="number"
          maxlength="11"
        />
      </view>
      <view class="input-group">
        <text class="input-label">性别</text>
        <view class="gender-options">
          <view
            class="gender-option {{ gender === 'male' ? 'active' : '' }}"
            data-gender="male"
            bindtap="onGenderSelect"
          >
            <text class="gender-text">男</text>
            <view class="gender-icon {{ gender === 'male' ? 'checked' : '' }}"></view>
          </view>
          <view
            class="gender-option {{ gender === 'female' ? 'active' : '' }}"
            data-gender="female"
            bindtap="onGenderSelect"
          >
            <text class="gender-text">女</text>
            <view class="gender-icon {{ gender === 'female' ? 'checked' : '' }}"></view>
          </view>
        </view>
      </view>
      <view class="action-buttons">
        <button class="action-btn action-cancel" bindtap="onCancel">取消</button>
        <button
          class="action-btn action-confirm"
          bindtap="onManualUserAdded"
          disabled="{{ isSubmitting }}"
        >确定</button>
      </view>
    </view>
  </view>
</view>
