@import "../common.wxss";

/* 页面特有样式 */
.content {
	margin-top: 120rpx;
	display: flex;
	flex-direction: column;
	align-items: stretch;
	position: relative;
	overflow: visible;
	padding: 60rpx 40rpx 40rpx;
}

/* 顶部装饰圆形 */
.top-circle {
	width: 120rpx;
	height: 120rpx;
	background: #e8f5e9;
	border-radius: 50%;
	position: absolute;
	top: -60rpx;
	left: 50%;
	transform: translateX(-50%);
	display: flex;
	align-items: center;
	justify-content: center;
	z-index: 10;
}

.top-circle-icon {
	width: 60rpx;
	height: 60rpx;
}
