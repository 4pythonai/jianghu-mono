/* 子页面通用样式 */
.page-container {
	min-height: 100vh;
	background: #f5f5f5;
	padding: 40rpx 30rpx;
	padding-top: 200rpx; /* 预留导航栏空间：状态栏(~50px) + 导航栏(44px) + 间距 */
}

.header {
	text-align: center;
	margin-bottom: 60rpx;
}

.title {
	font-size: 36rpx;
	font-weight: 600;
	color: #333;
	margin-bottom: 16rpx;
	display: block;
}

.subtitle {
	font-size: 28rpx;
	color: #666;
	display: block;
}

.content {
	background: #fff;
	border-radius: 40rpx 40rpx 16rpx 16rpx;
	padding: 40rpx;
	min-height: 400rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.placeholder {
	font-size: 28rpx;
	color: #999;
	text-align: center;
}
