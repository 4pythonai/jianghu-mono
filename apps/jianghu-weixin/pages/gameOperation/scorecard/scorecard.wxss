.container {
	padding: 24rpx;
	background-color: #f5f5f5;
	min-height: 100vh;
	/* 横屏适配 */
	display: flex;
	flex-direction: column;
}

.page-content {
	background-color: white;
	border-radius: 16rpx;
	padding: 24rpx;
	flex: 1;
	display: flex;
	flex-direction: column;
	/* 横屏优化 */
	overflow: hidden;
}


/* WebView样式 */
web-view {
	flex: 1;
	width: 100%;
	min-height: 400rpx;
	border-radius: 8rpx;
	overflow: hidden;
	background-color: #f8f9fa;
}



/* 横屏专用样式 */
@media (orientation: landscape) {
	.container {
		padding: 16rpx 32rpx;
		flex-direction: row;
		gap: 24rpx;
	}


	.page-content {
		flex: 1;
		margin: 0;
	}


	/* 横屏下的WebView优化 */
	web-view {
		min-height: 300rpx;
		border-radius: 12rpx;
	}

}
