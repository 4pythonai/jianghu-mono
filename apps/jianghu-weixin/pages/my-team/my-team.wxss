/* 我的球队页面样式 */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 140rpx;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  margin: 20rpx;
  margin-top: 200rpx;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-radius: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  opacity: 0.5;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 分区 */
.section {
  margin-top: 20rpx;
}

.section-header {
  padding: 20rpx 30rpx;
  font-size: 26rpx;
  color: #1a5c3a;
  background-color: #e8f5e9;
}

/* 球队列表 */
.team-list {
  background-color: #fff;
}

/* 球队卡片 */
.team-card {
  display: flex;
  align-items: flex-start;
  padding: 30rpx;
  border-left: 6rpx solid #1a5c3a;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.team-card:last-child {
  border-bottom: none;
}

.team-card:active {
  background-color: #f9f9f9;
}

.team-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.team-avatar image {
  width: 100%;
  height: 100%;
}

.team-info {
  flex: 1;
  min-width: 0;
}

.team-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.team-meta {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.team-slogan {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.team-staff {
  display: flex;
  gap: 40rpx;
}

.staff-item {
  font-size: 24rpx;
  color: #999;
}

/* 已加入徽章 */
.team-badge {
  position: absolute;
  top: 0;
  right: 0;
  padding: 8rpx 20rpx;
  font-size: 22rpx;
  color: #fff;
  background-color: #1a5c3a;
  border-bottom-left-radius: 12rpx;
}

.team-badge.joined {
  background-color: #1a5c3a;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.3;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #ccc;
}

/* 创建球队按钮 */
.create-btn-wrapper {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.create-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 96rpx;
  background-color: #1a5c3a;
  color: #fff;
  font-size: 32rpx;
  border-radius: 48rpx;
  box-shadow: 0 8rpx 20rpx rgba(26, 92, 58, 0.3);
}

.create-btn::after {
  border: none;
}

.create-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
  filter: brightness(0) invert(1);
}

