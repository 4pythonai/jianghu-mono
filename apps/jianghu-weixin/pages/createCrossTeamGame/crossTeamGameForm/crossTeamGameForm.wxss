/**
 * 队际赛表单页面样式
 * 基于队内赛表单样式扩展
 */

.page-container {
    min-height: 100vh;
    background-color: var(--common-bg);
    padding: 32rpx 30rpx 48rpx;
    padding-top: 200rpx;
    padding-bottom: 120rpx;
}

.main-card {
    width: 100%;
    background: #fff;
    border-radius: 20rpx;
    position: relative;
    overflow: hidden;
    box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.06);
}

.card-content {
    padding: 40rpx 32rpx 48rpx;
    position: relative;
    z-index: 2;
}

/* 参赛球队列表 */
.teams-container {
    background: #f8f9fa;
    border-radius: 16rpx;
    padding: 20rpx;
}

.team-card {
    display: flex;
    align-items: center;
    background: #fff;
    border-radius: 12rpx;
    padding: 20rpx;
    margin-bottom: 16rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.team-card:last-of-type {
    margin-bottom: 16rpx;
}

.team-avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 12rpx;
    background: #e9ecef;
}

.team-info {
    flex: 1;
    margin-left: 20rpx;
}

.team-alias {
    font-size: 30rpx;
    color: #333;
    font-weight: 600;
}

.team-name {
    font-size: 24rpx;
    color: #999;
    margin-top: 6rpx;
}

.edit-alias-btn {
    width: 56rpx;
    height: 56rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f0f0f0;
    border-radius: 50%;
}

.edit-alias-btn image {
    width: 32rpx;
    height: 32rpx;
    opacity: 0.6;
}

.reselect-teams-btn {
    height: 72rpx;
    background: #fff;
    border: 2rpx dashed #ddd;
    border-radius: 12rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 26rpx;
    color: #666;
}

.reselect-teams-btn:active {
    background: #f5f5f5;
}

/* 表单样式 */
.game-form {
    margin-bottom: 40rpx;
}

.form-item {
    margin-bottom: 32rpx;
}

.form-label {
    font-size: 30rpx;
    color: #333;
    font-weight: 500;
    margin-bottom: 16rpx;
    display: flex;
    align-items: baseline;
    flex-wrap: wrap;
}

.form-sub-label {
    font-size: 24rpx;
    color: #999;
    font-weight: 400;
    margin-left: 8rpx;
}

.form-sub-label.match-tip {
    color: #ff9800;
}

.form-input-wrapper {
    position: relative;
}

.form-input {
    width: 100%;
    height: 88rpx;
    background: #f8f9fa;
    border: 2rpx solid #e9ecef;
    border-radius: 16rpx;
    padding: 0 24rpx;
    font-size: 28rpx;
    color: #333;
    box-sizing: border-box;
}

.form-input:focus {
    border-color: var(--primary-green-dark);
    background: #fff;
}

.input-placeholder {
    color: #999;
}

/* 带单位的输入框 */
.input-with-unit {
    display: flex;
    align-items: center;
}

.input-with-unit .form-input {
    flex: 1;
    padding-right: 80rpx;
}

.input-unit {
    position: absolute;
    right: 24rpx;
    font-size: 28rpx;
    color: #666;
}

/* 多行文本框 */
.form-textarea {
    width: 100%;
    min-height: 160rpx;
    background: #f8f9fa;
    border: 2rpx solid #e9ecef;
    border-radius: 16rpx;
    padding: 20rpx 24rpx;
    font-size: 28rpx;
    color: #333;
    box-sizing: border-box;
    line-height: 1.6;
}

/* 球场选择 */
.search-input {
    display: flex;
    align-items: center;
    height: 88rpx;
    background: #f5f5f5;
    border-radius: 16rpx;
    padding-left: 20rpx;
    padding-right: 16rpx;
}

.search-input input {
    flex: 1;
    font-size: 28rpx;
    color: #333;
    background: transparent;
}

.arrow-icon {
    width: 40rpx;
    height: 40rpx;
    margin-left: 6rpx;
}

.arrow-icon image {
    width: 100%;
    height: 100%;
}

.selected-course {
    display: flex;
    align-items: center;
    background: #f5f5f5;
    border-radius: 16rpx;
    padding: 24rpx 16rpx;
    min-height: 88rpx;
    box-sizing: border-box;
}

.course-info {
    display: flex;
    align-items: center;
    flex: 1;
}

.course-details {
    flex: 1;
    margin-left: 20rpx;
}

.course-name {
    font-size: 32rpx;
    color: #333;
    font-weight: 500;
    margin-bottom: 8rpx;
}

.court-info {
    margin-top: 8rpx;
}

.court-name {
    font-size: 24rpx;
    color: #666;
}

.clear-btn {
    width: 40rpx;
    height: 40rpx;
    background: #ff4757;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 16rpx;
}

.clear-btn image {
    width: 20rpx;
    height: 20rpx;
    filter: brightness(0) invert(1);
}

/* 单选按钮组 */
.radio-group {
    display: flex;
    flex-wrap: wrap;
    gap: 16rpx;
}

.radio-group radio-group {
    display: flex;
    flex-direction: column;
    gap: 16rpx;
    width: 100%;
}

.radio-item {
    display: flex;
    align-items: center;
    font-size: 28rpx;
    color: #333;
    padding: 16rpx 0;
}

.radio-text {
    margin-left: 12rpx;
}

/* 赛制选项 - 纵向排列 */
.format-options {
    background: #f8f9fa;
    border-radius: 16rpx;
    padding: 20rpx;
}

.format-options radio-group {
    display: flex;
    flex-direction: column;
    gap: 0;
}

.format-item {
    padding: 20rpx 16rpx;
    border-radius: 12rpx;
    transition: all 0.2s ease;
}

.format-item.active {
    background: #e8f5e9;
}

.format-item.disabled {
    opacity: 0.5;
}

.format-label {
    display: flex;
    align-items: center;
}

.format-text {
    margin-left: 16rpx;
    font-size: 28rpx;
    color: #333;
}

.format-text.text-disabled {
    color: #999;
}

/* 提交按钮 */
.action-footer {
    margin-top: 48rpx;
}

.create-btn {
    width: 100%;
    height: 96rpx;
    border-radius: 16rpx;
    border: none;
    background: linear-gradient(135deg, var(--primary-green-dark) 0%, #2e7d32 100%);
    color: #fff;
    font-size: 34rpx;
    font-weight: 600;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 12rpx 24rpx rgba(56, 142, 60, 0.25);
    transition: all 0.3s ease;
}

.create-btn::after {
    border: none;
}

.create-btn:active {
    transform: translateY(2rpx);
    box-shadow: 0 6rpx 12rpx rgba(56, 142, 60, 0.3);
}

.create-btn.disabled {
    opacity: 0.6;
    box-shadow: none;
}
