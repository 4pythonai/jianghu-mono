.container {
  min-height: 100vh;
  padding: 180rpx 30rpx 40rpx;
  box-sizing: border-box;
  background: linear-gradient(180deg, #f7faf8 0%, #eef3ef 35%, #ffffff 100%);
}

.header-card {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
  background: var(--gradient-primary);
  border-radius: 28rpx;
  padding: 30rpx 26rpx;
  box-shadow: 0 16rpx 40rpx rgba(46, 125, 50, 0.25);
}

.avatar-wrap {
  flex-shrink: 0;
}

.avatar-button {
  margin: 0;
  padding: 0;
  background: transparent;
  border: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.avatar-button::after {
  border: none;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.9);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  background: #f8f8f8;
}

.avatar-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.basic-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 18rpx;
}

.nickname-row {
  display: flex;
  align-items: center;
  gap: 14rpx;
}

.nickname-input {
  flex: 1;
  height: 72rpx;
  padding: 0 20rpx;
  border-radius: 14rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.35);
  background: rgba(255, 255, 255, 0.18);
  color: #fff;
  font-size: 32rpx;
}

.gender-pill {
  min-width: 94rpx;
  padding: 10rpx 16rpx;
  border-radius: 999rpx;
  text-align: center;
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  font-size: 26rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.35);
}

.meta-row {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.meta-chip {
  padding: 14rpx 18rpx;
  border-radius: 14rpx;
  background: rgba(255, 255, 255, 0.16);
  color: #fff;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.meta-label {
  font-size: 22rpx;
  opacity: 0.8;
}

.meta-value {
  font-size: 28rpx;
  font-weight: 600;
}

.qrcode-card {
  margin-top: 26rpx;
  padding: 26rpx 24rpx 36rpx;
  background: #fff;
  border-radius: 22rpx;
  box-shadow: 0 14rpx 32rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 14rpx;
}

.qrcode-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--primary-green-dark);
}

.qrcode-large {
  width: 260rpx;
  height: 260rpx;
  border-radius: 18rpx;
  background: #f5f5f5;
  padding: 18rpx;
  box-sizing: border-box;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.06);
}

.qrcode-hint {
  font-size: 24rpx;
  color: #666;
}

.info-card {
  margin-top: 32rpx;
  background: #fff;
  border-radius: 22rpx;
  padding: 24rpx;
  box-shadow: 0 12rpx 30rpx rgba(0, 0, 0, 0.06);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--primary-green-dark);
  margin-bottom: 14rpx;
  padding-left: 10rpx;
  border-left: 8rpx solid var(--primary-green);
}

.form-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 18rpx 0;
  border-bottom: 1rpx solid #f1f1f1;
}

.form-item:last-child {
  border-bottom: none;
}

.form-item.column {
  flex-direction: column;
  align-items: flex-start;
  gap: 12rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
}

.form-value {
  font-size: 28rpx;
  color: #111;
}

.form-value.muted {
  color: #888;
}

.form-textarea {
  width: 100%;
  min-height: 140rpx;
  padding: 16rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 14rpx;
  background: #fafafa;
  box-sizing: border-box;
  font-size: 28rpx;
}

.word-counter {
  align-self: flex-end;
  font-size: 22rpx;
  color: #999;
}

.gender-options {
  display: flex;
  gap: 16rpx;
  width: 100%;
}

.gender-chip {
  padding: 12rpx 20rpx;
  border-radius: 999rpx;
  border: 2rpx solid #e0e0e0;
  font-size: 28rpx;
  color: #666;
  background: #fff;
}

.gender-chip.active {
  color: #fff;
  border-color: transparent;
  background: linear-gradient(135deg, var(--primary-green), var(--primary-green-dark));
  box-shadow: 0 8rpx 18rpx rgba(46, 125, 50, 0.25);
}

.actions {
  margin-top: 40rpx;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 16rpx;
  background: var(--gradient-primary);
  color: #fff;
  font-size: 32rpx;
  border: none;
}

.save-btn::after {
  border: none;
}
