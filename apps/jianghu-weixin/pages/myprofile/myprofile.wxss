page {
  background-color: #f5f5f5;
}

.container {
  min-height: 100vh;
  padding: 180rpx 0 40rpx;
  box-sizing: border-box;
}

/* 头像和昵称区域 */
.profile-header {
  background: linear-gradient(135deg, #1a5c3a 0%, #2d7a4e 100%);
  padding: 40rpx 30rpx;
  margin: 0 20rpx 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(26, 92, 58, 0.25);
}

.avatar-section {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
  min-height: 240rpx;
}

.avatar-btn {
  position: relative;
  width: 240rpx;
  height: 240rpx;
  min-width: 240rpx;
  min-height: 240rpx;
  padding: 0;
  margin: 0;
  background: transparent;
  border: none;
  overflow: hidden;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.avatar-btn::after {
  border: none;
}

.avatar-img {
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  background: #fff;
  display: block;
  flex-shrink: 0;
}

 

.nickname-section {
  position: relative;
}

.nickname-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  border-radius: 12rpx;
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  box-sizing: border-box;
}

.nickname-input::placeholder {
  color: rgba(255, 255, 255, 0.6);
}

.nickname-hint {
  position: absolute;
  right: 24rpx;
  bottom: -36rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 表单卡片 */
.form-card {
  background: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid #1a5c3a;
}

.form-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-row:last-child {
  border-bottom: none;
}

.form-row.column {
  flex-direction: column;
  align-items: flex-start;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.form-value {
  font-size: 28rpx;
  color: #333;
}

.form-value.readonly {
  color: #999;
}

/* 单选框组 */
.radio-group {
  width: 100%;
}

.radio-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.radio-item:last-child {
  border-bottom: none;
}

.radio-item:active {
  background-color: #f9f9f9;
}

.radio-content {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.radio-text {
  font-size: 28rpx;
  color: #333;
}

.gender-icon {
  font-size: 32rpx;
  font-weight: bold;
}

.gender-icon.male {
  color: #4fc3f7;
}

.gender-icon.female {
  color: #f48fb1;
}

/* 单选框圆圈 */
.radio-circle {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #d0d0d0;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.radio-circle.checked {
  border-color: #1a5c3a;
}

.radio-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: #1a5c3a;
}

/* 个性签名 */
.signature-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  border: 1rpx solid #e0e0e0;
  background: #fafafa;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  line-height: 1.6;
}

.char-counter {
  align-self: flex-end;
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #999;
}

/* 二维码卡片 */
.qrcode-card {
  background: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.qrcode-header {
  text-align: center;
  margin-bottom: 24rpx;
}

.qrcode-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.qrcode-subtitle {
  font-size: 24rpx;
  color: #999;
}

.qrcode-display {
  width: 280rpx;
  height: 280rpx;
  padding: 20rpx;
  border-radius: 16rpx;
  background: #f8f8f8;
  border: 2rpx solid #e0e0e0;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.qrcode-img {
  width: 100%;
  height: 100%;
}

.qrcode-hint {
  font-size: 24rpx;
  color: #999;
}

/* 保存按钮区域 */
.save-section {
  padding: 0 20rpx;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #1a5c3a, #2d7a4e);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(26, 92, 58, 0.3);
  border: none;
}

.save-btn::after {
  border: none;
}

.save-btn[disabled] {
  opacity: 0.6;
}
