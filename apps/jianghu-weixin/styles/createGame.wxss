/**
 * 比赛创建页面公共样式
 * 供普通创建、队内赛、队际赛共用
 */

/* ==================== 页面容器 ==================== */
.page-container {
    min-height: 100vh;
    background-color: var(--common-bg);
    padding: 32rpx 30rpx 48rpx;
    padding-top: 200rpx;
    padding-bottom: 120rpx;
}

.main-card {
    width: 100%;
    background: #fff;
    border-radius: 20rpx;
    position: relative;
    overflow: hidden;
    box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.06);
}

.card-content {
    padding: 40rpx 32rpx 48rpx;
    position: relative;
    z-index: 2;
}

/* ==================== 表单基础样式 ==================== */
.game-form {
    margin-bottom: 40rpx;
}

.form-item {
    margin-bottom: 32rpx;
}

.form-label {
    font-size: 30rpx;
    color: #333;
    font-weight: 500;
    margin-bottom: 16rpx;
    display: flex;
    align-items: baseline;
    flex-wrap: wrap;
}

.form-sub-label {
    font-size: 24rpx;
    color: #999;
    font-weight: 400;
    margin-left: 8rpx;
}

.form-input-wrapper {
    position: relative;
}

.form-input {
    width: 100%;
    height: 88rpx;
    background: #f8f9fa;
    border: 2rpx solid #e9ecef;
    border-radius: 16rpx;
    padding: 0 24rpx;
    font-size: 28rpx;
    color: #333;
    box-sizing: border-box;
}

.form-input:focus {
    border-color: var(--primary-green-dark);
    background: #fff;
}

.input-placeholder {
    color: #999;
}

/* 带单位的输入框 */
.input-with-unit {
    display: flex;
    align-items: center;
}

.input-with-unit .form-input {
    flex: 1;
    padding-right: 80rpx;
}

.input-unit {
    position: absolute;
    right: 24rpx;
    font-size: 28rpx;
    color: #666;
}

/* 多行文本框 */
.form-textarea {
    width: 100%;
    min-height: 160rpx;
    background: #f8f9fa;
    border: 2rpx solid #e9ecef;
    border-radius: 16rpx;
    padding: 20rpx 24rpx;
    font-size: 28rpx;
    color: #333;
    box-sizing: border-box;
    line-height: 1.6;
}

/* ==================== 球场选择样式 ==================== */
.search-input {
    display: flex;
    align-items: center;
    height: 88rpx;
    background: #f5f5f5;
    border-radius: 16rpx;
    padding-left: 20rpx;
    padding-right: 16rpx;
}

.search-input input {
    flex: 1;
    font-size: 28rpx;
    color: #333;
    background: transparent;
}

.arrow-icon {
    width: 40rpx;
    height: 40rpx;
    margin-left: 6rpx;
}

.arrow-icon image {
    width: 100%;
    height: 100%;
}

.selected-course {
    display: flex;
    align-items: center;
    background: #f5f5f5;
    border-radius: 16rpx;
    padding: 24rpx 16rpx;
    min-height: 88rpx;
    box-sizing: border-box;
}

.course-info {
    display: flex;
    align-items: center;
    flex: 1;
}

.course-details {
    flex: 1;
    margin-left: 20rpx;
}

.course-name {
    font-size: 32rpx;
    color: #333;
    font-weight: 500;
    margin-bottom: 8rpx;
}

.course-address {
    font-size: 24rpx;
    color: #666;
}

.court-info {
    margin-top: 8rpx;
}

.court-name {
    font-size: 24rpx;
    color: #666;
}

.clear-btn {
    width: 40rpx;
    height: 40rpx;
    background: #ff4757;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 16rpx;
}

.clear-btn image {
    width: 20rpx;
    height: 20rpx;
    filter: brightness(0) invert(1);
}

/* ==================== 单选按钮组 ==================== */
.radio-group {
    display: flex;
    flex-wrap: wrap;
    gap: 16rpx;
}

.radio-group radio-group {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 24rpx;
    width: 100%;
}

.radio-item {
    display: flex;
    align-items: center;
    font-size: 28rpx;
    color: #333;
}

.radio-text {
    margin-left: 12rpx;
}

/* ==================== 赛制选项样式 ==================== */
.format-options {
    background: #f8f9fa;
    border-radius: 16rpx;
    padding: 20rpx;
}

.format-options radio-group {
    display: flex;
    flex-direction: column;
    gap: 0;
}

.format-item {
    padding: 20rpx 16rpx;
    border-radius: 12rpx;
    transition: all 0.2s ease;
}

.format-item.active {
    background: #e8f5e9;
}

.format-item.disabled {
    opacity: 0.5;
}

.format-label {
    display: flex;
    align-items: center;
}

.format-text {
    margin-left: 16rpx;
    font-size: 28rpx;
    color: #333;
}

.format-text.text-disabled {
    color: #999;
}

/* ==================== 提交按钮样式 ==================== */
.action-footer {
    margin-top: 48rpx;
}

.create-btn {
    width: 100%;
    height: 96rpx;
    border-radius: 16rpx;
    border: none;
    background: linear-gradient(135deg, var(--primary-green-dark) 0%, #2e7d32 100%);
    color: #fff;
    font-size: 34rpx;
    font-weight: 600;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 12rpx 24rpx rgba(56, 142, 60, 0.25);
    transition: all 0.3s ease;
}

.create-btn::after {
    border: none;
}

.create-btn:active {
    transform: translateY(2rpx);
    box-shadow: 0 6rpx 12rpx rgba(56, 142, 60, 0.3);
}

.create-btn.disabled,
.create-btn[disabled] {
    opacity: 0.6;
    box-shadow: none;
}

/* ==================== 添加按钮通用样式 ==================== */
.add-icon {
    width: 28rpx;
    height: 28rpx;
    margin-right: 12rpx;
    filter: brightness(0) invert(1);
}

/* ==================== 赛事流程样式 ==================== */
.schedule-container {
    background: #f8f9fa;
    border-radius: 16rpx;
    padding: 20rpx;
}

.schedule-item-edit {
    display: flex;
    align-items: center;
    background: #fff;
    border-radius: 12rpx;
    padding: 16rpx;
    margin-bottom: 16rpx;
    gap: 12rpx;
}

.schedule-time-input {
    width: 160rpx;
    flex-shrink: 0;
}

.schedule-time-input input {
    font-size: 28rpx;
    color: #333;
    background: #f5f5f5;
    border-radius: 8rpx;
    padding: 12rpx 16rpx;
    text-align: center;
}

.schedule-content-input {
    flex: 1;
}

.schedule-content-input input {
    font-size: 28rpx;
    color: #333;
    background: #f5f5f5;
    border-radius: 8rpx;
    padding: 12rpx 16rpx;
}

.delete-schedule-btn {
    width: 40rpx;
    height: 40rpx;
    background: #ff4757;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.delete-schedule-btn image {
    width: 20rpx;
    height: 20rpx;
    filter: brightness(0) invert(1);
}

.add-schedule-btn {
    height: 80rpx;
    background: var(--primary-green-dark);
    border-radius: 12rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    color: #fff;
    font-weight: 500;
}

.add-schedule-btn:active {
    opacity: 0.8;
}

.add-schedule-btn .add-icon {
    width: 32rpx;
    height: 32rpx;
    margin-right: 8rpx;
    filter: brightness(0) invert(1);
}
