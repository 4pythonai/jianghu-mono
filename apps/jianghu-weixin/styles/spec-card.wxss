
/* 主容器背景 */
.rule-config-bg {
	min-height: 100vh;
	display: flex;
	flex-direction: column;
	align-items: center;
	padding-top: 40rpx;
	background-color: var(--bg-secondary);
}

/* 内容卡片容器 */
.rule-config-card {
	width: 90%;
	max-width: 700rpx;
	background: var(--bg-card);
	border-radius: 24rpx;
	box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
	box-sizing: border-box;
	padding: 40rpx 32rpx 20rpx 32rpx;
	margin-bottom: 40rpx;
}

/* 保留规则名称输入框的样式 */
.form-label {
	font-size: 28rpx;
	color: var(--text-primary);
	font-weight: 500;
	margin-bottom: 16rpx;
}

.form-input {
	width: 100%;
	height: 64rpx;
	background: var(--bg-light);
	border: 2rpx solid var(--border-primary);
	border-radius: 16rpx;
	font-size: 28rpx;
	color: var(--text-tertiary);
	padding: 0 24rpx;
	margin-bottom: 0;
	box-sizing: border-box;
}

.section-label {
	font-size: 28rpx;
	color: var(--text-secondary);
	margin-bottom: 16rpx;
}

.add-btn {
	width: 100%;
	height: 72rpx;
	background: var(--primary-green);
	color: var(--text-on-primary);
	font-size: 32rpx;
	border: none;
	border-radius: 16rpx;
	margin-top: 48rpx;
	font-weight: 600;
	box-shadow: 0 4rpx 16rpx var(--shadow-light);
}

.add-btn:active {
	background: var(--primary-green-dark);
}

.spec-item-wrapper {
	margin-top: 20rpx;
	margin-bottom: 14rpx;
	width: 100%;
}
