@import "../common.wxss";

page {
	background-color: var(--common-bg);
	min-height: 100%;
}

.container {
	padding: 40rpx 30rpx 60rpx;
	padding-top: 200rpx; /* 预留导航栏空间 */
}

.invite-card,
.tips-card {
	background-color: #ffffff;
	border-radius: 20rpx;
	padding: 36rpx 32rpx;
	box-shadow: 0 12rpx 28rpx rgba(0, 0, 0, 0.06);
}

.invite-card {
	margin-bottom: 32rpx;
}

.card-header {
	display: flex;
	flex-direction: column;
	gap: 12rpx;
}

.card-title {
	font-size: 36rpx;
	color: #333333;
	font-weight: 600;
}

.card-subtitle {
	font-size: 26rpx;
	color: #666666;
	line-height: 1.4;
}

.code-section {
	margin-top: 32rpx;
	background-color: #f4fbf6;
	border-radius: 16rpx;
	padding: 24rpx;
}

.section-top {
	display: flex;
	align-items: center;
	justify-content: space-between;
	margin-bottom: 16rpx;
}

.section-label {
	font-size: 28rpx;
	color: #333333;
	font-weight: 500;
}

.code-value {
	font-size: 36rpx;
	color: var(--theme-color);
	font-weight: 600;
	word-break: break-all;
	line-height: 1.4;
}

.meta-section {
	margin-top: 24rpx;
	display: flex;
	flex-direction: column;
	gap: 8rpx;
}

.meta-label {
	font-size: 24rpx;
	color: #888888;
	text-transform: uppercase;
}

.meta-value {
	font-size: 28rpx;
	color: #333333;
	word-break: break-all;
}

.primary-btn,
.secondary-btn {
	width: 100%;
	height: 92rpx;
	border-radius: 12rpx;
	font-size: 30rpx;
	font-weight: 500;
	display: flex;
	align-items: center;
	justify-content: center;
	margin-top: 32rpx;
}

.primary-btn {
	background-color: var(--theme-color);
	color: #ffffff;
	border: none;
	box-shadow: 0 10rpx 20rpx rgba(16, 157, 88, 0.18);
}

.primary-btn:active {
	transform: translateY(2rpx);
	box-shadow: 0 6rpx 12rpx rgba(16, 157, 88, 0.24);
}

.primary-btn[disabled] {
	background-color: #b7d9c6;
	color: #ffffff;
	box-shadow: none;
}

.secondary-btn {
	background-color: #ffffff;
	color: var(--theme-color);
	border: 2rpx solid var(--theme-color);
}

.secondary-btn:active {
	background-color: rgba(16, 157, 88, 0.06);
}

.ghost-btn {
	height: 48rpx;
	padding: 0 16rpx;
	background: none;
	border: none;
	color: var(--theme-color);
	font-size: 26rpx;
	line-height: 48rpx;
}

.ghost-btn::after {
	border: none;
}

.tips-card {
	display: flex;
	flex-direction: column;
	gap: 16rpx;
}

.tips-title {
	font-size: 28rpx;
	color: #333333;
	font-weight: 600;
}

.tips-item {
	font-size: 26rpx;
	color: #666666;
	line-height: 1.5;
}

.result-section {
	margin-top: 24rpx;
	padding: 20rpx;
	border-radius: 12rpx;
	background-color: #f1f9f4;
}

.result-text {
	font-size: 28rpx;
	color: #0f823f;
	font-weight: 500;
}

.error-section {
	margin-top: 24rpx;
	padding: 20rpx;
	border-radius: 12rpx;
	background-color: #fff6f6;
}

.error-text {
	font-size: 26rpx;
	color: #d64545;
}

/* 组信息样式 */
.groups-section {
	margin-top: 32rpx;
}

.groups-title {
	font-size: 32rpx;
	color: #333333;
	font-weight: 600;
	margin-bottom: 24rpx;
	display: block;
}

.group-list {
	display: flex;
	flex-direction: column;
	gap: 20rpx;
}

.group-item {
	background-color: #f8f9fa;
	border-radius: 16rpx;
	padding: 24rpx;
	border: 2rpx solid #e9ecef;
}

.group-header {
	display: flex;
	align-items: center;
	justify-content: space-between;
	margin-bottom: 16rpx;
}

.group-name {
	font-size: 28rpx;
	color: #333333;
	font-weight: 600;
}

.group-count {
	font-size: 24rpx;
	color: #666666;
	background-color: #e9ecef;
	padding: 6rpx 12rpx;
	border-radius: 12rpx;
}

.user-list {
	display: flex;
	flex-direction: column;
	gap: 12rpx;
}

.user-item {
	display: flex;
	align-items: center;
	gap: 16rpx;
	padding: 12rpx;
	background-color: #ffffff;
	border-radius: 12rpx;
}

.user-avatar {
	width: 60rpx;
	height: 60rpx;
	border-radius: 50%;
	border: 2rpx solid #e9ecef;
}

.user-name {
	font-size: 26rpx;
	color: #333333;
	font-weight: 500;
	flex: 1;
}

.user-status {
	font-size: 22rpx;
	padding: 4rpx 8rpx;
	border-radius: 8rpx;
	background-color: #d4edda;
	color: #155724;
}

.user-status.pending {
	background-color: #fff3cd;
	color: #856404;
}

/* 全屏浮动遮罩层 */
.floating-overlay {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	z-index: 100;
	display: flex;
	align-items: center;
	justify-content: center;
}

/* 全屏模糊背景 */
.blur-backdrop {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background: rgba(255, 255, 255, 0.08);
	backdrop-filter: blur(1px);
	-webkit-backdrop-filter: blur(1px);
}

/* 浮动按钮容器 */
.floating-actions {
	position: relative;
	z-index: 101;
	display: flex;
	gap: 32rpx;
	padding: 0 40rpx;
	width: 100%;
	box-sizing: border-box;
}

.action-card {
	flex: 1;
	height: 240rpx;
	border-radius: 28rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	gap: 28rpx;
	transition: all 0.2s ease;
}

.action-card:active {
	transform: scale(0.96) translateY(4rpx);
}

/* 围观比赛 - 灰色卡片 */
.watch-card {
	background: linear-gradient(145deg, #a8adb5 0%, #8b9199 100%);
	border: 3rpx solid rgba(255, 255, 255, 0.4);
	box-shadow:
		0 16rpx 48rpx rgba(0, 0, 0, 0.3),
		0 8rpx 16rpx rgba(0, 0, 0, 0.2),
		inset 0 2rpx 6rpx rgba(255, 255, 255, 0.3);
}

.watch-card .action-card-title {
	color: #ffffff;
	font-size: 34rpx;
	font-weight: 600;
	text-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.3);
}

.watch-card .action-card-icon {
	width: 64rpx;
	height: 64rpx;
	filter: brightness(0) invert(1);
	opacity: 0.95;
}

/* 加入比赛 - 绿色卡片 */
.join-card {
	background: linear-gradient(145deg, #2ecc71 0%, #109d58 100%);
	border: 3rpx solid rgba(255, 255, 255, 0.4);
	box-shadow:
		0 16rpx 48rpx rgba(16, 157, 88, 0.45),
		0 8rpx 16rpx rgba(16, 157, 88, 0.3),
		inset 0 2rpx 6rpx rgba(255, 255, 255, 0.35);
}

.join-card .action-card-title {
	color: #ffffff;
	font-size: 34rpx;
	font-weight: 600;
	text-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.2);
}

.join-card .action-card-icon {
	width: 72rpx;
	height: 72rpx;
	filter: brightness(0) invert(1);
}

.join-card.disabled {
	background: linear-gradient(145deg, #c8ddd0 0%, #b0c9ba 100%);
	border-color: rgba(255, 255, 255, 0.3);
	box-shadow:
		0 8rpx 24rpx rgba(0, 0, 0, 0.15),
		inset 0 2rpx 4rpx rgba(255, 255, 255, 0.2);
}

.join-card.disabled:active {
	transform: none;
}
