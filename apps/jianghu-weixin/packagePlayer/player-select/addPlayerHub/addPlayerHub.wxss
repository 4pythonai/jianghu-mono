@import "../common.wxss";

/* 页面特有样式 */
.content {
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  position: relative;
  overflow: visible;
  padding: 60rpx 40rpx 40rpx;
}

/* 顶部装饰圆形 - 只保留上半圆border */
.top-circle {
  width: 120rpx;
  height: 120rpx;
  background: #fff;
  border: none;
  border-radius: 50%;
  position: absolute;
  top: -60rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  overflow: hidden;
}

/* 用伪元素实现上半圆border */
.top-circle::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 50%;
  border: 2rpx solid var(--border-primary);
  clip-path: inset(0 0 50% 0);
  pointer-events: none;
}

.top-circle-icon {
  width: 60rpx;
  height: 60rpx;
}

/* 二维码区域 */
.qrcode-section {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 24rpx;
  padding: 48rpx;
}

/* 二维码状态 */
.qrcode-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
}

.status-text {
  font-size: 32rpx;
  color: #999;
}

.error-text {
  font-size: 32rpx;
  color: var(--error);
  text-align: center;
}

.retry-btn {
  padding: 16rpx 48rpx;
  background-color: var(--primary-green-dark);
  color: #fff;
  border-radius: 8rpx;
  transition: opacity 0.2s ease;
}

.retry-btn:active {
  opacity: 0.8;
}

.retry-text {
  font-size: 28rpx;
  color: #fff;
}

/* 二维码展示 */
.qrcode-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  width: 100%;
}

.qrcode-image {
  width: 500rpx;
  height: 500rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.qrcode-hint {
  font-size: 32rpx;
  color: var(--text-primary);
  font-weight: 500;
  text-align: center;
  margin-top: 16rpx;
}

.qrcode-tip {
  font-size: 24rpx;
  color: var(--text-tertiary);
  text-align: center;
}

/* 其他添加方式提示 */
.other-methods-hint {
  margin: 32rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.hint-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.divider-line {
  width: 80rpx;
  height: 1rpx;
  background-color: var(--border-light);
}

/* 底部操作按钮 */
.action-buttons {
  display: flex;
  gap: 24rpx;
  padding-bottom: env(safe-area-inset-bottom);
}

.action-btn {
  flex: 1;
  height: 100rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  background: var(--gradient-primary);
  transition: all 0.2s ease;
  box-shadow: 0 4rpx 12rpx var(--shadow-primary);
}

.action-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx var(--shadow-primary-hover);
}

/* 按钮图标样式 */
.btn-icon {
  width: 48rpx;
  height: 48rpx;
  filter: brightness(0) invert(1);
}

.btn-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #fff;
}
