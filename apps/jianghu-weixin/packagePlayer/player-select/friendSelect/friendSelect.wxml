<CustomNavBar title="好友选择" />
<view class="page-container">
  <view class="content">
    <!-- 顶部装饰圆形 -->
    <view class="top-circle">
      <image class="top-circle-icon" src="/assets/icons/icons8-friends-48.png" mode="aspectFit"></image>
    </view>

    <!-- 已添加球员列表 -->
    <attened-players />

    <!-- 好友选择器组件 -->
    <FriendPicker
      id="friendPicker"
      scene="addToGame"
      max-select="{{maxSelect}}"
      bind:confirm="onFriendPickerConfirm"
      bind:cancel="onFriendPickerCancel"
    />
  </view>
</view>
