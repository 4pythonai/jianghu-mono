.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-top: 180rpx; /* 为固定导航栏预留空间 */
}

/* 提示区域 */
.tip-section {
  padding: 20rpx 30rpx;
  background: #fffbe6;
  border-bottom: 1rpx solid #ffe58f;
}

.tip-text {
  font-size: 26rpx;
  color: #ad8b00;
}

.user-list {
  background: #fff;
  margin-top: 20rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #025028;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 用户项 */
.user-item {
  background: #fff;
  transition: background 0.2s ease;
}

.user-item:active {
  background: #f5f5f5;
}

.user-content {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  gap: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.user-avatar-wrap {
  flex-shrink: 0;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  overflow: hidden;
}

.user-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.user-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ghost-badge {
  font-size: 20rpx;
  color: #999;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.user-mobile {
  font-size: 24rpx;
  color: #666;
}

.user-time {
  font-size: 22rpx;
  color: #999;
}

/* 删除按钮 */
.delete-btn {
  flex-shrink: 0;
  padding: 12rpx 24rpx;
  background: #fff1f0;
  border-radius: 8rpx;
  border: 1rpx solid #ffccc7;
}

.delete-btn text {
  font-size: 24rpx;
  color: #ff4d4f;
}

.delete-btn:active {
  background: #ff4d4f;
}

.delete-btn:active text {
  color: #fff;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
}
