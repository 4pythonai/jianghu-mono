.container {
  min-height: 100vh;
  background: var(--common-bg, #f5f5f5);
}

.main-content {
  padding: 24rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e5e5e5;
  border-top-color: var(--primary-green-dark, #2e7d32);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 球队头部 */
.team-header {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 32rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.team-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
  background: #f5f5f5;
}

.team-basic {
  flex: 1;
  margin-left: 24rpx;
}

.team-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.team-slogan {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.my-role {
  display: flex;
}

.role-tag {
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.role-tag.team-superadmin {
  background: #fff3e0;
  color: #e65100;
}

.role-tag.admin {
  background: #e3f2fd;
  color: #1976d2;
}

.role-tag.member {
  background: #f5f5f5;
  color: #666;
}

/* 管理操作区块 */
.manage-section {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.section-title {
  font-size: 26rpx;
  color: #999;
  padding: 24rpx 32rpx 12rpx;
}

.manage-item {
  display: flex;
  align-items: center;
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.manage-item:last-child {
  border-bottom: none;
}

.manage-item:active {
  background: #f9f9f9;
}

.item-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 24rpx;
}

.item-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.item-desc {
  font-size: 26rpx;
  color: #999;
  margin-right: 16rpx;
}

.item-badge {
  min-width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  background: #f44336;
  color: #fff;
  font-size: 22rpx;
  border-radius: 18rpx;
  padding: 0 10rpx;
  margin-right: 16rpx;
}

.item-arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.3;
}

/* 危险操作 */
.manage-item.danger .item-text {
  color: #f44336;
}
