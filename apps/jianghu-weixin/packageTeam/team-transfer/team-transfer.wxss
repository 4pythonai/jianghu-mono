.container {
    min-height: 100vh;
    background: var(--common-bg, #f5f5f5);
    padding-top: 180rpx; /* CustomNavBar 预留空间 */
}

.page-content {
    padding: 24rpx;
}

/* 提示卡片 */
.tip-card {
    display: flex;
    align-items: flex-start;
    background: #fff3e0;
    padding: 24rpx;
    border-radius: 16rpx;
    margin-bottom: 24rpx;
    border: 1rpx solid #ffe0b2;
}

.tip-icon {
    width: 48rpx;
    height: 48rpx;
    flex-shrink: 0;
    margin-right: 16rpx;
}

.tip-content {
    flex: 1;
}

.tip-title {
    display: block;
    font-size: 28rpx;
    font-weight: 600;
    color: #e65100;
    margin-bottom: 8rpx;
}

.tip-text {
    display: block;
    font-size: 24rpx;
    color: #bf360c;
    line-height: 1.5;
}

/* 加载状态 */
.loading-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 200rpx 0;
}

.loading-spinner {
    width: 60rpx;
    height: 60rpx;
    border: 4rpx solid #e5e5e5;
    border-top-color: var(--primary-green-dark, #2e7d32);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
}

@keyframes spin {
    to { transform: rotate(360deg); }
}

.loading-text {
    margin-top: 20rpx;
    font-size: 28rpx;
    color: #999;
}

/* 区块标题 */
.section-title {
    font-size: 28rpx;
    font-weight: 500;
    color: #666;
    margin-bottom: 16rpx;
    padding-left: 8rpx;
}

/* 空状态 */
.empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 120rpx 0;
}

.empty-icon {
    width: 120rpx;
    height: 120rpx;
    opacity: 0.3;
    margin-bottom: 24rpx;
}

.empty-text {
    font-size: 28rpx;
    color: #999;
}

/* 成员卡片 */
.member-card {
    display: flex;
    align-items: center;
    background: #fff;
    padding: 24rpx;
    border-radius: 16rpx;
    margin-bottom: 16rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
    transition: all 0.2s ease;
}

.member-card:active {
    transform: scale(0.98);
    background: #fafafa;
}

.member-card.disabled {
    opacity: 0.6;
    pointer-events: none;
}

.member-avatar {
    width: 96rpx;
    height: 96rpx;
    border-radius: 50%;
    background: #f5f5f5;
    flex-shrink: 0;
}

.member-info {
    flex: 1;
    margin-left: 20rpx;
    min-width: 0;
}

.member-name {
    font-size: 30rpx;
    font-weight: 500;
    color: #333;
    margin-bottom: 8rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.member-meta {
    display: flex;
    align-items: center;
    gap: 16rpx;
}

.member-handicap {
    font-size: 24rpx;
    color: var(--primary-green-dark, #2e7d32);
    background: #e8f5e9;
    padding: 4rpx 12rpx;
    border-radius: 8rpx;
}

.member-join-time {
    font-size: 24rpx;
    color: #999;
}

/* 角色标签 */
.member-role {
    margin-left: 16rpx;
}

.role-tag {
    font-size: 22rpx;
    padding: 6rpx 16rpx;
    border-radius: 20rpx;
}

.role-tag.admin {
    background: #e3f2fd;
    color: #1976d2;
}

.role-tag.member {
    background: #f5f5f5;
    color: #666;
}

/* 选择箭头 */
.select-arrow {
    margin-left: 16rpx;
}

.arrow-icon {
    width: 32rpx;
    height: 32rpx;
    opacity: 0.4;
}

/* 转让中遮罩 */
.transferring-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
}

.transferring-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #fff;
    padding: 48rpx 64rpx;
    border-radius: 16rpx;
}

.transferring-text {
    margin-top: 24rpx;
    font-size: 28rpx;
    color: #333;
}
