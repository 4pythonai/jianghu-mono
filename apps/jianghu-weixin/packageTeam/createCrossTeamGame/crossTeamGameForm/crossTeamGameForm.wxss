/**
 * 队际赛表单页面样式
 * 基于公共样式扩展
 */

/* 引入公共样式 */
@import '/styles/createGame.wxss';

/* ==================== 队际赛特有样式 ==================== */

/* 参赛球队列表 */
.teams-container {
    background: #f8f9fa;
    border-radius: 16rpx;
    padding: 20rpx;
}

.team-card {
    display: flex;
    align-items: center;
    background: #fff;
    border-radius: 12rpx;
    padding: 20rpx;
    margin-bottom: 16rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.team-card:last-of-type {
    margin-bottom: 16rpx;
}

.team-avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 12rpx;
    background: #e9ecef;
}

.team-info {
    flex: 1;
    margin-left: 20rpx;
}

.team-alias {
    font-size: 30rpx;
    color: #333;
    font-weight: 600;
}

.team-name {
    font-size: 24rpx;
    color: #999;
    margin-top: 6rpx;
}

.edit-alias-btn {
    width: 56rpx;
    height: 56rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f0f0f0;
    border-radius: 50%;
}

.edit-alias-btn image {
    width: 32rpx;
    height: 32rpx;
    opacity: 0.6;
}

.reselect-teams-btn {
    height: 72rpx;
    background: #fff;
    border: 2rpx dashed #ddd;
    border-radius: 12rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 26rpx;
    color: #666;
}

.reselect-teams-btn:active {
    background: #f5f5f5;
}

/* 赛制提示 - 队际赛特有 */
.form-sub-label.match-tip {
    color: #ff9800;
}

/* 分组权限和公开报名选项对齐样式 */
.radio-group radio-group .radio-item:first-of-type {
    width: 50%;
    flex-shrink: 0;
}

.radio-group radio-group .radio-item:last-of-type {
    width: 45%;
    flex-shrink: 0;
}
