<view class="form-item" wx:if="{{ gameType === 'single_team'  }}">
  <view class="form-label tag-header">
    <text>分队设置</text>
    <text class="form-sub-label" wx:if="{{ currentFormat.isMatch }}">(比洞赛限2队)</text>
    <view
      class="tag-toggle"
      bindtap="toggleTags"
      wx:if="{{ currentFormat.hideTags }}"
    >
      <image
        class="tag-toggle-icon {{ tagsExpanded ? 'expanded' : '' }}"
        src="/assets/icons/arrow-right.svg"
        mode="aspectFit"
      ></image>
    </view>
  </view>
  <view class="gameTags-container" wx:if="{{ !currentFormat.hideTags || tagsExpanded }}">
    <view
      wx:for="{{ gameTags }}"
      wx:key="index"
      class="team-as-tag-item"
      style="border-left-color: {{ item.color }};"
    >
      <input
        class="tag-name-input"
        type="text"
        value="{{ item.name }}"
        bindinput="handleTagNameInput"
        data-index="{{ index }}"
        placeholder="分队名称"
      />
      <view
        class="delete-tag-btn"
        bindtap="handleDeleteTag"
        data-index="{{ index }}"
        wx:if="{{ (gameTags.length > 2 || !currentFormat.requireGameTag) && (!currentFormat.hideTags || gameTags.length > 1) }}"
      >
        <image src="/assets/icons/close.svg" mode="aspectFit"></image>
      </view>
    </view>
    <view
      class="add-tag-btn"
      bindtap="handleAddTag"
      wx:if="{{ !currentFormat.isMatch || gameTags.length < 2 }}"
    >
      <image src="/assets/icons/add.svg" class="add-icon" mode="aspectFit"></image>
      <text>添加分队</text>
    </view>
  </view>
</view>
