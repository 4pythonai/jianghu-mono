/* ==================== 分队设置 ==================== */
.tag-header {
    width: 100%;
    align-items: center;
    gap: 12rpx;
}

.tag-toggle {
    width: 60rpx;
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.tag-toggle-icon {
    width: 32rpx;
    height: 32rpx;
    transition: transform 0.2s ease;
}

.tag-toggle-icon.expanded {
    transform: rotate(90deg);
}

.gameTags-container {
    background: #f8f9fa;
    border-radius: 16rpx;
    padding: 20rpx;
}

.team-as-tag-item {
    display: flex;
    align-items: center;
    background: #fff;
    border-radius: 12rpx;
    padding: 16rpx 20rpx;
    margin-bottom: 16rpx;
    border-left: 6rpx solid #1976D2;
}

.team-as-tag-item:last-of-type {
    margin-bottom: 16rpx;
}

.tag-name-input {
    flex: 1;
    font-size: 28rpx;
    color: #333;
    background: transparent;
}

.delete-tag-btn {
    width: 40rpx;
    height: 40rpx;
    background: #ff4757;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 16rpx;
}

.delete-tag-btn image {
    width: 20rpx;
    height: 20rpx;
    filter: brightness(0) invert(1);
}

.add-tag-btn {
    height: 80rpx;
    background: var(--primary-green-dark);
    border-radius: 12rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    color: #fff;
    font-weight: 500;
}

.add-tag-btn:active {
    opacity: 0.8;
}
