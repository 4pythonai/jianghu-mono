/* 引入公共样式 */
@import '/styles/createGame.wxss';

/* ==================== 队内赛选择球队样式 ==================== */
.selected-team {
    display: flex;
    align-items: center;
    background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
    border-radius: 16rpx;
    padding: 24rpx 16rpx;
    min-height: 88rpx;
    box-sizing: border-box;
    transition: all 0.2s ease;
}

.selected-team:active {
    background: linear-gradient(135deg, #c8e6c9 0%, #a5d6a7 100%);
    transform: scale(0.98);
}

.selected-team .team-avatar {
    width: 96rpx;
    height: 96rpx;
    border-radius: 16rpx;
    background: #e9ecef;
    border: 2rpx solid rgba(255, 255, 255, 0.8);
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.team-details {
    flex: 1;
    margin-left: 20rpx;
}

.team-name {
    font-size: 32rpx;
    color: #333;
    font-weight: 600;
    margin-bottom: 8rpx;
}

.team-role {
    display: flex;
    align-items: center;
}

.role-tag {
    font-size: 22rpx;
    padding: 4rpx 12rpx;
    border-radius: 6rpx;
}

.role-tag.team-superadmin {
    background: #fff3e0;
    color: #e65100;
}

.role-tag.admin {
    background: #e3f2fd;
    color: #1565c0;
}

.role-tag.member {
    background: rgba(255, 255, 255, 0.8);
    color: #666;
}

.reselect-hint {
    margin-right: 8rpx;
}

.reselect-hint text {
    font-size: 24rpx;
    color: var(--primary-green-dark);
}

/* ==================== 队际赛参赛球队样式 ==================== */
.teams-container {
    background: #f8f9fa;
    border-radius: 16rpx;
    padding: 20rpx;
}

.team-card {
    display: flex;
    align-items: center;
    background: #fff;
    border-radius: 12rpx;
    padding: 20rpx;
    margin-bottom: 16rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.team-card:last-of-type {
    margin-bottom: 16rpx;
}

.team-card .team-avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 12rpx;
    background: #e9ecef;
}

.team-info {
    flex: 1;
    margin-left: 20rpx;
}

.team-alias {
    font-size: 30rpx;
    color: #333;
    font-weight: 600;
}

.team-card .team-name {
    font-size: 24rpx;
    color: #999;
    margin-top: 6rpx;
    margin-bottom: 0;
    font-weight: 400;
}

.edit-alias-btn {
    width: 56rpx;
    height: 56rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f0f0f0;
    border-radius: 50%;
}

.edit-alias-btn image {
    width: 32rpx;
    height: 32rpx;
    opacity: 0.6;
}

.reselect-teams-btn {
    height: 72rpx;
    background: #fff;
    border: 2rpx dashed #ddd;
    border-radius: 12rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 26rpx;
    color: #666;
}

.reselect-teams-btn:active {
    background: #f5f5f5;
}

.form-sub-label.match-tip {
    color: #ff9800;
}

/* 分组权限和公开报名选项对齐样式 */
.radio-group radio-group .radio-item:first-of-type {
    width: 50%;
    flex-shrink: 0;
}

.radio-group radio-group .radio-item:last-of-type {
    width: 45%;
    flex-shrink: 0;
}
