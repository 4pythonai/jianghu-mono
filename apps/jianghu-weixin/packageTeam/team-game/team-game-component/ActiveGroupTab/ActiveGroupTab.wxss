.active-group-tab {
    padding: 16rpx 12rpx 40rpx;
}

.active-group-list {
    display: flex;
    flex-direction: column;
    gap: 24rpx;
}

.active-group-card {
    display: flex;
    align-items: stretch;
    background: #fff;
    border-radius: 20rpx;
    overflow: hidden;
    box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
}

.active-group-label {
    width: 76rpx;
    background: var(--primary-green);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 12rpx 0;
    flex-shrink: 0;
}

.active-group-label-text {
    width: 32rpx;
    color: #fff;
    font-size: 24rpx;
    font-weight: 600;
    text-align: center;
    line-height: 1.2;
    word-break: break-all;
}

.active-group-body {
    flex: 1;
    padding: 20rpx 12rpx;
    display: flex;
    align-items: center;
}

.active-group-members {
    flex: 1;
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 12rpx;
}

.active-group-member {
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
}

.active-group-avatar {
    width: 96rpx;
    height: 96rpx;
    border-radius: 50%;
    background: #f2f2f2;
}

.active-group-name {
    margin-top: 8rpx;
    max-width: 120rpx;
    font-size: 24rpx;
    color: var(--text-primary);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.active-group-team {
    font-size: 20rpx;
    color: var(--text-tertiary);
}

.active-group-status {
    width: 96rpx;
    height: 96rpx;
    margin: auto 12rpx auto 0;
    border-radius: 999rpx;
    border: 4rpx solid #d1d5db;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f7f7f7;
    color: #9ca3af;
    flex-shrink: 0;
}

.active-group-status-text {
    width: 72rpx;
    text-align: center;
    font-size: 20rpx;
    line-height: 1.2;
}

.active-group-status-active {
    border-color: var(--primary-green);
    background: rgba(76, 175, 80, 0.12);
    color: var(--primary-green);
}

.active-group-status-pending {
    border-color: #d1d5db;
    background: #f3f4f6;
    color: #9ca3af;
}

.active-group-status-ended {
    border-color: #c7c7c7;
    background: #f0f0f0;
    color: #9e9e9e;
}

.active-group-empty {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 120rpx 0;
}

.active-group-empty-text {
    font-size: 28rpx;
    color: var(--text-tertiary);
}
