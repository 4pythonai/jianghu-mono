/* 报名人员列表 */
.registration-player-count {
    margin-top:20rpx;
    padding: 20rpx 24rpx 0;
    font-size: 28rpx;
    color: var(--text-secondary);
}

.registration-player-list-header {
    display: flex;
    align-items: center;
    padding: 20rpx 24rpx;
    margin-top: 16rpx;
    background: #f5f5f5;
    color: #666;
    border-bottom: 1rpx solid #eee;
}

.registration-header-index {
    width: 60rpx;
    font-size: 26rpx;
    flex-shrink: 0;
}

.registration-header-avatar-placeholder {
    width: 80rpx;
    margin-right: 20rpx;
    flex-shrink: 0;
}

.registration-header-player {
    flex: 1;
    font-size: 26rpx;
}

.registration-header-handicap {
    width: 140rpx;
    font-size: 26rpx;
    text-align: center;
    flex-shrink: 0;
}

.registration-player-list {
    background: #fff;
}

.registration-tag-group {
    margin-top: 16rpx;
    background: #fff;
}

.registration-tag-group-header {
    display: flex;
    align-items: center;
    gap: 12rpx;
    padding: 20rpx 24rpx;
    border-bottom: 1rpx solid #f0f0f0;
}

.registration-tag-group-dot {
    width: 16rpx;
    height: 16rpx;
    border-radius: 50%;
    background: #ccc;
    flex-shrink: 0;
}

.registration-tag-group-title {
    font-size: 28rpx;
    color: var(--text-primary);
    font-weight: 600;
}

.registration-empty-state {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 100rpx 40rpx;
    background: #fff;
}

.registration-tag-empty-state {
    padding: 40rpx 24rpx;
    background: #fff;
}

.registration-empty-state text {
    font-size: 28rpx;
    color: var(--text-tertiary);
}
