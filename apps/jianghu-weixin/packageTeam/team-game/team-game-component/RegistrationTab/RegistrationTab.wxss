/* 报名人员列表 */
.registration-player-count {
    margin-top:20rpx;
    padding: 20rpx 24rpx 0;
    font-size: 28rpx;
    color: var(--text-secondary);
}

.registration-player-list-header {
    display: flex;
    align-items: center;
    padding: 20rpx 24rpx;
    margin-top: 16rpx;
    background: #f5f5f5;
    color: #666;
    border-bottom: 1rpx solid #eee;
}

.registration-header-index {
    width: 60rpx;
    font-size: 26rpx;
    flex-shrink: 0;
}

.registration-header-avatar-placeholder {
    width: 80rpx;
    margin-right: 20rpx;
    flex-shrink: 0;
}

.registration-header-player {
    flex: 1;
    font-size: 26rpx;
}

.registration-header-handicap {
    width: 140rpx;
    font-size: 26rpx;
    text-align: center;
    flex-shrink: 0;
}

.registration-player-list {
    background: #fff;
}

.registration-tag-group {
    margin-top: 16rpx;
    background: #fff;
}

.registration-tag-group-header {
    display: flex;
    align-items: center;
    gap: 12rpx;
    padding: 20rpx 24rpx;
    border-bottom: 1rpx solid #f0f0f0;
}

.registration-tag-group-dot {
    width: 16rpx;
    height: 16rpx;
    border-radius: 50%;
    background: #ccc;
    flex-shrink: 0;
}

.registration-tag-group-title {
    font-size: 28rpx;
    color: var(--text-primary);
    font-weight: 600;
}

.registration-empty-state {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 100rpx 40rpx;
    background: #fff;
}

.registration-tag-empty-state {
    padding: 40rpx 24rpx;
    background: #fff;
}

.registration-empty-state text {
    font-size: 28rpx;
    color: var(--text-tertiary);
}

.edit-mask {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.45);
    z-index: 10;
}

.edit-sheet {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    background: #fff;
    border-radius: 24rpx 24rpx 0 0;
    padding: 32rpx 28rpx 40rpx;
    z-index: 11;
}

.edit-header {
    font-size: 32rpx;
    color: var(--text-primary);
    font-weight: 600;
    margin-bottom: 24rpx;
}

.edit-field {
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
}

.edit-label {
    width: 140rpx;
    font-size: 26rpx;
    color: var(--text-secondary);
    flex-shrink: 0;
}

.edit-input {
    flex: 1;
    height: 72rpx;
    background: #f7f7f7;
    border-radius: 12rpx;
    padding: 0 20rpx;
    font-size: 28rpx;
    color: var(--text-primary);
}

.edit-value {
    flex: 1;
    font-size: 28rpx;
    color: var(--text-primary);
}

.edit-picker {
    flex: 1;
}

.edit-picker-value {
    height: 72rpx;
    background: #f7f7f7;
    border-radius: 12rpx;
    padding: 0 20rpx;
    display: flex;
    align-items: center;
    font-size: 28rpx;
    color: var(--text-primary);
}

.edit-gender-options {
    display: flex;
    gap: 16rpx;
}

.edit-gender-option {
    padding: 10rpx 22rpx;
    border-radius: 999rpx;
    border: 1rpx solid #dcdcdc;
    font-size: 24rpx;
    color: var(--text-secondary);
}

.edit-gender-option.active {
    border-color: var(--primary-green);
    color: var(--primary-green);
    background: rgba(10, 134, 10, 0.08);
}

.edit-actions {
    display: flex;
    gap: 16rpx;
    margin-top: 28rpx;
}

.edit-action {
    flex: 1;
    height: 76rpx;
    border-radius: 12rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
}

.edit-action.cancel {
    background: #f2f2f2;
    color: var(--text-secondary);
}

.edit-action.confirm {
    background: var(--primary-green);
    color: #fff;
}
