.match-board {
    margin: 20rpx;
    background: #fff;
    border-radius: 16rpx;
    overflow: hidden;
}

.match-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 22rpx 20rpx;
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
}

.team {
    display: flex;
    align-items: center;
    min-width: 0;
}

.team-left {
    justify-content: flex-start;
}

.team-right {
    justify-content: flex-end;
}

.team-badge {
    width: 44rpx;
    height: 44rpx;
    border-radius: 50%;
    flex: 0 0 auto;
}

.team-name {
    max-width: 200rpx;
    margin: 0 12rpx;
    font-size: 28rpx;
    font-weight: 600;
    color: var(--text-primary);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.team-points {
    font-size: 34rpx;
    font-weight: 700;
    color: var(--text-primary);
}


.match-list {
    padding: 10rpx 12rpx 16rpx;
}

.empty {
    padding: 40rpx 20rpx;
    text-align: center;
}

.empty-text {
    font-size: 26rpx;
    color: var(--text-tertiary);
}

.match-item {
    margin-top: 12rpx;
}

.group-name {
    font-size: 24rpx;
    color: var(--text-tertiary);
    margin: 8rpx 8rpx 10rpx;
}

.match-row {
    display: flex;
    align-items: stretch;
    gap: 12rpx;
}

.side {
    flex: 1;
    min-width: 0;
    padding: 18rpx 16rpx;
    background: #fff;
    border-radius: 18rpx;
    border: 1rpx solid rgba(0, 0, 0, 0.06);
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.side-content {
    display: flex;
    align-items: center;
    min-width: 0;
    gap: 12rpx;
}

.side-content-right {
    justify-content: flex-end;
}

.avatar {
    width: 64rpx;
    height: 64rpx;
    border-radius: 50%;
    flex: 0 0 auto;
    background: #f2f3f5;
}

.tag-dot {
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    flex: 0 0 auto;
}

.name-block {
    min-width: 0;
}

.name-block-right {
    text-align: right;
}

.name-row {
    display: flex;
    align-items: center;
    gap: 10rpx;
    min-width: 0;
}

.name-row-right {
    justify-content: flex-end;
}

.name {
    font-size: 28rpx;
    font-weight: 600;
    color: var(--text-primary);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 260rpx;
}

.sub {
    display: block;
    margin-top: 6rpx;
    font-size: 22rpx;
    color: var(--text-tertiary);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 300rpx;
}

.tag-pill {
    padding: 4rpx 10rpx;
    border-radius: 999rpx;
    font-size: 20rpx;
    color: #fff;
    flex: 0 0 auto;
}

.result {
    font-size: 32rpx;
    font-weight: 700;
    color: inherit;
    margin-left: 12rpx;
    margin-right: 12rpx;
    flex: 0 0 auto;
}

.mid {
    width: 92rpx;
    border-radius: 18rpx;
    background: #f6f7f8;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 8rpx;
    padding: 12rpx 8rpx;
    flex: 0 0 auto;
}

.thru {
    font-size: 30rpx;
    font-weight: 700;
    color: var(--text-primary);
}

.mid-result {
    font-size: 22rpx;
    color: var(--text-secondary);
}

/* highlight */
.winner {
    border-color: transparent;
    color: #fff;
}

.winner .name,
.winner .sub {
    color: #fff;
}

.winner .mid-result {
    color: #fff;
}

.loser {
    opacity: 0.78;
}
