.board {
    margin: 20rpx;
    background: #fff;
    border-radius: 16rpx;
    overflow: hidden;
}

.board-header,
.board-row {
    display: flex;
    align-items: center;
    padding: 18rpx 20rpx;
}

.board-header {
    font-size: 24rpx;
    color: var(--text-secondary);
    background: #f7f7f7;
}

.board-row-wrapper {
    border-top: 1rpx solid #f0f0f0;
}

.board-row-wrapper.expanded {
    background: #fafafa;
}

.board-row {
    font-size: 26rpx;
    color: var(--text-primary);
    position: relative;
}

.col-rank {
    width: 80rpx;
    text-align: left;
}

.col-player {
    flex: 1;
}

.player-cell {
    display: flex;
    align-items: center;
    gap: 16rpx;
}

.avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 8rpx;
    background: #eee;
}

.name {
    font-size: 26rpx;
    color: var(--text-primary);
}

.col-score {
    width: 120rpx;
    text-align: center;
}

.col-thru {
    width: 100rpx;
    text-align: right;
}

.board-empty {
    padding: 60rpx 40rpx;
    text-align: center;
}

.empty-text {
    font-size: 24rpx;
    color: var(--text-tertiary);
}

/* 展开图标 */
.expand-icon {
    width: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s ease;
}

.expand-icon.rotated {
    transform: rotate(180deg);
}

.expand-icon .iconfont {
    font-size: 24rpx;
    color: #999;
}

