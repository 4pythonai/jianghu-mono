.board {
    margin: 10rpx;
    background: #fff;
    border-radius: 16rpx;
    overflow: hidden;
}

.board-header,
.board-row {
    display: flex;
    align-items: stretch;
}

.board-header {
    font-size: 24rpx;
    color: var(--text-secondary);
    background: #f7f7f7;
    border-bottom: 1rpx solid #e0e0e0;
}

.board-row-wrapper {
    border-bottom: 1rpx solid #e0e0e0;
}

.board-row-wrapper:last-child {
    border-bottom: none;
}

.board-row-wrapper.expanded {
    background: #fafafa;
}

.board-row {
    font-size: 26rpx;
    color: var(--text-primary);
}

/* 通用列样式 */
.col {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 18rpx 12rpx;
    border-right: 1rpx solid #e0e0e0;
    box-sizing: border-box;
}

.col-rank {
    width: 80rpx;
}

.col-player {
    flex: 1;
    justify-content: flex-start;
    gap: 16rpx;
}

.tag-dot {
    width: 16rpx;
    height: 16rpx;
    border-radius: 50%;
    flex: 0 0 auto;
}

.col-score {
    width: 100rpx;
}

.col-thru {
    width: 120rpx;
    gap: 8rpx;
    border-right: none;
}

.avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 8rpx;
    background: #eee;
}

.name {
    font-size: 26rpx;
    color: var(--text-primary);
}

.board-empty {
    padding: 60rpx 40rpx;
    text-align: center;
}

.empty-text {
    font-size: 24rpx;
    color: var(--text-tertiary);
}

/* 展开图标 */
.expand-icon {
    width: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s ease;
}

.expand-icon.rotated {
    transform: rotate(180deg);
}

.expand-icon .iconfont {
    font-size: 24rpx;
    color: #999;
}

