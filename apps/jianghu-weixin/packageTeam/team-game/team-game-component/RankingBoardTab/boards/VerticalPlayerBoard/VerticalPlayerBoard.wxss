.board {
    margin: 20rpx;
    background: #fff;
    border-radius: 16rpx;
    overflow: hidden;
}

.board-header,
.board-row {
    display: flex;
    align-items: center;
    padding: 18rpx 20rpx;
}

.board-header {
    font-size: 24rpx;
    color: var(--text-secondary);
    background: #f7f7f7;
}

.board-row-wrapper {
    border-top: 1rpx solid #f0f0f0;
}

.board-row-wrapper.expanded {
    background: #fafafa;
}

.board-row {
    font-size: 26rpx;
    color: var(--text-primary);
    position: relative;
}

.col-rank {
    width: 80rpx;
    text-align: left;
}

.col-player {
    flex: 1;
}

.player-cell {
    display: flex;
    align-items: center;
    gap: 16rpx;
}

.avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 8rpx;
    background: #eee;
}

.name {
    font-size: 26rpx;
    color: var(--text-primary);
}

.col-score {
    width: 120rpx;
    text-align: center;
}

.col-thru {
    width: 100rpx;
    text-align: right;
}

.board-empty {
    padding: 60rpx 40rpx;
    text-align: center;
}

.empty-text {
    font-size: 24rpx;
    color: var(--text-tertiary);
}

/* 展开图标 */
.expand-icon {
    width: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s ease;
}

.expand-icon.rotated {
    transform: rotate(180deg);
}

.expand-icon .iconfont {
    font-size: 24rpx;
    color: #999;
}

/* 展开详情区域 */
.score-detail {
    padding: 0;
    background: #3d6b4f;
    margin: 0 16rpx 16rpx;
    border-radius: 8rpx;
    overflow: hidden;
}

.score-detail-scroll {
    width: 100%;
}

.score-detail-scroll.second-half {
    border-top: 4rpx solid #c5a536;
}

.score-detail-content {
    display: flex;
    flex-direction: column;
}

.detail-row {
    display: flex;
    align-items: center;
}

.detail-cell {
    width: 70rpx;
    height: 50rpx;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 22rpx;
}

.hole-row {
    background: #3d6b4f;
}

.hole-row .detail-cell {
    color: #fff;
    font-weight: 500;
}

.par-row {
    background: #3d6b4f;
    border-top: 1rpx solid rgba(255,255,255,0.2);
}

.par-row .detail-cell {
    color: rgba(255,255,255,0.8);
    font-size: 20rpx;
}

.score-row {
    background: #3d6b4f;
    padding: 8rpx 0;
}

.score-cell {
    display: flex;
    align-items: center;
    justify-content: center;
}

.summary-cell {
    width: 80rpx;
    background: #c5a536;
    font-weight: 600;
    color: #fff;
}

.total-cell {
    background: #c5a536;
}

.score-summary {
    color: #fff;
    font-weight: 600;
    font-size: 24rpx;
}

/* OUT/IN 汇总列的成绩显示相对杆数 */
.score-row .summary-cell {
    background: #c5a536;
    height: auto;
    padding: 4rpx 0;
}

/* 汇总分数容器 */
.summary-scores {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.summary-total {
    font-size: 22rpx;
    color: #fff;
    font-weight: 500;
}

.summary-diff {
    font-size: 26rpx;
    color: #b8e986;
    font-weight: 700;
}

.summary-diff.over {
    color: #b8e986;
}

.summary-diff.under {
    color: #ff6b6b;
}

/* 成绩徽章样式 - 复用 HoleCell 样式 */
.score-badge {
    width: 44rpx;
    height: 44rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
    color: #fff;
    border-radius: 50%;
}

/* 老鹰及以下: 红底白字实心圆 */
.score-badge.score-eagle {
    background-color: #ff0000;
    color: #ffffff;
}

/* 小鸟: 白底红边红字空心圆 */
.score-badge.score-birdie {
    background-color: #ffffff;
    color: #ff0000;
    border: 3rpx solid #ff0000;
}

/* Par: 无边框蓝字 */
.score-badge.score-par {
    background: transparent;
    color: #4a90d9;
}

/* 柏忌: 白底黑边黑字方框 */
.score-badge.score-bogey {
    background-color: #ffffff;
    color: #000000;
    border: 3rpx solid #000000;
    border-radius: 6rpx;
}

/* 双柏忌: 浅灰底黑字方框 */
.score-badge.score-double-bogey {
    background-color: #e9e2e2;
    color: #000000;
    border-radius: 6rpx;
}

/* 三柏忌及以上: 深灰底黑字方框 */
.score-badge.score-triple-bogey {
    background-color: #8a8484;
    color: #000000;
    border-radius: 6rpx;
}
