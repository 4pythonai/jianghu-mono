.board {
    margin: 10rpx;
    background: #fff;
    border-radius: 16rpx;
    overflow: hidden;
}

.board-header,
.board-row {
    display: flex;
    align-items: stretch;
}

.board-header {
    font-size: 24rpx;
    color: var(--text-secondary);
    background: #f7f7f7;
    border-bottom: 1rpx solid #e0e0e0;
}

.board-row-wrapper {
    border-bottom: 1rpx solid #e0e0e0;
}

.board-row-wrapper:last-child {
    border-bottom: none;
}

.board-row {
    font-size: 26rpx;
    color: var(--text-primary);
}

/* 通用列样式 */
.col {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 18rpx 12rpx;
    border-right: 1rpx solid #e0e0e0;
    box-sizing: border-box;
}

.col-rank {
    width: 80rpx;
}

.col-combo {
    flex: 1;
    justify-content: flex-start;
    padding: 0;
}

.col-score {
    width: 140rpx;
}

.col-thru {
    width: 100rpx;
    border-right: none;
}

.board-empty {
    padding: 60rpx 40rpx;
    text-align: center;
}

.empty-text {
    font-size: 24rpx;
    color: var(--text-tertiary);
}

.rank-text {
    font-weight: bold;
    color: var(--text-primary);
    font-size: 26rpx;
}

/* 组合成员样式 */
.combo-members {
    display: flex;
    flex: 1;
    width: 100%;
}

.member-card {
    display: flex;
    flex: 1;
    align-items: center;
    gap: 12rpx;
    padding: 18rpx 12rpx;
    min-width: 0;
}

.member-avatar {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    flex-shrink: 0;
}

.member-name {
    font-size: 24rpx;
    color: var(--text-primary);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    flex: 1;
    min-width: 0;
}

.score-text {
    font-weight: bold;
    font-size: 26rpx;
    color: var(--text-primary);
}

.score-text:after {
    content: ' 杆';
    font-size: 20rpx;
    color: var(--text-secondary);
    font-weight: normal;
}

/* 展开的成绩详情区域 */
.expanded-scores {
    background: #f0f0f0;
    padding: 0;
}

.combo-score-header {
    padding: 12rpx 24rpx;
    background: #f7f7f7;
    border-bottom: 1rpx solid #e0e0e0;
}

.combo-score-title {
    font-size: 26rpx;
    color: var(--text-primary);
    font-weight: 500;
}

.member-score-section {
    background: #fff;
    margin: 0;
    border-bottom: 1rpx solid #e0e0e0;
}

.member-score-section:last-child {
    border-bottom: none;
}

.member-score-header {
    padding: 12rpx 24rpx;
    background: #f7f7f7;
    border-bottom: 1rpx solid #e0e0e0;
}

.member-name-in-detail {
    font-size: 26rpx;
    color: var(--text-primary);
    font-weight: 500;
}
