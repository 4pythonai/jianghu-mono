.g1-board {
    margin: 10rpx;
}

.team-board {
    background: #fff;
    border-radius: 16rpx;
    overflow: hidden;
}

.team-header {
    display: flex;
    align-items: stretch;
    font-size: 24rpx;
    color: var(--text-secondary);
    background: #f7f7f7;
    border-bottom: 1rpx solid #e0e0e0;
}

.team-section {
    border-bottom: 1rpx solid #e0e0e0;
}

.team-section:last-child {
    border-bottom: none;
}

.team-row {
    display: flex;
    align-items: stretch;
    font-size: 26rpx;
    color: var(--text-primary);
}

.team-row.expanded {
    background: linear-gradient(90deg, rgba(45, 140, 255, 0.08) 0%, rgba(45, 140, 255, 0.02) 100%);
    border-left: 6rpx solid #2d8cff;
}

.col {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 18rpx 12rpx;
    border-right: 1rpx solid #e0e0e0;
    box-sizing: border-box;
}

.col-rank {
    width: 80rpx;
}

.col-team {
    flex: 1;
    justify-content: flex-start;
}

.col-valid {
    width: 140rpx;
}

.col-score {
    width: 140rpx;
    border-right: none;
}

.team-name-wrap {
    display: flex;
    align-items: center;
    gap: 10rpx;
    min-width: 0;
}

.expand-icon {
    font-size: 20rpx;
    color: #1a472a; /* 深绿色 */
    width: 24rpx;
    flex: 0 0 auto;
}

.team-dot {
    width: 18rpx;
    height: 18rpx;
    border-radius: 50%;
    flex: 0 0 auto;
}

.team-name {
    max-width: 300rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.forfeit-text {
    font-size: 22rpx;
    color: var(--text-tertiary);
    padding: 2rpx 8rpx;
    border: 1rpx solid rgba(0, 0, 0, 0.08);
    border-radius: 999rpx;
}

.forfeit {
    opacity: 0.7;
}

.empty {
    padding: 50rpx 40rpx;
    text-align: center;
}

.empty-text {
    font-size: 24rpx;
    color: var(--text-tertiary);
}

/* Player list (expanded) */
.player-list {
    background: #fafafa;
}

.player-header {
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 22rpx;
    color: var(--text-secondary);
    background: #f0f0f0;
    border-bottom: 1rpx solid #e0e0e0;
}

.player-section {
    border-bottom: 1rpx solid #eee;
}

.player-section:last-child {
    border-bottom: none;
}

.player-row {
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 26rpx;
    color: var(--text-primary);
}

.player-row.player-expanded {
    background: rgba(45, 140, 255, 0.05);
}

.p-col {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    padding: 14rpx 10rpx;
    border-right: 1rpx solid #e0e0e0;
    box-sizing: border-box;
}

.p-col-rank {
    width: 80rpx; /* 与父表格排名列宽度一致 */
    flex-shrink: 0;
}

.p-col-player {
    flex: 1; /* 占据父表格球队+有效人数列的空间 */
    min-width: 0;
    justify-content: flex-start;
    gap: 12rpx;
    padding-left: 20rpx;
}

.p-col-score {
    width: 140rpx; /* 与父表格成绩列宽度一致 */
    flex-shrink: 0;
    border-right: none;
}

.player-empty {
    text-align: center;
    font-size: 24rpx;
    color: var(--text-tertiary);
    padding: 20rpx 0;
}

.player-name {
    flex: 1;
    min-width: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.player-expand-icon {
    font-size: 18rpx;
    color: var(--text-tertiary);
    margin-left: 8rpx;
    transition: transform 0.2s ease;
}

.player-expand-icon.rotated {
    transform: rotate(180deg);
}

