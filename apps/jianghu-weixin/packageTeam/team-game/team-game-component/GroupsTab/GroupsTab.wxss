/* 分组列表 */
.groups-tab-groups-panel {
    padding: 20rpx;
}

.groups-tab-groups-panel-hint {
    background: rgba(76, 175, 80, 0.08);
    border-radius: 16rpx;
    animation: groupsTabHintPulse 1.5s ease;
}

@keyframes groupsTabHintPulse {
    0% { box-shadow: 0 0 0 0 rgba(76, 175, 80, 0.25); }
    70% { box-shadow: 0 0 0 16rpx rgba(76, 175, 80, 0); }
    100% { box-shadow: 0 0 0 0 rgba(76, 175, 80, 0); }
}

.groups-tab-groups-list {
    display: flex;
    flex-direction: column;
    gap: 24rpx;
    padding: 20rpx;
}

.groups-tab-group-item {
    position: relative;
    transition: transform 0.2s ease;
    display: flex;
    align-items: flex-start;
    gap: 12rpx;
}

.groups-tab-group-item.groups-tab-dragging {
    transition: none;
    opacity: 0.8;
}

.groups-tab-drag-handle {
    flex-shrink: 0;
    width: 60rpx;
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 20rpx;
    background: rgba(0, 0, 0, 0.02);
    border-radius: 8rpx;
    cursor: grab;
    touch-action: none;
}

.groups-tab-drag-handle:active {
    cursor: grabbing;
    background: rgba(0, 0, 0, 0.05);
}

.groups-tab-drag-icon {
    font-size: 32rpx;
    color: var(--text-secondary);
    line-height: 1;
    letter-spacing: -2rpx;
}

.groups-tab-group-card-wrapper {
    flex: 1;
    touch-action: none;
    min-width: 0;
    overflow: hidden;
}

.groups-tab-groups-list:has(.groups-tab-groups-panel-hint) {
    background: rgba(76, 175, 80, 0.08);
    border-radius: 16rpx;
}

/* 添加分组按钮 */
.groups-tab-add-group-btn {
    display: flex;
    align-items: center;
    gap: 12rpx;
    margin-top: 24rpx;
    padding: 24rpx;
}

.groups-tab-add-group-icon {
    font-size: 40rpx;
    color: var(--primary-green);
    font-weight: bold;
    line-height: 1;
}

.groups-tab-add-group-text {
    font-size: 28rpx;
    color: var(--primary-green);
    font-weight: 500;
}

.groups-tab-empty-state {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 100rpx 40rpx;
    background: #fff;
}

.groups-tab-empty-state text {
    font-size: 28rpx;
    color: var(--text-tertiary);
}
