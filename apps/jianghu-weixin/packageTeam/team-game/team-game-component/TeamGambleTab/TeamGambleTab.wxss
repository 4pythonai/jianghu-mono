.gamble-tab {
    padding: 16rpx 12rpx 40rpx;
    display: flex;
    flex-direction: column;
    gap: 24rpx;
}

.hero-card {
    padding: 24rpx;
    border-radius: 20rpx;
    background: linear-gradient(135deg, #f0fff2 0%, #ffffff 70%);
    border: 2rpx solid rgba(76, 175, 80, 0.12);
    box-shadow: 0 10rpx 24rpx rgba(46, 125, 50, 0.08);
}

.hero-top {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 16rpx;
}

.hero-title {
    font-size: 34rpx;
    color: var(--text-primary);
    font-weight: 700;
}

.hero-subtitle {
    margin-top: 8rpx;
    font-size: 24rpx;
    color: var(--text-secondary);
    line-height: 1.5;
}

.hero-badge {
    min-width: 120rpx;
    padding: 12rpx 16rpx;
    border-radius: 12rpx;
    text-align: center;
    background: rgba(76, 175, 80, 0.12);
    border: 1rpx solid rgba(76, 175, 80, 0.2);
}

.hero-badge-label {
    font-size: 20rpx;
    color: var(--text-tertiary);
}

.hero-badge-value {
    margin-top: 6rpx;
    font-size: 28rpx;
    color: var(--primary-green-dark);
    font-weight: 600;
}

.hero-metrics {
    margin-top: 16rpx;
    display: flex;
    gap: 12rpx;
}

.metric-item {
    flex: 1;
    padding: 12rpx;
    border-radius: 12rpx;
    background: #f6fbf7;
    border: 1rpx solid #e5f0e7;
}

.metric-label {
    font-size: 20rpx;
    color: var(--text-tertiary);
}

.metric-value {
    margin-top: 6rpx;
    font-size: 26rpx;
    color: var(--text-primary);
    font-weight: 600;
}

.section-card {
    padding: 18rpx;
    border-radius: 20rpx;
    background: #fff;
    border: 2rpx solid #f0f2f4;
    box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.06);
}

.section-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12rpx;
    flex-wrap: wrap;
}

.section-title-wrap {
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;
    gap: 6rpx;
}

.section-title {
    font-size: 30rpx;
    color: var(--text-primary);
    font-weight: 600;
}

.section-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 8rpx;
}

.section-badge {
    padding: 2rpx 10rpx;
    border-radius: 999rpx;
    font-size: 20rpx;
    color: var(--text-secondary);
    background: #f4f6f8;
    border: 1rpx solid #e5e7eb;
}

.section-note {
    font-size: 22rpx;
    color: var(--text-tertiary);
}

.section-actions {
    display: flex;
    gap: 12rpx;
    flex-shrink: 0;
    margin-left: auto;
}

.section-meta {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 6rpx 12rpx;
    border-radius: 999rpx;
    background: var(--bg-light);
}

.meta-text {
    font-size: 22rpx;
    color: var(--text-secondary);
}

.selected-chips {
    margin-top: 16rpx;
    display: flex;
    flex-wrap: wrap;
    gap: 12rpx;
}

.selected-chip {
    display: flex;
    align-items: center;
    gap: 8rpx;
    padding: 6rpx 12rpx 6rpx 6rpx;
    border-radius: 999rpx;
    background: var(--bg-light);
}

.selected-name {
    font-size: 22rpx;
    color: var(--text-primary);
    max-width: 140rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.remove-chip {
    width: 32rpx;
    height: 32rpx;
    border-radius: 50%;
    background: #e9ecef;
    display: flex;
    align-items: center;
    justify-content: center;
}

.remove-chip-text {
    font-size: 24rpx;
    color: #6b7280;
}

.empty-hint {
    margin-top: 12rpx;
    padding: 16rpx;
    border-radius: 12rpx;
    text-align: center;
    background: #f8f9fa;
}

.empty-hint-text {
    font-size: 24rpx;
    color: var(--text-tertiary);
}

.players-grid {
    margin-top: 16rpx;
    display: flex;
    flex-wrap: wrap;
    gap: 12rpx;
}

.player-card {
    width: calc((100% - 12rpx) / 2);
    display: flex;
    align-items: center;
    gap: 12rpx;
    padding: 12rpx;
    border-radius: 16rpx;
    border: 2rpx solid #eef1f3;
    background: #fff;
}

.player-card.selected {
    border-color: var(--primary-green);
    background: rgba(76, 175, 80, 0.08);
    box-shadow: 0 6rpx 16rpx rgba(76, 175, 80, 0.12);
}

.player-info {
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;
    gap: 6rpx;
}

.player-name {
    font-size: 24rpx;
    color: var(--text-primary);
    font-weight: 600;
}

.player-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8rpx;
    align-items: center;
}

.player-tag {
    padding: 2rpx 10rpx;
    border-radius: 999rpx;
}

.player-tag-text {
    font-size: 20rpx;
    color: var(--text-secondary);
}

.player-handicap {
    font-size: 20rpx;
    color: var(--text-tertiary);
}

.player-check {
    width: 32rpx;
    height: 32rpx;
    border-radius: 50%;
    border: 2rpx solid #d1d5db;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.player-card.selected .player-check {
    background: var(--primary-green);
    border-color: var(--primary-green);
}

.player-check-text {
    font-size: 20rpx;
    font-weight: 600;
    color: #fff;
}

.empty-state {
    margin-top: 16rpx;
    padding: 32rpx 16rpx;
    text-align: center;
    border-radius: 16rpx;
    background: #fafafa;
    border: 2rpx dashed #e5e7eb;
}

.empty-state-title {
    font-size: 24rpx;
    color: var(--text-secondary);
}

.empty-state-desc {
    margin-top: 6rpx;
    font-size: 22rpx;
    color: var(--text-tertiary);
}

.virtual-group-list {
    margin-top: 16rpx;
    display: flex;
    flex-direction: column;
    gap: 16rpx;
}

.virtual-group-card {
    padding: 16rpx;
    border-radius: 16rpx;
    border: 2rpx solid #eef1f3;
    background: #fff;
    display: flex;
    flex-direction: column;
    gap: 12rpx;
}

.group-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12rpx;
}

.group-title {
    display: flex;
    align-items: center;
    gap: 12rpx;
}

.group-name {
    font-size: 26rpx;
    color: var(--text-primary);
    font-weight: 600;
}

.group-count {
    font-size: 22rpx;
    color: var(--text-tertiary);
}

.group-members {
    display: flex;
    flex-wrap: wrap;
    gap: 10rpx;
}

.group-member {
    display: flex;
    align-items: center;
    gap: 8rpx;
    padding: 6rpx 12rpx 6rpx 6rpx;
    border-radius: 999rpx;
    background: var(--bg-light);
}

.group-member-name {
    font-size: 22rpx;
    color: var(--text-primary);
    max-width: 120rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.btn-primary.btn-small {
    height: 60rpx;
    border-radius: 12rpx;
}
