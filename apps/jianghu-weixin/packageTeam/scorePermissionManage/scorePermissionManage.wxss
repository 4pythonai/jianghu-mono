.container {
  min-height: 100vh;
  background: var(--common-bg, #f5f5f5);
  padding-top: 180rpx; /* CustomNavBar 预留空间 */
}

.page-content {
  padding: 32rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 8rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.permission-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.permission-item + .permission-item {
  border-top: 1rpx solid #f0f0f0;
}

.permission-label {
  margin-left: 16rpx;
  font-size: 30rpx;
  color: #333;
}

.hint {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #999;
}

/* 球童二维码区域 */
.qrcode-section {
  margin-top: 40rpx;
}

.qrcode-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.qrcode-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.qrcode-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 26rpx;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid #e0e0e0;
  border-top-color: #2e7d32;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 16rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.qrcode-image {
  width: 400rpx;
  height: 400rpx;
}

.qrcode-hint {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #666;
  text-align: center;
}

.qrcode-error {
  padding: 40rpx 0;
  color: #999;
  font-size: 26rpx;
}

.btn {
  margin-top: 32rpx;
}
