.container {
  min-height: 100vh;
  background: var(--common-bg, #f5f5f5);
}

.page-content {
  padding: 24rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e5e5e5;
  border-top-color: var(--primary-green-dark, #2e7d32);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 统计栏 */
.stats-bar {
  padding: 16rpx 24rpx;
  margin-bottom: 16rpx;
}

.stats-text {
  font-size: 26rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.3;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 成员卡片 */
.member-card {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.member-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: #f5f5f5;
  flex-shrink: 0;
}

.member-info {
  flex: 1;
  margin-left: 20rpx;
  min-width: 0;
}

.member-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.member-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.member-handicap {
  font-size: 24rpx;
  color: var(--primary-green-dark, #2e7d32);
  background: #e8f5e9;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.member-join-time {
  font-size: 24rpx;
  color: #999;
}

/* 角色标签 */
.member-role {
  margin-left: 16rpx;
}

.role-tag {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.role-tag.team-superadmin {
  background: #fff3e0;
  color: #e65100;
}

.role-tag.admin {
  background: #e3f2fd;
  color: #1976d2;
}

.role-tag.member {
  background: #f5f5f5;
  color: #666;
}

/* 移除按钮 */
.remove-btn {
  margin-left: 16rpx;
  padding: 12rpx 24rpx;
  background: #ffebee;
  border-radius: 24rpx;
}

.remove-btn text {
  font-size: 24rpx;
  color: #f44336;
}

.remove-btn:active {
  background: #ffcdd2;
}
