<view class="hole-cell" style="background:#fff" bindtap="recordScore">
  <view wx:if="{{colorTag === 'red'}}" class="color-tag-red"></view>
  <view wx:if="{{colorTag === 'blue'}}" class="color-tag-blue"></view>
  <text class="score-text {{ scoreClass }}">{{formattedScore}}</text>
  <text class="putts-text">{{formattedputts}}</text>
  <text class="diff-text">{{formattedDiff}}</text>
</view>
