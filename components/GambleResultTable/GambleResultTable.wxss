.gamble-result-table {
	width: 100%;
	min-width: 100%;
	background: #fff;
	border-radius: 16rpx;
	overflow: hidden;
	box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
	border: 0.5rpx solid #f0f0f0;
}

.table-container {
	width: 100%;
	min-width: 100%;
	overflow-x: auto;
}

/* 表头样式 */
.table-header {
	display: flex;
	background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
	border-bottom: 1rpx solid #dee2e6;
	min-width: 100%;
	position: relative;
}

.table-header::after {
	content: "";
	position: absolute;
	bottom: 0;
	left: 0;
	right: 0;
	height: 1rpx;
	background: linear-gradient(
		90deg,
		transparent 0%,
		#dee2e6 20%,
		#dee2e6 80%,
		transparent 100%
	);
}

.header-cell {
	flex: 1;
	min-width: 100rpx;
	padding: 24rpx 16rpx;
	text-align: center;
	font-weight: 600;
	font-size: 28rpx;
	color: #495057;
	border-right: 0.5rpx solid #dee2e6;
	white-space: nowrap;
	position: relative;
	transition: all 0.2s ease;
}

.header-cell:hover {
	background: rgba(255, 255, 255, 0.3);
}

.header-cell:last-child {
	border-right: none;
}

.hole-header {
	flex: 0 0 120rpx;
	min-width: 120rpx;
	max-width: 120rpx;
	background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
	font-weight: 700;
	border-bottom: 0.5rpx solid #dee2e6;
	border-right: 1rpx solid #dee2e6;
	position: relative;
}

.player-info {
	display: flex;
}

/* 队伍颜色标识 - 用于表头 */
.header-cell.team-red {
	background-color: #ffdddd; /* 浅红色背景 */
}

.header-cell.team-blue {
	background-color: #ddddff; /* 浅蓝色背景 */
}

.player-avatar {
	width: 50rpx;
	height: 50rpx;
	border-radius: 50%;
	margin-bottom: 4rpx;
	border: 2rpx solid #dee2e6;
}

.player-name {
	font-size: 24rpx;
	color: #495057;
	text-align: center;
	line-height: 1.2;
	word-break: break-all;
	max-width: 100%;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

/* 表格主体样式 */
.table-body {
	max-height: 600rpx;
	overflow-y: auto;
	overflow-x: auto;
}

.table-row {
	display: flex;
	border-bottom: 0.5rpx solid #f0f0f0;
	transition: all 0.2s ease;
	min-width: 100%;
	position: relative;
}

.table-row:nth-child(even) {
	background-color: rgba(248, 249, 250, 0.3);
}

.table-row:hover {
	background-color: #f8f9fa;
}

.table-row:last-child {
	border-bottom: none;
}

.cell {
	flex: 1;
	min-width: 100rpx;
	padding: 20rpx 16rpx;
	text-align: center;
	font-size: 26rpx;
	color: #495057;
	border-right: 0.5rpx solid #f0f0f0;
	display: flex;
	align-items: center;
	justify-content: center;
	white-space: nowrap;
	position: relative;
	transition: all 0.2s ease;
}

.cell:hover {
	background-color: rgba(0, 123, 255, 0.05);
}

.cell:last-child {
	border-right: none;
}

.hole-header-inner {
	font-weight: 600;
	color: #495057;
}

/* 队伍颜色标识 */
.team-red {
	background: linear-gradient(135deg, #ffebee 0%, #ffcdd2 100%);
	border-left: 2rpx solid #f44336;
	position: relative;
}

.team-red::before {
	content: "";
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background: linear-gradient(
		45deg,
		transparent 0%,
		rgba(244, 67, 54, 0.05) 100%
	);
	pointer-events: none;
}

.team-blue {
	background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
	border-left: 2rpx solid #2196f3;
	position: relative;
}

.team-blue::before {
	content: "";
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background: linear-gradient(
		45deg,
		transparent 0%,
		rgba(33, 150, 243, 0.05) 100%
	);
	pointer-events: none;
}

/* 金额样式 */
.money-positive {
	color: #28a745;
	font-weight: 600;
}

.money-negative {
	color: #dc3545;
	font-weight: 600;
}

.money-zero {
	color: #6c757d;
}

/* 总计行样式 */
.total-row {
	background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
	border-top: 1rpx solid #dee2e6;
	font-weight: 600;
	position: relative;
}

.total-row::before {
	content: "";
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	height: 1rpx;
	background: linear-gradient(
		90deg,
		transparent 0%,
		#dee2e6 20%,
		#dee2e6 80%,
		transparent 100%
	);
}

.total-row .cell {
	font-size: 28rpx;
	padding: 20rpx 12rpx;
}

.total-row .hole-header {
	background: #f8f9fa;
	color: #495057;
	border-bottom: 1rpx solid #e9ecef;
}

/* 横向滚动优化 */
.table-container::-webkit-scrollbar {
	height: 8rpx;
}

.table-container::-webkit-scrollbar-track {
	background: #f1f1f1;
	border-radius: 4rpx;
}

.table-container::-webkit-scrollbar-thumb {
	background: #c1c1c1;
	border-radius: 4rpx;
}

.table-container::-webkit-scrollbar-thumb:hover {
	background: #a8a8a8;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
	.header-cell,
	.cell {
		padding: 12rpx 8rpx;
		font-size: 24rpx;
		min-width: 80rpx;
	}

	.player-avatar {
		width: 40rpx;
		height: 40rpx;
	}

	.player-name {
		font-size: 22rpx;
	}

	.hole-header {
		flex: 0 0 100rpx;
		min-width: 100rpx;
		max-width: 100rpx;
		background: #fff;
		border-bottom: 1rpx solid #e9ecef;
	}
}

/* 滚动条样式 */
.table-body::-webkit-scrollbar {
	width: 6rpx;
}

.table-body::-webkit-scrollbar-track {
	background: #f1f1f1;
	border-radius: 3rpx;
}

.table-body::-webkit-scrollbar-thumb {
	background: #c1c1c1;
	border-radius: 3rpx;
}

.table-body::-webkit-scrollbar-thumb:hover {
	background: #a8a8a8;
}

/* 确保表格在小屏幕上也能正常显示 */
@media (max-width: 600rpx) {
	.gamble-result-table {
		border-radius: 8rpx;
	}

	.table-container {
		border-radius: 8rpx;
	}

	.header-cell,
	.cell {
		padding: 8rpx 6rpx;
		font-size: 22rpx;
		min-width: 60rpx;
	}

	.player-name {
		font-size: 20rpx;
	}

	.hole-header {
		flex: 0 0 80rpx;
		min-width: 80rpx;
		max-width: 80rpx;
		background: #fff;
	}

	.player-avatar {
		width: 35rpx;
		height: 35rpx;
	}
}
