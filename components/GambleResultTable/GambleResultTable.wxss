/* GambleResultTable 组件样式 */

.gamble-result-table {
	width: 100%;
	overflow-x: auto;
}

.table-container {
	width: 100%;
	min-width: 100%;
	border-collapse: collapse;
}

/* 表头样式 */
.table-header {
	display: flex;
	background-color: #f8f9fa;
	border-bottom: 0.25px solid #dee2e6;
}

.header-cell {
	flex: 1;
	padding: 8rpx;
	text-align: center;
	border-right: 0.25px solid #dee2e6;
}

.hole-header {
	flex: 1;
	background-color: #ffffff;
	font-weight: bold;
	border-right: 0.25px solid #dee2e6;
}

.player-header {
	display: flex;
	justify-content: center;
	align-items: center;
}

/* 球员信息容器 - 垂直布局 */
.player-info {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	width: 100%;
	height: 100%;
	padding: 4rpx;
}

/* 球员头像 */
.player-avatar {
	width: 50rpx;
	height: 50rpx;
	border-radius: 50%;
	margin-bottom: 8rpx;
	border: 2rpx solid #dee2e6;
}

/* 球员昵称 */
.player-name {
	font-size: 20rpx;
	color: #333;
	text-align: center;
	max-width: 100%;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	line-height: 1.2;
}

/* 表格主体 */
.table-body {
	display: flex;
	flex-direction: column;
}

.table-row {
	display: flex;
	border-bottom: 0.25px solid #dee2e6;
}

.cell {
	flex: 1;
	padding: 8rpx;
	text-align: center;
	border-right: 0.25px solid #dee2e6;
	min-width: 140rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}

/* 洞号单元格 */
.hole-header-inner {
	display: flex;
	align-items: center;
	justify-content: flex-start;
	width: 100%;
	height: 100%;
	font-weight: bold;
	color: #495057;
	padding: 0 8rpx;
	text-align: center;
	flex-direction: row;
	gap: 4rpx;
}

/* 洞名固定宽度容器 */
.hole-name-fixed {
	width: 60rpx;
	display: flex;
	align-items: center;
	justify-content: flex-end;
}

/* 平局标志固定宽度容器 */
.draw-indicator-fixed {
	width: 30rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}

/* 洞名文字 */
.hole-name {
	font-weight: bold;
	color: #495057;
	line-height: 1;
	font-size: 24rpx;
}

/* 平局指示器 */
.draw-indicator {
	font-size: 20rpx;
	color: #ff6b35;
	line-height: 1;
	font-weight: bold;
}

/* 总计行样式 */
.total-row {
	background-color: #f8f9fa;
	font-weight: bold;
}

.total-row .cell {
	background-color: #f8f9fa;
}

/* 确保第一列在所有情况下都是白底 */
.total-row .hole-header {
	background-color: #ffffff;
}

/* 金额样式 */
.money-positive {
	color: #28a745;
	font-weight: bold;
}

.money-negative {
	color: #dc3545;
	font-weight: bold;
}

.money-zero {
	color: #6c757d;
}

/* 红蓝分组样式 - 已移除背景色 */
.cell.team-red {
	/* 移除红队背景色 */
}

.cell.team-blue {
	/* 移除蓝队背景色 */
}

/* 响应式设计 */
@media (max-width: 750rpx) {
	.hole-header {
		flex: 0 0 120rpx;
		min-width: 120rpx;
		max-width: 120rpx;
	}

	.player-avatar {
		width: 40rpx;
		height: 40rpx;
	}

	.player-name {
		font-size: 18rpx;
	}

	.header-cell,
	.cell {
		min-width: 120rpx;
		padding: 6rpx;
	}
}
