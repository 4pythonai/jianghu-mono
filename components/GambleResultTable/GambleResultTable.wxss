.gamble-result-table {
	width: 100%;
	background: #fff;
	border-radius: 12rpx;
	overflow: hidden;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.table-container {
	width: 100%;
}

/* 表头样式 */
.table-header {
	display: flex;
	background: #f8f9fa;
	border-bottom: 2rpx solid #e9ecef;
}

.header-cell {
	flex: 1;
	padding: 20rpx 12rpx;
	text-align: center;
	font-weight: 600;
	font-size: 28rpx;
	color: #495057;
	border-right: 1rpx solid #e9ecef;
}

.header-cell:last-child {
	border-right: none;
}

.hole-header {
	flex: 0.5;
	background: #e9ecef;
	font-weight: 700;
}

.player-info {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	height: 100%;
}

.player-avatar {
	width: 60rpx;
	height: 60rpx;
	border-radius: 50%;
	margin-bottom: 8rpx;
	border: 2rpx solid #dee2e6;
}

.player-name {
	font-size: 24rpx;
	color: #495057;
	text-align: center;
	line-height: 1.2;
	word-break: break-all;
}

/* 表格主体样式 */
.table-body {
	max-height: 600rpx;
	overflow-y: auto;
}

.table-row {
	display: flex;
	border-bottom: 1rpx solid #e9ecef;
	transition: background-color 0.2s ease;
}

.table-row:hover {
	background-color: #f8f9fa;
}

.table-row:last-child {
	border-bottom: none;
}

.cell {
	flex: 1;
	padding: 16rpx 12rpx;
	text-align: center;
	font-size: 26rpx;
	color: #495057;
	border-right: 1rpx solid #e9ecef;
	display: flex;
	align-items: center;
	justify-content: center;
}

.cell:last-child {
	border-right: none;
}

.hole-header-inner {
	font-weight: 600;
	color: #495057;
}

/* 队伍颜色标识 */
.team-red {
	background-color: rgba(220, 53, 69, 0.1);
	border-left: 4rpx solid #dc3545;
}

.team-blue {
	background-color: rgba(0, 123, 255, 0.1);
	border-left: 4rpx solid #007bff;
}

/* 金额样式 */
.money-positive {
	color: #28a745;
	font-weight: 600;
}

.money-negative {
	color: #dc3545;
	font-weight: 600;
}

.money-zero {
	color: #6c757d;
}

/* 总计行样式 */
.total-row {
	background: #f8f9fa;
	border-top: 2rpx solid #dee2e6;
	font-weight: 600;
}

.total-row .cell {
	font-size: 28rpx;
	padding: 20rpx 12rpx;
}

.total-row .hole-header {
	background: #e9ecef;
	color: #495057;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
	.header-cell,
	.cell {
		padding: 12rpx 8rpx;
		font-size: 24rpx;
	}

	.player-avatar {
		width: 50rpx;
		height: 50rpx;
	}

	.player-name {
		font-size: 22rpx;
	}

	.hole-header {
		flex: 0.4;
	}
}

/* 滚动条样式 */
.table-body::-webkit-scrollbar {
	width: 6rpx;
}

.table-body::-webkit-scrollbar-track {
	background: #f1f1f1;
	border-radius: 3rpx;
}

.table-body::-webkit-scrollbar-thumb {
	background: #c1c1c1;
	border-radius: 3rpx;
}

.table-body::-webkit-scrollbar-thumb:hover {
	background: #a8a8a8;
}
