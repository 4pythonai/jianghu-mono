@import "/styles/modal.wxss";

/* 组件特定的样式覆盖 */
.modal-content {
	position: fixed;
	left: 0;
	right: 0;
	bottom: 0;
	background: #fff;
	border-top-left-radius: 24rpx;
	border-top-right-radius: 24rpx;
	padding: 32rpx 24rpx 120rpx 24rpx;
	z-index: 1001;
	animation: slideUp .3s;
	max-height: 70vh;
	box-sizing: border-box;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	overflow-y: auto;
}

/* 弹窗标题样式覆盖 */
.modal-title {
	font-size: 36rpx;
	font-weight: 600;
	color: #222;
	margin-bottom: 32rpx;
	text-align: center;
}

/* 弹窗底部按钮样式覆盖 */
.modal-actions {
	width: 100%;
	display: flex;
	justify-content: space-between;
	margin-top: 12rpx;
	gap: 32rpx;
}

/* 底部按钮样式覆盖 */
.modal-btn {
	flex: 1;
	height: 64rpx;
	border-radius: 16rpx;
	font-size: 28rpx;
	font-weight: 500;
	border: none;
}

.modal-btn.cancel {
	background: #fff;
	color: #4caf7a;
	border: 2rpx solid #4caf7a;
}

.modal-btn.confirm {
	background: #4caf7a;
	color: #fff;
}

@keyframes slideUp {
	from {
		transform: translateY(100%);
	}
	to {
		transform: translateY(0);
	}
}

.hole-list {
	display: grid;
	grid-template-columns: repeat(9, 1fr);
	gap: 16rpx 8rpx;
	margin-bottom: 32rpx;
	width: 100%;
}

.hole-item {
	width: 100%;
	padding-top: 100%; /* 保证宽高比1:1 */
	position: relative;
	border-radius: 50%;
	background: #27ae60; /* 绿色 */
	border: 2rpx solid #eee;
	box-sizing: border-box;
	margin: 0;
	overflow: hidden;
}

.hole-item-text {
	position: absolute;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 28rpx;
	color: #fff; /* 白字 */
	white-space: nowrap;
	text-overflow: ellipsis;
}

/* 在holePlayList中的洞 */
.hole-item.in-playlist {
	background: #27ae60;
	border: 2rpx solid #27ae60;
}

/* 不在holePlayList中的洞（灰色） */
.hole-item.not-in-playlist {
	background: #e0e0e0;
	border: 2rpx solid #ccc;
}

.hole-item.not-in-playlist .hole-item-text {
	color: #999;
}

/* 选中的球洞（蓝色圆圈） */
.hole-item.active {
	background: #3498db;
	border: 2rpx solid #3498db;
	box-shadow: 0 0 10rpx rgba(52, 152, 219, 0.5);
}

.hole-item.active .hole-item-text {
	color: #fff;
}

.spliter {
	margin: 32rpx 0;
}


