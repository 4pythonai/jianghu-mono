@import "/styles/modal.wxss";

.hole-list {
	display: grid;
	grid-template-columns: repeat(9, 1fr);
	gap: 16rpx 8rpx;
	margin-bottom: 32rpx;
	width: 100%;
}

.hole-item {
	width: 100%;
	padding-top: 100%; /* 保证宽高比1:1 */
	position: relative;
	border-radius: 50%;
	background: #27ae60; /* 绿色 */
	border: 2rpx solid #eee;
	box-sizing: border-box;
	margin: 0;
	overflow: hidden;
}

.hole-item-text {
	position: absolute;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 28rpx;
	color: #fff; /* 白字 */
	white-space: nowrap;
	text-overflow: ellipsis;
}

/* 在holePlayList中的洞 */
.hole-item.in-playlist {
	background: #27ae60;
	border: 2rpx solid #27ae60;
}

/* 不在holePlayList中的洞（灰色） */
.hole-item.not-in-playlist {
	background: #e0e0e0;
	border: 2rpx solid #ccc;
}

.hole-item.not-in-playlist .hole-item-text {
	color: #999;
}

/* 选中的球洞（蓝色圆圈） */
.hole-item.active {
	background: #3498db;
	border: 2rpx solid #3498db;
	box-shadow: 0 0 10rpx rgba(52, 152, 219, 0.5);
}

.hole-item.active .hole-item-text {
	color: #fff;
}

.spliter {
	margin: 32rpx 0;
}

/* 场景指示器样式 */
.scene-indicator {
	border-radius: 12rpx;
	padding: 16rpx 20rpx;
	margin-bottom: 24rpx;
	text-align: left;
}

.scene-text {
	font-size: 26rpx;
	color: #636d68;
	font-weight: 500;
	line-height: 1.4;
}
