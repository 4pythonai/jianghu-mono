@import "/styles/modal.wxss";

.modal-content {
	position: fixed;
	left: 0;
	right: 0;
	bottom: 0;
	background: #fff;
	border-top-left-radius: 24rpx;
	border-top-right-radius: 24rpx;
	padding: 32rpx 24rpx 120rpx 24rpx;
	z-index: 1001;
	animation: slideUp .3s;
	max-height: 70vh;
	box-sizing: border-box;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	overflow-y: auto;
}

@keyframes slideUp {
	from {
		transform: translateY(100%);
	}
	to {
		transform: translateY(0);
	}
}

.hole-list {
	display: grid;
	grid-template-columns: repeat(9, 1fr);
	gap: 16rpx 8rpx;
	margin-bottom: 32rpx;
	width: 100%;
}

.hole-item {
	width: 100%;
	padding-top: 100%; /* 保证宽高比1:1 */
	position: relative;
	border-radius: 50%;
	background: #27ae60; /* 绿色 */
	border: 2rpx solid #eee;
	box-sizing: border-box;
	margin: 0;
	overflow: hidden;
}

.hole-item-text {
	position: absolute;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 28rpx;
	color: #fff; /* 白字 */
	white-space: nowrap;
	text-overflow: ellipsis;
}

/* 新增样式：在holePlayList中的洞 */
.hole-item.in-playlist {
	background: #27ae60;
	color: #fff;
	border: 2rpx solid #27ae60;
}

/* 新增样式：不在holePlayList中的洞（灰色） */
.hole-item.not-in-playlist {
	background: #e0e0e0;
	color: #999;
	border: 2rpx solid #ccc;
}

.hole-item.not-in-playlist .hole-item-text {
	color: #999;
}

/* 新增样式：选中的球洞（蓝色圆圈） */
.hole-item.active {
	background: #3498db !important;
	border: 2rpx solid #3498db !important;
	box-shadow: 0 0 10rpx rgba(52, 152, 219, 0.5);
}

.hole-item.active .hole-item-text {
	color: #fff !important;
}

/* 确保active样式覆盖其他所有样式 */
.hole-item.active.in-playlist {
	background: #3498db !important;
	border: 2rpx solid #3498db !important;
}

.hole-item.active.not-in-playlist {
	background: #3498db !important;
	border: 2rpx solid #3498db !important;
}

.hole-item.active.in-playlist .hole-item-text,
.hole-item.active.not-in-playlist .hole-item-text {
	color: #fff !important;
}

/* 最高优先级：内联样式覆盖 */
.hole-item[style*="background-color: #3498db"] {
	background: #3498db !important;
	border: 3rpx solid #3498db !important;
}

.hole-item[style*="background-color: #3498db"] .hole-item-text {
	color: #fff !important;
}

/* 强制覆盖：使用更具体的选择器 */
.hole-list .hole-item.active {
	background: #3498db !important;
	border: 2rpx solid #3498db !important;
	box-shadow: 0 0 10rpx rgba(52, 152, 219, 0.5) !important;
}

.hole-list .hole-item.active .hole-item-text {
	color: #fff !important;
}

.hole-list .hole-item.active.in-playlist {
	background: #3498db !important;
	border: 2rpx solid #3498db !important;
}

.hole-list .hole-item.active.not-in-playlist {
	background: #3498db !important;
	border: 2rpx solid #3498db !important;
}

