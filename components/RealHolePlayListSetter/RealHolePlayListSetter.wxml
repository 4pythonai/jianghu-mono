<!-- RealHolePlayListSetter -->

<view>
  <view class="modal-mask" bindtap="onHideModal"></view>
  <view class="modal-content">
    <view class="modal-title">{{title}}</view>

    <!-- 跳洞设置场景 -->
    <view class="scene-indicator" wx:if="{{scene === 'starthole'}}">
      <view class="scene-text">调整出发洞,点中的球洞将作为第一个洞</view>
    </view>

    <!-- 起止洞设置场景 -->
    <view class="scene-indicator" wx:if="{{scene === 'startend'}}">
      <!-- <text class="scene-text">起止洞设置</text> -->
    </view>

    <view class="hole-list">
      <block wx:for="{{displayHoleList}}" wx:key="hindex">
        <view
          class="hole-item {{index === 0 ? 'active' : ''}} {{item.inPlaylist ? 'in-playlist' : 'not-in-playlist'}}"
          bindtap="onSelectHole"
          data-index="{{index}}"
          data-holename="{{item.holename}}"
          data-hindex="{{item.hindex}}"
        >
          <text class="hole-item-text">{{item.holename}}</text>
        </view>
      </block>
    </view>

    <view class="spliter"></view>
    <view class="modal-actions">
      <button class="modal-btn cancel" bindtap="onCancel">取消</button>
      <button class="modal-btn confirm" bindtap="onConfirmHoleOrder">确定</button>
    </view>
  </view>
</view>
