/* 球员信息容器 */
.cell-player-info {
	width: 100%;
	height: 100%;
	box-sizing: border-box;
	overflow: hidden;
}

.player-info-container {
	width: 100%;
	height: 100%;
	box-sizing: border-box;
	overflow: hidden;
}

.player-info-column {
	width: 48px;
	height: 76px;
	float: left;
	padding-left: 3px;
	padding-top: 16px;
	overflow: hidden;
	display: flex;
	flex-direction: column;
	align-items: left;
	justify-content: center;
}

/* 球员头像 */
.player-avatar {
	width: 32px;
	height: 32px;
	border-radius: 50%;
}

.player-name {
	font-size: 10px;
	width: 100%;
	margin-top: 6px;
	height: 30px;
	overflow: hidden;
	text-overflow: ellipsis;
	text-align: left;
	white-space: nowrap;
}

.tee-info-column {
	padding-right: 4px;
	width: 28px;
	height: 76px;
	float: right;
	display: flex;
	align-items: center;
	justify-content: center;
}

/* T台指示器基本样式 */
.tee-indicator {
	width: 16px;
	height: 16px;
	border-radius: 50%;
	font-size: 11px;
	font-weight: bold;
	color: white;
	margin-left: auto;
}

/* 不同颜色T台样式 */
.tee-black {
	background-color: #000;
}

.tee-blue {
	background-color: #0066cc;
}

.tee-white {
	background-color: #f0f0f0;
	color: #333;
	border: 1px solid #ccc;
}

.tee-gold {
	background-color: #ffd700;
	color: #333;
}

.tee-red {
	background-color: #cc0000;
}

/* 默认T台样式 */
.tee-default {
	background-color: #999;
}

.tee-indicator {
	width: 24px;
	height: 24px;
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
}

.tee-black {
	background-color: black;
	color: yellow;
}

.tee-blue {
	background-color: blue;
	color: white;
}

.tee-white {
	background-color: white;
	color: black;
}

.tee-gold {
	background-color: gold;
	color: black;
}

.tee-red {
	background-color: red;
	color: white;
}

.tee-default {
	background-color: gray;
	color: black;
}
