@import "/styles/modal.wxss";
/* 显示部分样式 */
.rule-section {
	display: flex;
	flex-direction: column;
	gap: 8rpx;
}

.form-label {
	font-size: 28rpx;
	color: #222;
	font-weight: 500;
	margin-bottom: 8rpx;
}


.reward-title {
	font-size: 28rpx;
	font-weight: 600;
	color: #2c3e50;
}


.form-input {
	width: 100%;
	height: 64rpx;
	background: #f8f8f8;
	border: 2rpx solid #4caf7a;
	border-radius: 16rpx;
	font-size: 28rpx;
	color: #888;
	padding: 0 24rpx;
	margin-bottom: 0;
	box-sizing: border-box;
}

.form-input.conditionally-disabled {
	color: #bbb;
	background: #f0f0f0;
	border-color: #e0e0e0;
}

.form-select {
	position: relative;
	margin-bottom: 0;
}

.select-arrow {
	position: absolute;
	right: 24rpx;
	top: 50%;
	transform: translateY(-50%);
	color: #388e3c;
	font-size: 36rpx;
	pointer-events: none;
}

.arrow-circle {
	display: inline-flex;
	align-items: center;
	justify-content: center;
	width: 40rpx;
	height: 40rpx;
	border-radius: 50%;
	border: 2rpx solid #4caf7a;
	color: #4caf7a;
	font-size: 28rpx;
	background: #fff;
	box-sizing: border-box;
	font-weight: bold;
}



/* 主要内容区域 */
.main-content {
	display: flex;
	gap: 16rpx;
	margin-bottom: 24rpx;
}

/* 奖励面板 */
.reward-panel {
	flex: 1;
	border-radius: 16rpx;
	padding: 16rpx;
	transition: all 0.3s ease;
	cursor: pointer;
}

/* 激活状态面板 */
.reward-panel.active {
	background: #e8f5e8;
	border: 2rpx solid #4caf7a;
}

/* 未激活状态面板 */
.reward-panel.inactive {
	background: #f8f9fa;
	border: 2rpx solid #e9ecef;
}

/* 禁用状态的奖励项目区域 */
.reward-items.disabled {
	opacity: 0.4;
	pointer-events: none;
}

/* 禁用状态的文本元素 */
.score-name.disabled,
.reward-prefix.disabled {
	color: #bbb;
}

/* 禁用状态的奖励值输入框 */
.reward-value-input.disabled {
	background: #f5f5f5;
	color: #bbb;
	border-color: #e0e0e0;
}

/* 面板头部 */
.panel-header {
	display: flex;
	align-items: center;
	gap: 8rpx;
	margin-bottom: 16rpx;
}

/* 单选圆点 */
.radio-outer {
	width: 32rpx;
	height: 32rpx;
	border-radius: 50%;
	border: 4rpx solid #bdbdbd;
	background: #fff;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-shrink: 0;
}

.radio-outer.checked {
	border-color: #4caf7a;
	background: #4caf7a;
}

.radio-inner {
	width: 18rpx;
	height: 18rpx;
	border-radius: 50%;
	background: #fff;
}

 

/* 奖励项目列表 */
.reward-items {
	display: flex;
	flex-direction: column;
	gap: 12rpx;
	margin-bottom: 16rpx;
}

/* 奖励项目 */
.reward-item {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 8rpx 12rpx;
	background: rgba(255, 255, 255, 0.8);
	border-radius: 8rpx;
}

/* 成绩名称 */
.score-name {
	font-size: 26rpx;
	color: #2c3e50;
	font-weight: 500;
}

/* 奖励值容器 */
.reward-value-container {
	display: flex;
	align-items: center;
	gap: 8rpx;
}

/* 奖励前缀 */
.reward-prefix {
	font-size: 24rpx;
	color: #4caf7a;
	font-weight: 600;
}

/* 奖励值输入框 */
.reward-value-input {
	width: 60rpx;
	height: 40rpx;
	background: #fff;
	border: 2rpx solid #e9ecef;
	border-radius: 6rpx;
	text-align: center;
	font-size: 22rpx;
	color: #2c3e50;
	font-weight: 500;
}

/* 前置条件区域 */
.precondition-section {
	border-top: 1rpx solid #e9ecef;
	padding-top: 16rpx;
}

/* 禁用状态的前置条件区域 */
.precondition-section.disabled {
	opacity: 0.5;
	pointer-events: none;
}

/* 前置条件标题 */
.precondition-title {
	font-size: 22rpx;
	color: #6c757d;
	margin-bottom: 12rpx;
	line-height: 1.4;
}

/* 前置条件选项 */
.precondition-options {
	display: flex;
	flex-direction: column;
	gap: 8rpx;
}

/* 前置条件选项 */
.precondition-option {
	display: flex;
	align-items: center;
	gap: 8rpx;
	padding: 6rpx 0;
	cursor: pointer;
}

/* 禁用状态的前置条件选项 */
.precondition-option.disabled {
	cursor: not-allowed;
}

/* 单选圆点 */
.radio-dot {
	width: 20rpx;
	height: 20rpx;
	border-radius: 50%;
	border: 2rpx solid #dee2e6;
	display: flex;
	align-items: center;
	justify-content: center;
	transition: all 0.2s ease;
}

.radio-dot.selected {
	border-color: #4caf7a;
	background: #4caf7a;
}

/* 禁用状态的单选圆点 */
.radio-dot.disabled {
	border-color: #bdc3c7;
	background: #ecf0f1;
}

/* 前置条件文本 */
.precondition-text {
	font-size: 24rpx;
	color: #2c3e50;
}

/* 禁用状态的前置条件文本 */
.precondition-section.disabled .precondition-text {
	color: #95a5a6;
}


