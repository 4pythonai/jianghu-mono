<!-- 吃肉规则配置组件 -->
<!-- 显示部分 -->
<view class="rule-section {{isDisabled ? 'disabled' : ''}}" wx:if="{{!visible}}">
  <view class="form-label">吃肉规则</view>
  <view class="form-select" bindtap="onShowConfig">
    <input class="form-input" value="{{displayValue}}" disabled="{{isDisabled}}" />
    <view class="select-arrow">
      <text class="arrow-circle">▼</text>
    </view>
  </view>
</view>

<!-- 弹窗部分 -->
<view wx:if="{{visible}}" class="modal-mask" bindtap="onCancel">
  <view class="modal-content" catchtap="noop">
    <view class="modal-title">吃肉规则</view>
    <view class="modal-list">
      <view class="eat-row">
        <view class="eat-label">成绩</view>
        <view class="eat-label right">吃肉数量</view>
      </view>
      <block wx:for="{{eatRangeKeys}}" wx:key="index">
        <view class="eat-row">
          <view class="eat-label">{{eatRangeLabels[item]}}</view>
          <!-- 改为滚轮选择器 -->
          <picker
            class="eat-picker"
            range="{{eatValueRange}}"
            value="{{eating_range[item] - 1}}"
            data-index="{{index}}"
            bindchange="onEatValueChange"
          >
            <view class="picker-value">{{eating_range[item]}}</view>
          </picker>
        </view>
      </block>
      <view class="modal-divider"></view>
      <view class="eat-row">肉的分值</view>

      <view class="modal-item" bindtap="onMeatValueChange" data-index="1">
        <view class="radio-outer {{meatValueOption === 1 ? 'checked' : ''}}">
          <view class="radio-inner" wx:if="{{meatValueOption === 1}}"></view>
        </view>
        <text>分值翻倍(含奖励)</text>
      </view>

      <view class="modal-item" bindtap="onMeatValueChange" data-index="2">
        <view class="radio-outer {{meatValueOption === 2 ? 'checked' : ''}}">
          <view class="radio-inner" wx:if="{{meatValueOption === 2}}"></view>
        </view>
        <text>分值翻倍(不含奖励)</text>
      </view>

      <view class="modal-item" bindtap="onMeatValueChange" data-index="0">
        <view class="radio-outer {{meatValueOption === 0 ? 'checked' : ''}}">
          <view class="radio-inner" wx:if="{{meatValueOption === 0}}"></view>
        </view>
        <view class="option-content">
          <text>肉算</text>
          <picker
            wx:if="{{meatValueOption === 0}}"
            class="score-picker"
            range="{{meatScoreRange}}"
            value="{{meatScoreValue - 1}}"
            bindchange="onMeatScoreChange"
          >
            <view class="picker-value">{{meatScoreValue}}</view>
          </picker>
          <text wx:if="{{meatValueOption !== 0}}">{{meatScoreValue}}</text>
          <text>分</text>
        </view>
      </view>
    </view>
    <view class="modal-actions">
      <button class="modal-btn cancel" bindtap="onCancel">取消</button>
      <button class="modal-btn confirm" bindtap="onConfirm">确定</button>
    </view>
  </view>
</view>
