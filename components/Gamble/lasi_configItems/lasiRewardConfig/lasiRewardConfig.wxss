/* 配置区域容器 */
.config-section {
	background: #fff;
	border-radius: 24rpx;
	margin-bottom: 24rpx;
	overflow: hidden;
	box-shadow: 0 2rpx 8rpx 0 rgba(0, 0, 0, 0.04);
	padding: 16rpx 12rpx;
}

/* 标题栏 */
.section-header {
	display: flex;
	justify-content: center;
	align-items: center;
	margin-bottom: 20rpx;
}

.header-left {
	display: flex;
	align-items: center;
}

.section-title {
	font-size: 36rpx;
	font-weight: 600;
	color: #2c3e50;
}

/* 主要内容区域 */
.main-content {
	display: flex;
	gap: 16rpx;
	margin-bottom: 24rpx;
}

/* 奖励面板 */
.reward-panel {
	flex: 1;
	border-radius: 16rpx;
	padding: 16rpx;
	transition: all 0.3s ease;
	cursor: pointer;
}

/* 激活状态面板 */
.reward-panel.active {
	background: #e8f5e8;
	border: 2rpx solid #4caf7a;
}

/* 未激活状态面板 */
.reward-panel.inactive {
	background: #f8f9fa;
	border: 2rpx solid #e9ecef;
}

/* 面板头部 */
.panel-header {
	display: flex;
	align-items: center;
	gap: 8rpx;
	margin-bottom: 16rpx;
}

/* 单选圆点 */
.radio-outer {
	width: 32rpx;
	height: 32rpx;
	border-radius: 50%;
	border: 4rpx solid #bdbdbd;
	background: #fff;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-shrink: 0;
}

.radio-outer.checked {
	border-color: #4caf7a;
	background: #4caf7a;
}

.radio-inner {
	width: 18rpx;
	height: 18rpx;
	border-radius: 50%;
	background: #fff;
}

/* 面板标题 */
.panel-title {
	font-size: 28rpx;
	font-weight: 600;
	color: #2c3e50;
}

/* 奖励项目列表 */
.reward-items {
	display: flex;
	flex-direction: column;
	gap: 12rpx;
	margin-bottom: 16rpx;
}

/* 奖励项目 */
.reward-item {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 8rpx 12rpx;
	background: rgba(255, 255, 255, 0.8);
	border-radius: 8rpx;
}

/* 成绩名称 */
.score-name {
	font-size: 26rpx;
	color: #2c3e50;
	font-weight: 500;
}

/* 奖励值容器 */
.reward-value-container {
	display: flex;
	align-items: center;
	gap: 8rpx;
}

/* 奖励前缀 */
.reward-prefix {
	font-size: 24rpx;
	color: #4caf7a;
	font-weight: 600;
}

/* 奖励值输入框 */
.reward-value-input {
	width: 60rpx;
	height: 40rpx;
	background: #fff;
	border: 2rpx solid #e9ecef;
	border-radius: 6rpx;
	text-align: center;
	font-size: 22rpx;
	color: #2c3e50;
	font-weight: 500;
}

/* 前置条件区域 */
.precondition-section {
	border-top: 1rpx solid #e9ecef;
	padding-top: 16rpx;
}

/* 禁用状态的前置条件区域 */
.precondition-section.disabled {
	opacity: 0.5;
	pointer-events: none;
}

/* 前置条件标题 */
.precondition-title {
	font-size: 22rpx;
	color: #6c757d;
	margin-bottom: 12rpx;
	line-height: 1.4;
}

/* 前置条件选项 */
.precondition-options {
	display: flex;
	flex-direction: column;
	gap: 8rpx;
}

/* 前置条件选项 */
.precondition-option {
	display: flex;
	align-items: center;
	gap: 8rpx;
	padding: 6rpx 0;
	cursor: pointer;
}

/* 禁用状态的前置条件选项 */
.precondition-option.disabled {
	cursor: not-allowed;
}

/* 单选圆点 */
.radio-dot {
	width: 20rpx;
	height: 20rpx;
	border-radius: 50%;
	border: 2rpx solid #dee2e6;
	display: flex;
	align-items: center;
	justify-content: center;
	transition: all 0.2s ease;
}

.radio-dot.selected {
	border-color: #4caf7a;
	background: #4caf7a;
}

/* 禁用状态的单选圆点 */
.radio-dot.disabled {
	border-color: #bdc3c7;
	background: #ecf0f1;
}

/* 前置条件文本 */
.precondition-text {
	font-size: 24rpx;
	color: #2c3e50;
}

/* 禁用状态的前置条件文本 */
.precondition-section.disabled .precondition-text {
	color: #95a5a6;
}

/* 底部按钮区域 */
.bottom-buttons {
	display: flex;
	gap: 12rpx;
	justify-content: center;
}

/* 按钮基础样式 */
.bottom-buttons button {
	flex: 1;
	max-width: 200rpx;
	height: 80rpx;
	border-radius: 12rpx;
	font-size: 28rpx;
	font-weight: 500;
	border: none;
	transition: all 0.2s ease;
}

/* 取消按钮 */
.btn-cancel {
	background: #f8f9fa;
	color: #6c757d;
	border: 2rpx solid #e9ecef;
}

.btn-cancel:active {
	background: #e9ecef;
	transform: scale(0.98);
}

/* 确定按钮 */
.btn-confirm {
	background: #4caf7a;
	color: #fff;
}

.btn-confirm:active {
	background: #45a049;
	transform: scale(0.98);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
	.main-content {
		flex-direction: column;
		gap: 16rpx;
	}

	.reward-panel {
		min-height: 400rpx;
	}

	.bottom-buttons {
		flex-direction: column;
		align-items: center;
	}

	.bottom-buttons button {
		max-width: 300rpx;
	}
}
