/* 复用drawlasiConfig的样式，补充奖励相关样式 */
.reward-type-section,
.condition-section {
	margin-bottom: 24rpx;
}

.toggle-switch {
	width: 60rpx;
	height: 32rpx;
	border-radius: 16rpx;
	background: #ccc;
	position: relative;
	margin-right: 16rpx;
	display: inline-block;
	vertical-align: middle;
	transition: background 0.2s;
}
.toggle-switch.enabled {
	background: #4caf7a;
}
.toggle-slider {
	width: 28rpx;
	height: 28rpx;
	border-radius: 50%;
	background: #fff;
	position: absolute;
	top: 2rpx;
	left: 2rpx;
	transition: left 0.2s;
}
.toggle-switch.enabled .toggle-slider {
	left: 30rpx;
}
.condition-tip {
	color: #aaa;
	font-size: 24rpx;
	margin-top: 8rpx;
}
