.player-selector {
	margin-bottom: 30rpx;
}

.group-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 20rpx;
	padding: 0 10rpx;
}

.group-title {
	font-size: 32rpx;
	font-weight: 600;
	color: #333;
}

.player-count {
	font-size: 28rpx;
	color: #666;
	background: #f5f5f5;
	padding: 8rpx 16rpx;
	border-radius: 20rpx;
}

.players-list {
	background: #fff;
	border-radius: 16rpx;
	padding: 20rpx;
	box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.player-item {
	margin-bottom: 20rpx;
}

.player-item:last-child {
	margin-bottom: 0;
}

.player-input-wrapper {
	position: relative;
}

.player-input {
	width: 100%;
	height: 88rpx;
	background: #f8f9fa;
	border: 2rpx solid #e9ecef;
	border-radius: 12rpx;
	padding: 0 24rpx;
	font-size: 30rpx;
	color: #333;
	box-sizing: border-box;
}

.player-input:focus {
	border-color: #4caf50;
	background: #fff;
}

.input-placeholder {
	color: #999;
}
