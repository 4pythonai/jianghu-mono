/* 规则卡片样式 - 与MyRules组件保持一致 */
.rule-item {
	width: 650rpx;
	min-height: 180rpx;
	background: #4caf7a;
	border-radius: 24rpx;
	box-shadow: 8rpx 8rpx 16rpx 0 rgba(0, 0, 0, 0.18);
	position: relative;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	padding: 24rpx;
	transition: transform 0.1s;
	margin-bottom: 0;
}

.rule-item:active {
	transform: scale(0.97);
}

.rule-header {
	display: flex;
	flex-direction: column;
	gap: 8rpx;
}

.rule-title {
	color: #fff;
	font-size: 28rpx;
	font-weight: 600;
	text-shadow: 2rpx 2rpx 8rpx rgba(0, 0, 0, 0.18);
	line-height: 1.3;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	overflow: hidden;
}

.rule-type {
	align-self: flex-start;
	padding: 4rpx 12rpx;
	border-radius: 8rpx;
	font-size: 26rpx;
	background-color: rgba(255, 255, 255, 0.2);
	color: #fff;
	backdrop-filter: blur(4px);
}

.rule-description {
	margin: 8rpx 0;
}

.rule-description text {
	color: rgba(255, 255, 255, 0.9);
	font-size: 28rpx;
	line-height: 1.4;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	overflow: hidden;
}

/* 配置详情样式 */
.config-detail-item {
	margin-bottom: 6rpx;
	display: flex;
	align-items: flex-start;
}

.config-detail-item:last-child {
	margin-bottom: 0;
}

.config-label {
	color: rgba(255, 255, 255, 0.8);
	font-size: 26rpx;
	font-weight: 600;
	margin-right: 8rpx;
	flex-shrink: 0;
}

.config-text {
	color: rgba(255, 255, 255, 0.9);
	font-size: 26rpx;
	line-height: 1.4;
	flex: 1;
}

.rule-footer {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-top: auto;
}

.rule-time {
	color: rgba(255, 255, 255, 0.8);
	font-size: 20rpx;
}

.rule-actions {
	display: flex;
	gap: 16rpx;
}

.action-btn {
	font-size: 22rpx;
	padding: 6rpx 12rpx;
	border-radius: 8rpx;
	transition: all 0.2s ease;
	background-color: rgba(255, 255, 255, 0.2);
	color: #fff;
	backdrop-filter: blur(4px);
}

.edit-btn:active {
	background-color: rgba(255, 255, 255, 0.3);
}

.delete-btn:active {
	background-color: rgba(244, 67, 54, 0.8);
}

/* 响应式适配 */
@media screen and (max-width: 400px) {
	.rule-item {
		min-width: 280rpx;
		width: 280rpx;
		max-width: 280rpx;
	}

	.rule-title {
		font-size: 26rpx;
	}
}
