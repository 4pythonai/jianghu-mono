.avatar-group-container {
	width: 120rpx;
	display: flex;
	flex-wrap: wrap;
	gap: 10rpx;
	align-items: center; /* 垂直居中 */
	justify-content: center; /* 水平居中 */
}

.avatar {
	width: 50rpx;
	height: 50rpx;
	border-radius: 0;
	border: 2rpx solid #fff;
	background-color: #f5f5f5;
	box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.more-tip {
	background-color: #07c160;
	color: #fff;
	font-size: 20rpx;
	padding: 4rpx 8rpx;
	border-radius: 20rpx;
	margin-left: auto;
}
