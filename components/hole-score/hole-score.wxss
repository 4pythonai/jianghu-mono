/* 基础容器样式 */
.hole-score {
	width: 400px;
	flex-shrink: 0;
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 10px;
	position: relative;
}

/* 分数文本样式 */
.score-text {
	font-size: 16px;
	font-weight: bold;
	margin-bottom: 2px;
}

/* 超标准杆样式 */
.over-par {
	color: #f44336;
}

/* 低于标准杆样式 */
.under-par {
	color: #4caf50;
}

/* 平标准杆样式 */
.even-par {
	color: #333;
}

/* 推杆数样式 */
.putt-text {
	font-size: 12px;
	color: #666;
}

/* 移动端适配 */
@media (max-width: 768px) {
	.hole-score {
		width: 80px;
		padding: 5px;
	}

	.score-text {
		font-size: 14px;
	}
}
