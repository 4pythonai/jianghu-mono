.user-item {
	background: white;
	border-radius: 6rpx;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
	transition: all 0.3s ease;
	height: 80rpx;
	margin: 10rpx 0;
	width: 90%;
	box-sizing: border-box;
	/* 添加硬件加速，减少闪烁 */
	transform: translateZ(0);
	will-change: transform;
	backface-visibility: hidden;
}

/* 拖拽时禁用过渡动画，防止闪烁 */
.user-item.dragging,
.user-item.dragging-active {
	transition: none !important;
}

.user-info {
	display: flex;
	align-items: center;
	gap: 16rpx;
	width: 100%;
}

.drag-handle {
	color: #999;
	font-size: 20rpx;
	flex-shrink: 0;
}

.drag-icon {
	font-family: monospace;
}

.order-number {
	color: #00aa00;
	font-size: 28rpx;
	font-weight: bold;
	min-width: 48rpx;
	text-align: center;
	flex-shrink: 0;
}

.group-dot {
	font-size: 28rpx;
	flex-shrink: 0;
}

.player-avatar {
	width: 64rpx;
	height: 64rpx;
	border-radius: 50%;
	border: 2rpx solid #ddd;
	flex-shrink: 0;
	background-color: #f5f5f5;
}

.player-name {
	font-size: 28rpx;
	color: #333;
	font-weight: 500;
	flex: 1;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
