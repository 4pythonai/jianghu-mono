/* UserDrag 组件样式 */
.userItem-wrap {
	width: 100%;
	position: relative;
}

/* 用户项目容器 */
.user-item-container {
	width: 100%;
	height: 85rpx;
	position: relative;
}

/* 拖拽状态样式 */
.user-item-container.dragging {
	opacity: 0.8;
	transform: scale(1.02);
	box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.15);
	z-index: 1000;
}

/* 用户信息样式 */
.user-info {
	display: flex;
	align-items: center;
	padding: 10rpx 20rpx;
	gap: 20rpx;
	background-color: #fff;
	height: 100%;
	box-sizing: border-box;
	border-bottom: 1rpx solid #f0f0f0;
}

.user-info:last-child {
	border-bottom: none;
}

.drag-handle {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 40rpx;
	height: 40rpx;
	cursor: grab;
	flex-shrink: 0;
}

.drag-icon {
	font-size: 24rpx;
	color: #999;
	line-height: 1;
	letter-spacing: -2rpx;
	transform: rotate(90deg);
}
