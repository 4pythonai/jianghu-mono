/* UserDrag 组件样式 */
.user-drag-container {
	width: 100%;
	position: relative;
}

.user-item {
	position: relative;
	transition: transform 0.2s ease, opacity 0.2s ease;
	z-index: 1;
}

.user-item.dragging {
	z-index: 10;
	transform: scale(1.02);
	opacity: 0.8;
	box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.user-item.dragging-active {
	transition: none;
}

/* 拖拽时的视觉反馈 */
.user-item.dragging::before {
	content: "";
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background: rgba(0, 122, 255, 0.1);
	border-radius: 8rpx;
	pointer-events: none;
}
