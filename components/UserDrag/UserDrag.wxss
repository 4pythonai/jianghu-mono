.user-list {
	background: #f5f5f5;
	border-radius: 8rpx;
	padding: 20rpx;
}

.user-item {
	background: white;
	border-radius: 8rpx;
	margin-bottom: 20rpx;
	padding: 20rpx;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
	transition: all 0.3s ease;
}

.user-item.dragging {
	background: #f0f8ff;
	box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.3);
	transform-origin: center;
}

.user-item:last-child {
	margin-bottom: 0;
}

.user-info {
	display: flex;
	align-items: center;
	gap: 20rpx;
}

.drag-handle {
	color: #999;
	font-size: 24rpx;
}

.order-number {
	color: #00aa00;
	font-size: 32rpx;
	font-weight: bold;
	min-width: 48rpx;
	text-align: center;
}

.group-dot {
	font-size: 32rpx;
}

.player-avatar {
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	border: 2rpx solid #ddd;
}

.player-name {
	font-size: 28rpx;
	color: #333;
	font-weight: 500;
	flex: 1;
}

.empty-tip {
	text-align: center;
	color: #999;
	font-size: 28rpx;
	padding: 60rpx 0;
}
