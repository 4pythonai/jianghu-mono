/* UserDrag 组件样式 */
.user-drag-container {
	width: 100%;
	position: relative;
	height: var(--container-height, auto);
	/* 添加硬件加速 */
	transform: translateZ(0);
}

.drag-item {
	position: relative;
	transition: transform 0.2s ease, opacity 0.2s ease;
	z-index: 1;
	/* 添加硬件加速，减少闪烁 */
	transform: translateZ(0);
	will-change: transform, opacity;
	/* 确保元素不会因为transform变化而闪烁 */
	backface-visibility: hidden;
	/* 防止子元素闪烁 */
	perspective: 1000px;
}

.drag-item.dragging {
	z-index: 10;
	transform: scale(1.02) translateZ(0);
	opacity: 0.8;
	box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
	/* 拖拽时禁用过渡动画，防止跳动 */
	transition: none !important;
}

.drag-item.dragging-active {
	transition: none;
}

/* 拖拽时的视觉反馈 */
.drag-item.dragging::before {
	content: "";
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background: rgba(0, 122, 255, 0.1);
	border-radius: 8rpx;
	pointer-events: none;
}
