<!-- UserDrag 组件 - 用户拖拽排序组件 -->
<view class="user-drag-container" style="--container-height: {{height}};">
  <view
    class="drag-item {{draggingIndex === index ? 'dragging' : ''}} {{dragging && draggingIndex === index ? 'dragging-active' : ''}}"
    wx:for="{{currentUserList}}"
    wx:key="id"
    data-index="{{index}}"
    bind:touchstart="onTouchStart"
    catch:touchmove="onTouchMove"
    catch:touchend="onTouchEnd"
  >
    <userItem index="{{index}}" item-data="{{item}}" bind:click="onItemClick" />
  </view>
</view>
