/* 抽屉遮罩层 */
.mask {
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	background: #000;
	z-index: 1000;
	opacity: 0.7;
	border: 3rpx solid blue;
}

/* 抽屉容器 */
.drawer-box {
	width: 600rpx;
	min-height: 300rpx;
	background: #fff;
	position: fixed;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	z-index: 1001;
	box-shadow: -4rpx 0 16rpx rgba(0, 0, 0, 0.1);
	display: flex;
	flex-direction: column;
	border-radius: 16rpx 0 0 16rpx;
	border: 3rpx solid red;
}

/* 抽屉内容区域 */
.mark-box {
	background: #fff;
	padding: 30rpx 30rpx 20rpx;
	border-radius: 16rpx;
	flex: 1;
	overflow-y: auto;
	border: 3rpx solid green;
}
