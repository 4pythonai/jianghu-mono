/* 抽屉遮罩层 */
.mask {
	width: 100vw !important;
	height: 100vh !important;
	position: fixed !important;
	top: 0 !important;
	left: 0 !important;
	background: #000 !important;
	z-index: 99999 !important;
	opacity: 0.7 !important;
}

/* 抽屉容器 */
.drawer-box {
	width: 600rpx !important;
	height: 900rpx !important;
	background: #fff !important;
	position: fixed !important;
	top: 50vh !important;
	right: 0 !important;
	transform: translateY(-50%) !important;
	z-index: 100000 !important;
	box-shadow: -4rpx 0 16rpx rgba(0, 0, 0, 0.1) !important;
	display: flex !important;
	flex-direction: column !important;
	border-radius: 16rpx 0 0 16rpx !important;
}

/* 抽屉内容区域 */
.drawer-content {
	background: #fff !important;
	border-radius: 16rpx !important;
	flex: 1 !important;
	display: flex !important;
	flex-direction: column !important;
	overflow: hidden !important;
}

/* 标题栏 */
.drawer-header {
	display: flex !important;
	justify-content: space-between !important;
	align-items: center !important;
	padding: 30rpx 30rpx 20rpx !important;
	border-bottom: 1rpx solid #f0f0f0 !important;
	background: #f8f9fa !important;
}

.drawer-title {
	font-size: 32rpx !important;
	font-weight: bold !important;
	color: #333 !important;
}

.close-btn {
	width: 60rpx !important;
	height: 60rpx !important;
	display: flex !important;
	align-items: center !important;
	justify-content: center !important;
	border-radius: 50% !important;
	background: #f0f0f0 !important;
}

.close-icon {
	font-size: 40rpx !important;
	color: #666 !important;
	line-height: 1 !important;
}

/* 标题列表 */
.title-list {
	flex: 0 0 auto !important;
	max-height: 300rpx !important;
	overflow-y: auto !important;
	border-bottom: 1rpx solid #f0f0f0 !important;
}

.title-item {
	padding: 24rpx 30rpx !important;
	border-bottom: 1rpx solid #f5f5f5 !important;
	transition: all 0.3s ease !important;
}

.title-item:last-child {
	border-bottom: none !important;
}

.title-item.active {
	background: #e3f2fd !important;
	border-left: 4rpx solid #2196f3 !important;
}

.title-item:not(.active):hover {
	background: #f5f5f5 !important;
}

.title-text {
	font-size: 28rpx !important;
	color: #333 !important;
	line-height: 1.4 !important;
}

.title-item.active .title-text {
	color: #2196f3 !important;
	font-weight: 500 !important;
}

/* 内容区域 */
.content-area {
	flex: 1 !important;
	overflow-y: auto !important;
	padding: 20rpx !important;
}

.table-container {
	width: 100% !important;
}
