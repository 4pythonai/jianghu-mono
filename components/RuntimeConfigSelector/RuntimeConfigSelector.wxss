.runtime-config-selector {
	padding: 10rpx 0;
}

.section-title {
	font-size: 28rpx;
	margin-bottom: 16rpx;
}
.game-item {
	display: block;
	margin-bottom: 16rpx;
}

.game-item-row {
	display: flex;
	align-items: center;
	padding-left: 10rpx;
	margin-bottom: 36rpx;
}

.game-item-info {
	padding-top: 4px;
	padding-bottom: 4px;
	margin-left: 16rpx;
}
.game-title {
	font-size: 28rpx;
	color: #333;
	margin-bottom: 4rpx;
	display: block;
}

/* 标准checkbox样式 */
.standard-checkbox {
	margin-right: 16rpx;
	transform: scale(0.9);
}

/* 点击效果 */
.game-item {
	cursor: pointer;
	-webkit-tap-highlight-color: transparent;
}

.game-item:active {
	opacity: 0.7;
}

/* 去掉点击高亮 */
.game-item-row,
.standard-checkbox,
.game-item-info,
.game-title {
	-webkit-tap-highlight-color: transparent;
}
