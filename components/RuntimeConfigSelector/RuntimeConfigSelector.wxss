.runtime-config-selector {
	padding: 10rpx 0;
}

.section-title {
	font-size: 28rpx;
	margin-bottom: 16rpx;
}
.game-item {
	display: block;
	margin-bottom: 16rpx;
}

.game-item-row {
	display: flex;
	align-items: center;
	padding-left: 10rpx;
	margin-bottom: 36rpx;
	border: 1rpx solid #ede7e7;
}

.game-item-info {
	margin-left: 16rpx;
}
.game-title {
	font-size: 28rpx;
	color: #333;
	margin-bottom: 4rpx;
	display: block;
}

/* 自定义checkbox样式 */
.custom-checkbox {
	width: 40rpx;
	height: 40rpx;
	border: 2rpx solid #ddd;
	border-radius: 6rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	margin-right: 16rpx;
	background-color: #fff;
	transition: all 0.2s ease;
	position: relative;
}

.custom-checkbox.checked {
	background-color: #07c160 !important;
	border-color: #07c160 !important;
}

.checkmark {
	color: #fff !important;
	font-size: 24rpx;
	font-weight: bold;
	line-height: 1;
}

/* 点击效果 */
.game-item {
	cursor: pointer;
	-webkit-tap-highlight-color: transparent;
}

.game-item:active {
	opacity: 0.7;
}

/* 去掉点击高亮 */
.game-item-row,
.custom-checkbox,
.game-item-info,
.game-title {
	-webkit-tap-highlight-color: transparent;
}
