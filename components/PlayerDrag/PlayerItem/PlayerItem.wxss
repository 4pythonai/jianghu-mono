/* 玩家列表项样式 */
.player-order-item {
	display: flex;
	align-items: center;
	padding: 20rpx;
	border-bottom: 1rpx solid #f0f0f0;
	gap: 20rpx;
	transition: transform 0.3s ease, background-color 0.3s ease;
	position: relative;
	background-color: #fff;
}

.player-order-item:last-child {
	border-bottom: none;
}

/* 拖拽手柄 */
.drag-handle {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 40rpx;
	height: 40rpx;
	cursor: grab;
	flex-shrink: 0;
}

.drag-icon {
	font-size: 24rpx;
	color: #999;
	line-height: 1;
	letter-spacing: -2rpx;
	transform: rotate(90deg);
}

/* 拖拽状态样式 */
.player-order-item.dragging {
	background-color: #f0f8ff !important;
	border: 2rpx solid #4caf50 !important;
	border-radius: 12rpx !important;
	box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.15) !important;
	transition: none !important;
}

.player-order-item.dragging .drag-icon {
	color: #4caf50;
}

.player-avatar {
	width: 60rpx;
	height: 60rpx;
	border-radius: 50%;
	background-color: #f0f0f0;
	border: 2rpx solid #e0e0e0;
	flex-shrink: 0;
}

.player-name {
	font-size: 30rpx;
	color: hsl(0, 2%, 43%);
	font-weight: 500;
	flex: 1;
}

.player-serial {
	margin-left: 20rpx;
	margin-right: 20rpx;
	color: green;
}
