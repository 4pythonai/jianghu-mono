/*
 * UnifiedConfigPage.wxss
 * 统一规则配置页面样式
 * 遵循系统化组件设计规范
 */

/* 🎯 全局布局 */
.unified-config-page {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: #f8f9fa;
  padding: 24rpx 32rpx 120rpx;
}

/* 🔖 页面头部 */
.page-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: -24rpx -32rpx 24rpx;
  padding: 48rpx 32rpx 36rpx;
  border-radius: 0 0 32rpx 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.2);
}

.page-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 8rpx;
}

.page-mode {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  font-weight: 500;
}

/* 📐 配置区块 */
.config-section {
  background: white;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  background: linear-gradient(90deg, #f8f9fa 0%, #e9ecef 100%);
  padding: 24rpx 32rpx;
  border-bottom: 2rpx solid #e9ecef;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #495057;
}

.config-item {
  display: flex;
  align-items: center;
  padding: 36rpx 32rpx;
  border-bottom: 2rpx solid #f1f3f4;
}

.config-item:last-child {
  border-bottom: none;
}

.config-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #2c3e50;
  margin-right: 24rpx;
  min-width: 140rpx;
}

.config-input {
  flex: 1;
  font-size: 28rpx;
  color: #495057;
  border: none;
  outline: none;
  padding: 16rpx 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.config-input:focus {
  background: #e7f3ff;
  box-shadow: 0 0 0 3rpx rgba(102, 126, 234, 0.1);
}

.config-input::placeholder {
  color: #adb5bd;
  font-style: italic;
}

/* 🛠️ 组件容器 */
.components-container {
  padding: 24rpx;
}

.component-wrapper {
  background: white;
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.component-wrapper:hover {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  border-color: #dee2e6;
}

.component-title-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 32rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-bottom: 2rpx solid #e9ecef;
}

.component-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #495057;
}

.required-badge {
  background: #dc3545;
  color: white;
  font-size: 20rpx;
  font-weight: 600;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  text-transform: uppercase;
}

.component-content {
  padding: 32rpx;
}

/* 🏗️ 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  margin: 48rpx 0;
}

.loading-animation {
  text-align: center;
}

.loading-text {
  font-size: 32rpx;
  color: #6c757d;
  font-weight: 500;
  margin-bottom: 16rpx;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

/* 🚨 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 120rpx 48rpx;
  color: #6c757d;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #adb5bd;
}

/* 🎯 操作按钮 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 24rpx 32rpx 48rpx;
  background: white;
  border-top: 2rpx solid #e9ecef;
  box-shadow: 0 -8rpx 24rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

.cancel-btn {
  flex: 1;
  margin-right: 24rpx;
  background: #6c757d;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 30rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.cancel-btn:hover {
  background: #5a6268;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(108, 117, 125, 0.3);
}

.save-btn {
  flex: 1;
  background: #28a745;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 30rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.save-btn:hover {
  background: #218838;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(40, 167, 69, 0.3);
}

.save-btn.disabled {
  background: #adb5bd;
  cursor: not-allowed;
  transform: none;
  box-shadow: none;
}

.save-btn.loading {
  cursor: wait;
}

.btn-text {
  font-weight: 600;
  font-size: 30rpx;
}

/* 📚 调试面板（可隐藏） */
.debug-panel {
  position: fixed;
  top: 100rpx;
  right: 24rpx;
  background: rgba(0, 0, 0, 0.8);
  color: #00ff00;
  font-family: 'Courier New', monospace;
  font-size: 20rpx;
  padding: 16rpx;
  border-radius: 8rpx;
  z-index: 1000;
  width: 200rpx;
}

.debug-item {
  margin-bottom: 8rpx;
}

.debug-label {
  opacity: 0.7;
}

.debug-value {
  margin-left: 8rpx;
}

/* 📱 响应式设计 */
@media (max-height: 1200rpx) {
  .unified-config-page {
    padding: 16rpx 24rpx 100rpx;
  }
  
  .config-item {
    padding: 24rpx 16rpx;
  }
  
  .component-content {
    padding: 16rpx;
  }
}

@media (min-height: 1600rpx) {
  .unified-config-page {
    padding: 32rpx 48rpx 160rpx;
  }
  
  .config-item {
    padding: 48rpx 40rpx;
  }
}