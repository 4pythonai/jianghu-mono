<!-- 配置组件包装器 -->
<view class="config-wrapper">
  <view class="component-title">{{title}}</view>
  <view class="component-content">
    <!-- 动态加载配置组件 -->
    <block wx:if="{{componentName === 'E8421Koufen'}}">
      <E8421Koufen 
        id="{{componentName}}" 
        mode="{{mode}}" 
        configData="{{configData}}"
        badScoreBaseLine="{{configData.badScoreBaseLine}}"
        badScoreMaxLost="{{configData.badScoreMaxLost}}"
        dutyConfig="{{configData.dutyConfig}}"
        bindconfigChange="onConfigChange"
      />
    </block>

    <block wx:elif="{{componentName === 'Draw8421'}}">
      <Draw8421 id="{{componentName}}" mode="{{mode}}" configData="{{configData}}" />
    </block>

    <block wx:elif="{{componentName === 'E8421Meat'}}">
      <E8421Meat id="{{componentName}}" mode="{{mode}}" configData="{{configData}}" />
    </block>

    <block wx:elif="{{componentName === 'LasiBaoDong'}}">
      <LasiBaoDong id="{{componentName}}" mode="{{mode}}" configData="{{configData}}" />
    </block>

    <block wx:elif="{{componentName === 'LasiKPI'}}">
      <LasiKPI id="{{componentName}}" mode="{{mode}}" configData="{{configData}}" />
    </block>

    <block wx:elif="{{componentName === 'LasiRewardConfig'}}">
      <LasiRewardConfig id="{{componentName}}" mode="{{mode}}" config="{{configData}}" bindconfigChange="onConfigChange" showPreCondition="{{true}}" />
    </block>

    <block wx:elif="{{componentName === 'LasiEatmeat'}}">
      <LasiEatmeat id="{{componentName}}" mode="{{mode}}" configData="{{configData}}" />
    </block>

    <block wx:elif="{{componentName === 'LasiDingDong'}}">
      <LasiDingDong id="{{componentName}}" mode="{{mode}}" configData="{{configData}}" />
    </block>

    <!-- 默认配置组件 -->
    <block wx:else>
      <view class="default-config">
        <text>暂未支持的配置组件: {{componentName}}</text>
      </view>
    </block>
  </view>
</view>
