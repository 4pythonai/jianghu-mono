/* 我的规则组件样式 */
.my-rules-container {
	min-height: 300px;
}

.loading-container {
	display: flex;
	justify-content: center;
	align-items: center;
	height: 200px;
}

.loading-text {
	color: #999;
	font-size: 14px;
}

/* 空状态样式 */
.empty-state {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	height: 200px;
	gap: 10px;
}

.empty-text {
	font-size: 16px;
	color: #666;
	font-weight: 500;
}

.empty-hint {
	font-size: 14px;
	color: #999;
}

/* 规则列表样式 */
.rules-list {
	display: flex;
	flex-direction: column;
	gap: 12px;
}

.rule-item {
	background-color: #fff;
	border-radius: 12px;
	padding: 16px;
	box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
	transition: transform 0.2s ease;
}

.rule-item:active {
	transform: scale(0.98);
}

.rule-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 10px;
}

.rule-title {
	font-size: 16px;
	font-weight: 600;
	color: #333;
	flex: 1;
	margin-right: 10px;
}

.rule-type {
	padding: 4px 8px;
	border-radius: 4px;
	font-size: 12px;
	white-space: nowrap;
}

.rule-type.system {
	background-color: #e3f2fd;
	color: #1976d2;
}

.rule-type.custom {
	background-color: #f3e5f5;
	color: #7b1fa2;
}

.rule-description {
	margin-bottom: 12px;
}

.rule-description text {
	font-size: 14px;
	color: #666;
	line-height: 1.5;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	overflow: hidden;
}

.rule-footer {
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.rule-time {
	font-size: 12px;
	color: #999;
}

.rule-actions {
	display: flex;
	gap: 12px;
}

.action-btn {
	font-size: 14px;
	padding: 4px 8px;
	border-radius: 4px;
	cursor: pointer;
	transition: background-color 0.2s ease;
}

.edit-btn {
	color: #025028;
	background-color: rgba(2, 80, 40, 0.1);
}

.edit-btn:active {
	background-color: rgba(2, 80, 40, 0.2);
}

.delete-btn {
	color: #f44336;
	background-color: rgba(244, 67, 54, 0.1);
}

.delete-btn:active {
	background-color: rgba(244, 67, 54, 0.2);
}
