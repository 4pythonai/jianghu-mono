/* 添加规则组件样式 */
.add-rule-container {
	min-height: 400px;
}

.form-container {
	background-color: #fff;
	border-radius: 12px;
	padding: 20px;
	box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

/* 编辑模式提示 */
.edit-mode-tip {
	display: flex;
	justify-content: space-between;
	align-items: center;
	background-color: #e8f5e8;
	border: 1px solid #c8e6c9;
	border-radius: 8px;
	padding: 10px 15px;
	margin-bottom: 20px;
}

.tip-text {
	font-size: 14px;
	color: #2e7d32;
	font-weight: 500;
}

.cancel-btn {
	font-size: 14px;
	color: #f44336;
	padding: 4px 8px;
	border-radius: 4px;
	background-color: rgba(244, 67, 54, 0.1);
}

.cancel-btn:active {
	background-color: rgba(244, 67, 54, 0.2);
}

/* 表单项样式 */
.form-item {
	margin-bottom: 24px;
}

.form-label {
	display: block;
	font-size: 16px;
	font-weight: 600;
	color: #333;
	margin-bottom: 8px;
}

.form-input {
	width: 100%;
	height: 44px;
	padding: 0 12px;
	border: 1px solid #e5e5e5;
	border-radius: 8px;
	font-size: 14px;
	background-color: #f9f9f9;
	box-sizing: border-box;
	transition: all 0.3s ease;
}

.form-input:focus {
	border-color: #025028;
	background-color: #fff;
	box-shadow: 0 0 0 2px rgba(2, 80, 40, 0.1);
}

.form-textarea {
	width: 100%;
	min-height: 120px;
	padding: 12px;
	border: 1px solid #e5e5e5;
	border-radius: 8px;
	font-size: 14px;
	background-color: #f9f9f9;
	resize: vertical;
	box-sizing: border-box;
	transition: all 0.3s ease;
	line-height: 1.5;
}

.form-textarea:focus {
	border-color: #025028;
	background-color: #fff;
	box-shadow: 0 0 0 2px rgba(2, 80, 40, 0.1);
}

.char-count {
	text-align: right;
	margin-top: 5px;
}

.char-count text {
	font-size: 12px;
	color: #999;
}

/* 规则类型选择器 */
.type-selector {
	display: flex;
	gap: 12px;
}

.type-option {
	flex: 1;
	padding: 16px 12px;
	border: 1px solid #e5e5e5;
	border-radius: 8px;
	background-color: #f9f9f9;
	cursor: pointer;
	transition: all 0.3s ease;
	display: flex;
	flex-direction: column;
	gap: 4px;
}

.type-option.selected {
	border-color: #025028;
	background-color: #025028;
	color: #fff;
}

.type-option:active {
	transform: scale(0.98);
}

.type-option text:first-child {
	font-size: 14px;
	font-weight: 600;
}

.type-desc {
	font-size: 12px;
	opacity: 0.8;
}

/* 按钮容器 */
.button-container {
	display: flex;
	gap: 12px;
	margin-top: 30px;
}

.clear-button {
	flex: 1;
	height: 50px;
	background-color: #f5f5f5;
	border: 1px solid #e5e5e5;
	border-radius: 25px;
	display: flex;
	align-items: center;
	justify-content: center;
	transition: all 0.3s ease;
}

.clear-button::after {
	border: none;
}

.clear-button:active {
	background-color: #eeeeee;
	transform: translateY(1px);
}

.clear-button text {
	font-size: 16px;
	color: #666;
	font-weight: 500;
}

.save-button {
	flex: 2;
	height: 50px;
	background: linear-gradient(135deg, #025028, #03703a);
	border: none;
	border-radius: 25px;
	display: flex;
	align-items: center;
	justify-content: center;
	box-shadow: 0 4px 12px rgba(2, 80, 40, 0.3);
	transition: all 0.3s ease;
}

.save-button::after {
	border: none;
}

.save-button:active {
	transform: translateY(2px);
	box-shadow: 0 2px 8px rgba(2, 80, 40, 0.4);
}

.save-button.saving {
	background: linear-gradient(135deg, #999, #777);
	box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.save-button text {
	font-size: 16px;
	color: white;
	font-weight: 600;
}

/* 禁用状态 */
button[disabled] {
	opacity: 0.6;
	pointer-events: none;
}
