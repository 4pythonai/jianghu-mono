<!-- 添加规则组件(重写, 参考图片) -->
<view wx:if="{{ show }}" class="add-rule-container">
  <!-- Tab栏(与页面保持一致, 仅展示, 不负责切换)-->

  <!-- 内容区域 -->
  <!-- 2人游戏 -->
  <view class="group-block">
    <text class="group-title">2人游戏</text>
    <view class="card-row">
      <view class="rule-card" bindtap="onConfigRule" data-title="2p-gross">
        <text>2人比杆</text>
        <view class="plus-btn">+</view>
      </view>
      <view class="rule-card" bindtap="onConfigRule" data-title="2p-hole">
        <text>2人比洞</text>
        <view class="plus-btn">+</view>
      </view>
    </view>
    <view class="card-row">
      <view class="rule-card" bindtap="onConfigRule" data-title="2p-8421">
        <text>8421</text>
        <view class="plus-btn">+</view>
      </view>
    </view>
  </view>

  <!-- 3人游戏 -->
  <view class="group-block">
    <text class="group-title">3人游戏</text>
    <view class="card-row">
      <view class="rule-card" bindtap="onConfigRule" data-title="3p-doudizhu">
        <text>斗地主</text>
        <view class="plus-btn">+</view>
      </view>
      <view class="rule-card" bindtap="onConfigRule" data-title="3p-dizhupo">
        <text>地主婆</text>
        <view class="plus-btn">+</view>
      </view>
    </view>
    <view class="card-row">
      <view class="rule-card" bindtap="onConfigRule" data-title="3p-8421">
        <text>8421</text>
        <view class="plus-btn">+</view>
      </view>
    </view>
  </view>

  <!-- 4人游戏 -->
  <view class="group-block">
    <text class="group-title">4人游戏</text>
    <view class="card-row">
      <!-- 4人拉丝 -->
      <view class="rule-card" bindtap="onConfigRule" data-title="4p-lasi">
        <text>四人拉丝</text>
        <view class="plus-btn">+</view>
      </view>
      <view class="rule-card" bindtap="onConfigRule" data-title="4p-8421">
        <text>8421</text>
        <view class="plus-btn">+</view>
      </view>
    </view>
    <view class="card-row">
      <view class="rule-card" bindtap="onConfigRule" data-title="4p-dizhupo">
        <text>地主婆</text>
        <view class="plus-btn">+</view>
      </view>
      <view class="rule-card" bindtap="onConfigRule" data-title="4p-3da1">
        <text>三打一</text>
        <view class="plus-btn">+</view>
      </view>
    </view>
    <view class="card-row">
      <view class="rule-card" bindtap="onConfigRule" data-title="4p-bestak">
        <text>比A比K</text>
        <view class="plus-btn">+</view>
      </view>
    </view>
  </view>

  <!-- 4人以上游戏 -->
  <view class="group-block">
    <text class="group-title">4人以上游戏</text>
    <view class="card-row">
      <view class="rule-card" bindtap="onConfigRule" data-title="mp-labahua">
        <text>喇叭花</text>
        <view class="plus-btn">+</view>
      </view>
      <view class="rule-card" bindtap="onConfigRule" data-title="mp-dabudui">
        <text>大部队</text>
        <view class="plus-btn">+</view>
      </view>
    </view>
  </view>
</view>
