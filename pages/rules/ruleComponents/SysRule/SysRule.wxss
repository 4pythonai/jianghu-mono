/* 添加规则组件样式 */
.add-rule-container {
	min-height: 100vh;
	padding-bottom: 30rpx;
}

.form-container {
	background-color: #fff;
	border-radius: 12px;
	padding: 20px;
	box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

/* 编辑模式提示 */
.edit-mode-tip {
	display: flex;
	justify-content: space-between;
	align-items: center;
	background-color: #e8f5e8;
	border: 1px solid #c8e6c9;
	border-radius: 8px;
	padding: 10px 15px;
	margin-bottom: 20px;
}

.tip-text {
	font-size: 14px;
	color: #2e7d32;
	font-weight: 500;
}

.cancel-btn {
	font-size: 14px;
	color: #f44336;
	padding: 4px 8px;
	border-radius: 4px;
	background-color: rgba(244, 67, 54, 0.1);
}

.cancel-btn:active {
	background-color: rgba(244, 67, 54, 0.2);
}

/* 表单项样式 */
.form-item {
	margin-bottom: 24px;
}

.form-label {
	display: block;
	font-size: 16px;
	font-weight: 600;
	color: #333;
	margin-bottom: 8px;
}

.form-input {
	width: 100%;
	height: 44px;
	padding: 0 12px;
	border: 1px solid #e5e5e5;
	border-radius: 8px;
	font-size: 14px;
	background-color: #f9f9f9;
	box-sizing: border-box;
	transition: all 0.3s ease;
}

.form-input:focus {
	border-color: #025028;
	background-color: #fff;
	box-shadow: 0 0 0 2px rgba(2, 80, 40, 0.1);
}

.form-textarea {
	width: 100%;
	min-height: 120px;
	padding: 12px;
	border: 1px solid #e5e5e5;
	border-radius: 8px;
	font-size: 14px;
	background-color: #f9f9f9;
	resize: vertical;
	box-sizing: border-box;
	transition: all 0.3s ease;
	line-height: 1.5;
}

.form-textarea:focus {
	border-color: #025028;
	background-color: #fff;
	box-shadow: 0 0 0 2px rgba(2, 80, 40, 0.1);
}

.char-count {
	text-align: right;
	margin-top: 5px;
}

.char-count text {
	font-size: 12px;
	color: #999;
}

/* 规则类型选择器 */
.type-selector {
	display: flex;
	gap: 12px;
}

.type-option {
	flex: 1;
	padding: 16px 12px;
	border: 1px solid #e5e5e5;
	border-radius: 8px;
	background-color: #f9f9f9;
	cursor: pointer;
	transition: all 0.3s ease;
	display: flex;
	flex-direction: column;
	gap: 4px;
}

.type-option.selected {
	border-color: #025028;
	background-color: #025028;
	color: #fff;
}

.type-option:active {
	transform: scale(0.98);
}

.type-option text:first-child {
	font-size: 14px;
	font-weight: 600;
}

.type-desc {
	font-size: 12px;
	opacity: 0.8;
}

/* 按钮容器样式已迁移到公共样式文件 */

/* 禁用状态 */
button[disabled] {
	opacity: 0.6;
	pointer-events: none;
}

/* 分组滚动区域 */
.rules-group-scroll {
	height: 100vh;
	padding: 0 32rpx 32rpx 32rpx;
	box-sizing: border-box;
}

/* 分组块 */
.group-block {
	margin-bottom: 48rpx;
}

.group-title {
	font-size: 32rpx;
	font-weight: 600;
	color: #222;
	margin-bottom: 24rpx;
	display: block;
}

/* 卡片行 */
.card-row {
	display: flex;
	flex-direction: row;
	gap: 32rpx;
	margin-bottom: 24rpx;
	justify-content: flex-start;
	flex-wrap: wrap;
	overflow: visible;
	max-width: 632rpx;
	margin-left: auto;
	margin-right: auto;
}

/* 规则卡片 */
.rule-card {
	width: 300rpx;
	min-width: 300rpx;
	max-width: 300rpx;
	min-height: 96rpx;
	background: #4caf7a;
	border-radius: 24rpx;
	box-shadow: 8rpx 8rpx 16rpx 0 rgba(0, 0, 0, 0.18);
	position: relative;
	display: flex;
	align-items: center;
	justify-content: center;
	margin-bottom: 0;
	padding: 0 24rpx;
	transition: transform 0.1s;
}

.rule-card:active {
	transform: scale(0.97);
}

/* 禁用状态 */
.rule-card.disabled {
	background: #cccccc;
	opacity: 0.6;
	pointer-events: none;
}

.rule-card.disabled text {
	color: #666666;
	text-shadow: none;
}

.rule-card.disabled .plus-btn {
	background: #e0e0e0;
	color: #999999;
	border-color: #cccccc;
}

.rule-card text {
	color: #fff;
	font-size: 32rpx;
	font-weight: 500;
	text-shadow: 2rpx 2rpx 8rpx rgba(0, 0, 0, 0.18);
}

/* 加号按钮 */
.plus-btn {
	position: absolute;
	right: 18rpx;
	top: 50%;
	transform: translateY(-50%);
	width: 44rpx;
	height: 44rpx;
	background: #e6f4e6;
	color: #4caf7a;
	border-radius: 50%;
	box-shadow: 2rpx 2rpx 8rpx 0 rgba(0, 0, 0, 0.1);
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 36rpx;
	font-weight: bold;
	z-index: 2;
	border: 2rpx solid #c8e6c9;
}

.plus-btn:active {
	background: #c8e6c9;
}

/* 适配单个卡片居左 */
.card-row .rule-card:only-child {
	margin-right: 0;
}

/* 响应式适配 */
@media screen and (max-width: 400px) {
	.rule-card {
		min-width: 160rpx;
		font-size: 28rpx;
	}
}
