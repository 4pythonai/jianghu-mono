/* 游戏规则页面样式 */
.rules-container {
	min-height: 100vh;
	background-color: #f5f5f5;
}

/* Debug信息样式 */
.debug-info {
	background-color: #fff3cd;
	border: 1px solid #ffeaa7;
	border-radius: 4px;
	padding: 8px 12px;
	margin: 10px 15px;
	cursor: pointer;
	transition: background-color 0.2s;
}

.debug-info:active {
	background-color: #ffeaa7;
}

.debug-text {
	font-size: 12px;
	color: #856404;
	font-family: "Courier New", monospace;
}

/* Tab栏样式 */
.tab-bar {
	display: flex;
	background-color: #fff;
	border-bottom: 1px solid #e5e5e5;
	position: sticky;
	top: 0;
	z-index: 100;
}

.tab-item {
	flex: 1;
	height: 50px;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 16px;
	color: #666;
	position: relative;
	transition: color 0.3s ease;
}

.tab-item.active {
	color: #025028;
	font-weight: 600;
}

.tab-item.active::after {
	content: "";
	position: absolute;
	bottom: 0;
	left: 50%;
	transform: translateX(-50%);
	width: 30px;
	height: 3px;
	background-color: #025028;
	border-radius: 2px;
}

/* Tab内容区域 */
.tab-content {
	padding: 5px;
}

