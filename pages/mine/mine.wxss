/* 个人中心页面样式 */
.container {
  padding: 20rpx;
}

/* 用户信息区域 */
.user-info {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.avatar-container {
  margin-right: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 2rpx solid #eee;
}

.user-details {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.phone {
  font-size: 28rpx;
  color: #666;
  display: block;
}

/* 未登录状态 */
.not-login {
  text-align: center;
  padding: 50rpx 0;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.page-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

/* 绑定手机号按钮 */
.phone-btn {
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
  margin: 30rpx auto;
}

/* 功能列表 */
.function-list {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.function-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.function-item:last-child {
  border-bottom: none;
}

.arrow {
  color: #ccc;
  font-size: 32rpx;
}

/* 登录按钮 */
.login-btn {
  width: 60%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
  margin: 30rpx auto;
}