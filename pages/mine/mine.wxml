<view class="container">
	<!-- 用户信息区域 -->
	<view class="user-info" wx:if="{{ userInfo }}">
		<view class="avatar-container">
			<image class="avatar" src="{{ userInfo.avatarUrl || '/images/default-avatar.png' }}"></image>
		</view>
		<view class="user-details">
			<text class="nickname">{{userInfo.nickName || '微信用户'}}</text>
			<text class="phone" wx:if="{{ userInfo.mobile }}">{{userInfo.mobile}}</text>
		</view>
	</view>
	<!-- 未登录状态 -->
	<view class="not-login" wx:else>
		<view class="page-title">我的</view>
		<view class="page-desc">请先登录以使用更多功能</view>
	</view>
	<!-- 绑定手机号按钮 -->
	<button class="phone-btn" wx:if="{{ needBindPhone && userInfo }}" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">绑定手机号码</button>
	<!-- 功能列表 -->
	<view class="function-list">
		<view class="function-item">
			<text>设置</text>
			<text class="arrow">></text>
		</view>
	</view>
</view>