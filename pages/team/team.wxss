/* 团队页面样式 */
.container {
	padding: 20rpx;
}

.page-title {
	font-size: 36rpx;
	font-weight: bold;
	margin-bottom: 10rpx;
}

.page-desc {
	font-size: 28rpx;
	color: #666;
	margin-bottom: 30rpx;
}

/* 创建团队按钮 */
.create-team {
	display: flex;
	align-items: center;
	justify-content: center;
	padding: 20rpx;
	background-color: #f8f8f8;
	border-radius: 10rpx;
	margin-bottom: 30rpx;
	box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.create-team text {
	margin-left: 10rpx;
	color: #07c160;
	font-weight: bold;
}

/* 团队列表 */
.team-list {
	width: 100%;
}

.team-item {
	background-color: #fff;
	border-radius: 10rpx;
	padding: 20rpx;
	margin-bottom: 20rpx;
	box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.team-info {
	margin-bottom: 15rpx;
}

.team-name {
	font-size: 32rpx;
	font-weight: bold;
	margin-bottom: 10rpx;
}

.team-desc {
	font-size: 26rpx;
	color: #666;
	line-height: 1.4;
}

.team-meta {
	display: flex;
	font-size: 24rpx;
	color: #999;
}

.team-members,
.team-games {
	display: flex;
	align-items: center;
	margin-right: 30rpx;
}

.team-members text,
.team-games text {
	margin-left: 6rpx;
}

/* 空状态 */
.empty-state {
	text-align: center;
	padding: 60rpx 0;
	color: #999;
	font-size: 28rpx;
}

/* 加载状态 */
.loading-state {
	text-align: center;
	padding: 20rpx 0;
	color: #999;
	font-size: 24rpx;
}
