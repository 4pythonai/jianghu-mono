/* editTeam.wxss */
.container {
	min-height: 100vh;
	background-color: #f5f5f5;
	padding-bottom: 40rpx;
}

/* 加载状态 */
.loading-container {
	display: flex;
	justify-content: center;
	align-items: center;
	height: 300rpx;
}

.loading {
	width: 60rpx;
	height: 60rpx;
	border: 6rpx solid #e0e0e0;
	border-top: 6rpx solid #07c160;
	border-radius: 50%;
	animation: spin 1s linear infinite;
}

@keyframes spin {
	0% {
		transform: rotate(0deg);
	}
	100% {
		transform: rotate(360deg);
	}
}

/* 表单容器 */
.form-container {
	padding: 30rpx;
}

/* 头像部分 */
.avatar-section {
	display: flex;
	flex-direction: column;
	align-items: center;
	margin-bottom: 40rpx;
}

.team-avatar {
	width: 160rpx;
	height: 160rpx;
	border-radius: 20rpx;
	margin-bottom: 20rpx;
	background-color: #fff;
	box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.avatar-tip {
	font-size: 24rpx;
	color: #666;
}

/* 表单组 */
.form-group {
	background-color: #fff;
	border-radius: 12rpx;
	padding: 0 30rpx;
	margin-bottom: 30rpx;
}

.form-item {
	padding: 30rpx 0;
	border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
	border-bottom: none;
}

.label {
	display: block;
	font-size: 28rpx;
	color: #333;
	margin-bottom: 20rpx;
}

.label.required::before {
	content: "*";
	color: #ff4d4f;
	margin-right: 4rpx;
}

.input {
	width: 100%;
	height: 80rpx;
	font-size: 30rpx;
	color: #333;
}

.textarea {
	width: 100%;
	height: 200rpx;
	font-size: 30rpx;
	color: #333;
	line-height: 1.5;
}

.word-count {
	text-align: right;
	font-size: 24rpx;
	color: #999;
	margin-top: 10rpx;
}

/* 位置选择器 */
.location-picker {
	display: flex;
	justify-content: space-between;
	align-items: center;
	min-height: 80rpx;
}

.location-text {
	flex: 1;
	font-size: 30rpx;
	color: #333;
}

.location-text:empty {
	color: #999;
}

.location-icon {
	margin-left: 20rpx;
	color: #999;
	font-size: 24rpx;
}

/* 按钮组 */
.button-group {
	padding: 40rpx 0;
}

.btn-save {
	width: 100%;
	height: 88rpx;
	line-height: 88rpx;
	text-align: center;
	background-color: #07c160;
	color: #fff;
	font-size: 32rpx;
	border-radius: 44rpx;
}

.btn-save.disabled {
	opacity: 0.6;
}

/* 危险区域 */
.danger-zone {
	margin-top: 60rpx;
	padding: 30rpx;
	border-top: 1rpx solid #e0e0e0;
}

.danger-title {
	font-size: 28rpx;
	color: #666;
	margin-bottom: 20rpx;
}

.btn-danger {
	width: 100%;
	height: 88rpx;
	line-height: 88rpx;
	text-align: center;
	background-color: #fff;
	color: #ff4d4f;
	font-size: 32rpx;
	border: 1rpx solid #ff4d4f;
	border-radius: 44rpx;
}

.danger-tip {
	display: block;
	text-align: center;
	font-size: 24rpx;
	color: #999;
	margin-top: 20rpx;
}
