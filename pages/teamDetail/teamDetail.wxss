/* teamDetail.wxss */
.container {
	padding: 0 0 30rpx;
	background-color: #f5f5f5;
	min-height: 100vh;
}

/* 加载状态 */
.loading-container {
	display: flex;
	justify-content: center;
	align-items: center;
	height: 300rpx;
}

.loading {
	width: 60rpx;
	height: 60rpx;
	border: 6rpx solid #e0e0e0;
	border-top: 6rpx solid #07c160;
	border-radius: 50%;
	animation: spin 1s linear infinite;
}

@keyframes spin {
	0% {
		transform: rotate(0deg);
	}
	100% {
		transform: rotate(360deg);
	}
}

/* 团队头部信息 */
.team-header {
	background-color: #ffffff;
	padding: 30rpx;
	display: flex;
	border-bottom: 1rpx solid #e0e0e0;
}

.team-avatar {
	width: 120rpx;
	height: 120rpx;
	margin-right: 20rpx;
	flex-shrink: 0;
}

.team-avatar image {
	width: 100%;
	height: 100%;
	border-radius: 10rpx;
}

.team-info {
	flex: 1;
}

.team-name {
	font-size: 36rpx;
	font-weight: bold;
	margin-bottom: 10rpx;
}

.team-meta {
	display: flex;
	font-size: 24rpx;
	color: #666;
	margin-bottom: 10rpx;
}

.team-location {
	margin-right: 20rpx;
}

.team-desc {
	font-size: 28rpx;
	color: #333;
	line-height: 1.5;
}

/* 操作按钮 */
.action-buttons {
	display: flex;
	padding: 20rpx 30rpx;
	background-color: #fff;
	border-bottom: 1rpx solid #e0e0e0;
}

.btn {
	flex: 1;
	margin: 0 10rpx;
	height: 70rpx;
	line-height: 70rpx;
	font-size: 28rpx;
	border-radius: 35rpx;
}

.btn.join {
	background-color: #07c160;
	color: #fff;
}

.btn.leave {
	background-color: #f5f5f5;
	color: #333;
	border: 1rpx solid #ddd;
}

.btn.edit {
	background-color: #f5f5f5;
	color: #333;
	border: 1rpx solid #ddd;
}

.btn.share {
	background-color: #1aad19;
	color: #fff;
}

/* 区块样式 */
.section {
	margin-top: 20rpx;
	background-color: #fff;
	padding: 0 0 20rpx;
}

.section-header {
	display: flex;
	align-items: center;
	padding: 20rpx 30rpx;
	border-bottom: 1rpx solid #e0e0e0;
}

.section-title {
	font-size: 32rpx;
	font-weight: bold;
}

.section-count {
	font-size: 24rpx;
	color: #666;
	margin-left: 10rpx;
}

.add-game {
	margin-left: auto;
	display: flex;
	align-items: center;
	font-size: 28rpx;
	color: #07c160;
}

.add-icon {
	font-size: 36rpx;
	margin-right: 6rpx;
}

/* 成员列表 */
.member-list {
	padding: 0 30rpx;
}

.member-item {
	display: flex;
	padding: 20rpx 0;
	border-bottom: 1rpx solid #f0f0f0;
}

.member-item:last-child {
	border-bottom: none;
}

.member-avatar {
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	margin-right: 20rpx;
}

.member-info {
	flex: 1;
}

.member-name {
	font-size: 30rpx;
	margin-bottom: 6rpx;
}

.admin-tag {
	display: inline-block;
	font-size: 20rpx;
	color: #07c160;
	border: 1rpx solid #07c160;
	padding: 2rpx 8rpx;
	border-radius: 10rpx;
	margin-left: 10rpx;
	vertical-align: middle;
}

.member-handicap {
	font-size: 24rpx;
	color: #666;
}

/* 比赛列表 */
.game-list {
	padding: 0 30rpx;
}

.game-item {
	display: flex;
	padding: 20rpx 0;
	border-bottom: 1rpx solid #f0f0f0;
}

.game-item:last-child {
	border-bottom: none;
}

.game-date {
	width: 120rpx;
	font-size: 24rpx;
	color: #666;
	margin-right: 20rpx;
}

.game-info {
	flex: 1;
}

.game-name {
	font-size: 30rpx;
	margin-bottom: 6rpx;
}

.game-location {
	font-size: 24rpx;
	color: #666;
	margin-bottom: 6rpx;
}

.game-status {
	display: inline-block;
	font-size: 22rpx;
	padding: 2rpx 10rpx;
	border-radius: 10rpx;
}

.game-status.upcoming {
	background-color: #e6f7ff;
	color: #1890ff;
}

.game-status.ongoing {
	background-color: #f6ffed;
	color: #52c41a;
}

.game-status.completed {
	background-color: #f5f5f5;
	color: #666;
}

.game-players {
	display: flex;
	align-items: center;
	font-size: 24rpx;
	color: #666;
}

.arrow {
	margin-left: 10rpx;
	color: #ccc;
}

/* 无数据提示 */
.no-data {
	text-align: center;
	padding: 40rpx 0;
	color: #999;
	font-size: 28rpx;
}
