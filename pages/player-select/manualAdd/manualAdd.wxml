<view class="page-container">
	<view class="header">
		<text class="title">手工添加</text>
		<text class="subtitle">为第{{groupIndex + 1}}组玩家{{slotIndex + 1}}选择</text>
	</view>
	<view class="content">
		<view class="form-container">
			<view class="input-group">
				<text class="input-label">昵称</text>
				<input class="input-field" placeholder="请输入昵称" value="{{ remarkName }}" bindinput="onNicknameInput" maxlength="20" />
			</view>
			<view class="input-group">
				<text class="input-label">手机号（可选）</text>
				<input class="input-field" placeholder="请输入手机号（可选）" value="{{ mobile }}" bindinput="onMobileInput" type="number" maxlength="11" />
			</view>
			<button class="submit-btn {{ isFormValid ? 'active' : 'disabled' }}" bindtap="onSubmit" disabled="{{ !isFormValid }}">创建并选择</button>
		</view>
	</view>
</view>