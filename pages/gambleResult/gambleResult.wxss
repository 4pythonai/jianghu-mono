/* 赌球结果页面样式 */
.result-container {
	padding: 20rpx;
	background-color: #f5f5f5;
	min-height: 100vh;
}

/* 配置信息区域 */
.config-section {
	background-color: white;
	border-radius: 12rpx;
	padding: 30rpx;
	margin-bottom: 20rpx;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.config-header {
	border-bottom: 1rpx solid #f0f0f0;
	padding-bottom: 20rpx;
	margin-bottom: 20rpx;
}

.config-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
}

.config-details {
	display: flex;
	flex-direction: column;
	gap: 16rpx;
}

.config-item {
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.config-item .label {
	font-size: 28rpx;
	color: #666;
}

.config-item .value {
	font-size: 28rpx;
	color: #333;
	font-weight: 500;
}

/* 加载状态 */
.loading-section {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	padding: 80rpx 40rpx;
	background-color: white;
	border-radius: 12rpx;
	margin-bottom: 20rpx;
}

.loading-spinner {
	width: 60rpx;
	height: 60rpx;
	border: 4rpx solid #e0e0e0;
	border-top: 4rpx solid #4caf50;
	border-radius: 50%;
	animation: spin 1s linear infinite;
	margin-bottom: 30rpx;
}

@keyframes spin {
	0% {
		transform: rotate(0deg);
	}
	100% {
		transform: rotate(360deg);
	}
}

.loading-text {
	font-size: 28rpx;
	color: #666;
}

/* 错误状态 */
.error-section {
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 60rpx 40rpx;
	background-color: white;
	border-radius: 12rpx;
	margin-bottom: 20rpx;
}

.error-text {
	font-size: 28rpx;
	color: #e53e3e;
	margin-bottom: 30rpx;
	text-align: center;
}

.retry-button {
	padding: 16rpx 40rpx;
	background-color: #4caf50;
	color: white;
	border: none;
	border-radius: 8rpx;
	font-size: 28rpx;
}

.retry-button::after {
	border: none;
}

/* 结果区域 */
.result-section {
	display: flex;
	flex-direction: column;
	gap: 20rpx;
}

/* 汇总区域 */
.summary-section {
	background-color: white;
	border-radius: 12rpx;
	padding: 30rpx;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.summary-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 20rpx;
	border-bottom: 1rpx solid #f0f0f0;
	padding-bottom: 20rpx;
}

.summary-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
}

.update-time {
	font-size: 24rpx;
	color: #999;
}

.summary-stats {
	display: flex;
	gap: 40rpx;
}

.stat-item {
	display: flex;
	flex-direction: column;
	gap: 8rpx;
}

.stat-label {
	font-size: 24rpx;
	color: #999;
}

.stat-value {
	font-size: 28rpx;
	font-weight: bold;
	color: #333;
}

.status-completed {
	color: #4caf50 !important;
}

.status-ongoing {
	color: #ff9800 !important;
}

/* 排名区域 */
.ranking-section {
	background-color: white;
	border-radius: 12rpx;
	padding: 30rpx;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.ranking-header {
	border-bottom: 1rpx solid #f0f0f0;
	padding-bottom: 20rpx;
	margin-bottom: 20rpx;
}

.ranking-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
}

.ranking-list {
	display: flex;
	flex-direction: column;
	gap: 16rpx;
}

.ranking-item {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 20rpx;
	background-color: #f8f9fa;
	border-radius: 8rpx;
	transition: all 0.3s ease;
}

.ranking-item.winner {
	background: linear-gradient(135deg, #fff3e0, #ffecb3);
	border: 2rpx solid #ffc107;
}

.ranking-info {
	display: flex;
	align-items: center;
	gap: 20rpx;
}

.rank-badge {
	width: 50rpx;
	height: 50rpx;
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 24rpx;
	font-weight: bold;
	color: white;
}

.rank-1 {
	background: linear-gradient(135deg, #ffd700, #ffb300);
}

.rank-2 {
	background: linear-gradient(135deg, #c0c0c0, #999999);
}

.rank-3 {
	background: linear-gradient(135deg, #cd7f32, #a0522d);
}

.rank-badge:not(.rank-1):not(.rank-2):not(.rank-3) {
	background: linear-gradient(135deg, #666, #888);
}

.player-info {
	display: flex;
	flex-direction: column;
	gap: 4rpx;
}

.player-name {
	font-size: 28rpx;
	font-weight: bold;
	color: #333;
}

.player-score {
	font-size: 24rpx;
	color: #666;
}

.win-amount {
	text-align: right;
}

.amount-text {
	font-size: 28rpx;
	font-weight: bold;
}

.win-amount.positive .amount-text {
	color: #4caf50;
}

.win-amount.negative .amount-text {
	color: #f44336;
}

.win-amount.neutral .amount-text {
	color: #666;
}

/* 操作按钮区域 */
.action-section {
	display: flex;
	gap: 20rpx;
	margin-top: 40rpx;
	padding: 0 20rpx 40rpx;
}

.action-button {
	flex: 1;
	height: 80rpx;
	border-radius: 10rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 28rpx;
	transition: all 0.3s ease;
}

.action-button::after {
	border: none;
}

.action-button.primary {
	background: linear-gradient(135deg, #4caf50, #45a049);
	color: white;
}

.action-button.secondary {
	background-color: white;
	color: #4caf50;
	border: 2rpx solid #4caf50;
}

.action-button:active {
	transform: scale(0.98);
}

.button-text {
	font-weight: 500;
}
