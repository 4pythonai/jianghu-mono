<view class="container">
	<view class="page-title">球队</view>
	<view class="page-desc">这里是球队功能，管理高尔夫球队</view>
	<view class="location-section">
		<button class="location-btn" bindtap="getLocation" loading="{{ locationLoading }}" disabled="{{ locationLoading }}">{{locationLoading ? '获取位置中...' : '获取当前位置'}}</button>
		<view class="location-info" wx:if="{{ location }}">
			<view class="location-item">
				<text class="label">经度:</text>
				<text class="value">{{location.longitude}}</text>
			</view>
			<view class="location-item">
				<text class="label">纬度:</text>
				<text class="value">{{location.latitude}}</text>
			</view>
			<view class="update-time" wx:if="{{ location.updateTime }}">
				<text>更新时间:{{location.updateTime}}</text>
			</view>
			<button class="get-courses-btn" bindtap="getNearestCourses" loading="{{ courseLoading }}">获取附近球场</button>
		</view>
		<!-- 球场列表 -->
		<view class="course-list" wx:if="{{ courseList.length > 0 }}">
			<view class="course-item" wx:for="{{ courseList }}" wx:key="id">
				<text class="course-name">{{item.name}}</text>
			</view>
		</view>
	</view>
</view>