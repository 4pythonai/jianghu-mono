<view class="container">
	<view class="menu-container {{ isMenuOpen ? 'menu-open' : '' }}">
		<view class="menu-items">
			<view class="marker-point point1" bindtap="handleMenuClick" data-type="playground" animation="{{ animation }}">
				<view class="menu-item">
					<image class="menu-icon" src="/images/vectors/playground.png" mode="aspectFit"></image>
					<text>运动场</text>
				</view>
			</view>
			<view class="marker-point point2" bindtap="handleMenuClick" data-type="commonCreate" animation="{{ animation }}">
				<view class="menu-item">
					<image class="menu-icon" src="/images/vectors/common.png" mode="aspectFit"></image>
					<text>普通创建</text>
				</view>
			</view>
			<view class="marker-point point3" bindtap="handleMenuClick" data-type="quickCreate" animation="{{ animation }}">
				<view class="menu-item">
					<image class="menu-icon" src="/images/vectors/quick.png" mode="aspectFit"></image>
					<text>快速创建</text>
				</view>
			</view>
			<view class="marker-point point4" bindtap="handleMenuClick" data-type="moreCreate" animation="{{ animation }}">
				<view class="menu-item">
					<image class="menu-icon" src="/images/vectors/more.png" mode="aspectFit"></image>
					<text>更多创建</text>
				</view>
			</view>
		</view>
	</view>
</view>