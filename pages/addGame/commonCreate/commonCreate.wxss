.page-container {
	min-height: 100vh;
	background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	display: flex;
	align-items: center;
	justify-content: center;
	padding: 40rpx;
}

.main-card {
	width: 100%;
	max-width: 600rpx;
	background: white;
	border-radius: 32rpx;
	position: relative;
	overflow: hidden;
	box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
}

.top-circle {
	width: 120rpx;
	height: 120rpx;
	background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	border-radius: 50%;
	position: absolute;
	top: -60rpx;
	left: 50%;
	transform: translateX(-50%);
	z-index: 1;
}

.card-content {
	padding: 80rpx 40rpx 60rpx;
	position: relative;
	z-index: 2;
}

.search-box {
	margin-bottom: 60rpx;
}

.search-input {
	display: flex;
	align-items: center;
	min-height: 80rpx;
	background: #f5f5f5;
	border-radius: 16rpx;
	padding-left: 20rpx;
	padding-right: 10rpx;
}

.location-icon {
	width: 40rpx;
	height: 40rpx;
	border-radius: 4rpx;
	background-color: #a5d6a7;
}

.location-icon image {
	width: 100%;
	height: 100%;
}

.search-input input {
	flex: 1;
	font-size: 28rpx;
	color: #333;
	background: transparent;
}

.input-placeholder {
	color: #999;
}

.arrow-icon {
	width: 40rpx;
	height: 40rpx;
	margin-left: 6rpx;
}

.arrow-icon image {
	width: 100%;
	height: 100%;
}

/* 选中球场样式 */
.selected-course {
	display: flex;
	align-items: center;
	background: #f5f5f5;
	border-radius: 16rpx;
	padding: 20rpx;
}

.course-info {
	display: flex;
	align-items: center;
	flex: 1;
}

.course-details {
	flex: 1;
	margin-left: 20rpx;
}

.course-name {
	font-size: 32rpx;
	color: #333;
	font-weight: 500;
	margin-bottom: 8rpx;
}

.course-address {
	font-size: 24rpx;
	color: #666;
}

.change-icon {
	width: 32rpx;
	height: 32rpx;
	margin-left: 16rpx;
}

.change-icon image {
	width: 100%;
	height: 100%;
}

.clear-btn {
	width: 48rpx;
	height: 48rpx;
	background: #ff4757;
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	margin-left: 16rpx;
}

.clear-btn image {
	width: 24rpx;
	height: 24rpx;
	filter: brightness(0) invert(1);
}

.build-text {
	text-align: center;
	font-size: 32rpx;
	color: #666;
	font-weight: 500;
}
