.page-container {
	min-height: 100vh;
	background: linear-gradient(to bottom, #82f187, #c1ecc3);
	padding: 40rpx;
	box-sizing: border-box;
	display: flex;
	flex-direction: column;
}

.main-card {
	background: #ffffff;
	border-radius: 24rpx;
	padding: 60rpx 40rpx 40rpx;
	position: relative;
	box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
	margin-top: 60rpx;
	margin-bottom: 60rpx;
	box-sizing: border-box;
	flex: 1;
	min-height: ~"calc(100vh - 200rpx)";
}

.top-circle {
	width: 120rpx;
	height: 120rpx;
	background: #a5d6a7;
	border-radius: 50%;
	position: absolute;
	left: 50%;
	top: -60rpx;
	transform: translateX(-50%);
	box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
	z-index: 1;
}

.card-content {
	margin-top: 20rpx;
	height: 100%;
}

.search-box {
	padding: 0 20rpx;
	margin-bottom: 40rpx;
}

.search-input {
	display: flex;
	align-items: center;
	min-height: 80rpx;
	background: #f5f5f5;
	border-radius: 16rpx;
	padding-left: 20rpx;
	padding-right: 10rpx;
}

.location-icon {
	width: 40rpx;
	height: 40rpx;
	border-radius: 4rpx;
	background-color: #a5d6a7;
}

.location-icon image {
	width: 100%;
	height: 100%;
}

.search-input input {
	flex: 1;
	font-size: 28rpx;
	color: #333;
	background: transparent;
}

.input-placeholder {
	color: #999;
}

.arrow-icon {
	width: 40rpx;
	height: 40rpx;
	margin-left: 6rpx;
}

.arrow-icon image {
	width: 100%;
	height: 100%;
}

.build-text {
	font-size: 32rpx;
	color: #333333;
	text-align: center;
	display: block;
}
