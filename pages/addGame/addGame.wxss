page {
	--circle-radius: 300rpx;
	--item-radius: 50rpx;
}

.container {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background-color: #ffffff;
}

.menu-container {
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
	background-color: #ffffff;
}

/* 恢复参考线样式 */
.menu-items {
	position: absolute;
	bottom: 0;
	left: 50%;
	transform: translateX(-50%);
	width: calc(var(--circle-radius) * 2);
	height: var(--circle-radius);
	pointer-events: none;
	border: 4rpx dashed #ff0000;
	border-bottom: none;
	border-top-left-radius: var(--circle-radius);
	border-top-right-radius: var(--circle-radius);
	background-color: rgba(255, 0, 0, 0.05);
}
