page {
	--circle-radius: 400rpx;
	--item-radius: 50rpx;
}

.container {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background-color: #ffffff;
}

.menu-container {
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
	background-color: #ffffff;
}

/* 恢复参考线样式 */
.menu-items {
	position: absolute;
	bottom: 0;
	left: 50%;
	transform: translateX(-50%);
	width: calc(var(--circle-radius) * 2);
	height: var(--circle-radius);
	pointer-events: none;
}

.menu-items .marker-point {
	position: absolute;
	width: 120rpx;
	height: 120rpx;
	border-radius: 50%;
	box-shadow: 0 0 8rpx rgba(0, 122, 255, 0.5);
	pointer-events: auto;
}

.menu-items .menu-item {
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	background: linear-gradient(145deg, #ffffff, #f0f0f0);
	border-radius: 50%;
	box-shadow: 8rpx 8rpx 16rpx #d1d1d1, -8rpx -8rpx 16rpx #ffffff;
	transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
	transform-origin: center;
}

.menu-items .menu-item:active {
	box-shadow: inset 8rpx 8rpx 16rpx #d1d1d1, inset -8rpx -8rpx 16rpx #ffffff;
	transform: scale(0.85);
}

.menu-items .menu-icon {
	width: 48rpx;
	height: 48rpx;
	margin-bottom: 8rpx;
}

.menu-items .menu-item text {
	font-size: 24rpx;
	color: #333;
}

.menu-items .point1 {
	left: 50%;
	top: 0;
	transform-origin: center var(--circle-radius);
	transform: translate(-50%, 0) rotate(-54deg);
}

.menu-items .point2 {
	left: 50%;
	top: 0;
	transform-origin: center var(--circle-radius);
	transform: translate(-50%, 0) rotate(-18deg);
}

.menu-items .point3 {
	left: 50%;
	top: 0;
	transform-origin: center var(--circle-radius);
	transform: translate(-50%, 0) rotate(18deg);
}

.menu-items .point4 {
	left: 50%;
	top: 0;
	transform-origin: center var(--circle-radius);
	transform: translate(-50%, 0) rotate(54deg);
}
