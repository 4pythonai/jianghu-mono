.page-container {
	min-height: 100vh;
	background: linear-gradient(135deg, #51e95e 0%, #bde7af 100%);
	display: flex;
	align-items: center;
	justify-content: center;
	padding: 40rpx;
}

.main-card {
	width: 100%;
	background: white;
	border-radius: 32rpx;
	position: relative;
	overflow: hidden;
	box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
}

.top-circle {
	width: 120rpx;
	height: 120rpx;
	background: linear-gradient(135deg, #51e95e 0%, #bde7af 100%);
	border-radius: 50%;
	position: absolute;
	top: -60rpx;
	left: 50%;
	transform: translateX(-50%);
	z-index: 1;
}

.card-content {
	padding: 80rpx 40rpx 60rpx;
	position: relative;
	z-index: 2;
}

.search-box {
	margin-bottom: 40rpx;
}

.search-input {
	display: flex;
	align-items: center;
	min-height: 80rpx;
	background: #f5f5f5;
	border-radius: 16rpx;
	padding-left: 20rpx;
	padding-right: 10rpx;
}

.location-icon {
	width: 40rpx;
	height: 40rpx;
	border-radius: 4rpx;
	background-color: #a5d6a7;
}

.location-icon image {
	width: 100%;
	height: 100%;
}

.search-input input {
	flex: 1;
	font-size: 28rpx;
	color: #333;
	background: transparent;
}

.input-placeholder {
	color: #999;
}

.arrow-icon {
	width: 40rpx;
	height: 40rpx;
	margin-left: 6rpx;
}

.arrow-icon image {
	width: 100%;
	height: 100%;
}

/* 选中球场样式 */
.selected-course {
	display: flex;
	align-items: center;
	background: #f5f5f5;
	border-radius: 16rpx;
	padding: 20rpx;
}

.course-info {
	display: flex;
	align-items: center;
	flex: 1;
}

.course-details {
	flex: 1;
	margin-left: 20rpx;
}

.course-name {
	font-size: 32rpx;
	color: #333;
	font-weight: 500;
	margin-bottom: 8rpx;
}

.course-address {
	font-size: 24rpx;
	color: #666;
}

/* 半场信息样式 */
.court-info {
	display: flex;
	align-items: center;
	justify-content: space-between;
	margin-top: 8rpx;
	padding: 8rpx 12rpx;
	background: #e8f5e8;
	border-radius: 8rpx;
}

.court-name {
	font-size: 24rpx;
	color: #1aad19;
	font-weight: 500;
}

/* 价格相关样式已移除 */

.change-icon {
	width: 32rpx;
	height: 32rpx;
	margin-left: 16rpx;
}

.change-icon image {
	width: 100%;
	height: 100%;
}

.clear-btn {
	width: 48rpx;
	height: 48rpx;
	background: #ff4757;
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	margin-left: 16rpx;
}

.clear-btn image {
	width: 24rpx;
	height: 24rpx;
	filter: brightness(0) invert(1);
}

/* 表单样式 */
.game-form {
	margin-bottom: 40rpx;
}

.form-item {
	margin-bottom: 32rpx;
}

.form-label {
	font-size: 30rpx;
	color: #333;
	font-weight: 500;
	margin-bottom: 16rpx;
	display: flex;
	align-items: baseline;
}

.form-sub-label {
	font-size: 24rpx;
	color: #999;
	font-weight: 400;
	margin-left: 8rpx;
}

.form-input-wrapper {
	position: relative;
}

.form-input {
	width: 100%;
	height: 88rpx;
	background: #f8f9fa;
	border: 2rpx solid #e9ecef;
	border-radius: 16rpx;
	padding: 0 24rpx;
	font-size: 28rpx;
	color: #333;
	box-sizing: border-box;
}

.form-input:focus {
	border-color: #4caf50;
	background: #fff;
}

/* 时间选择器样式 */
.time-picker {
	width: 100%;
}

.picker-display {
	height: 88rpx;
	background: #f8f9fa;
	border: 2rpx solid #e9ecef;
	border-radius: 16rpx;
	padding: 0 24rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
	font-size: 28rpx;
	color: #333;
}

.picker-display:active {
	background: #fff;
	border-color: #4caf50;
}

.placeholder-text {
	color: #999;
}

.picker-arrow {
	width: 32rpx;
	height: 32rpx;
}

/* 单选按钮组样式 */
.radio-group {
	display: flex;
	align-items: center;
}

.radio-group radio-group {
	display: flex;
	flex-direction: row;
	align-items: center;
	gap: 32rpx;
	width: 100%;
}

.radio-item {
	display: flex;
	align-items: center;
	font-size: 28rpx;
	color: #333;
	margin-right: 32rpx;
}

.radio-item:last-child {
	margin-right: 0;
}

.radio-text {
	margin-left: 12rpx;
}

/* 参赛组别样式 */
.groups-container {
	background: #f8f9fa;
	border-radius: 16rpx;
	padding: 24rpx;
}

.group-item {
	position: relative;
	margin-bottom: 24rpx;
}

.group-item:last-child {
	margin-bottom: 0;
}

.delete-group-btn {
	position: absolute;
	top: 10rpx;
	right: 10rpx;
	width: 48rpx;
	height: 48rpx;
	background: #ff4757;
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	z-index: 10;
}

.delete-group-btn image {
	width: 24rpx;
	height: 24rpx;
	filter: brightness(0) invert(1);
}

.add-group-btn {
	height: 88rpx;
	background: linear-gradient(135deg, #51e95e 0%, #bde7af 100%);
	border-radius: 16rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	margin-top: 24rpx;
	font-size: 28rpx;
	color: #fff;
	font-weight: 500;
}

.add-group-btn:active {
	opacity: 0.8;
}

.add-icon {
	width: 32rpx;
	height: 32rpx;
	margin-right: 12rpx;
	filter: brightness(0) invert(1);
}

/* 隐私设置样式 */
.privacy-options {
	background: #f8f9fa;
	border-radius: 16rpx;
	padding: 24rpx;
}

.switch-item {
	display: flex;
	align-items: center;
	justify-content: space-between;
	margin-bottom: 20rpx;
}

.switch-text {
	font-size: 28rpx;
	color: #333;
}

.password-input {
	margin-top: 20rpx;
	animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
	from {
		opacity: 0;
		transform: translateY(-10rpx);
	}
	to {
		opacity: 1;
		transform: translateY(0);
	}
}

/* 创建按钮样式 */
.create-btn {
	width: 100%;
	height: 88rpx;
	border-radius: 44rpx;
	border: none;
	background: linear-gradient(135deg, #51e95e 0%, #bde7af 100%);
	color: #fff;
	font-size: 32rpx;
	font-weight: 500;
	display: flex;
	align-items: center;
	justify-content: center;
	box-shadow: 0 8rpx 24rpx rgba(81, 233, 94, 0.3);
	transition: all 0.3s ease;
}

.create-btn::after {
	border: none;
}

.create-btn:active {
	transform: translateY(2rpx);
	box-shadow: 0 4rpx 12rpx rgba(81, 233, 94, 0.3);
}
