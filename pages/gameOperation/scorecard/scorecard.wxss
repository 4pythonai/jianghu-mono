.container {
	padding: 24rpx;
	background-color: #f5f5f5;
	min-height: 100vh;
	/* 横屏适配 */
	display: flex;
	flex-direction: column;
}

.debug-info {
	background-color: #fff3cd;
	border: 2rpx solid #ffeaa7;
	border-radius: 8rpx;
	padding: 16rpx 24rpx;
	margin-bottom: 24rpx;
	flex-shrink: 0;
}

.debug-title {
	font-weight: bold;
	color: #856404;
	display: block;
	margin-bottom: 8rpx;
}

.debug-content {
	color: #856404;
	font-family: monospace;
}

.page-content {
	background-color: white;
	border-radius: 16rpx;
	padding: 24rpx;
	flex: 1;
	display: flex;
	flex-direction: column;
	/* 横屏优化 */
	overflow: hidden;
}

.page-header {
	text-align: center;
	margin-bottom: 24rpx;
	flex-shrink: 0;
}

.page-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
}

/* WebView样式 */
web-view {
	flex: 1;
	width: 100%;
	min-height: 400rpx;
	border-radius: 8rpx;
	overflow: hidden;
	background-color: #f8f9fa;
}

.placeholder {
	text-align: center;
	padding: 40rpx 0;
	flex: 1;
	display: flex;
	align-items: center;
	justify-content: center;
}

.placeholder-text {
	color: #999;
	font-size: 28rpx;
}

/* 横屏专用样式 */
@media (orientation: landscape) {
	.container {
		padding: 16rpx 32rpx;
		flex-direction: row;
		gap: 24rpx;
	}

	.debug-info {
		width: 300rpx;
		flex-shrink: 0;
		margin-bottom: 0;
	}

	.page-content {
		flex: 1;
		margin: 0;
	}

	.page-header {
		margin-bottom: 16rpx;
	}

	.page-title {
		font-size: 28rpx;
	}

	/* 横屏下的WebView优化 */
	web-view {
		min-height: 300rpx;
		border-radius: 12rpx;
	}

	.placeholder {
		padding: 20rpx 0;
	}
}
