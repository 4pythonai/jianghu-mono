<!--成绩卡页面-->
<view class="container">
    <view class="debug-info">
        <text class="debug-title">调试信息:</text>
        <text class="debug-content">GameID: {{gameId}}</text>
    </view>
    
    <view class="page-content">
        <view class="page-header">
            <text class="page-title">成绩卡功能</text>
        </view>
        
        <!-- WebView组件 -->
        <web-view 
            src="{{webviewUrl}}" 
            bindmessage="onWebViewMessage"
            binderror="onWebViewError"
            bindload="onWebViewLoad">
        </web-view>
        
        <view class="placeholder" wx:if="{{!showWebView}}">
            <text class="placeholder-text">功能开发中...</text>
        </view>
    </view>
</view>