.hole-container {
	width: 100%;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
	padding: 4rpx;
	box-sizing: border-box;
}

.hole-circle {
	width: 100%;
	padding-top: 100%; /* 保证宽高比1:1 */
	position: relative;
	border-radius: 50%;
	background: #27ae60; /* 绿色 */
	border: 2rpx solid #eee;
	box-sizing: border-box;
	margin: 0;
	overflow: hidden;
}

.hole-name {
	position: absolute;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 24rpx;
	color: #fff; /* 白字 */
	white-space: nowrap;
	text-overflow: ellipsis;
	font-weight: 600;
}

.hole-container:active {
	transform: scale(0.95);
	transition: transform 0.1s ease;
}
