.hole-item {
	position: relative;
	width: 100%;
	height: 100%;
	background: #ffffff;
	border: 2rpx solid #e6e6e6;
	border-radius: 8rpx;
	box-sizing: border-box;
	display: flex;
	align-items: center;
	justify-content: center;
	min-height: 80rpx;
}

.hole-name {
	font-size: 24rpx;
	color: #333333;
	text-align: center;
	font-weight: 500;
}

.hole-item:hover {
	border-color: #3f82fd;
	background: #f8f9ff;
}
