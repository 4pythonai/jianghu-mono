.rule-config-empty {
	min-height: 60vh;
	display: flex;
	align-items: center;
	justify-content: center;
	color: #f9fbfa;
	font-size: 32rpx;
}

/* 顶部渐变背景 */
.rule-config-bg {
	min-height: 100vh;
	display: flex;
	flex-direction: column;
	align-items: center;
	padding-top: 40rpx;
}

/* 白色圆角卡片 */
.rule-config-card {
	width: 92vw;
	max-width: 700rpx;
	background: #fff;
	border-radius: 48rpx;
	box-shadow: 0 8rpx 32rpx 0 rgba(0, 0, 0, 0.08);
	padding: 48rpx 32rpx 32rpx 32rpx;
	margin-top: 24rpx;
	display: flex;
	flex-direction: column;
	gap: 18rpx;
}

/* 保留规则名称输入框的样式 */
.form-label {
	font-size: 28rpx;
	color: #222;
	font-weight: 500;
	margin-bottom: 8rpx;
}

.form-input {
	width: 100%;
	height: 64rpx;
	background: #f8f8f8;
	border: 2rpx solid #4caf7a;
	border-radius: 16rpx;
	font-size: 28rpx;
	color: #888;
	padding: 0 24rpx;
	margin-bottom: 0;
	box-sizing: border-box;
}

.add-btn {
	width: 100%;
	height: 72rpx;
	background: #4caf7a;
	color: #fff;
	font-size: 32rpx;
	border: none;
	border-radius: 16rpx;
	margin-top: 48rpx;
	font-weight: 600;
	box-shadow: 0 4rpx 16rpx 0 rgba(76, 175, 122, 0.12);
}

.add-btn:active {
	background: #388e3c;
}
