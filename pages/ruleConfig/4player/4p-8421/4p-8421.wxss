.rule-config-empty {
	min-height: 60vh;
	display: flex;
	align-items: center;
	justify-content: center;
	color: #888;
	font-size: 32rpx;
}

/* 顶部渐变背景 */
.rule-config-bg {
	min-height: 100vh;
	background: linear-gradient(180deg, #4caf7a 0%, #e8f5e9 100%);
	display: flex;
	flex-direction: column;
	align-items: center;
	padding-top: 40rpx;
}

/* 白色圆角卡片 */
.rule-config-card {
	width: 92vw;
	max-width: 700rpx;
	background: #fff;
	border-radius: 48rpx;
	box-shadow: 0 8rpx 32rpx 0 rgba(0, 0, 0, 0.08);
	padding: 48rpx 32rpx 32rpx 32rpx;
	margin-top: 24rpx;
	display: flex;
	flex-direction: column;
	gap: 18rpx;
}

.form-label {
	font-size: 28rpx;
	color: #222;
	font-weight: 500;
	margin-bottom: 8rpx;
}

.form-input {
	width: 100%;
	height: 64rpx;
	background: #f8f8f8;
	border: 2rpx solid #4caf7a;
	border-radius: 16rpx;
	font-size: 28rpx;
	color: #888;
	padding: 0 24rpx;
	margin-bottom: 0;
	box-sizing: border-box;
}

.form-input.conditionally-disabled {
	color: #bbb;
	background: #f0f0f0;
	border-color: #e0e0e0;
}

.form-input.conditionally-disabled::after {
	content: "已禁用";
	position: absolute;
	right: 80rpx;
	color: #999;
	font-size: 24rpx;
}

.form-select {
	position: relative;
	margin-bottom: 0;
}

.select-arrow {
	position: absolute;
	right: 24rpx;
	top: 50%;
	transform: translateY(-50%);
	color: #388e3c;
	font-size: 36rpx;
	pointer-events: none;
}

.add-btn {
	width: 100%;
	height: 72rpx;
	background: #4caf7a;
	color: #fff;
	font-size: 32rpx;
	border: none;
	border-radius: 36rpx;
	margin-top: 48rpx;
	font-weight: 600;
	box-shadow: 0 4rpx 16rpx 0 rgba(76, 175, 122, 0.12);
}

.add-btn:active {
	background: #388e3c;
}

.arrow-circle {
	display: inline-flex;
	align-items: center;
	justify-content: center;
	width: 40rpx;
	height: 40rpx;
	border-radius: 50%;
	border: 2rpx solid #4caf7a;
	color: #4caf7a;
	font-size: 28rpx;
	background: #fff;
	box-sizing: border-box;
	font-weight: bold;
}
