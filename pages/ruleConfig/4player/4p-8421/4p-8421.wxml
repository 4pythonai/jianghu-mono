<view class="rule-config-bg">
  <view class="rule-config-card">
    <!-- 规则名称 -->
    <view class="form-label">规则名称</view>
    <input class="form-input" model:value="{{user_rulename}}" bindinput="onRuleNameInput" />

    <view class="section-label">请配置游戏规则</view>

    <!-- 扣分规则 -->
    <view class="form-label">扣分规则</view>
    <view class="form-select" bindtap="onShowKoufen">
      <input class="form-input" value="{{koufenDisplayValue}}" disabled />
      <view class="select-arrow"><text class="arrow-circle">▼</text></view>
    </view>

    <!-- 顶洞规则 -->
    <view class="form-label">顶洞规则</view>
    <view class="form-select" bindtap="{{noKoufen ? '' : 'onShowDingdong'}}">
      <input class="form-input {{noKoufen ? 'conditionally-disabled' : ''}}" value="{{dingdongDisplayValue}}" disabled="{{noKoufen}}" />
      <view class="select-arrow"><text class="arrow-circle">▼</text></view>
    </view>

    <!-- 吃肉规则 -->
    <view class="form-label">吃肉规则</view>
    <view class="form-select" bindtap="{{noKoufen || draw8421Config === '无顶洞' ? '' : 'onShowEatmeat'}}">
      <input class="form-input {{noKoufen || draw8421Config === '无顶洞' ? 'conditionally-disabled' : ''}}" value="{{eatmeatDisplayValue}}" disabled="{{noKoufen || draw8421Config === '无顶洞'}}" />
      <view class="select-arrow"><text class="arrow-circle">▼</text></view>
    </view>

    <!-- 底部按钮 -->
    <button class="add-btn" bindtap="onAddToMyRules">添加至我的规则</button>
  </view>

  <!-- 弹窗组件 -->
  <koufen visible="{{showKoufen}}" bind:cancel="onCloseKoufen" bind:confirm="onKoufenConfirm" />
  <draw8421Config visible="{{showDingdong}}" no-koufen="{{noKoufen}}" bind:cancel="onCloseDingdong" bind:confirm="onDingdongConfirm" />
  <eatmeat visible="{{showEatmeat}}" no-koufen="{{noKoufen}}" bind:cancel="onCloseEatmeat" bind:confirm="onEatmeatConfirm" />
</view>