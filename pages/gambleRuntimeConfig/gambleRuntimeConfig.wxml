<!-- 游戏运行时配置页面 -->
<view class="runtime-config-container">
  <!-- 错误状态 -->
  <view class="error-container" wx:if="{{error}}">
    <text class="error-text">{{error}}</text>
  </view>
  
  <!-- 主要内容 -->
  <view class="main-content" wx:else>
    <!-- 游戏规则摘要 -->
    <view class="section">
      <view class="section-title">游戏规则</view>
      <Summary 
        ruleType="{{ruleType}}"
        players="{{players}}"
        userRule="{{userRule}}"
        bind:reselect="onReSelectRule"
      />
    </view>
    
    <!-- 洞范围选择 -->
    <view class="section">
      <view class="section-title">选择洞范围</view>
      <HoleRangeSelector 
        firstHoleindex="{{runtimeConfig.firstHoleindex}}"
        lastHoleindex="{{runtimeConfig.lastHoleindex}}"
        holeList="{{holes}}"
        bind:change="onHoleRangeChange"
      />
    </view>
    
    <!-- 分组配置 -->
    <view class="section">
      <RedBlueConfig 
        players="{{players}}"
        bind:change="onGroupingConfigChange"
      />
    </view>
    
    <!-- 排名配置 -->
    <view class="section">
      <view class="section-title">排名规则</view>
      <RankingSelector 
        selectedConfig="{{runtimeConfig.ranking_tie_resolve_config}}"
        bind:change="onRankingConfigChange"
      />
    </view>
  </view>
  
  <!-- 底部按钮 -->
  <view class="bottom-buttons">
    <button 
      class="cancel-btn" 
      bindtap="onCancelConfig"
      disabled="{{loading}}"
    >
      取消
    </button>
    <button 
      class="confirm-btn" 
      bindtap="onConfirmConfig"
      disabled="{{loading}}"
      loading="{{loading}}"
    >
      确定
    </button>
  </view>
</view> 