/* 游戏运行时配置页面样式 */
.runtime-config-container {
	padding: 20rpx;
	background-color: #f5f5f5;
	min-height: 100vh;
	box-sizing: border-box;
	padding-bottom: 140rpx; /* 为底部按钮留出空间 */
}

/* 错误状态样式 */
.error-container {
	display: flex;
	align-items: center;
	justify-content: center;
	height: 60vh;
	background-color: #fff;
	border-radius: 20rpx;
	margin: 40rpx 0;
}

.error-text {
	font-size: 32rpx;
	color: #ff4444;
	text-align: center;
}

/* 主要内容样式 */
.main-content {
	display: flex;
	flex-direction: column;
	gap: 30rpx;
}

/* 区块样式 */
.section {
	background-color: #fff;
	border-radius: 20rpx;
	padding: 30rpx;
	box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.08);
}

.section-title {
	font-size: 36rpx;
	font-weight: bold;
	color: #333;
	margin-bottom: 20rpx;
	padding-bottom: 20rpx;
	border-bottom: 2rpx solid #f0f0f0;
}

/* 底部按钮样式 */
.bottom-buttons {
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	display: flex;
	padding: 20rpx;
	background-color: #fff;
	border-top: 2rpx solid #f0f0f0;
	gap: 20rpx;
	box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.cancel-btn {
	flex: 1;
	height: 88rpx;
	background-color: #f8f8f8;
	color: #666;
	border: 2rpx solid #e0e0e0;
	border-radius: 44rpx;
	font-size: 32rpx;
	font-weight: bold;
	display: flex;
	align-items: center;
	justify-content: center;
	transition: all 0.3s;
}

.cancel-btn:active {
	background-color: #e8e8e8;
	transform: scale(0.98);
}

.cancel-btn[disabled] {
	opacity: 0.5;
	background-color: #f8f8f8;
	color: #ccc;
}

.confirm-btn {
	flex: 1;
	height: 88rpx;
	background: linear-gradient(135deg, #4caf50, #45a049);
	color: #fff;
	border: none;
	border-radius: 44rpx;
	font-size: 32rpx;
	font-weight: bold;
	display: flex;
	align-items: center;
	justify-content: center;
	transition: all 0.3s;
	box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
}

.confirm-btn::after {
	border: none;
}

.confirm-btn:active {
	transform: scale(0.98);
	box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.4);
}

.confirm-btn[disabled] {
	opacity: 0.5;
	background: #ccc;
	box-shadow: none;
}

/* 响应式设计 */
@media (max-width: 600rpx) {
	.runtime-config-container {
		padding: 15rpx;
	}

	.section {
		padding: 20rpx;
	}

	.section-title {
		font-size: 32rpx;
	}

	.bottom-buttons {
		padding: 15rpx;
	}

	.cancel-btn,
	.confirm-btn {
		height: 80rpx;
		font-size: 28rpx;
	}
}
