/* RedBlueConfig组件样式 */
.red-blue-config {
	display: flex;
	flex-direction: column;
	gap: 25rpx;
}

/* 分组方式选择 */
.grouping-method {
	background-color: #f8f8f8;
	border-radius: 15rpx;
	padding: 20rpx;
}

.section-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
	margin-bottom: 15rpx;
}

/* 单选按钮组 - 水平排列 */
/* 删除以下标签选择器样式，改用类选择器 */
/*
radio-group {
	display: flex !important;
	flex-direction: row !important;
	justify-content: space-around;
	gap: 20rpx;
	width: 100%;
	margin: 10rpx 0;
}
*/

.radio-item {
	display: flex !important;
	align-items: center;
	justify-content: center;
	padding: 12rpx 20rpx;
	gap: 8rpx;
	flex: 1;
	background-color: #fff;
	border-radius: 12rpx;
	border: 2rpx solid #e0e0e0;
	transition: all 0.3s;
	min-height: 60rpx;
	box-sizing: border-box;
}

.radio-item:active {
	transform: scale(0.98);
}

/* 确保radio元素可见 */
/* 删除以下标签选择器样式，改用类选择器 */
/*
radio {
	margin-right: 8rpx;
}
*/

.radio-label {
	font-size: 28rpx;
	color: #333;
	font-weight: 500;
	white-space: nowrap;
}

/* 出发顺序 */
.departure-order {
	background-color: #f8f8f8;
	border-radius: 15rpx;
	padding: 20rpx;
}

.order-controls {
	display: flex;
	gap: 15rpx;
	margin-bottom: 20rpx;
}

.order-btn {
	flex: 1;
	height: 70rpx;
	background-color: #4caf50;
	color: #fff;
	border: none;
	border-radius: 12rpx;
	font-size: 28rpx;
	font-weight: bold;
}

.order-btn::after {
	border: none;
}

.order-btn:active {
	transform: scale(0.98);
}

/* 玩家列表 */
.players-order-list {
	border: 2rpx solid #e0e0e0;
	border-radius: 15rpx;
	background-color: #fff;
	overflow: hidden;
}

.player-order-item {
	display: flex;
	align-items: center;
	padding: 20rpx;
	border-bottom: 1rpx solid #f0f0f0;
	gap: 20rpx;
	transition: transform 0.3s ease, background-color 0.3s ease;
	position: relative;
	background-color: #fff;
}

.player-order-item:last-child {
	border-bottom: none;
}

/* 拖拽手柄 */
.drag-handle {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 40rpx;
	height: 40rpx;
	cursor: grab;
	flex-shrink: 0;
}

.drag-icon {
	font-size: 24rpx;
	color: #999;
	line-height: 1;
	letter-spacing: -2rpx;
	transform: rotate(90deg);
}

/* 拖拽状态样式 */
.player-order-item.dragging {
	background-color: #f0f8ff !important;
	border: 2rpx solid #4caf50 !important;
	border-radius: 12rpx !important;
	box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.15) !important;
	transition: none !important;
}

.player-order-item.dragging .drag-icon {
	color: #4caf50;
}

.order-number {
	font-size: 32rpx;
	font-weight: bold;
	color: #4caf50;
	min-width: 60rpx;
}

.player-avatar {
	width: 60rpx;
	height: 60rpx;
	border-radius: 50%;
	background-color: #f0f0f0;
	border: 2rpx solid #e0e0e0;
	flex-shrink: 0;
}

.player-name {
	font-size: 30rpx;
	color: #333;
	font-weight: 500;
	flex: 1;
}

/* 响应式设计 */
@media (max-width: 600rpx) {
	.grouping-method,
	.departure-order {
		padding: 15rpx;
	}

	.section-title {
		font-size: 28rpx;
	}

	/* 删除以下标签选择器样式，改用类选择器 */
	/*
	radio-group {
		gap: 15rpx;
		margin: 8rpx 0;
	}
	*/

	.radio-item {
		padding: 10rpx 15rpx;
		gap: 6rpx;
		min-height: 50rpx;
	}

	/* 删除以下标签选择器样式，改用类选择器 */
	/*
	radio {
		margin-right: 6rpx;
	}
	*/

	.radio-label {
		font-size: 24rpx;
	}

	.order-controls {
		flex-direction: column;
		gap: 10rpx;
	}

	.order-btn {
		height: 60rpx;
		font-size: 26rpx;
	}

	.player-order-item {
		padding: 15rpx;
	}

	.order-number {
		font-size: 28rpx;
		min-width: 50rpx;
	}

	.player-avatar {
		width: 50rpx;
		height: 50rpx;
	}

	.player-name {
		font-size: 26rpx;
	}

	/* 响应式拖拽样式 */
	.drag-handle {
		width: 35rpx;
		height: 35rpx;
	}

	.drag-icon {
		font-size: 20rpx;
	}
}

/*
【建议】
1. 在 wxml 里给 radio-group 和 radio 加 class，例如：
   <radio-group class="my-radio-group">
     <radio class="my-radio" />
   </radio-group>
2. 在 wxss 里用类选择器写样式：
   .my-radio-group { ... }
   .my-radio { ... }
*/

.my-radio-group {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	gap: 20rpx;
	width: 100%;
}

.my-radio {
	margin-right: 8rpx;
}
