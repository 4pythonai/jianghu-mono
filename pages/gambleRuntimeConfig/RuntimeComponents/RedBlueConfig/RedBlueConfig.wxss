/* RedBlueConfig组件样式 */
.red-blue-config {
	display: flex;
	flex-direction: column;
	gap: 25rpx;
}

/* 分组方式选择 */
.grouping-method {
	background-color: #f8f8f8;
	border-radius: 15rpx;
	padding: 20rpx;
}

.section-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
	margin-bottom: 15rpx;
}

/* 单选按钮组 - 水平排列 */
radio-group {
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	gap: 20rpx;
}

.radio-item {
	display: flex;
	align-items: center;
	justify-content: center;
	padding: 12rpx 20rpx;
	gap: 8rpx;
	flex: 1;
	background-color: #fff;
	border-radius: 25rpx;
	border: 2rpx solid #e0e0e0;
	transition: all 0.3s;
}

.radio-item:active {
	transform: scale(0.98);
}

.radio-label {
	font-size: 28rpx;
	color: #333;
	font-weight: 500;
	white-space: nowrap;
}

/* 出发顺序 */
.departure-order {
	background-color: #f8f8f8;
	border-radius: 15rpx;
	padding: 20rpx;
}

.order-controls {
	display: flex;
	gap: 15rpx;
	margin-bottom: 20rpx;
}

.order-btn {
	flex: 1;
	height: 70rpx;
	background-color: #4caf50;
	color: #fff;
	border: none;
	border-radius: 35rpx;
	font-size: 28rpx;
	font-weight: bold;
}

.order-btn::after {
	border: none;
}

.order-btn:active {
	transform: scale(0.98);
}

/* 玩家列表 */
.players-order-list {
	border: 2rpx solid #e0e0e0;
	border-radius: 15rpx;
	background-color: #fff;
	overflow: hidden;
}

.player-order-item {
	display: flex;
	align-items: center;
	padding: 20rpx;
	border-bottom: 1rpx solid #f0f0f0;
	gap: 20rpx;
}

.player-order-item:last-child {
	border-bottom: none;
}

.order-number {
	font-size: 32rpx;
	font-weight: bold;
	color: #4caf50;
	min-width: 60rpx;
}

.player-name {
	font-size: 30rpx;
	color: #333;
	font-weight: 500;
	flex: 1;
}

/* 响应式设计 */
@media (max-width: 600rpx) {
	.grouping-method,
	.departure-order {
		padding: 15rpx;
	}

	.section-title {
		font-size: 28rpx;
	}

	radio-group {
		gap: 15rpx;
	}

	.radio-item {
		padding: 10rpx 15rpx;
		gap: 6rpx;
	}

	.radio-label {
		font-size: 24rpx;
	}

	.order-controls {
		flex-direction: column;
		gap: 10rpx;
	}

	.order-btn {
		height: 60rpx;
		font-size: 26rpx;
	}

	.player-order-item {
		padding: 15rpx;
	}

	.order-number {
		font-size: 28rpx;
		min-width: 50rpx;
	}

	.player-name {
		font-size: 26rpx;
	}
}
