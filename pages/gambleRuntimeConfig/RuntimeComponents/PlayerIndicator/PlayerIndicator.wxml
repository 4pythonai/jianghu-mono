<!-- PlayerIndicator组件 - 球员8421指标配置 -->
<view class="player-indicator-container">
  

  
  <!-- 球员列表 -->
  <view class="players-grid">
    <view 
      wx:for="{{playersWithConfig}}" 
      wx:key="userid"
      wx:for-item="player"
      wx:for-index="index"
      class="player-item"
      bindtap="onPlayerClick"
      data-player="{{player}}"
      data-index="{{index}}"
    >
      <!-- 球员头像 -->
      <image 
        class="player-avatar" 
        src="{{player.avatarUrl}}" 
        mode="aspectFill"
      />
      
      <!-- 球员昵称 -->
      <text class="player-nickname">{{player.nickname}}</text>
      
      <!-- 配置值 -->
      <text class="player-config">{{player.configString}}</text>
    </view>
  </view>
  
  <!-- 配置弹框 -->
  <view class="modal-overlay" wx:if="{{showModal}}" bindtap="onCancel">
    <view class="modal-container" catchtap="preventClose">
      
      <!-- 弹框标题 -->
      <view class="modal-header">
        <text class="modal-title">配置 {{currentPlayer.nickname}} 的指标</text>
        <text class="modal-close" bindtap="onCancel">×</text>
      </view>
      
      <!-- 预设选项 -->
      <view class="preset-section">
        <text class="section-title">预设配置</text>
        <view class="preset-grid">
          <view 
            wx:for="{{presetOptions}}" 
            wx:key="value"
            wx:for-item="option"
            class="preset-item {{selectedPreset === option.value ? 'selected' : ''}}"
            bindtap="onPresetSelect"
            data-value="{{option.value}}"
          >
            <text class="preset-label">{{option.label}}</text>
          </view>
        </view>
      </view>
      
      <!-- 自定义输入 -->
      <view class="custom-section">
        <text class="section-title">自定义配置</text>
        <input 
          class="custom-input" 
          type="number"
          placeholder="输入4-5位数字，如8421"
          value="{{customInput}}"
          bindinput="onCustomInput"
          maxlength="5"
        />
        <text class="input-hint">4位数字对应：老鹰-标准杆-柏忌-双柏忌</text>
        <text class="input-hint">5位数字对应：老鹰-标准杆-柏忌-双柏忌-三柏忌</text>
      </view>
      
      <!-- 按钮区域 -->
      <view class="modal-buttons">
        <button class="btn-cancel" bindtap="onCancel">取消</button>
        <button class="btn-confirm" bindtap="onConfirm">确定</button>
      </view>
      
    </view>
  </view>
  
</view> 