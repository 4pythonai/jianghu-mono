<!-- HoleRangeSelector 组件 - 起点洞与终点洞选择器 -->
<view class="hole-range-selector">
  <!-- 选择器区域 - 单行布局 -->
  <view class="selector-area">
    <!-- 起始洞标签 -->
    <view class="selector-label">起始洞</view>
    <view class="hole-circle">
      <view
        class="hole-number"
        bindtap="onSlectStartModal"
        data-type="start"
      >{{holePlayList[0].holename}}</view>
    </view>
    <view class="selector-label">终止洞</view>
    <view class="hole-circle">
      <view
        class="hole-number"
        bindtap="onSelectEndModal"
        data-type="end"
      >{{holePlayList[holePlayList.length-1].holename }}</view>
    </view>
  </view>

  <RealHolePlayListSetter
    wx:if="{{ifShowModal}}"
    startHoleindex="{{startHoleindex}}"
    endHoleindex="{{endHoleindex}}"
    selectType="{{selectType}}"
    bind:cancel="onModalCancel"
  />
</view>
