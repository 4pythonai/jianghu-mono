<!-- HoleRangeSelector组件 - 起点洞与终点洞选择器 -->
<view class="hole-range-selector">
  <!-- 选择器区域 - 单行布局 -->
  <view class="selector-area">
    <!-- 起始洞标签 -->
    <view class="selector-label">起始洞</view>
    <view class="hole-circle">
      <text class="hole-number" bindtap="onShowModal" data-type="start">
        {{holePlayList[0].holename || holePlayList[0].hindex}}
      </text>
    </view>
    <view class="selector-label">终止洞</view>
    <view class="hole-circle">
      <text class="hole-number" bindtap="onShowModal" data-type="end">
        {{holePlayList[holePlayList.length-1].holename || holePlayList[holePlayList.length-1].hindex}}
      </text>
    </view>
  </view>

  <!-- 弹出自定义球洞选择器组件 -->
  <RealHolePlayListSetter
    wx:if="{{ifShowModal}}"
    ifShowModal="{{ifShowModal}}"
    holeList="{{holeList}}"
    holePlayList="{{holePlayList}}"
    bind:cancel="onModalCancel"
  />
</view>