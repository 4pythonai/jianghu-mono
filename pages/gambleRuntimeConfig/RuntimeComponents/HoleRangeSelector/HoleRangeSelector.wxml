<!-- HoleRangeSelector组件 - 起点洞与终点洞选择器 -->
<view class="hole-range-selector">
  <!-- 选择器区域 - 单行布局 -->
  <view class="selector-area">
    <!-- 起始洞标签 -->
    <view class="selector-label">起始洞</view>
    <view class="hole-circle">
      <text class="hole-number" bindtap="onShowModal" data-type="start">{{startHoleRange[startHoleIndex]}}</text>
    </view>
    <view class="selector-label">终止洞</view>
    <view class="hole-circle">
      <text class="hole-number" bindtap="onShowModal" data-type="end">{{endHoleRange[endHoleIndex]}}</text>
    </view>
  </view>

  <!-- 弹出自定义球洞选择器组件 -->
  <real-hole-play-list-setter
    wx:if="{{showModal}}"
    showModal="{{showModal}}"
    modalType="{{modalType}}"
    holeList="{{holeList}}"
    selectedIndex="{{modalType === 'start' ? startHoleIndex : endHoleIndex}}"
    bind:change="onModalChange"
    bind:cancel="onModalCancel"
  />
</view>