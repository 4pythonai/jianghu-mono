<!-- 父页面使用Stroking组件的示例 -->

<view class="container">
    <!-- 页面标题 -->
    <view class="page-header">
        <text class="page-title">让杆配置</text>
        <text class="page-subtitle">为水平较差的用户设置让杆</text>
    </view>

    <!-- 当前配置显示 -->
    <view class="current-config" wx:if="{{strokingConfig.length > 0}}">
        <view class="config-header">
            <text class="config-title">当前配置</text>
            <button class="view-btn" bindtap="viewCurrentConfig">查看详情</button>
        </view>
        <view class="config-summary">
            <text class="config-text">已为 {{strokingConfig.length}} 个用户配置让杆</text>
        </view>
    </view>

    <!-- Stroking组件 -->
    <view class="stroking-section">
        <Stroking 
            strokingConfig="{{strokingConfig}}"
            bind:save="onStrokingSave"
            bind:cancel="onStrokingCancel"
        />
    </view>

    <!-- 使用说明 -->
    <view class="help-section">
        <view class="help-title">使用说明</view>
        <view class="help-content">
            <view class="help-item">
                <text class="help-number">1.</text>
                <text class="help-text">选择需要让杆的用户</text>
            </view>
            <view class="help-item">
                <text class="help-number">2.</text>
                <text class="help-text">设置不同PAR值的让杆数量</text>
            </view>
            <view class="help-item">
                <text class="help-number">3.</text>
                <text class="help-text">选择让杆的洞范围</text>
            </view>
            <view class="help-item">
                <text class="help-number">4.</text>
                <text class="help-text">点击保存完成配置</text>
            </view>
        </view>
    </view>
</view> 