/* Stroking 组件样式 */
.stroking-container {
	padding: 25rpx 15rpx;
	background-color: #fff;
	border-radius: 20rpx;
	box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* 通用标题样式 */
.section-title {
	font-size: 28rpx;
	font-weight: 600;
	color: #333;
	margin-bottom: 15rpx;
	padding-left: 10rpx;
	border-left: 4rpx solid #4caf50;
}

/* 第一行：用户选择 */
.user-selection-row {
	margin-bottom: 30rpx;
}

.users-grid {
	display: flex;
	flex-wrap: nowrap;
	gap: 8rpx;
	justify-content: space-between;
	width: 100%;
}

.user-item {
	display: flex;
	flex-direction: row;
	align-items: center;
	padding: 15rpx 10rpx;
	background-color: #f8f9fa;
	border-radius: 15rpx;
	border: 2rpx solid transparent;
	transition: all 0.3s ease;
	position: relative;
	flex: 1;
	min-width: 0;
}

.user-item.selected {
	background-color: #e8f5e8;
	border-color: #4caf50;
	box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.2);
}

.user-content {
	display: flex;
	flex-direction: column;
	align-items: center;
	flex: 1;
}

.user-avatar {
	width: 50rpx;
	height: 50rpx;
	border-radius: 50%;
	overflow: hidden;
	margin-bottom: 8rpx;
}

.avatar-image {
	width: 100%;
	height: 100%;
}

.user-info {
	flex: 1;
}

.user-nickname {
	font-size: 20rpx;
	color: #333;
	font-weight: 500;
	display: block;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	text-align: center;
	max-width: 70rpx;
}

.radio-indicator {
	margin-right: 10rpx;
}

.radio-circle {
	width: 24rpx;
	height: 24rpx;
	border-radius: 50%;
	border: 2rpx solid #ddd;
	background-color: #fff;
	transition: all 0.3s ease;
}

.radio-circle.checked {
	border-color: #4caf50;
	background-color: #4caf50;
	position: relative;
}

.radio-circle.checked::after {
	content: "";
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	width: 10rpx;
	height: 10rpx;
	background-color: #fff;
	border-radius: 50%;
}

/* 第二行：PAR值配置 */
.par-config-row {
	margin-bottom: 30rpx;
}

.par-inputs {
	display: grid;
	grid-template-columns: repeat(6, 1fr);
	gap: 5rpx;
	width: 100%;
}

.par-label {
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 26rpx;
	color: #666;
	text-align: center;
	white-space: nowrap;
	background-color: #f8f9fa;
	border-radius: 8rpx;
	padding: 12rpx 8rpx;
	border: 2rpx solid #e9ecef;
}

.par-picker {
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 12rpx 8rpx;
	background-color: #f8f9fa;
	border-radius: 8rpx;
	border: 2rpx solid #e9ecef;
	transition: all 0.3s ease;
	width: 100%;
	box-sizing: border-box;
}

.par-picker:active {
	background-color: #e9ecef;
	transform: scale(0.98);
}

.par-value {
	font-size: 28rpx;
	color: #333;
	font-weight: 600;
}

.picker-arrow {
	font-size: 22rpx;
	color: #999;
}

/* 第三行：洞范围选择 */
.hole-range-row {
	margin-bottom: 30rpx;
}

.hole-range-inputs {
	display: flex;
	gap: 15rpx;
	flex-wrap: nowrap;
}

.hole-input-group {
	flex: 1;
	min-width: 150rpx;
	max-width: 200rpx;
}

.hole-label {
	display: block;
	font-size: 24rpx;
	color: #666;
	margin-bottom: 8rpx;
	text-align: center;
}

.hole-picker {
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 15rpx 10rpx;
	background-color: #f8f9fa;
	border-radius: 10rpx;
	border: 2rpx solid #e9ecef;
	transition: all 0.3s ease;
}

.hole-picker:active {
	background-color: #e9ecef;
	transform: scale(0.98);
}

.hole-value {
	font-size: 26rpx;
	color: #333;
	font-weight: 500;
}

/* 第四行：操作按钮 */
.action-row {
	display: flex;
	gap: 20rpx;
	justify-content: flex-end;
}

.cancel-btn,
.save-btn {
	flex: 1;
	max-width: 200rpx;
	height: 80rpx;
	border-radius: 40rpx;
	font-size: 30rpx;
	font-weight: 600;
	border: none;
	transition: all 0.3s ease;
}

.cancel-btn {
	background-color: #f8f9fa;
	color: #666;
}

.cancel-btn:active {
	background-color: #e9ecef;
	transform: scale(0.95);
}

.save-btn {
	background-color: #4caf50;
	color: #fff;
}

.save-btn:active {
	background-color: #45a049;
	transform: scale(0.95);
}

/* 响应式设计 */
@media (max-width: 600rpx) {
	.stroking-container {
		padding: 20rpx;
	}

	.users-grid {
		grid-template-columns: 1fr;
	}

	.par-inputs {
		flex-direction: column;
	}

	.par-input-group {
		min-width: auto;
	}

	.action-row {
		flex-direction: column;
	}

	.cancel-btn,
	.save-btn {
		max-width: none;
	}
}
