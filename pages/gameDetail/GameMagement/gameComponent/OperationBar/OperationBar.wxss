.operation-bar {
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 24rpx 0;
	margin: 20rpx 32rpx 20rpx 0; /* 左边与ScoreTable对齐, 右边留边距 */
}

.game-info {
	display: flex;
	border-radius: 16rpx;
	box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
	background-color: #ffd700; /* 黄色背景 */
	align-items: center;
	justify-content: space-between;
	flex: 1;
	color: #333; /* 黑色文字 */
	padding: 0 24rpx;
}

.course-name {
	font-size: 32rpx;
	font-weight: 600;
	color: #333;
	flex: 1;
}

.btn-dropdown {
	width: 48rpx;
	height: 48rpx;
	background-color: #fff;
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
	transition: transform 0.2s ease;
}

.btn-dropdown:active {
	transform: scale(0.95);
}

.dropdown-icon {
	width: 24rpx;
	height: 24rpx;
	filter: brightness(0) saturate(100%) invert(20%) sepia(0%) saturate(0%)
		hue-rotate(0deg) brightness(80%) contrast(100%);
	transition: transform 0.3s ease;
}

/* 详细信息区域 */
.game-details {
	background-color: #f8f8f8;
	border-radius: 12rpx;
	margin: 0 32rpx 20rpx 0;
	overflow: hidden;
	transition: all 0.3s ease;
}

.game-details.collapsed {
	max-height: 0;
	padding: 0;
	margin-bottom: 0;
}

.game-details.expanded {
	max-height: 500rpx;
	padding: 24rpx;
	margin-bottom: 20rpx;
}

.detail-row {
	display: flex;
	align-items: center;
	margin-bottom: 16rpx;
}

.detail-row:last-child {
	margin-bottom: 0;
}

.detail-label {
	font-size: 28rpx;
	color: #666;
	width: 160rpx;
	flex-shrink: 0;
}

.detail-value {
	font-size: 28rpx;
	color: #333;
	flex: 1;
	font-weight: 500;
}

/* 创建人信息样式 */
.creator-info {
	display: flex;
	align-items: center;
	flex: 1;
}

.creator-avatar {
	width: 64rpx;
	height: 64rpx;
	border-radius: 50%;
	margin-right: 16rpx;
	border: 2rpx solid #e0e0e0;
	background-color: #f5f5f5;
}

.creator-name {
	font-size: 28rpx;
	color: #333;
	font-weight: 500;
	flex: 1;
}

/* 底部弹出面板样式 */
.more-panel-mask {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background-color: #fff;
	z-index: 9999;
	opacity: 0;
	visibility: hidden;
	transition: all 0.3s ease;
}

.more-panel-mask.show {
	opacity: 1;
	visibility: visible;
}

.more-panel {
	position: absolute;
	bottom: 0;
	left: 0;
	right: 0;
	background-color: #fff;
	border-radius: 20rpx 20rpx 0 0;
	padding: 40rpx 32rpx 60rpx;
	transform: translateY(100%);
	transition: transform 0.3s ease;
}

.more-panel.show {
	transform: translateY(0);
}

.panel-header {
	text-align: center;
	margin-bottom: 40rpx;
}

.panel-title {
	font-size: 36rpx;
	font-weight: 600;
	color: #fff;
}

.options-grid {
	display: grid;
	grid-template-columns: repeat(4, 1fr);
	gap: 40rpx;
	margin-bottom: 40rpx;
}

.option-item {
	display: flex;
	flex-direction: column;
	align-items: center;
	text-align: center;
}

.option-icon {
	width: 120rpx;
	height: 120rpx;
	background-color: #fff;
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	margin-bottom: 16rpx;
	transition: background-color 0.2s ease;
}

.option-item:active .option-icon {
	background-color: #fff;
}

.icon-text {
	font-size: 48rpx;
}

.option-label {
	font-size: 28rpx;
	color: #fff;
}

.divider {
	height: 1rpx;
	background-color: #404040;
	margin: 40rpx 0;
}

.bottom-actions {
	display: flex;
	gap: 24rpx;
}

.action-btn {
	flex: 1;
	height: 88rpx;
	border-radius: 44rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	transition: opacity 0.2s ease;
}

.action-btn:active {
	opacity: 0.8;
}

.cancel-btn {
	background-color: #404040;
}

.finish-btn {
	background-color: #404040;
}

.action-text {
	font-size: 32rpx;
	color: #fff;
	font-weight: 500;
}

.game-status {
	font-size: 28rpx;
	color: #666;
	background-color: rgba(255, 255, 255, 0.3);
	padding: 8rpx 16rpx;
	border-radius: 8rpx;
}

