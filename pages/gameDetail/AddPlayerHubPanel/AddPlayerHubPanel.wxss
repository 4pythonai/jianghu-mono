/* 添加球员面板样式 */
.panel-mask {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background-color: rgba(0, 0, 0, 0.5);
	z-index: 10000;
	opacity: 0;
	visibility: hidden;
	transition: all 0.3s ease;
}

.panel-mask.show {
	opacity: 1;
	visibility: visible;
}

.panel-container {
	position: absolute;
	bottom: 0;
	left: 0;
	right: 0;
	background-color: #fff;
	border-radius: 20rpx 20rpx 0 0;
	height: 95vh; /* 使用95%的视口高度 */
	transform: translateY(100%);
	transition: transform 0.3s ease;
	display: flex;
	flex-direction: column;
}

.panel-container.show {
	transform: translateY(0);
}

/* 面板头部 */
.panel-header {
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 32rpx 32rpx 0;
	border-bottom: 1rpx solid #f0f0f0;
	padding-bottom: 24rpx;
	margin-bottom: 32rpx;
}

.panel-title {
	font-size: 36rpx;
	font-weight: 600;
	color: #333;
}

.close-btn {
	width: 48rpx;
	height: 48rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	background-color: #f5f5f5;
	border-radius: 50%;
	transition: background-color 0.2s ease;
}

.close-btn:active {
	background-color: #e5e5e5;
}

.close-icon {
	width: 24rpx;
	height: 24rpx;
}

/* 面板内容 */
.panel-content {
	padding: 0 32rpx;
	flex: 1; /* 占用剩余所有空间 */
	overflow-y: auto;
	display: flex;
	flex-direction: column;
}

.content-placeholder {
	display: flex;
	align-items: center;
	justify-content: center;
	flex: 1; /* 占用内容区域的全部高度 */
}

.placeholder-text {
	font-size: 32rpx;
	color: #999;
}

/* 面板底部 */
.panel-footer {
	display: flex;
	gap: 24rpx;
	padding: 32rpx;
	border-top: 1rpx solid #f0f0f0;
	background-color: #fff;
	border-radius: 0 0 20rpx 20rpx;
}

.footer-btn {
	flex: 1;
	height: 88rpx;
	border-radius: 12rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	transition: opacity 0.2s ease;
}

.footer-btn:active {
	opacity: 0.8;
}

.cancel-btn {
	background-color: #f5f5f5;
}

.confirm-btn {
	background-color: #ffd700;
}

.btn-text {
	font-size: 32rpx;
	font-weight: 500;
}

.cancel-btn .btn-text {
	color: #666;
}

.confirm-btn .btn-text {
	color: #333;
}
