/* 游戏操作面板样式 */
.operation-panel-mask {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background-color: rgba(0, 0, 0, 0.5);
	z-index: 9999;
	opacity: 0;
	visibility: hidden;
	transition: all 0.3s ease;
}

.operation-panel-mask.show {
	opacity: 1;
	visibility: visible;
}

.operation-panel {
	position: absolute;
	bottom: 0;
	left: 0;
	right: 0;
	background-color: #2c2c2c;
	border-radius: 20rpx 20rpx 0 0;
	padding: 40rpx 32rpx 60rpx;
	transform: translateY(100%);
	transition: transform 0.3s ease;
}

.operation-panel.show {
	transform: translateY(0);
}

.panel-header {
	text-align: center;
	margin-bottom: 40rpx;
}

.panel-title {
	font-size: 36rpx;
	font-weight: 600;
	color: #fff;
}

.options-grid {
	display: grid;
	grid-template-columns: repeat(3, 1fr);
	gap: 40rpx;
	margin-bottom: 40rpx;
}

.option-item {
	display: flex;
	flex-direction: column;
	align-items: center;
	text-align: center;
}

.option-icon {
	width: 120rpx;
	height: 120rpx;
	background-color: #404040;
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	margin-bottom: 16rpx;
	transition: background-color 0.2s ease;
}

.option-item:active .option-icon {
	background-color: #505050;
}

.icon-text {
	font-size: 48rpx;
}

.option-label {
	font-size: 28rpx;
	color: #fff;
}

/* 危险操作样式 */
.cancel-icon {
	background-color: #ff4757 !important;
}

.finish-icon {
	background-color: #5cb85c !important;
}

.divider {
	height: 1rpx;
	background-color: #404040;
	margin: 40rpx 0;
}

.bottom-actions {
	padding: 0;
}

.action-btn {
	width: 100%;
	height: 88rpx;
	border-radius: 44rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	transition: opacity 0.2s ease;
}

.action-btn:active {
	opacity: 0.8;
}

.close-btn {
	background-color: #404040;
}

.action-text {
	font-size: 32rpx;
	color: #fff;
	font-weight: 500;
}
