/* GambleSummary 组件样式 */
.gamble-summary {
	width: 100vw;
	min-height: 100vh;
	background: #f5f5f5;
	display: flex;
	flex-direction: column;
}

/* 导航栏样式 */
.nav-bar {
	width: 100%;
	height: 88rpx;
	background: #fff;
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 0 32rpx;
	border-bottom: 1rpx solid #e5e5e5;
	position: sticky;
	top: 0;
	z-index: 100;
}

.nav-left {
	flex: 1;
}

.nav-title {
	font-size: 36rpx;
	font-weight: 600;
	color: #333;
}

.nav-right {
	display: flex;
	align-items: center;
}

.icon-btn {
	width: 64rpx;
	height: 64rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	border-radius: 50%;
	background: #f0f0f0;
	transition: all 0.3s ease;
}

.icon-btn:active {
	background: #e0e0e0;
	transform: scale(0.95);
}

.nav-icon {
	width: 32rpx;
	height: 32rpx;
}

/* 主要内容容器 */
.gamble-container {
	flex: 1;
	width: 100%;
	padding: 24rpx;
	box-sizing: border-box;
}

/* 标题样式 */
.summary-title {
	font-size: 32rpx;
	font-weight: 600;
	color: #333;
	margin-bottom: 24rpx;
	padding: 16rpx 24rpx;
	background: #fff;
	border-radius: 12rpx;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 赌博结果容器 */
.gamble-results {
	width: 100%;
	border-radius: 12rpx;
	overflow: hidden;
	box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

/* 赌博结果项样式 */
.gamble-result-item {
	width: 100%;
	margin-bottom: 24rpx;
}

.gamble-result-item:last-child {
	margin-bottom: 0;
}

/* 赌博结果标题样式 */
.gamble-result-title {
	font-size: 28rpx;
	font-weight: 600;
	color: #333;
	background: #f8f9fa;
	padding: 16rpx 24rpx;
	border-bottom: 1rpx solid #e5e5e5;
	text-align: center;
}

/* 空状态样式 */
.empty-state {
	display: flex;
	align-items: center;
	justify-content: center;
	min-height: 80vh;
	font-size: 28rpx;
	padding: 40rpx 0;
	background: #fefefe;
}

/* 加载状态样式 */
.loading-state {
	display: flex;
	align-items: center;
	justify-content: center;
	height: 400rpx;
	color: #666;
	font-size: 28rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
	.gamble-container {
		padding: 16rpx;
	}

	.summary-title {
		font-size: 28rpx;
		margin-bottom: 16rpx;
	}

	.nav-title {
		font-size: 32rpx;
	}
}

/* 无游戏状态样式 - 居中布局 */
.no-gamble-container {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	min-height: 70vh;
	text-align: center;
	background: #f9fbfa;
}

.ps-image {
	width: 300rpx;
	height: 300rpx;
	border-radius: 24rpx;
	margin-bottom: 40rpx;
	box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.empty-hint {
	font-size: 32rpx;
	color: #999;
	margin-bottom: 60rpx;
}

/* 底部按钮区域 - 居中布局 */
.bottom-button-area {
	display: flex;
	justify-content: center;
	padding: 0;
	width: 100%;
	box-sizing: border-box;
	margin-top: 20rpx;
}

.add-game-button {
	display: flex;
	align-items: center;
	justify-content: center;
	gap: 16rpx;
	padding: 24rpx 48rpx;
	background: linear-gradient(135deg, #4caf50, #45a049);
	color: white;
	border: none;
	border-radius: 16rpx;
	font-size: 32rpx;
	font-weight: 500;
	box-shadow: 0 8rpx 24rpx rgba(76, 175, 80, 0.3);
	transition: all 0.3s ease;
	min-width: 300rpx;
}

.add-game-button:active {
	transform: translateY(2rpx);
	box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.4);
}

.button-emoji {
	font-size: 36rpx;
}

.button-text {
	font-size: 32rpx;
}
