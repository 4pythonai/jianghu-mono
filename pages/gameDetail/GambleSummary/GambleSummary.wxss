.gamble-summary {
	background-color: #f5f5f5;
	min-height: 100vh;
}

/* 导航栏样式 */
.nav-bar {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 20rpx 30rpx;
	background-color: #fff;
	border-bottom: 1rpx solid #e0e0e0;
	position: sticky;
	top: 0;
	z-index: 100;
}

.nav-left {
	display: flex;
	align-items: center;
}

.nav-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
}

.nav-right {
	display: flex;
	align-items: center;
}

.icon-btn {
	width: 80rpx;
	height: 80rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	border-radius: 50%;
	background-color: #f5f5f5;
	transition: background-color 0.2s;
	margin-left: 20rpx;
}

.icon-btn:active {
	background-color: #e0e0e0;
}

.nav-icon {
	width: 50rpx;
	height: 50rpx;
}

.gamble-container {
	background-color: #fff;
	border-radius: 16rpx;
	padding: 30rpx;
	margin: 20rpx;
	box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.summary-title {
	font-size: 36rpx;
	font-weight: bold;
	color: #333;
	text-align: center;
	margin-bottom: 30rpx;
	padding-bottom: 20rpx;
	border-bottom: 2rpx solid #eee;
}

/* 表格样式 */
.table-container {
	border: 2rpx solid #e0e0e0;
	border-radius: 12rpx;
	overflow: hidden;
	margin-bottom: 30rpx;
}

.table-header {
	display: flex;
	background-color: #4caf50;
	color: white;
	font-weight: bold;
}

.header-cell {
	flex: 1;
	padding: 24rpx 16rpx;
	text-align: center;
	font-size: 28rpx;
	border-right: 1rpx solid rgba(255, 255, 255, 0.3);
}

.header-cell:last-child {
	border-right: none;
}

.table-body {
	background-color: #fff;
}

.table-row {
	display: flex;
	border-bottom: 1rpx solid #e0e0e0;
	transition: background-color 0.2s;
}

.table-row:hover {
	background-color: #f9f9f9;
}

.table-row:last-child {
	border-bottom: none;
}

.table-cell {
	flex: 1;
	padding: 24rpx 16rpx;
	text-align: center;
	font-size: 28rpx;
	color: #333;
	border-right: 1rpx solid #e0e0e0;
	display: flex;
	align-items: center;
	justify-content: center;
}

.table-cell:last-child {
	border-right: none;
}

.multiplier {
	color: #ff5722;
	font-weight: bold;
	font-size: 32rpx;
}

/* 汇总信息样式 */
.summary-info {
	background-color: #f8f9fa;
	border-radius: 12rpx;
	padding: 24rpx;
	border: 1rpx solid #e9ecef;
}

.info-item {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 16rpx 0;
	border-bottom: 1rpx solid #e9ecef;
}

.info-item:last-child {
	border-bottom: none;
}

.info-label {
	font-size: 28rpx;
	color: #666;
	font-weight: 500;
}

.info-value {
	font-size: 28rpx;
	color: #333;
	font-weight: bold;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
	.gamble-container {
		padding: 20rpx;
	}

	.table-cell {
		padding: 20rpx 12rpx;
		font-size: 24rpx;
	}

	.header-cell {
		padding: 20rpx 12rpx;
		font-size: 24rpx;
	}
}
