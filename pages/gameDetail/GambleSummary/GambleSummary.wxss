.gamble-summary {
	background-color: #f5f5f5;
	margin-top: 20rpx;
}

/* 导航栏样式 */
.nav-bar {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 20rpx 30rpx;
	background-color: #fff;
	border-bottom: 1rpx solid #e0e0e0;
}

.nav-left {
	display: flex;
	align-items: center;
}

.nav-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
}

.nav-right {
	display: flex;
	align-items: center;
}

.icon-btn {
	width: 80rpx;
	height: 80rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	border-radius: 50%;
	background-color: #f5f5f5;
	transition: background-color 0.2s;
	margin-left: 20rpx;
}

.icon-btn:active {
	background-color: #e0e0e0;
}

.nav-icon {
	width: 50rpx;
	height: 50rpx;
}

.gamble-container {
	background-color: #fff;
	border-radius: 16rpx;
	padding: 30rpx;
	margin: 20rpx;
	box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.summary-title {
	font-size: 36rpx;
	font-weight: bold;
	color: #333;
	text-align: center;
	margin-bottom: 30rpx;
	padding-bottom: 20rpx;
	border-bottom: 2rpx solid #eee;
}

/* 原生汇总界面样式 */
.summary-content {
	margin-top: 20rpx;
}

.player-summary {
	background-color: #f8f9fa;
	border-radius: 12rpx;
	margin-bottom: 30rpx;
	overflow: hidden;
}

.summary-header {
	background-color: #4caf50;
	color: white;
	padding: 20rpx;
	text-align: center;
}

.header-text {
	font-size: 32rpx;
	font-weight: bold;
}

.player-list {
	background-color: white;
}

.player-item {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 24rpx 20rpx;
	border-bottom: 1rpx solid #eee;
}

.player-item:last-child {
	border-bottom: none;
}

.player-info {
	display: flex;
	flex-direction: column;
	flex: 1;
}

.player-name {
	font-size: 28rpx;
	color: #333;
	font-weight: 500;
	margin-bottom: 8rpx;
}

.player-amount {
	font-size: 24rpx;
	color: #666;
}

.player-status {
	padding: 8rpx 16rpx;
	border-radius: 20rpx;
	font-size: 24rpx;
	font-weight: bold;
}

.player-status.win {
	background-color: #e8f5e8;
	color: #4caf50;
}

.player-status.lose {
	background-color: #ffeaea;
	color: #f44336;
}

.player-status.playing {
	background-color: #fff3e0;
	color: #ff9800;
}

/* 统计信息样式 */
.stats-info {
	background-color: #f8f9fa;
	border-radius: 12rpx;
	padding: 24rpx;
	margin-bottom: 30rpx;
}

.stat-item {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 16rpx 0;
	border-bottom: 1rpx solid #e9ecef;
}

.stat-item:last-child {
	border-bottom: none;
}

.stat-label {
	font-size: 28rpx;
	color: #666;
	font-weight: 500;
}

.stat-value {
	font-size: 28rpx;
	color: #333;
	font-weight: bold;
}

/* 操作按钮样式 */
.action-buttons {
	display: flex;
	gap: 20rpx;
	margin-top: 30rpx;
}

.action-btn {
	flex: 1;
	padding: 20rpx;
	border-radius: 12rpx;
	font-size: 28rpx;
	font-weight: bold;
	border: none;
}

.action-btn.primary {
	background-color: #4caf50;
	color: white;
}

.action-btn.secondary {
	background-color: #f5f5f5;
	color: #666;
	border: 2rpx solid #e0e0e0;
}

.placeholder-text {
	text-align: center;
	color: #666;
	font-size: 28rpx;
	line-height: 1.5;
}

/* 赌博结果列表样式 */
.gamble-results {
	margin-top: 20rpx;
}

.results-header {
	background-color: #4caf50;
	color: white;
	padding: 20rpx;
	text-align: center;
	border-radius: 12rpx 12rpx 0 0;
}

.header-text {
	font-size: 32rpx;
	font-weight: bold;
}

.results-list {
	background-color: white;
	border: 2rpx solid #e0e0e0;
	border-top: none;
	border-radius: 0 0 12rpx 12rpx;
}

.result-item {
	display: flex;
	align-items: center;
	padding: 20rpx;
	border-bottom: 1rpx solid #eee;
}

.result-item:last-child {
	border-bottom: none;
}

.result-key {
	background-color: #f5f5f5;
	padding: 10rpx 16rpx;
	border-radius: 8rpx;
	margin-right: 20rpx;
	min-width: 120rpx;
	text-align: center;
}

.result-key text {
	font-size: 24rpx;
	color: #666;
	font-weight: bold;
}

.result-content {
	flex: 1;
	word-break: break-all;
}

.result-content text {
	font-size: 28rpx;
	color: #333;
	line-height: 1.5;
}

.empty-state {
	text-align: center;
	padding: 60rpx 20rpx;
	color: #999;
	font-size: 28rpx;
	background-color: #f8f9fa;
	border-radius: 12rpx;
}

.loading-state {
	text-align: center;
	padding: 40rpx 20rpx;
	color: #666;
	font-size: 28rpx;
	background-color: #f8f9fa;
	border-radius: 12rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
	.gamble-container {
		padding: 20rpx;
	}
}
