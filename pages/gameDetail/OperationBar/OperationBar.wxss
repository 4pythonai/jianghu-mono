.operation-bar {
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 24rpx 0;
	margin: 20rpx 32rpx 20rpx 0; /* 左边与ScoreTable对齐，右边留边距 */
}

.game-info {
	display: flex;
	border-radius: 16rpx;
	box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
	background-color: #ffd700; /* 黄色背景 */
	align-items: center;
	justify-content: space-between;
	flex: 1;
	color: #333; /* 黑色文字 */
	padding: 0 24rpx;
}

.course-name {
	font-size: 32rpx;
	font-weight: 600;
	color: #333;
	flex: 1;
}

.btn-dropdown {
	width: 48rpx;
	height: 48rpx;
	background-color: #fff;
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
	transition: transform 0.2s ease;
}

.btn-dropdown:active {
	transform: scale(0.95);
}

.dropdown-icon {
	width: 24rpx;
	height: 24rpx;
	filter: brightness(0) saturate(100%) invert(20%) sepia(0%) saturate(0%)
		hue-rotate(0deg) brightness(80%) contrast(100%);
	transition: transform 0.3s ease;
}

/* 详细信息区域 */
.game-details {
	background-color: #f8f8f8;
	border-radius: 12rpx;
	margin: 0 32rpx 20rpx 0;
	overflow: hidden;
	transition: all 0.3s ease;
}

.game-details.collapsed {
	max-height: 0;
	padding: 0;
	margin-bottom: 0;
}

.game-details.expanded {
	max-height: 500rpx;
	padding: 24rpx;
	margin-bottom: 20rpx;
}

.detail-row {
	display: flex;
	align-items: center;
	margin-bottom: 16rpx;
}

.detail-row:last-child {
	margin-bottom: 0;
}

.detail-label {
	font-size: 28rpx;
	color: #666;
	width: 160rpx;
	flex-shrink: 0;
}

.detail-value {
	font-size: 28rpx;
	color: #333;
	flex: 1;
	font-weight: 500;
}

.game-status {
	font-size: 28rpx;
	color: #666;
	background-color: rgba(255, 255, 255, 0.3);
	padding: 8rpx 16rpx;
	border-radius: 8rpx;
}

.operation-buttons {
	display: flex;
	margin-left: 20rpx;
	align-items: center;
	gap: 16rpx;
}

.btn-add {
	width: 60rpx;
	height: 60rpx;
	background-color: #333;
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	transition: transform 0.2s ease;
}

.btn-add:active {
	transform: scale(0.95);
}

.btn-icon {
	width: 32rpx;
	height: 32rpx;
	filter: brightness(0) invert(1); /* 使图标变白 */
}

.btn-more {
	width: 60rpx;
	height: 60rpx;
	background-color: #333;
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	transition: transform 0.2s ease;
}

.btn-more:active {
	transform: scale(0.95);
}

.more-text {
	color: #fff;
	font-size: 32rpx;
	font-weight: bold;
	line-height: 1;
	margin-top: -8rpx; /* 微调垂直位置 */
}
