/* 游戏(Gamble)模块样式 */
.gamble-container {
	padding: 15px;
}

.gamble-header {
	font-size: 18px;
	font-weight: bold;
	margin-bottom: 15px;
	color: #333;
	text-align: center;
}

.gamble-content {
	min-height: 200px;
	display: flex;
	justify-content: center;
	align-items: center;
	color: #999;
	font-size: 14px;
	background-color: #f5f5f5;
	border-radius: 8px;
}
