<view class="kickoff-popup" bindtap="close">
  <view class="kickoff-content" catchtap="noop">
    <view class="kickoff-title">踢一脚</view>
    <!-- 循环渲染 runtimeConfigs -->

    <view class="section">
      <view class="section-title">请选择踢一脚的游戏</view>
      <checkbox-group value="{{selectedIdList}}" bindchange="onCheckboxChange">
        <block wx:for="{{runtimeConfigs}}" wx:key="id">
          <label class="game-item">
            <checkbox value="{{item.id}}" />
            <text class="game-title">{{item.abstract}}</text>
          </label>
        </block>
      </checkbox-group>
    </view>

    <view class="kickoff-footer">
      <button class="kickoff-btn-cancel" bindtap="close">取消</button>
      <button class="kickoff-btn-confirm" bindtap="onConfirm">确定</button>
    </view>
  </view>
</view>
