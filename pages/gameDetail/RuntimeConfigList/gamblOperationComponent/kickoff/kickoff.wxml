<view class="kickoff-popup" bindtap="close">
  <view class="kickoff-content" catchtap="noop">
    <view class="panel-title">踢一脚</view>

    <view class="section-title">请选择洞号及倍数</view>
    <view class="hole-list">
      <block wx:for="{{holePlayList}}" wx:key="index">
        <view
          class="hole-item {{index === 0 ? 'active' : ''}}"
          bindtap="onSelectHole"
          data-index="{{index}}"
          data-hindex="{{item.hindex}}"
        >
          <text class="hole-item-text">{{item.holename}}</text>
          <!-- 新增：显示当前倍数配置 -->
          <view wx:if="{{holeMultiplierMap[item.hindex]}}" class="hole-multiplier-info">
            <text class="multiplier-text">当前: {{holeMultiplierMap[item.hindex]}}倍</text>
          </view>
        </view>
      </block>
    </view>

    <view class="kickoff-footer">
      <button class="kickoff-btn-cancel" bindtap="close">取消</button>
      <button class="kickoff-btn-confirm" bindtap="onConfirm">确定</button>
    </view>
  </view>
</view>

<!-- 倍数选择弹窗 -->
<HoleMultiplierSelector
  visible="{{showMultiplierSelector}}"
  hindex="{{selectedHole.hindex}}"
  holename="{{selectedHole.holename}}"
  bind:confirm="onMultiplierConfirm"
  bind:cancel="onMultiplierCancel"
/>
