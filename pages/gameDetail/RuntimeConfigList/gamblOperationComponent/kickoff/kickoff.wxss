.kickoff-popup {
	position: fixed;
	left: 0;
	right: 0;
	bottom: 0;
	top: 0;
	z-index: 9999;
	background: rgba(0, 0, 0, 0.4);
	display: flex;
	align-items: flex-end;
	justify-content: center;
}

.kickoff-content {
	width: 100vw;
	min-height: 50vh;
	background: #fff;
	border-top-left-radius: 16rpx;
	border-top-right-radius: 16rpx;
	padding: 40rpx 32rpx 32rpx 32rpx;
	box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.08);
	animation: slideUp 0.3s;
	overflow: auto;
}

@keyframes slideUp {
	from {
		transform: translateY(100%);
	}
	to {
		transform: translateY(0);
	}
}

.kickoff-title {
	font-size: 32rpx;
	font-weight: bold;
	text-align: center;
	margin-bottom: 32rpx;
	border-bottom: 1rpx solid #f0f0f0;
}

.section {
	margin-bottom: 32rpx;
	background: #fafbfc;
	border-radius: 12rpx;
	padding: 24rpx 16rpx 16rpx 16rpx;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.section-title {
	font-size: 28rpx;
	font-weight: 600;
	margin-bottom: 18rpx;
	border-left: 6rpx solid #4caf50;
	padding-left: 16rpx;
}

.game-item {
	display: flex;
	align-items: center;
	margin-bottom: 24rpx;
}

.game-item:last-child {
	margin-bottom: 0;
}

.kickoff-footer {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	gap: 32rpx;
	margin-top: 32rpx;
}

.kickoff-btn-cancel,
.kickoff-btn-confirm {
	flex: 1;
	font-size: 30rpx;
	padding: 18rpx 0;
	border-radius: 12rpx;
	border: none;
}

.kickoff-btn-cancel {
	background: #f5f5f5;
	color: #666;
	margin-right: 16rpx;
}

.kickoff-btn-confirm {
	background: linear-gradient(135deg, #4caf50, #45a049);
	color: #fff;
	margin-left: 16rpx;
}

.game-item-row {
	display: flex;
	flex-direction: row;
	align-items: flex-start;
}

.game-item-info {
	display: flex;
	flex-direction: column;
	margin-left: 16rpx;
}

.game-title {
	font-size: 28rpx;
	font-weight: bold;
	margin-bottom: 8rpx;
}

.hole-list {
	display: grid;
	grid-template-columns: repeat(9, 1fr);
	gap: 16rpx 8rpx;
	margin-bottom: 32rpx;
	width: 100%;
}

.hole-item {
	width: 100%;
	padding-top: 100%; /* 保证宽高比1:1 */
	position: relative;
	border-radius: 50%;
	background: #27ae60; /* 绿色 */
	border: 2rpx solid #eee;
	box-sizing: border-box;
	margin: 0;
	overflow: hidden;
}

.hole-item-text {
	position: absolute;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 28rpx;
	color: #fff; /* 白字 */
	white-space: nowrap;
	text-overflow: ellipsis;
}
