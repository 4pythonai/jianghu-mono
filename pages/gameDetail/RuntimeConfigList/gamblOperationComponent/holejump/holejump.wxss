@import "/styles/modal.wxss";



@keyframes slideUp {
	from {
		transform: translateY(100%);
	}
	to {
		transform: translateY(0);
	}
}

 

.section {
	margin-bottom: 32rpx;
	background: #fafbfc;
	border-radius: 12rpx;
	padding: 24rpx 16rpx 16rpx 16rpx;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.section-title {
	font-size: 28rpx;
	font-weight: 600;
	margin-bottom: 18rpx;
	border-left: 6rpx solid #4caf50;
	padding-left: 16rpx;
}

.hole-list {
	display: grid;
	grid-template-columns: repeat(9, 1fr);
	gap: 16rpx 8rpx;
	margin-bottom: 32rpx;
	width: 100%;
}

.hole-item {
	width: 100%;
	padding-top: 100%; /* 保证宽高比1:1 */
	position: relative;
	border-radius: 50%;
	background: #27ae60; /* 绿色 */
	border: 2rpx solid #eee;
	box-sizing: border-box;
	margin: 0;
	overflow: hidden;
}

.hole-item-text {
	position: absolute;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 28rpx;
	color: #fff; /* 白字 */
	white-space: nowrap;
	text-overflow: ellipsis;
}
