@import "/styles/modal.wxss";

@keyframes slideUp {
	from {
		transform: translateY(100%);
	}
	to {
		transform: translateY(0);
	}
}

.section {
	margin-bottom: 32rpx;
	background: #fafbfc;
	border-radius: 12rpx;
	padding: 24rpx 16rpx 16rpx 16rpx;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.section-title {
	font-size: 28rpx;
	font-weight: 600;
	margin-bottom: 18rpx;
	border-left: 6rpx solid #4caf50;
	padding-left: 16rpx;
}

/* 拖拽容器 */
.drag-container {
	position: relative;
	margin-bottom: 32rpx;
	background: #f8f9fa;
	border-radius: 12rpx;
	padding: 10rpx;
	min-height: 180rpx;
}

.drag-hint {
	text-align: center;
	padding: 20rpx;
	background: #f0f8ff;
	border-radius: 8rpx;
	margin-bottom: 20rpx;
	border: 1rpx solid #d0e7ff;
}

.drag-hint text {
	color: #0066cc;
	font-size: 26rpx;
}
