.hole-drag-wrap {
	position: relative;
	width: 100%;
	height: 200rpx;
	background: #f8f9fa;
	border-radius: 12rpx;
	overflow: hidden;
}

.hole-item {
	position: absolute;
	top: 0;
	left: 0;
	height: 100rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	transition: transform 0.3s ease;
	z-index: 1;
}

.hole-item .hole-content {
	width: 65rpx;
	height: 65rpx;
	border-radius: 50%;
	background: #27ae60;
	border: 2rpx solid #eee;
	box-sizing: border-box;
	display: flex;
	align-items: center;
	justify-content: center;
}

.hole-item.dragging {
	opacity: 0.8;
	box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.3);
	z-index: 1000;
	transition: none !important;
}

.hole-item.fixed .hole-content {
	background: #95a5a6;
	cursor: not-allowed;
}

.hole-text {
	font-size: 28rpx;
	color: #fff;
	white-space: nowrap;
	text-overflow: ellipsis;
	text-align: center;
}
