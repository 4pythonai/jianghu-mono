<view class="juanguo-popup" bindtap="close">
  <view class="juanguo-content" catchtap="noop">
    <view class="title">捐锅设置</view>
    <!-- 选择捐锅的游戏 -->
    <view class="section">
      <view class="section-title">请选择捐锅的游戏</view>
      <checkbox-group value="{{selectedIdList}}" bindchange="onCheckboxGroupChange">
        <block wx:for="{{runtimeConfigs}}" wx:key="id">
          <label class="game-item">
            <checkbox value="{{item.id}}" />
            <text class="game-title">{{item.abstract}}</text>
          </label>
        </block>
      </checkbox-group>
    </view>
    <!-- 选择捐锅方式 -->
    <view class="section">
      <view class="section-title">请选择捐锅方式</view>
      <radio-group bindchange="onDonationTypeChange" value="{{donationType}}">
        <label class="radio-item">
          <radio value="normal" checked="{{donationType === 'normal'}}" />
          <text>赢家每洞捐</text>
          <input
            class="input-inline"
            type="number"
            value="{{donationPoints}}"
            bindinput="onDonationPointsInput"
            wx:if="{{donationType === 'normal'}}"
          />
          <text wx:if="{{donationType === 'normal'}}">分</text>
        </label>
        <label class="radio-item">
          <radio value="all" checked="{{donationType === 'all'}}" />
          <text>全捐，捐满为止</text>
        </label>
        <label class="radio-item">
          <radio value="bigpot" checked="{{donationType === 'bigpot'}}" />
          <text>大锅版</text>
          <!-- 总费用输入框紧跟在大锅版radio后面，仅在选择大锅版时显示 -->
          <input
            class="input-inline"
            type="number"
            value="{{totalFee}}"
            bindinput="onTotalFeeInput"
            wx:if="{{donationType === 'bigpot'}}"
            placeholder="请输入总费用"
          />
        </label>
        <label class="radio-item">
          <radio value="none" checked="{{donationType === 'none'}}" />
          <text>不捐锅</text>
        </label>
      </radio-group>
    </view>
    <!-- 底部按钮 -->
    <view class="footer">
      <button class="btn-cancel" bindtap="close">取消</button>
      <button class="btn-confirm" bindtap="onConfirm">确定</button>
    </view>
  </view>
</view>
