/* 引入公共按钮样式 */
@import "/styles/modal.wxss";

.juanguo-content {
	width: 100vw;
	min-height: 50vh;
	background: #fff;
	border-top-left-radius: 16rpx;
	border-top-right-radius: 16rpx;
	padding: 40rpx 32rpx 32rpx 32rpx;
	box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.08);
	animation: slideUp 0.3s;
	overflow: auto;
}

.radio-item {
	display: flex;
	align-items: center;
	margin-bottom: 24rpx;
}

/* 新增：让radio label和输入框字体都变小 */
.radio-item text {
	font-size: 24rpx;
}

.radio-item:last-child {
	margin-bottom: 0;
}

@keyframes slideUp {
	from {
		transform: translateY(100%);
	}
	to {
		transform: translateY(0);
	}
}

.section {
	margin-bottom: 32rpx;
	background: #fafbfc;
	border-radius: 12rpx;
	padding: 24rpx 16rpx 16rpx 16rpx;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.section-title {
	font-size: 28rpx;
	font-weight: 600;
	margin-bottom: 18rpx;
	border-left: 6rpx solid #4caf50;
	padding-left: 16rpx;
}

.input-inline {
	background: #fff;
	border: 2rpx solid #4caf7a;
	border-radius: 12rpx;
	padding: 0 12rpx;
	margin: 0 8rpx;
	width: 150rpx;
	font-size: 24rpx;
	font-weight: 400;
	color: #222;
	height: 44rpx;
	line-height: 44rpx;
	box-shadow: 0 4rpx 8rpx rgba(76, 175, 122, 0.15);
}

.point-input {
	width: 40rpx;
}

.input-inline:active,
.input-inline:focus {
	border-color: #45a072;
	background: #f5f7fa;
}

/* 总费用输入框样式 */
.input-inline[placeholder] {
	color: #bbb;
}

