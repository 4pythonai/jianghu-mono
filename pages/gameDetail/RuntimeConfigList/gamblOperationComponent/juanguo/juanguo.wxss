.juanguo-popup {
	position: fixed;
	left: 0;
	right: 0;
	bottom: 0;
	top: 0;
	z-index: 9999;
	background: rgba(0, 0, 0, 0.4);
	display: flex;
	align-items: flex-end;
	justify-content: center;
}

.juanguo-content {
	width: 100vw;
	min-height: 50vh;
	background: #fff;
	border-top-left-radius: 16rpx;
	border-top-right-radius: 16rpx;
	padding: 40rpx 32rpx 32rpx 32rpx;
	box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.08);
	animation: slideUp 0.3s;
	overflow: auto;
}

.extra-close-btn {
	background: #42b883;
	color: #fff;
	border-radius: 24rpx;
	border: none;
	padding: 20rpx 0;
	font-size: 32rpx;
	width: 100%;
	margin-top: 32rpx;
}

.radio-item {
	display: flex;
	align-items: center;
	margin-bottom: 24rpx;
}

.radio-item:last-child {
	margin-bottom: 0;
}

@keyframes slideUp {
	from {
		transform: translateY(100%);
	}
	to {
		transform: translateY(0);
	}
}

.title {
	font-size: 40rpx;
	font-weight: bold;
	text-align: center;
	margin-bottom: 32rpx;
}

.section {
	margin-bottom: 32rpx;
	background: #fafbfc;
	border-radius: 12rpx;
	padding: 24rpx 16rpx 16rpx 16rpx;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.section-title {
	font-size: 28rpx;
	font-weight: 600;
	margin-bottom: 18rpx;
	border-left: 6rpx solid #4caf50;
	padding-left: 16rpx;
}

.game-item {
	display: flex;
	align-items: center;
	padding: 18rpx 0;
	border-bottom: 1rpx solid #e0e0e0;
}
.game-item:last-child {
	border-bottom: none;
}

.input-inline {
	background: #fff;
	border: 2rpx solid #4caf7a;
	border-radius: 12rpx;
	padding: 0 12rpx;
	margin: 0 8rpx;
	width: 220rpx;
	font-size: 28rpx;
	font-weight: 600;
	color: #222;
	height: 44rpx;
	line-height: 44rpx;
	box-shadow: 0 4rpx 8rpx rgba(76, 175, 122, 0.15);
}

.input-inline:active,
.input-inline:focus {
	border-color: #45a072;
	background: #f5f7fa;
}

/* 总费用输入框样式 */
.input-inline[placeholder] {
	color: #bbb;
}

.footer {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	gap: 32rpx;
	margin-top: 32rpx;
}

.btn-cancel,
.btn-confirm {
	flex: 1;
	font-size: 30rpx;
	padding: 18rpx 0;
	border-radius: 12rpx;
	border: none;
}

.btn-cancel {
	background: #f5f5f5;
	color: #666;
	margin-right: 16rpx;
}

.btn-confirm {
	background: linear-gradient(135deg, #4caf50, #45a049);
	color: #fff;
	margin-left: 16rpx;
}
