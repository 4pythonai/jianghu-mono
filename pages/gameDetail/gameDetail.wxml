<view class="tabs">
  <view class="tab-item {{currentTab === 0 ? 'active' : ''}}" bindtap="switchTab" data-tab="0">记分</view>
  <view class="tab-item {{currentTab === 1 ? 'active' : ''}}" bindtap="switchTab" data-tab="1">互动</view>
  <view class="tab-item {{currentTab === 2 ? 'active' : ''}}" bindtap="switchTab" data-tab="2">游戏</view>
</view>
<!-- 记分 -->
<view hidden="{{currentTab !== 0}}">
  <GameMagement id="gameMagement" gameid="{{gameid}}" groupid="{{groupid}}" />
</view>
<!-- 互动 -->
<view class="tab-content" hidden="{{currentTab !== 1}}">
  <BBS id="bbsComponent" gameid="{{gameData.gameid || ''}}" />
</view>
<!-- 赌博相关 -->
<view class="tab-content" hidden="{{currentTab !== 2}}" style="width: 100%; padding: 0;">
  <GambleSummary gameid="{{gameid}}" groupid="{{groupid}}" id="GambleSummary" />

  <!-- 窄菜单条 - 只在游戏tab时显示 -->
  <view class="floating-menu" wx:if="{{currentTab === 2}}">
    <view class="menu-header">
      <text class="menu-title">快捷操作</text>
    </view>
    <view class="menu-item" bindtap="onMenuAction" data-action="action1">
      <text class="menu-text">添加配置</text>
    </view>
    <view class="menu-item" bindtap="onMenuAction" data-action="action2">
      <text class="menu-text">编辑规则</text>
    </view>
    <view class="menu-item" bindtap="onMenuAction" data-action="action3">
      <text class="menu-text">查看统计</text>
    </view>
  </view>
</view>
