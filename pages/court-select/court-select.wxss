.page-container {
	min-height: 100vh;
	background: #f5f5f5;
	padding: 20rpx;
}

/* 选中球场信息卡片 */
.selected-course-info {
	margin-bottom: 30rpx;
}

.course-card {
	display: flex;
	align-items: center;
	background: #fff;
	border-radius: 16rpx;
	padding: 24rpx;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.course-image {
	width: 120rpx;
	height: 90rpx;
	border-radius: 12rpx;
	margin-right: 24rpx;
	background: #f5f5f5;
}

.course-details {
	flex: 1;
}

.course-name {
	font-size: 32rpx;
	color: #333;
	font-weight: 500;
	margin-bottom: 8rpx;
	line-height: 1.4;
}

.course-address {
	font-size: 26rpx;
	color: #666;
	line-height: 1.3;
}

/* 标题样式 */
.section-title {
	font-size: 36rpx;
	color: #333;
	font-weight: 600;
	margin-bottom: 30rpx;
	padding-left: 8rpx;
}

/* 半场选项列表 */
.court-list {
	margin-bottom: 40rpx;
}

.court-item {
	display: flex;
	align-items: center;
	background: #fff;
	border-radius: 16rpx;
	padding: 32rpx 24rpx;
	margin-bottom: 16rpx;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
	border: 2rpx solid transparent;
	transition: all 0.3s ease;
	position: relative;
}

.court-item:active {
	transform: scale(0.98);
}

.court-item.selected {
	border-color: #1aad19;
	background: #f0f9f0;
	box-shadow: 0 4rpx 12rpx rgba(26, 173, 25, 0.15);
}

.court-info {
	flex: 1;
	margin-right: 20rpx;
}

.court-name {
	font-size: 32rpx;
	color: #333;
	font-weight: 500;
	margin-bottom: 8rpx;
}

.court-desc {
	font-size: 26rpx;
	color: #666;
	line-height: 1.4;
	margin-bottom: 8rpx;
}

.court-holes {
	font-size: 24rpx;
	color: #1aad19;
	font-weight: 500;
}

.court-price {
	display: flex;
	flex-direction: column;
	align-items: flex-end;
	margin-right: 20rpx;
}

.price-label {
	font-size: 24rpx;
	color: #999;
	margin-bottom: 4rpx;
}

.price-value {
	font-size: 32rpx;
	color: #e74c3c;
	font-weight: 600;
}

.select-indicator {
	width: 40rpx;
	height: 40rpx;
	background: #1aad19;
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
}

.select-indicator image {
	width: 24rpx;
	height: 24rpx;
	filter: brightness(0) invert(1);
}

/* 确认按钮区域 */
.confirm-section {
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	background: #fff;
	padding: 20rpx;
	box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.confirm-btn {
	width: 100%;
	height: 88rpx;
	border-radius: 44rpx;
	font-size: 32rpx;
	font-weight: 500;
	border: none;
	transition: all 0.3s ease;
}

.confirm-btn.active {
	background: linear-gradient(135deg, #1aad19 0%, #16a085 100%);
	color: #fff;
	box-shadow: 0 4rpx 12rpx rgba(26, 173, 25, 0.3);
}

.confirm-btn.active:active {
	transform: scale(0.98);
	box-shadow: 0 2rpx 8rpx rgba(26, 173, 25, 0.2);
}

.confirm-btn.disabled {
	background: #f5f5f5;
	color: #ccc;
	cursor: not-allowed;
}

/* 底部安全区域 */
.page-container {
	padding-bottom: 140rpx; /* 为固定按钮留出空间 */
}
