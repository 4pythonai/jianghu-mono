.container {
	padding: 30rpx;
	background-color: #f9fbfa;
	min-height: 100vh;
}

.section {
	margin-bottom: 40rpx;
	background-color: #fff;
	border-radius: 12rpx;
	padding: 30rpx;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.section-title {
	display: block;
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
	margin-bottom: 20rpx;
}

.button-row {
	display: flex;
	gap: 20rpx;
	flex-wrap: wrap;
	align-items: center;
}

.button-row .btn {
	margin-bottom: 10rpx;
}
