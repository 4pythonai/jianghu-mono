/* ===== 公共按钮样式系统 ===== */

/* ===== 基础按钮样式 ===== */
.btn {
	/* 重置微信小程序默认样式 */
	margin: 0;
	padding: 0;
	border: none;
	outline: none;
	background: none;
	font-family: inherit;
	font-size: inherit;
	line-height: inherit;
	text-decoration: none;
	cursor: pointer;
	transition: all 0.2s ease;
	box-sizing: border-box;
	display: inline-flex;
	align-items: center;
	justify-content: center;
	position: relative;
	overflow: hidden;
}

.btn::after {
	border: none;
}

/* ===== 按钮尺寸 ===== */
.btn-small {
	height: 60rpx;
	padding: 0 24rpx;
	font-size: 24rpx;
	border-radius: 6rpx;
}

.btn-medium {
	height: 80rpx;
	padding: 0 32rpx;
	font-size: 28rpx;
	border-radius: 8rpx;
}

.btn-large {
	height: 100rpx;
	padding: 0 40rpx;
	font-size: 32rpx;
	border-radius: 10rpx;
}

/* ===== 按钮类型 ===== */

/* 主要按钮 - 绿色主题 */
.btn-primary {
	background: linear-gradient(135deg, #4caf50, #45a049);
	color: #fff;
	box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
	height: 100rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}

.btn-primary:active {
	background: linear-gradient(135deg, #45a049, #3d8b40);
	transform: translateY(2rpx);
	box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.4);
}

/* 次要按钮 - 灰色边框 */
.btn-secondary {
	background-color: #fff;
	color: #333;
	border: 2rpx solid #e9ecef;
}

.btn-secondary:active {
	background-color: #f8f9fa;
	border-color: #dee2e6;
}

/* 取消按钮 - 浅灰色 */
.btn-cancel {
	background-color: #f8f9fa;
	color: #6c757d;
	border: 2rpx solid #dee2e6;
}

.btn-cancel:active {
	background-color: #e2e6ea;
	border-color: #cbd3da;
}

/* 确认按钮 - 绿色 */
.btn.btn-confirm {
	background: linear-gradient(135deg, #4caf50, #45a049) !important;
	color: #fff;
	box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
}

.btn.btn-confirm:active {
	background: linear-gradient(135deg, #45a049, #3d8b40) !important;
	transform: translateY(2rpx);
	box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.4);
}

/* 危险按钮 - 红色 */
.btn-danger {
	background-color: #dc3545;
	color: #fff;
}

.btn-danger:active {
	background-color: #c82333;
}

/* 微信绿色按钮 */
.btn-wechat {
	background-color: #1aad19;
	color: #fff;
}

.btn-wechat:active {
	background-color: #179b16;
}

/* ===== 按钮状态 ===== */

/* 禁用状态 */
.btn[disabled],
.btn.disabled {
	opacity: 0.6;
	cursor: not-allowed;
	pointer-events: none;
}

.btn[disabled]:active,
.btn.disabled:active {
	transform: none;
	box-shadow: none;
}

/* 加载状态 */
.btn.loading {
	position: relative;
	color: transparent;
}

.btn.loading::before {
	content: "";
	position: absolute;
	top: 50%;
	left: 50%;
	width: 32rpx;
	height: 32rpx;
	margin: -16rpx 0 0 -16rpx;
	border: 3rpx solid transparent;
	border-top: 3rpx solid currentColor;
	border-radius: 50%;
	animation: btn-loading 1s linear infinite;
}

@keyframes btn-loading {
	0% {
		transform: rotate(0deg);
	}
	100% {
		transform: rotate(360deg);
	}
}

/* ===== 按钮布局 ===== */

/* 全宽按钮 */
.btn-block {
	width: 100%;
	flex: 1;
}

/* 圆形按钮 */
.btn-circle {
	border-radius: 50%;
	width: 80rpx;
	height: 80rpx;
	padding: 0;
}

.btn-circle.btn-small {
	width: 60rpx;
	height: 60rpx;
}

.btn-circle.btn-large {
	width: 100rpx;
	height: 100rpx;
}

/* ===== 按钮组 ===== */

/* 底部按钮组 */
.btn-group-bottom {
	display: flex;
	gap: 20rpx;
	padding: 20rpx 0;
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	background-color: #fff;
	border-top: 1rpx solid #eee;
	z-index: 100;
}

.btn-group-bottom .btn {
	flex: 1;
}

/* 水平按钮组 */
.btn-group-horizontal {
	display: flex;
	gap: 16rpx;
}

.btn-group-horizontal .btn {
	flex: 1;
}

/* 垂直按钮组 */
.btn-group-vertical {
	display: flex;
	flex-direction: column;
	gap: 16rpx;
}

/* ===== 特殊按钮样式 ===== */

/* 带图标的按钮 */
.btn-icon {
	gap: 8rpx;
}

.btn-icon .icon {
	width: 32rpx;
	height: 32rpx;
}

/* 带emoji的按钮 */
.btn-emoji {
	gap: 8rpx;
}

.btn-emoji .emoji {
	font-size: 32rpx;
}

/* 操作按钮 - 深色背景 */
.btn-operation {
	background-color: #333;
	color: #fff;
}

.btn-operation:active {
	background-color: #555;
	transform: scale(0.95);
}

/* 返回按钮 */
.btn-back {
	background-color: #4caf50;
	color: #fff;
}

.btn-back:active {
	background-color: #45a049;
}

/* 重试按钮 */
.btn-retry {
	background-color: #4caf50;
	color: #fff;
}

.btn-retry:active {
	background-color: #45a049;
}

