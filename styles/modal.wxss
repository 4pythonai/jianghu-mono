.modal-mask {
	position: fixed;
	left: 0;
	top: 0;
	right: 0;
	bottom: 0;
	background: rgba(0, 0, 0, 0.5);
	backdrop-filter: blur(1rpx);
	z-index: 1000;
	display: flex;
	flex-direction: column;
	align-items: stretch;
	justify-content: flex-end;
}

.modal-title {
	text-align: center;
	margin-bottom: 32rpx;
	border-bottom: 1rpx solid #f0f0f0;
}

.modal-actions {
	width: 100%;
	display: flex;
	justify-content: space-between;
	gap: 32rpx;
	padding: 40rpx 60rpx 50rpx 60rpx;
	background-color: white;
	border-radius: 0 0 16rpx 16rpx;
}

.modal-btn {
	flex: 1;
	height: 64rpx;
	border-radius: 16rpx;
	font-size: 28rpx;
	font-weight: 500;
	border: none;
}

.modal-btn.cancel {
	background: #fff;
	color: #4caf7a;
	border: 2rpx solid #4caf7a;
}

.modal-btn.confirm {
	background: #4caf7a;
	color: #fff;
}
